<%- include('../partials/header.ejs', { title: 'Subcategories' }) %>

<!-- Modern Navigation Bar -->
<nav class="flex flex-wrap gap-3 mb-8 p-4 bg-white rounded-xl shadow-sm border border-gray-100 items-center">
  <a href="/admin/v1/staff/dashboard" class="flex items-center gap-2 px-4 py-2 rounded-lg bg-blue-50 text-blue-700 hover:bg-blue-100 transition">
    <i class="fa fa-home"></i> Dashboard
  </a>
  <a href="/admin/v1/parameters" class="flex items-center gap-2 px-4 py-2 rounded-lg bg-gray-50 text-gray-700 hover:bg-gray-100 transition">
    <i class="fa fa-cog"></i> System Parameters
  </a>
</nav>

<main class="container mx-auto max-w-7xl px-4 mt-8">
  <div class="flex flex-col md:flex-row md:justify-between md:items-center mb-8 gap-4">
    <h1 class="text-3xl font-bold text-gray-800">Subcategory Management</h1>
    <a href="/admin/v1/parameters/subcategories/new" class="px-4 py-2.5 rounded-lg bg-green-600 text-white font-medium hover:bg-green-700 transition flex items-center gap-2">
      <i class="fa fa-plus"></i> Add Subcategory
    </a>
  </div>

  <!-- Flash Messages -->
  <% if (success && success.length) { %>
    <div class="mb-6 p-4 rounded-lg border-l-4 border-green-400 bg-green-50 text-green-800 shadow-sm">
      <% success.forEach(msg => { %>
        <div class="flex items-center gap-2">
          <i class="fa fa-check-circle"></i>
          <%= msg %>
        </div>
      <% }) %>
    </div>
  <% } %>
  <% if (error && error.length) { %>
    <div class="mb-6 p-4 rounded-lg border-l-4 border-red-400 bg-red-50 text-red-800 shadow-sm">
      <% error.forEach(msg => { %>
        <div class="flex items-center gap-2">
          <i class="fa fa-exclamation-circle"></i>
          <%= msg %>
        </div>
      <% }) %>
    </div>
  <% } %>

  <div class="bg-white rounded-xl shadow-md mb-10 border border-gray-100">
    <% if (!subcategories || subcategories.length === 0) { %>
      <div class="p-8 text-center">
        <i class="fa fa-sitemap text-5xl text-gray-300 mb-4"></i>
        <h2 class="text-xl font-semibold text-gray-800 mb-2">No Subcategories Found</h2>
        <p class="text-gray-500 mb-6">Get started by creating your first subcategory</p>
        <a href="/admin/v1/parameters/subcategories/new" class="inline-flex items-center px-4 py-2.5 rounded-lg bg-blue-600 text-white font-medium hover:bg-blue-700 transition">
          <i class="fa fa-plus mr-2"></i> Create First Subcategory
        </a>
      </div>
    <% } else { %>
      <!-- Mobile Cards (Hidden on Desktop) -->
      <div class="block md:hidden space-y-4 p-4">
        <% subcategories.forEach((subCat, idx) => { %>
          <div class="bg-white border border-gray-200 rounded-xl p-4 shadow-sm hover:shadow-md transition-shadow">
            <div class="flex items-start justify-between mb-3">
              <div class="flex items-center gap-3">
                <div class="w-12 h-12 rounded-full bg-gradient-to-br from-indigo-400 to-indigo-600 flex items-center justify-center text-white font-semibold">
                  <i class="fa fa-sitemap"></i>
                </div>
                <div>
                  <h3 class="font-semibold text-gray-900"><%= subCat.name %></h3>
                  <p class="text-sm text-gray-600">Subcategory</p>
                </div>
              </div>
              <span class="text-xs font-medium px-2 py-1 rounded-full bg-blue-100 text-blue-700">
                #<%= idx + 1 %>
              </span>
            </div>
            
            <div class="grid grid-cols-1 gap-3 mb-4 text-sm">
              <div>
                <span class="text-gray-500 font-medium">Parent Category:</span>
                <% if (subCat.category) { %>
                  <p class="text-gray-900"><%= subCat.category.name %></p>
                <% } else { %>
                  <p class="text-gray-400">No category</p>
                <% } %>
              </div>
              <div>
                <span class="text-gray-500 font-medium">Created by:</span>
                <% if (subCat.admin) { %>
                  <p class="text-gray-900"><%= subCat.admin.username %></p>
                  <p class="text-xs text-gray-500"><%= subCat.admin.email %></p>
                <% } else { %>
                  <p class="text-gray-400">Admin not found</p>
                <% } %>
              </div>
            </div>
            
            <div class="flex gap-2 pt-3 border-t border-gray-100">
              <a href="/admin/v1/parameters/subcategories/<%= subCat._id %>" class="flex-1 text-center px-3 py-2 bg-blue-50 text-blue-700 rounded-lg hover:bg-blue-100 transition text-sm font-medium border border-blue-200">
                View
              </a>
              <a href="/admin/v1/parameters/subcategories/<%= subCat._id %>/edit" class="flex-1 text-center px-3 py-2 bg-gray-50 text-gray-700 rounded-lg hover:bg-gray-100 transition text-sm font-medium border border-gray-200">
                Edit
              </a>
              <form action="/admin/v1/parameters/subcategories/<%= subCat._id %>" method="POST" class="flex-1">
                <input type="hidden" name="_method" value="DELETE">
                <button type="submit" class="w-full px-3 py-2 bg-red-50 text-red-700 rounded-lg hover:bg-red-100 transition text-sm font-medium border border-red-200" onclick="return confirm('Delete this subcategory?')">
                  Delete
                </button>
              </form>
            </div>
          </div>
        <% }) %>
      </div>
      
      <!-- Desktop Table (Hidden on Mobile) -->
      <div class="hidden md:block overflow-x-auto">
        <table class="w-full text-sm">
          <thead>
            <tr class="border-b border-gray-200 bg-gray-50">
              <th class="py-3 px-4 text-left font-semibold text-gray-600 w-12">S.N</th>
              <th class="py-3 px-4 text-left font-semibold text-gray-600">Name</th>
              <th class="py-3 px-4 text-left font-semibold text-gray-600">Parent Category</th>
              <th class="py-3 px-4 text-left font-semibold text-gray-600">Created By</th>
              <th class="py-3 px-4 text-left font-semibold text-gray-600">Actions</th>
            </tr>
          </thead>
          <tbody>
            <% subcategories.forEach((subCat, idx) => { %>
              <tr class="hover:bg-blue-50 transition-colors border-b border-gray-100 last:border-0">
                <td class="py-4 px-4 font-semibold text-gray-500">
                  <%= idx + 1 %>
                </td>
                <td class="py-4 px-4">
                  <div class="flex items-center gap-3">
                    <div class="w-8 h-8 rounded-lg bg-gradient-to-br from-indigo-400 to-indigo-600 flex items-center justify-center text-white text-sm">
                      <i class="fa fa-sitemap"></i>
                    </div>
                    <span class="font-medium text-gray-800"><%= subCat.name %></span>
                  </div>
                </td>
                <td class="py-4 px-4 text-gray-700">
                  <% if (subCat.category) { %>
                    <span class="inline-flex items-center px-2 py-1 rounded-md text-xs font-medium bg-green-100 text-green-800">
                      <%= subCat.category.name %>
                    </span>
                  <% } else { %>
                    <span class="text-gray-400">No category</span>
                  <% } %>
                </td>
                <td class="py-4 px-4 text-gray-700">
                  <% if (subCat.admin) { %>
                    <div class="font-medium"><%= subCat.admin.username %></div>
                    <div class="text-xs text-gray-500"><%= subCat.admin.email %></div>
                  <% } else { %>
                    <span class="text-gray-400">Admin not found</span>
                  <% } %>
                </td>
                <td class="py-4 px-4">
                  <div class="flex items-center justify-center gap-2">
                    <a href="/admin/v1/parameters/subcategories/<%= subCat._id %>" class="px-4 py-2 rounded-lg bg-blue-50 text-blue-700 hover:bg-blue-100 transition-colors text-sm font-medium border border-blue-200" title="View Subcategory Details">
                      View
                    </a>
                    <a href="/admin/v1/parameters/subcategories/<%= subCat._id %>/edit" class="px-4 py-2 rounded-lg bg-gray-50 text-gray-700 hover:bg-gray-100 transition-colors text-sm font-medium border border-gray-200" title="Edit Subcategory">
                      Edit
                    </a>
                    <form action="/admin/v1/parameters/subcategories/<%= subCat._id %>" method="POST" class="inline">
                      <input type="hidden" name="_method" value="DELETE">
                      <button type="submit" class="px-4 py-2 rounded-lg bg-red-50 text-red-700 hover:bg-red-100 transition-colors text-sm font-medium border border-red-200" onclick="return confirm('Are you sure you want to delete this subcategory? This cannot be undone.')" title="Delete Subcategory">
                        Delete
                      </button>
                    </form>
                  </div>
                </td>
              </tr>
            <% }) %>
          </tbody>
        </table>
      </div>
    <% } %>
  </div>
</main>

<%- include('../partials/footer.ejs') %>

