<%- include('../partials/header.ejs', { title: 'Edit Subcategory' }) %>

<!-- Modern Navigation Bar -->
<nav class="flex flex-wrap gap-3 mb-8 p-4 bg-white rounded-xl shadow-sm border border-gray-100 items-center">
  <a href="/admin/v1/staff/dashboard" class="flex items-center gap-2 px-4 py-2 rounded-lg bg-blue-50 text-blue-700 hover:bg-blue-100 transition">
    <i class="fa fa-home"></i> Dashboard
  </a>
  <a href="/admin/v1/parameters" class="flex items-center gap-2 px-4 py-2 rounded-lg bg-gray-50 text-gray-700 hover:bg-gray-100 transition">
    <i class="fa fa-cog"></i> System Parameters
  </a>
  <a href="/admin/v1/parameters/subcategories" class="flex items-center gap-2 px-4 py-2 rounded-lg bg-gray-50 text-gray-700 hover:bg-gray-100 transition">
    <i class="fa fa-list"></i> Subcategory List
  </a>
  <a href="/admin/v1/parameters/subcategories/new" class="flex items-center gap-2 px-4 py-2 rounded-lg bg-green-50 text-green-700 hover:bg-green-100 transition">
    <i class="fa fa-plus"></i> Add Subcategory
  </a>
  <% if (subcategory && subcategory._id) { %>
    <a href="/admin/v1/parameters/subcategories/<%= subcategory._id %>" class="px-4 py-2 rounded-lg bg-yellow-100 text-yellow-700 hover:bg-yellow-200 transition flex items-center gap-2">
      <i class="fa fa-eye"></i> Show Subcategory
    </a>
  <% } %>
</nav>

<main class="container mx-auto max-w-2xl px-4 mt-8">
  <div class="flex flex-col md:flex-row md:justify-between md:items-center mb-8 gap-4">
    <h1 class="text-3xl font-bold text-gray-800">Edit Subcategory</h1>
  </div>

  <!-- Flash Messages -->
  <% if (success && success.length) { %>
    <div class="mb-6 p-4 rounded-lg border-l-4 border-green-400 bg-green-50 text-green-800 shadow-sm">
      <% success.forEach(msg => { %>
        <div class="flex items-center gap-2">
          <i class="fa fa-check-circle"></i>
          <%= msg %>
        </div>
      <% }) %>
    </div>
  <% } %>
  <% if (error && error.length) { %>
    <div class="mb-6 p-4 rounded-lg border-l-4 border-red-400 bg-red-50 text-red-800 shadow-sm">
      <% error.forEach(msg => { %>
        <div class="flex items-center gap-2">
          <i class="fa fa-exclamation-circle"></i>
          <%= msg %>
        </div>
      <% }) %>
    </div>
  <% } %>

  <div class="bg-white rounded-xl shadow-md p-8 mb-10 border border-gray-100">
    <% if (subcategory) { %>
      <form action="/admin/v1/parameters/subcategories/<%= subcategory._id %>" method="POST" class="space-y-6">
        <input type="hidden" name="_method" value="PUT">
        
        <div>
          <label for="name" class="block font-semibold mb-1 text-gray-700">Subcategory Name *</label>
          <input
            id="name"
            name="name"
            type="text"
            value="<%= subcategory.name %>"
            class="w-full p-3 rounded-lg border border-gray-200 focus:border-blue-500 focus:ring-2 focus:ring-blue-100 transition"
            required
          >
        </div>
        
        <div>
          <label for="category" class="block font-semibold mb-1 text-gray-700">Parent Category *</label>
          <select
            id="category"
            name="category"
            class="w-full p-3 rounded-lg border border-gray-200 focus:border-blue-500 focus:ring-2 focus:ring-blue-100 transition"
            required
          >
            <option value="">Select Category...</option>
            <% if (categories && categories.length) { %>
              <% categories.forEach(category => { %>
                <option value="<%= category._id %>" <%= subcategory.category && subcategory.category._id.toString() === category._id.toString() ? 'selected' : '' %>>
                  <%= category.name %>
                </option>
              <% }) %>
            <% } %>
          </select>
        </div>
        
        <div class="flex justify-end gap-3">
          <a href="/admin/v1/parameters/subcategories" class="px-4 py-2 rounded-lg bg-gray-100 text-gray-700 hover:bg-gray-200 transition">Cancel</a>
          <button type="submit" class="px-4 py-2 rounded-lg bg-blue-600 text-white font-semibold hover:bg-blue-700 transition flex items-center gap-2">
            <i class="fa fa-save"></i> Save Changes
          </button>
        </div>
      </form>
    <% } else { %>
      <div class="text-center py-8">
        <p class="text-gray-500">Subcategory not found</p>
        <a href="/admin/v1/parameters/subcategories" class="mt-4 inline-block px-4 py-2 rounded-lg bg-blue-600 text-white hover:bg-blue-700 transition">
          Back to Subcategories List
        </a>
      </div>
    <% } %>
    
    <div class="flex justify-right mt-8">
      <a href="/admin/v1/parameters/subcategories" class="px-4 py-2 rounded-lg bg-gray-100 text-gray-700 hover:bg-blue-100 transition flex items-center gap-2">
        <span class="mr-1">‚Üê</span> Back to Subcategories List
      </a>
    </div>
  </div>
</main>

<%- include('../partials/footer.ejs') %>