<%- include('../partials/header.ejs', { title: 'Subcategory Details' }) %>

<!-- Modern Navigation Bar -->
<nav class="flex flex-wrap gap-3 mb-8 p-4 bg-white rounded-xl shadow-sm border border-gray-100 items-center">
  <a href="/admin/v1/staff/dashboard" class="flex items-center gap-2 px-4 py-2 rounded-lg bg-blue-50 text-blue-700 hover:bg-blue-100 transition">
    <i class="fa fa-home"></i> Dashboard
  </a>
  <a href="/admin/v1/parameters" class="flex items-center gap-2 px-4 py-2 rounded-lg bg-gray-50 text-gray-700 hover:bg-gray-100 transition">
    <i class="fa fa-cog"></i> System Parameters
  </a>
  <a href="/admin/v1/parameters/subcategories" class="flex items-center gap-2 px-4 py-2 rounded-lg bg-gray-50 text-gray-700 hover:bg-gray-100 transition">
    <i class="fa fa-list"></i> Subcategory List
  </a>
  <% if (subcategory && subcategory._id) { %>
    <a href="/admin/v1/parameters/subcategories/<%= subcategory._id %>/edit" class="px-4 py-2 rounded-lg bg-yellow-100 text-yellow-700 hover:bg-yellow-200 transition flex items-center gap-2">
      <i class="fa fa-edit"></i> Edit Subcategory
    </a>
  <% } %>
</nav>

<main class="container mx-auto max-w-2xl px-4 mt-8">
  <!-- Flash Messages -->
  <% if (success && success.length) { %>
    <div class="mb-6 p-4 rounded-lg border-l-4 border-green-400 bg-green-50 text-green-800 shadow-sm">
      <% success.forEach(msg => { %>
        <div class="flex items-center gap-2">
          <i class="fa fa-check-circle"></i>
          <%= msg %>
        </div>
      <% }) %>
    </div>
  <% } %>
  <% if (error && error.length) { %>
    <div class="mb-6 p-4 rounded-lg border-l-4 border-red-400 bg-red-50 text-red-800 shadow-sm">
      <% error.forEach(msg => { %>
        <div class="flex items-center gap-2">
          <i class="fa fa-exclamation-circle"></i>
          <%= msg %>
        </div>
      <% }) %>
    </div>
  <% } %>

  <div class="bg-white rounded-xl shadow-md p-8 mb-10 border border-gray-100">
    <div class="flex flex-col md:flex-row md:justify-between md:items-center mb-8 gap-4">
      <h1 class="text-3xl font-bold text-gray-800 mb-0"><%= subcategory && subcategory.name ? subcategory.name : 'Subcategory Details' %></h1>
      <% if (subcategory && subcategory._id) { %>
        <a href="/admin/v1/parameters/subcategories/<%= subcategory._id %>/edit" class="px-4 py-2 rounded-lg bg-yellow-100 text-yellow-700 hover:bg-yellow-200 transition flex items-center gap-2">
          <i class="fa fa-edit"></i> Edit Subcategory
        </a>
      <% } %>
    </div>

    <% if (subcategory) { %>
      <div class="space-y-8">
        <div>
          <p class="font-semibold text-gray-500 mb-1">Parent Category</p>
          <p class="text-gray-800">
            <% if (subcategory.category) { %>
              <span class="px-2 py-1 bg-blue-100 text-blue-800 rounded-full text-sm font-medium">
                <%= subcategory.category.name %>
              </span>
            <% } else { %>
              —
            <% } %>
          </p>
        </div>
        <div>
          <p class="font-semibold text-gray-500 mb-1">Created By</p>
          <p class="text-gray-800">
            <% if (subcategory.admin) { %>
              <%= subcategory.admin.username || '—' %>
              <% if (subcategory.admin.email) { %>
                <div class="text-sm text-gray-400"><%= subcategory.admin.email %></div>
              <% } %>
            <% } else { %>
              —
            <% } %>
          </p>
        </div>
        <div>
          <p class="font-semibold text-gray-500 mb-1">Status</p>
          <div class="flex gap-2">
            <span class="px-2 py-1 rounded text-sm <%= subcategory.isActive ? 'bg-green-100 text-green-800' : 'bg-red-100 text-red-800' %>">
              <%= subcategory.isActive ? 'Active' : 'Inactive' %>
            </span>
            <% if (subcategory.isFeatured) { %>
              <span class="px-2 py-1 rounded text-sm bg-blue-100 text-blue-800">Featured</span>
            <% } %>
          </div>
        </div>



        <div class="grid grid-cols-1 md:grid-cols-2 gap-8">
          <div>
            <p class="font-semibold text-gray-500 mb-1">Created At</p>
            <p class="text-gray-800">
              <%= new Date(subcategory.createdAt).toLocaleDateString('en-US', { year: 'numeric', month: 'long', day: 'numeric', hour: '2-digit', minute: '2-digit' }) %>
            </p>
          </div>
          <div>
            <p class="font-semibold text-gray-500 mb-1">Last Updated</p>
            <p class="text-gray-800">
              <%= new Date(subcategory.updatedAt).toLocaleDateString('en-US', { year: 'numeric', month: 'long', day: 'numeric', hour: '2-digit', minute: '2-digit' }) %>
            </p>
          </div>
        </div>
      </div>
    <% } else { %>
      <div class="text-center py-8">
        <p class="text-gray-500">Subcategory not found</p>
      </div>
    <% } %>
    
    <div class="flex justify-right mt-8">
      <a href="/admin/v1/parameters/subcategories" class="px-4 py-2 rounded-lg bg-gray-100 text-gray-700 hover:bg-blue-100 transition flex items-center gap-2">
        <span class="mr-1">←</span> Back to Subcategories List
      </a>
    </div>
  </div>
</main>

<%- include('../partials/footer.ejs') %>

