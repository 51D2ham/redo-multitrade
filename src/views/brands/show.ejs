<%- include('../partials/header.ejs', { title: 'Brand Details' }) %>
<!-- Modern Navigation Bar -->
<nav class="flex flex-wrap gap-3 mb-8 p-4 bg-white rounded-xl shadow-sm border border-gray-100 items-center">
  <a href="/admin/v1/staff/dashboard" class="flex items-center gap-2 px-4 py-2 rounded-lg bg-blue-50 text-blue-700 hover:bg-blue-100 transition">
    <i class="fa fa-home"></i> Dashboard
  </a>
  <a href="/admin/v1/parameters" class="flex items-center gap-2 px-4 py-2 rounded-lg bg-gray-50 text-gray-700 hover:bg-gray-100 transition">
    <i class="fa fa-cog"></i> System Parameters
  </a>
  <a href="/admin/v1/parameters/brands" class="flex items-center gap-2 px-4 py-2 rounded-lg bg-gray-50 text-gray-700 hover:bg-gray-100 transition">
    <i class="fa fa-tags"></i> Brand List
  </a>
</nav>
<main class="container mx-auto max-w-2xl px-4 mt-8">
  <div class="bg-white rounded-xl shadow-md p-8 mb-10 border border-gray-100">
    <div class="flex flex-col md:flex-row md:justify-between md:items-center mb-8 gap-4">
      <h1 class="text-3xl font-bold text-gray-800 mb-0"><%= brand.name %></h1>
      <a href="/admin/v1/parameters/brands/<%= brand._id %>/edit" class="px-4 py-2 rounded-lg bg-yellow-100 text-yellow-700 hover:bg-yellow-200 transition flex items-center gap-2">
        <i class="fa fa-edit"></i> Edit Brand
      </a>
    </div>
    <% if (success && success.length) { %>
      <div class="mb-6 p-4 rounded-lg border-l-4 border-green-400 bg-green-50 text-green-800 shadow-sm">
        <%= success %>
      </div>
    <% } %>
    <% if (error && error.length) { %>
      <div class="mb-6 p-4 rounded-lg border-l-4 border-red-400 bg-red-50 text-red-800 shadow-sm">
        <%= error %>
      </div>
    <% } %>
    <div class="space-y-8">
      <div>
        <p class="font-semibold text-gray-500 mb-1">Slug</p>
        <p class="text-gray-800"><%= brand.slug %></p>
      </div>
      <div>
        <p class="font-semibold text-gray-500 mb-1">Status</p>
        <div class="flex gap-2">
          <span class="px-2 py-1 rounded text-sm <%= brand.isActive ? 'bg-green-100 text-green-800' : 'bg-red-100 text-red-800' %>">
            <%= brand.isActive ? 'Active' : 'Inactive' %>
          </span>
          <% if (brand.isFeatured) { %>
            <span class="px-2 py-1 rounded text-sm bg-blue-100 text-blue-800">Featured</span>
          <% } %>
        </div>
      </div>

      <% if (brand.logo) { %>
      <div>
        <p class="font-semibold text-gray-500 mb-2">Logo</p>
        <div>
          <img src="/uploads/<%= brand.logo %>" alt="<%= brand.name %> logo" class="w-20 h-20 object-cover rounded border">
        </div>
      </div>
      <% } %>
      <div class="grid grid-cols-1 md:grid-cols-2 gap-8">
        <div>
          <p class="font-semibold text-gray-500 mb-1">Created At</p>
          <p class="text-gray-800">
            <%= new Date(brand.createdAt).toLocaleDateString('en-US', { year: 'numeric', month: 'long', day: 'numeric', hour: '2-digit', minute: '2-digit' }) %>
          </p>
        </div>
        <div>
          <p class="font-semibold text-gray-500 mb-1">Updated At</p>
          <p class="text-gray-800">
            <%= new Date(brand.updatedAt).toLocaleDateString('en-US', { year: 'numeric', month: 'long', day: 'numeric', hour: '2-digit', minute: '2-digit' }) %>
          </p>
        </div>
      </div>
      <div class="flex justify-right mt-8">
        <a href="/admin/v1/parameters/brands" class="px-4 py-2 rounded-lg bg-gray-100 text-gray-700 hover:bg-blue-100 transition flex items-center gap-2">
          <span class="mr-1">←</span> Back to Brand List
        </a>
      </div>
    </div>
  </div>
</main>
<%- include('../partials/footer.ejs') %>

