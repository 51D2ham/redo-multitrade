<%- include('../partials/header.ejs', { title: 'Edit Brand' }) %>

<nav class="flex flex-wrap gap-3 mb-8 p-4 bg-white rounded-xl shadow-sm border border-gray-100 items-center">
  <a href="/admin/v1/staff/dashboard" class="flex items-center gap-2 px-4 py-2 rounded-lg bg-blue-50 text-blue-700 hover:bg-blue-100 transition">
    <i class="fa fa-home"></i> Dashboard
  </a>
  <a href="/admin/v1/parameters/brands" class="flex items-center gap-2 px-4 py-2 rounded-lg bg-gray-50 text-gray-700 hover:bg-gray-100 transition">
    <i class="fa fa-tags"></i> Brand List
  </a>
</nav>

<main class="container mx-auto max-w-2xl px-4 mt-8">
  <h1 class="text-3xl font-bold text-gray-800 mb-8">Edit Brand</h1>
  
  <% if (success && success.length) { %>
    <div class="mb-6 p-4 rounded-lg border-l-4 border-green-400 bg-green-50 text-green-800">
      <% success.forEach(msg => { %>
        <div><%= msg %></div>
      <% }) %>
    </div>
  <% } %>
  
  <% if (error && error.length) { %>
    <div class="mb-6 p-4 rounded-lg border-l-4 border-red-400 bg-red-50 text-red-800">
      <% error.forEach(msg => { %>
        <div><%= msg %></div>
      <% }) %>
    </div>
  <% } %>

  <div class="bg-white rounded-xl shadow-md p-8 border border-gray-100">
    <form id="brandForm" action="/admin/v1/parameters/brands/<%= brand._id %>" method="POST" enctype="multipart/form-data">
      <input type="hidden" name="_csrf" value="<%= csrfToken %>">
      <input type="hidden" name="_method" value="PUT">
      
      <div class="mb-6">
        <label for="name" class="block font-semibold mb-2 text-gray-700">Brand Name *</label>
        <input
          id="name"
          name="name"
          type="text"
          value="<%= brand.name %>"
          class="w-full p-3 rounded-lg border border-gray-200 focus:border-blue-500 focus:ring-2 focus:ring-blue-100"
          required
        >
      </div>

      <div class="mb-6">
        <label for="logo" class="block font-semibold mb-2 text-gray-700">Brand Logo</label>
        <input
          id="logo"
          name="logo"
          type="file"
          accept="image/*"
          class="w-full p-3 rounded-lg border border-gray-200 focus:border-blue-500 focus:ring-2 focus:ring-blue-100"
        >
        <% if (brand.logo) { %>
          <p class="text-sm text-gray-500 mt-1">Current: <%= brand.logo %></p>
        <% } %>
      </div>

      <div class="grid grid-cols-1 md:grid-cols-2 gap-6 mb-6">
        <div class="flex items-center gap-3">
          <input
            id="isActive"
            name="isActive"
            type="checkbox"
            <%= brand.isActive ? 'checked' : '' %>
            class="w-4 h-4 text-blue-600 bg-gray-100 border-gray-300 rounded focus:ring-blue-500"
          >
          <label for="isActive" class="font-semibold text-gray-700">Active</label>
        </div>

        <div class="flex items-center gap-3">
          <input
            id="isFeatured"
            name="isFeatured"
            type="checkbox"
            <%= brand.isFeatured ? 'checked' : '' %>
            class="w-4 h-4 text-blue-600 bg-gray-100 border-gray-300 rounded focus:ring-blue-500"
          >
          <label for="isFeatured" class="font-semibold text-gray-700">Featured</label>
        </div>
      </div>
      
      <div class="flex justify-end gap-3">
        <a href="/admin/v1/parameters/brands" class="px-6 py-3 rounded-lg bg-gray-100 text-gray-700 hover:bg-gray-200 transition">
          Cancel
        </a>
        <button type="submit" class="px-6 py-3 rounded-lg bg-blue-600 text-white font-semibold hover:bg-blue-700 transition">
          Save Changes
        </button>
      </div>
    </form>
  </div>
</main>



<%- include('../partials/footer.ejs') %>