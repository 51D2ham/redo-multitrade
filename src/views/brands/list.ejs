<%- include('../partials/header.ejs', { title: 'Brands' }) %>

<% 
  // Initialize all safe variables at the top
  const safeFilters = typeof filters !== 'undefined' ? filters : {};
  const successMsgs = success ? (Array.isArray(success) ? success : [success]) : [];
  const errorMsgs = error ? (Array.isArray(error) ? error : [error]) : [];
  const safeBrands = typeof brands !== 'undefined' ? brands : [];
  const safePagination = typeof pagination !== 'undefined' ? pagination : { current: 1, total: 1, hasNext: false, hasPrev: false, next: 1, prev: 1, totalBrands: 0 };
%>

<!-- Modern Navigation Bar -->
<nav class="flex flex-wrap gap-3 mb-8 p-4 bg-white rounded-xl shadow-sm border border-gray-100 items-center">
  <a href="/admin/v1/staff/dashboard" class="flex items-center gap-2 px-4 py-2 rounded-lg bg-blue-50 text-blue-700 hover:bg-blue-100 transition">
    <i class="fa fa-home"></i> Dashboard
  </a>
  <a href="/admin/v1/staff/parameter-dashboard" class="flex items-center gap-2 px-4 py-2 rounded-lg bg-gray-50 text-gray-700 hover:bg-gray-100 transition">
    <i class="fa fa-cog"></i> System Parameters
  </a>
</nav>

<main class="container mx-auto max-w-7xl px-4 mt-8">
  <div class="flex flex-col md:flex-row md:justify-between md:items-center mb-8 gap-4">
    <h1 class="text-3xl font-bold text-gray-800">Brand Management</h1>
    <a href="/admin/v1/parameters/brands/new" class="px-4 py-2.5 rounded-lg bg-green-600 text-white font-medium hover:bg-green-700 transition flex items-center gap-2">
      <i class="fa fa-plus"></i> Add Brand
    </a>
  </div>

  <!-- Search and Filters -->
  <div class="bg-white rounded-xl shadow-md p-6 border border-gray-100 mb-6">
    <div class="flex items-center gap-3 mb-4">
      <div class="w-8 h-8 bg-blue-100 rounded-lg flex items-center justify-center">
        <i class="fa fa-filter text-blue-600"></i>
      </div>
      <h3 class="text-lg font-semibold text-gray-800">Search & Filter Brands</h3>
    </div>
    <form method="GET" class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-4">
      <div>
        <label class="block font-semibold mb-2 text-gray-700">Search</label>
        <div class="relative">
          <input name="search" value="<%= safeFilters.search || '' %>" 
                 class="w-full p-3 pl-10 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-blue-500" 
                 placeholder="Search by brand name..." />
          <i class="fa fa-search absolute left-3 top-1/2 transform -translate-y-1/2 text-gray-400"></i>
        </div>
      </div>
      
      <div>
        <label class="block font-semibold mb-2 text-gray-700">Sort By</label>
        <select name="sort" class="w-full p-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-blue-500">
          <option value="newest" <%= safeFilters.sort === 'newest' ? 'selected' : '' %>>Newest First</option>
          <option value="oldest" <%= safeFilters.sort === 'oldest' ? 'selected' : '' %>>Oldest First</option>
          <option value="name_asc" <%= safeFilters.sort === 'name_asc' ? 'selected' : '' %>>Name A-Z</option>
          <option value="name_desc" <%= safeFilters.sort === 'name_desc' ? 'selected' : '' %>>Name Z-A</option>
        </select>
      </div>
      
      <div class="flex items-end gap-2">
        <button type="submit" class="flex-1 px-4 py-3 bg-blue-600 text-white rounded-lg hover:bg-blue-700 transition">
          <i class="fa fa-search mr-2"></i>Apply
        </button>
        <a href="/admin/v1/parameters/brands" class="px-3 py-3 bg-gray-100 text-gray-600 rounded-lg hover:bg-gray-200 transition" title="Clear All">
          <i class="fa fa-times"></i>
        </a>
      </div>
    </form>
  </div>

  <!-- Flash Messages -->
  <% if (successMsgs.length > 0) { %>
    <div class="mb-6 p-4 rounded-lg border-l-4 border-green-400 bg-green-50 text-green-800 shadow-sm">
      <% successMsgs.forEach(msg => { %>
        <div class="flex items-center gap-2">
          <i class="fa fa-check-circle"></i>
          <%= msg %>
        </div>
      <% }) %>
    </div>
  <% } %>
  <% if (errorMsgs.length > 0) { %>
    <div class="mb-6 p-4 rounded-lg border-l-4 border-red-400 bg-red-50 text-red-800 shadow-sm">
      <% errorMsgs.forEach(msg => { %>
        <div class="flex items-center gap-2">
          <i class="fa fa-exclamation-circle"></i>
          <%= msg %>
        </div>
      <% }) %>
    </div>
  <% } %>

  <div class="bg-white rounded-xl shadow-md mb-10 border border-gray-100">
    <div class="bg-gray-50 px-6 py-4 border-b border-gray-200">
      <div class="flex items-center justify-between">
        <h3 class="text-lg font-semibold text-gray-800 flex items-center gap-2">
          <i class="fa fa-table text-blue-600"></i> Brands Catalog
        </h3>
        <div class="flex items-center gap-4 text-sm text-gray-600">
          <span>Showing <%= safeBrands.length %> of <%= safePagination.totalBrands || safeBrands.length %> brands</span>
          <% if (safeFilters.search) { %>
            <span class="px-2 py-1 bg-blue-100 text-blue-700 rounded-full text-xs">
              <i class="fa fa-filter"></i> Filtered
            </span>
          <% } %>
        </div>
      </div>
    </div>
    
    <% if (!safeBrands || safeBrands.length === 0) { %>
      <div class="p-8 text-center">
        <i class="fa fa-star text-5xl text-gray-300 mb-4"></i>
        <h2 class="text-xl font-semibold text-gray-800 mb-2">No Brands Found</h2>
        <p class="text-gray-500 mb-6">Get started by creating your first brand</p>
        <a href="/admin/v1/parameters/brands/new" class="inline-flex items-center px-4 py-2.5 rounded-lg bg-blue-600 text-white font-medium hover:bg-blue-700 transition">
          <i class="fa fa-plus mr-2"></i> Create First Brand
        </a>
      </div>
    <% } else { %>
      <!-- Mobile Cards (Hidden on Desktop) -->
      <div class="block md:hidden space-y-4 p-4">
        <% safeBrands.forEach((brand, idx) => { %>
          <div class="bg-white border border-gray-200 rounded-xl p-4 shadow-sm hover:shadow-md transition-shadow">
            <div class="flex items-start justify-between mb-3">
              <div class="flex items-center gap-3">
                <div class="w-12 h-12 rounded-full bg-gradient-to-br from-purple-400 to-purple-600 flex items-center justify-center text-white font-semibold">
                  <i class="fa fa-star"></i>
                </div>
                <div>
                  <h3 class="font-semibold text-gray-900"><%= brand.name %></h3>
                  <p class="text-sm text-gray-600">Brand</p>
                </div>
              </div>
              <span class="text-xs font-medium px-2 py-1 rounded-full bg-blue-100 text-blue-700">
                #<%= idx + 1 %>
              </span>
            </div>
            
            <div class="mb-4 text-sm">
              <span class="text-gray-500 font-medium">Created by:</span>
              <% if (brand.admin) { %>
                <p class="text-gray-900"><%= brand.admin.username %></p>
                <p class="text-xs text-gray-500"><%= brand.admin.email %></p>
              <% } else { %>
                <p class="text-gray-400">Admin not found</p>
              <% } %>
            </div>
            
            <div class="flex gap-2 pt-3 border-t border-gray-100">
              <a href="/admin/v1/parameters/brands/<%= brand._id %>" class="flex-1 text-center px-3 py-2 bg-blue-50 text-blue-700 rounded-lg hover:bg-blue-100 transition text-sm font-medium border border-blue-200">
                View
              </a>
              <a href="/admin/v1/parameters/brands/<%= brand._id %>/edit" class="flex-1 text-center px-3 py-2 bg-gray-50 text-gray-700 rounded-lg hover:bg-gray-100 transition text-sm font-medium border border-gray-200">
                Edit
              </a>
              <form action="/admin/v1/parameters/brands/<%= brand._id %>" method="POST" class="flex-1">
                <input type="hidden" name="_csrf" value="<%= csrfToken %>">
                <input type="hidden" name="_method" value="DELETE">
                <button type="submit" class="w-full px-3 py-2 bg-red-50 text-red-700 rounded-lg hover:bg-red-100 transition text-sm font-medium border border-red-200" onclick="return confirm('Delete this brand?')">
                  Delete
                </button>
              </form>
            </div>
          </div>
        <% }) %>
      </div>
      
      <!-- Desktop Table (Hidden on Mobile) -->
      <div class="hidden md:block overflow-x-auto">
        <table class="w-full text-sm">
          <thead>
            <tr class="border-b border-gray-200 bg-gray-50">
              <th class="py-3 px-4 text-left font-semibold text-gray-600 w-12">S.N</th>
              <th class="py-3 px-4 text-left font-semibold text-gray-600">Name</th>
              <th class="py-3 px-4 text-left font-semibold text-gray-600">Created By</th>
              <th class="py-3 px-4 text-left font-semibold text-gray-600">Actions</th>
            </tr>
          </thead>
          <tbody>
            <% safeBrands.forEach((brand, idx) => { %>
              <tr class="hover:bg-blue-50 transition-colors border-b border-gray-100 last:border-0">
                <td class="py-4 px-4 font-semibold text-gray-500">
                  <%= idx + 1 %>
                </td>
                <td class="py-4 px-4">
                  <div class="flex items-center gap-3">
                    <div class="w-8 h-8 rounded-lg bg-gradient-to-br from-purple-400 to-purple-600 flex items-center justify-center text-white text-sm">
                      <i class="fa fa-star"></i>
                    </div>
                    <span class="font-medium text-gray-800"><%= brand.name %></span>
                  </div>
                </td>
                <td class="py-4 px-4 text-gray-700">
                  <% if (brand.admin) { %>
                    <div class="font-medium"><%= brand.admin.username %></div>
                    <div class="text-xs text-gray-500"><%= brand.admin.email %></div>
                  <% } else { %>
                    <span class="text-gray-400">Admin not found</span>
                  <% } %>
                </td>
                <td class="py-4 px-4">
                  <div class="flex items-center justify-center gap-2">
                    <a href="/admin/v1/parameters/brands/<%= brand._id %>" class="px-4 py-2 rounded-lg bg-blue-50 text-blue-700 hover:bg-blue-100 transition-colors text-sm font-medium border border-blue-200" title="View Brand Details">
                      View
                    </a>
                    <a href="/admin/v1/parameters/brands/<%= brand._id %>/edit" class="px-4 py-2 rounded-lg bg-gray-50 text-gray-700 hover:bg-gray-100 transition-colors text-sm font-medium border border-gray-200" title="Edit Brand">
                      Edit
                    </a>
                    <form action="/admin/v1/parameters/brands/<%= brand._id %>" method="POST" class="inline">
                      <input type="hidden" name="_csrf" value="<%= csrfToken %>">
                      <input type="hidden" name="_method" value="DELETE">
                      <button type="submit" class="px-4 py-2 rounded-lg bg-red-50 text-red-700 hover:bg-red-100 transition-colors text-sm font-medium border border-red-200" onclick="return confirm('Are you sure you want to delete this brand? This cannot be undone.')" title="Delete Brand">
                        Delete
                      </button>
                    </form>
                  </div>
                </td>
              </tr>
            <% }) %>
          </tbody>
        </table>
      </div>
    <% } %>
  </div>

  <!-- Pagination -->
  <% if (safePagination && safePagination.total > 1) { %>
    <div class="flex flex-col sm:flex-row justify-between items-center mt-8 gap-4">
      <div class="text-sm text-gray-600">
        Showing page <%= safePagination.current %> of <%= safePagination.total %>
      </div>
      <nav class="flex items-center gap-2">
        <% if (safePagination.hasPrev) { %>
          <a href="?page=1<%= safeFilters.search ? '&search=' + encodeURIComponent(safeFilters.search) : '' %><%= safeFilters.sort ? '&sort=' + safeFilters.sort : '' %>" 
             class="px-3 py-2 rounded-lg bg-white border border-gray-300 text-gray-700 hover:bg-blue-50 hover:border-blue-300 transition" 
             title="First Page">
            <i class="fa fa-angle-double-left"></i>
          </a>
          <a href="?page=<%= safePagination.prev %><%= safeFilters.search ? '&search=' + encodeURIComponent(safeFilters.search) : '' %><%= safeFilters.sort ? '&sort=' + safeFilters.sort : '' %>" 
             class="px-3 py-2 rounded-lg bg-white border border-gray-300 text-gray-700 hover:bg-blue-50 hover:border-blue-300 transition" 
             title="Previous Page">
            <i class="fa fa-chevron-left"></i>
          </a>
        <% } %>
        
        <% for (let i = Math.max(1, safePagination.current - 2); i <= Math.min(safePagination.total, safePagination.current + 2); i++) { %>
          <% if (i === safePagination.current) { %>
            <span class="px-4 py-2 rounded-lg bg-blue-600 text-white font-semibold"><%= i %></span>
          <% } else { %>
            <a href="?page=<%= i %><%= safeFilters.search ? '&search=' + encodeURIComponent(safeFilters.search) : '' %><%= safeFilters.sort ? '&sort=' + safeFilters.sort : '' %>" 
               class="px-3 py-2 rounded-lg bg-white border border-gray-300 text-gray-700 hover:bg-blue-50 hover:border-blue-300 transition">
              <%= i %>
            </a>
          <% } %>
        <% } %>
        
        <% if (safePagination.hasNext) { %>
          <a href="?page=<%= safePagination.next %><%= safeFilters.search ? '&search=' + encodeURIComponent(safeFilters.search) : '' %><%= safeFilters.sort ? '&sort=' + safeFilters.sort : '' %>" 
             class="px-3 py-2 rounded-lg bg-white border border-gray-300 text-gray-700 hover:bg-blue-50 hover:border-blue-300 transition" 
             title="Next Page">
            <i class="fa fa-chevron-right"></i>
          </a>
          <a href="?page=<%= safePagination.total %><%= safeFilters.search ? '&search=' + encodeURIComponent(safeFilters.search) : '' %><%= safeFilters.sort ? '&sort=' + safeFilters.sort : '' %>" 
             class="px-3 py-2 rounded-lg bg-white border border-gray-300 text-gray-700 hover:bg-blue-50 hover:border-blue-300 transition" 
             title="Last Page">
            <i class="fa fa-angle-double-right"></i>
          </a>
        <% } %>
      </nav>
    </div>
  <% } %>

</main>

<script nonce="<%= (typeof cspNonce !== 'undefined' ? cspNonce : '') %>">
// Auto-submit form on sort change
document.addEventListener('DOMContentLoaded', function() {
  const sortSelect = document.querySelector('select[name="sort"]');
  if (sortSelect) {
    sortSelect.addEventListener('change', function() {
      this.form.submit();
    });
  }
  
  // Add loading state to filter form
  const filterForm = document.querySelector('form');
  if (filterForm) {
    filterForm.addEventListener('submit', function() {
      const submitBtn = this.querySelector('button[type="submit"]');
      if (submitBtn) {
        submitBtn.innerHTML = '<i class="fa fa-spinner fa-spin mr-2"></i>Loading...';
        submitBtn.disabled = true;
      }
    });
  }
});
</script>

<%- include('../partials/footer.ejs') %>

