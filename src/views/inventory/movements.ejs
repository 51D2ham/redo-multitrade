<%- include('../partials/header.ejs', { title: 'Inventory Movements' }) %>

<div class="min-h-screen bg-gray-50 py-6">
  <div class="max-w-6xl mx-auto px-4">
    <!-- Filters -->
    <div class="bg-white rounded-xl shadow-sm border mb-6">
      <div class="p-6">
  <form method="GET" action="/admin/v1/inventory/movements" class="grid grid-cols-1 md:grid-cols-4 gap-4">
          <div>
            <label class="block text-sm font-medium text-gray-700 mb-2">Type</label>
            <select name="type" class="w-full px-3 py-2 border border-gray-300 rounded-lg">
              <option value="">All Types</option>
              <option value="sale" <%= filters.type === 'sale' ? 'selected' : '' %>>Sale</option>
              <option value="restock" <%= filters.type === 'restock' ? 'selected' : '' %>>Restock</option>
              <option value="adjustment" <%= filters.type === 'adjustment' ? 'selected' : '' %>>Adjustment</option>
            </select>
          </div>
          <div>
            <label class="block text-sm font-medium text-gray-700 mb-2">From Date</label>
            <input type="date" name="dateFrom" value="<%= filters.dateFrom || '' %>" class="w-full px-3 py-2 border border-gray-300 rounded-lg">
          </div>
          <div>
            <label class="block text-sm font-medium text-gray-700 mb-2">To Date</label>
            <input type="date" name="dateTo" value="<%= filters.dateTo || '' %>" class="w-full px-3 py-2 border border-gray-300 rounded-lg">
          </div>
          <div class="flex items-end">
            <button type="submit" class="w-full px-4 py-2 bg-blue-600 text-white rounded-lg hover:bg-blue-700">
              <i class="fas fa-search mr-2"></i>Filter
            </button>
          </div>
        </form>
      </div>
    </div>

    <!-- Movements List -->
    <div class="bg-white rounded-xl shadow-sm border">
      <div class="px-6 py-4 border-b">
        <h2 class="text-lg font-semibold text-gray-900">Movement History</h2>
      </div>
      <div class="p-6">
        <% if (movements.length > 0) { %>
          <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
            <% movements.forEach(movement => { %>
              <div class="bg-white rounded-xl shadow-sm border p-6 flex flex-col gap-4">
                <div class="flex items-center gap-4">
                  <div class="w-16 h-16 bg-gray-200 rounded-lg flex items-center justify-center overflow-hidden border">
                    <% if (movement.product?.thumbnail) { %>
                      <img src="<%= movement.product.thumbnail %>" alt="" class="w-full h-full object-cover rounded">
                    <% } else { %>
                      <i class="fas fa-cube text-gray-400 text-3xl"></i>
                    <% } %>
                  </div>
                  <div>
                    <h3 class="text-lg font-bold text-gray-900"><%= movement.product?.title || 'Unknown Product' %></h3>
                    <p class="text-xs text-gray-500">SKU: <%= movement.variantSku %></p>
                    <p class="text-xs text-gray-500">By: <%= movement.admin?.fullname || 'System' %></p>
                  </div>
                </div>
                <div class="flex flex-col gap-2">
                  <span class="inline-flex px-3 py-1 text-sm font-medium rounded-full self-start <%= 
                    movement.type === 'sale' ? 'bg-red-100 text-red-800' :
                    movement.type === 'restock' ? 'bg-green-100 text-green-800' :
                    'bg-blue-100 text-blue-800'
                  %>">
                    <%= movement.type.charAt(0).toUpperCase() + movement.type.slice(1) %>
                  </span>
                  <div class="flex items-center gap-2">
                    <span class="text-lg font-bold <%= movement.type === 'sale' ? 'text-red-600' : 'text-green-600' %>">
                      <%= movement.type === 'sale' ? '-' : '+' %><%= movement.quantity %>
                    </span>
                    <span class="text-sm text-gray-500">Stock: <%= movement.previousStock %> â†’ <%= movement.newStock %></span>
                  </div>
                  <% if(movement.orderId) { %>
                    <span class="text-xs text-gray-400">Order Ref: <%= movement.orderId %></span>
                  <% } %>
                  <% if(movement.notes) { %>
                    <span class="text-xs text-gray-400">Note: <%= movement.notes %></span>
                  <% } %>
                  <span class="text-xs text-gray-400">Date: <%= new Date(movement.createdAt).toLocaleDateString() %> <%= new Date(movement.createdAt).toLocaleTimeString() %></span>
                </div>
              </div>
            <% }) %>
          </div>
        <% } else { %>
          <div class="text-center py-12">
            <i class="fas fa-history text-4xl text-gray-300 mb-4"></i>
            <h3 class="text-lg font-medium text-gray-900 mb-2">No Movements Found</h3>
            <p class="text-gray-600">No inventory movements match your criteria.</p>
          </div>
        <% } %>
      </div>
    </div>
  </div>
</div>

<%- include('../partials/footer.ejs') %>