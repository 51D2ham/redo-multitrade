<%- include('../partials/header.ejs', { title: 'Inventory Movements' }) %>

<div class="min-h-screen bg-gray-50">
  <div class="max-w-7xl mx-auto px-6 py-8">
    
    <!-- Header -->
    <div class="mb-8">
      <h1 class="text-3xl font-bold text-gray-900">Inventory Movements</h1>
      <p class="text-gray-600 mt-2">Track all stock changes and transactions</p>
    </div>

    <!-- Filters -->
    <div class="bg-white rounded-xl p-6 shadow-sm border mb-8">
      <form method="GET" class="grid grid-cols-1 md:grid-cols-5 gap-4">
        <div>
          <label class="block text-sm font-medium text-gray-700 mb-2">From Date</label>
          <input type="date" name="dateFrom" value="<%= filters.dateFrom || '' %>" class="w-full px-3 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500">
        </div>
        <div>
          <label class="block text-sm font-medium text-gray-700 mb-2">To Date</label>
          <input type="date" name="dateTo" value="<%= filters.dateTo || '' %>" class="w-full px-3 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500">
        </div>
        <div>
          <label class="block text-sm font-medium text-gray-700 mb-2">Movement Type</label>
          <select name="type" class="w-full px-3 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500">
            <option value="">All Types</option>
            <option value="sale" <%= filters.type === 'sale' ? 'selected' : '' %>>üõí Sales</option>
            <option value="restock" <%= filters.type === 'restock' ? 'selected' : '' %>>üì¶ Restock</option>
            <option value="adjustment" <%= filters.type === 'adjustment' ? 'selected' : '' %>>‚öôÔ∏è Adjustment</option>
            <option value="return" <%= filters.type === 'return' ? 'selected' : '' %>>‚Ü©Ô∏è Returns</option>
            <option value="damage" <%= filters.type === 'damage' ? 'selected' : '' %>>‚ö†Ô∏è Damage/Loss</option>
          </select>
        </div>
        <div>
          <label class="block text-sm font-medium text-gray-700 mb-2">Product</label>
          <select name="productId" class="w-full px-3 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500">
            <option value="">All Products</option>
            <% products.forEach(product => { %>
              <option value="<%= product._id %>" <%= filters.productId === product._id.toString() ? 'selected' : '' %>>
                <%= product.title %>
              </option>
            <% }) %>
          </select>
        </div>
        <div class="flex items-end">
          <button type="submit" class="w-full px-4 py-2 bg-blue-600 text-white rounded-lg hover:bg-blue-700">
            Apply Filters
          </button>
        </div>
      </form>
    </div>

    <!-- Movements Table -->
    <div class="bg-white rounded-xl shadow-sm border overflow-hidden">
      <div class="px-6 py-4 border-b bg-gradient-to-r from-gray-50 to-blue-50 flex items-center justify-between">
        <div>
          <h3 class="text-lg font-semibold text-gray-900 flex items-center gap-2">
            <i class="fas fa-history text-blue-600"></i>
            Inventory Movements
          </h3>
          <p class="text-xs text-gray-600 mt-1">Real-time stock movement tracking</p>
        </div>
        <div class="text-right">
          <div class="text-lg font-bold text-gray-900">
            <% if (totalMovements > 0) { %>
              <%= totalMovements.toLocaleString() %>
            <% } else { %>
              0
            <% } %>
          </div>
          <div class="text-xs text-gray-500">total movements</div>
        </div>
      </div>
      <div class="overflow-x-auto">
        <table class="min-w-full divide-y divide-gray-200">
          <thead class="bg-gray-50">
            <tr>
              <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Product</th>
              <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Type</th>
              <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Quantity</th>
              <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Date</th>
              <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Notes</th>
            </tr>
          </thead>
          <tbody class="bg-white divide-y divide-gray-200">
            <% if (movements && movements.length > 0) { %>
              <% movements.forEach(movement => { %>
                <tr>
                  <td class="px-6 py-4 whitespace-nowrap">
                    <div class="flex items-center">
                      <div class="w-10 h-10 bg-gray-100 rounded-lg flex items-center justify-center mr-4">
                        <% if (movement.product && movement.product.thumbnail) { %>
                          <img src="<%= movement.product.thumbnail %>" alt="Product" class="w-8 h-8 object-cover rounded">
                        <% } else { %>
                          <i class="fas fa-box text-gray-400"></i>
                        <% } %>
                      </div>
                      <div>
                        <div class="text-sm font-medium text-gray-900"><%= movement.product?.title || 'Unknown Product' %></div>
                        <div class="text-sm text-gray-500">SKU: <%= movement.variantSku %></div>
                      </div>
                    </div>
                  </td>
                  <td class="px-6 py-4 whitespace-nowrap">
                    <% if (movement.type === 'sale') { %>
                      <span class="inline-flex items-center px-3 py-1 rounded-full text-xs font-medium bg-red-100 text-red-800 border border-red-200">
                        <i class="fas fa-shopping-cart mr-1"></i> Sale
                      </span>
                    <% } else if (movement.type === 'restock') { %>
                      <span class="inline-flex items-center px-3 py-1 rounded-full text-xs font-medium bg-green-100 text-green-800 border border-green-200">
                        <i class="fas fa-truck-loading mr-1"></i> Restock
                      </span>
                    <% } else if (movement.type === 'adjustment') { %>
                      <span class="inline-flex items-center px-3 py-1 rounded-full text-xs font-medium bg-blue-100 text-blue-800 border border-blue-200">
                        <i class="fas fa-tools mr-1"></i> Adjustment
                      </span>
                    <% } else if (movement.type === 'return') { %>
                      <span class="inline-flex items-center px-3 py-1 rounded-full text-xs font-medium bg-orange-100 text-orange-800 border border-orange-200">
                        <i class="fas fa-undo mr-1"></i> Return
                      </span>
                    <% } else if (movement.type === 'damage') { %>
                      <span class="inline-flex items-center px-3 py-1 rounded-full text-xs font-medium bg-purple-100 text-purple-800 border border-purple-200">
                        <i class="fas fa-exclamation-triangle mr-1"></i> Damage
                      </span>
                    <% } else { %>
                      <span class="inline-flex items-center px-3 py-1 rounded-full text-xs font-medium bg-gray-100 text-gray-800 border border-gray-200">
                        <i class="fas fa-question mr-1"></i> <%= movement.type || 'Unknown' %>
                      </span>
                    <% } %>
                  </td>
                  <td class="px-6 py-4 whitespace-nowrap">
                    <div class="flex items-center gap-2">
                      <% if (movement.type === 'sale' || movement.type === 'damage') { %>
                        <span class="text-red-600 font-bold text-sm">-<%= movement.quantity %></span>
                      <% } else { %>
                        <span class="text-green-600 font-bold text-sm">+<%= movement.quantity %></span>
                      <% } %>
                      <% 
                        // Calculate correct stock transitions
                        let prevStock = movement.previousStock || 0;
                        let newStock = movement.newStock || 0;
                        
                        // Validate and fix stock transitions based on movement type
                        if (movement.type === 'restock' || movement.type === 'return') {
                          // Stock should increase: prevStock + quantity = newStock
                          if (prevStock + movement.quantity !== newStock) {
                            prevStock = newStock - movement.quantity;
                          }
                        } else if (movement.type === 'sale' || movement.type === 'damage') {
                          // Stock should decrease: prevStock - quantity = newStock
                          if (prevStock - movement.quantity !== newStock) {
                            prevStock = newStock + movement.quantity;
                          }
                        }
                        
                        // Ensure no negative stock values
                        if (prevStock < 0) prevStock = 0;
                        if (newStock < 0) newStock = 0;
                      %>
                      <span class="text-xs text-gray-500 bg-gray-100 px-2 py-1 rounded">
                        <%= prevStock %> ‚Üí <%= newStock %>
                      </span>
                    </div>
                  </td>
                  <td class="px-6 py-4 whitespace-nowrap">
                    <div class="text-sm text-gray-900">
                      <%= new Date(movement.createdAt).toLocaleDateString() %>
                    </div>
                    <div class="text-xs text-gray-500">
                      <%= new Date(movement.createdAt).toLocaleTimeString([], {hour: '2-digit', minute:'2-digit'}) %>
                    </div>
                  </td>
                  <td class="px-6 py-4">
                    <div class="text-sm text-gray-900">
                      <% if (movement.orderId) { %>
                        <span class="text-blue-600 font-mono text-xs">#<%= movement.orderId.toString().slice(-8).toUpperCase() %></span>
                        <div class="text-xs text-gray-500 mt-1">
                          <% if (movement.type === 'sale') { %>
                            (Order Fulfilled)
                          <% } else if (movement.type === 'return') { %>
                            (Order Cancelled/Returned)
                          <% } else { %>
                            (Order Related)
                          <% } %>
                        </div>
                      <% } else { %>
                        <span class="text-xs text-gray-500">System automated</span>
                      <% } %>
                      <% if (movement.notes) { %>
                        <div class="text-xs text-gray-600 mt-1"><%= movement.notes %></div>
                      <% } %>
                      <% if (movement.performedBy) { %>
                        <div class="text-xs text-gray-500 mt-1">by <%= movement.performedBy %></div>
                      <% } %>
                    </div>
                  </td>
                </tr>
              <% }) %>
            <% } else { %>
              <tr>
                <td colspan="5" class="px-6 py-12 text-center">
                  <div class="text-gray-500">
                    <i class="fas fa-inbox text-4xl mb-4"></i>
                    <p class="text-lg font-medium">No inventory movements found</p>
                    <p class="text-sm">Try adjusting your filters or check back later</p>
                  </div>
                </td>
              </tr>
            <% } %>
          </tbody>
        </table>
      </div>
    </div>

    <!-- Pagination -->
    <% if (totalMovements > 0) { %>
      <div class="mt-8 flex items-center justify-between">
        <div class="text-sm text-gray-700">
          Showing <span class="font-medium"><%= ((currentPage - 1) * pageSize) + 1 %></span> to 
          <span class="font-medium"><%= Math.min(currentPage * pageSize, totalMovements) %></span> of 
          <span class="font-medium"><%= totalMovements %></span> results
        </div>
        <div class="flex space-x-2">
          <% if (currentPage > 1) { %>
            <a href="?page=<%= currentPage - 1 %><%= filterQuery %>" class="px-3 py-2 text-sm font-medium text-gray-500 bg-white border border-gray-300 rounded-lg hover:bg-gray-50">
              Previous
            </a>
          <% } %>
          
          <% const totalPages = Math.ceil(totalMovements / pageSize); %>
          <% const startPage = Math.max(1, currentPage - 2); %>
          <% const endPage = Math.min(totalPages, currentPage + 2); %>
          
          <% for (let i = startPage; i <= endPage; i++) { %>
            <% if (i === currentPage) { %>
              <span class="px-3 py-2 text-sm font-medium text-white bg-blue-600 border border-blue-600 rounded-lg">
                <%= i %>
              </span>
            <% } else { %>
              <a href="?page=<%= i %><%= filterQuery %>" class="px-3 py-2 text-sm font-medium text-gray-500 bg-white border border-gray-300 rounded-lg hover:bg-gray-50">
                <%= i %>
              </a>
            <% } %>
          <% } %>
          
          <% if (currentPage < totalPages) { %>
            <a href="?page=<%= currentPage + 1 %><%= filterQuery %>" class="px-3 py-2 text-sm font-medium text-gray-500 bg-white border border-gray-300 rounded-lg hover:bg-gray-50">
              Next
            </a>
          <% } %>
        </div>
      </div>
    <% } %>
  </div>
</div>

<%- include('../partials/footer.ejs') %>