<%- include('../partials/header.ejs', { title: 'Low Stock Alerts' }) %>

<!-- Navigation -->
<nav class="mb-6 sm:mb-8">
  <div class="bg-white rounded-xl shadow-sm border border-gray-100 p-3 sm:p-4">
    <div class="flex flex-wrap items-center gap-2 text-sm">
      <a href="/admin/v1/staff/dashboard" class="flex items-center gap-1.5 px-3 py-1.5 rounded-lg bg-blue-50 text-blue-700 hover:bg-blue-100 transition-colors">
        <i class="fa fa-home text-xs"></i>
        <span class="hidden sm:inline">Dashboard</span>
      </a>
      <i class="fa fa-chevron-right text-gray-400 text-xs"></i>
      <a href="/admin/inventory/dashboard" class="flex items-center gap-1.5 px-3 py-1.5 rounded-lg text-gray-600 hover:bg-gray-50 transition-colors">
        <i class="fa fa-boxes text-xs"></i>
        <span class="hidden sm:inline">Inventory</span>
      </a>
      <i class="fa fa-chevron-right text-gray-400 text-xs"></i>
      <span class="flex items-center gap-1.5 px-3 py-1.5 rounded-lg bg-red-50 text-red-700 font-medium">
        <i class="fa fa-exclamation-triangle text-xs"></i>
        Low Stock
      </span>
    </div>
  </div>
</nav>

<div class="min-h-screen bg-gray-50">
  <div class="max-w-7xl mx-auto px-4 sm:px-6 py-6 sm:py-8">
    
    <!-- Header -->
    <div class="mb-6 sm:mb-8">
      <div class="flex flex-col sm:flex-row sm:items-center sm:justify-between gap-4">
        <div>
          <h1 class="text-2xl sm:text-3xl font-bold text-gray-900 flex items-center gap-2">
            <i class="fa fa-exclamation-triangle text-red-500"></i>
            Low Stock Alerts
          </h1>
          <p class="text-gray-600 mt-1 sm:mt-2">Monitor and manage inventory levels</p>
        </div>
        <div class="flex flex-col sm:flex-row gap-2 sm:gap-3">
          <a href="/admin/v1/inventory/restock" class="flex items-center justify-center gap-2 px-4 py-2 bg-green-600 text-white rounded-lg hover:bg-green-700 transition-colors text-sm font-medium">
            <i class="fa fa-plus text-xs"></i>
            <span class="hidden sm:inline">Restock Items</span>
            <span class="sm:hidden">Restock</span>
          </a>
          <a href="/admin/reports/comprehensive" class="flex items-center justify-center gap-2 px-4 py-2 bg-blue-600 text-white rounded-lg hover:bg-blue-700 transition-colors text-sm font-medium">
            <i class="fa fa-chart-bar text-xs"></i>
            <span class="hidden sm:inline">Dashboard</span>
            <span class="sm:hidden">Reports</span>
          </a>
          <a href="/admin/inventory/movements" class="flex items-center justify-center gap-2 px-4 py-2 bg-gray-100 text-gray-700 rounded-lg hover:bg-gray-200 transition-colors text-sm font-medium">
            <i class="fa fa-history text-xs"></i>
            <span class="hidden sm:inline">Movements</span>
            <span class="sm:hidden">History</span>
          </a>
        </div>
      </div>
    </div>

    <!-- Flash Messages -->
    <% if (success && success.length) { %>
      <div class="mb-6 p-4 rounded-lg bg-green-50 border border-green-200 text-green-800">
        <% success.forEach(msg => { %>
          <div class="flex items-center gap-2">
            <i class="fas fa-check-circle"></i>
            <%- msg %>
          </div>
        <% }) %>
      </div>
    <% } %>

    <% if (error && error.length) { %>
      <div class="mb-6 p-4 rounded-lg bg-red-50 border border-red-200 text-red-800">
        <% error.forEach(msg => { %>
          <div class="flex items-center gap-2">
            <i class="fas fa-exclamation-circle"></i>
            <%- msg %>
          </div>
        <% }) %>
      </div>
    <% } %>

    <!-- Stats Cards -->
    <div class="grid grid-cols-1 sm:grid-cols-3 gap-4 sm:gap-6 mb-6 sm:mb-8">
      <div class="bg-gradient-to-br from-red-50 to-red-100 rounded-xl p-4 sm:p-6 border border-red-200 hover:shadow-md transition-all duration-200">
        <div class="flex items-center justify-between">
          <div class="min-w-0 flex-1">
            <p class="text-sm font-medium text-red-700">Out of Stock</p>
            <p class="text-2xl sm:text-3xl font-bold text-red-600 truncate"><%- (stats && stats.criticalStock) || 0 %></p>
            <p class="text-xs text-red-500 mt-1">Critical items</p>
          </div>
          <div class="w-12 h-12 bg-red-200 rounded-lg flex items-center justify-center flex-shrink-0">
            <i class="fa fa-exclamation-triangle text-red-600"></i>
          </div>
        </div>
      </div>

      <div class="bg-gradient-to-br from-orange-50 to-orange-100 rounded-xl p-4 sm:p-6 border border-orange-200 hover:shadow-md transition-all duration-200">
        <div class="flex items-center justify-between">
          <div class="min-w-0 flex-1">
            <p class="text-sm font-medium text-orange-700">Low Stock</p>
            <p class="text-2xl sm:text-3xl font-bold text-orange-600 truncate"><%- (stats && stats.lowStock) || 0 %></p>
            <p class="text-xs text-orange-500 mt-1">Need attention</p>
          </div>
          <div class="w-12 h-12 bg-orange-200 rounded-lg flex items-center justify-center flex-shrink-0">
            <i class="fa fa-exclamation-circle text-orange-600"></i>
          </div>
        </div>
      </div>

      <div class="bg-gradient-to-br from-blue-50 to-blue-100 rounded-xl p-4 sm:p-6 border border-blue-200 hover:shadow-md transition-all duration-200">
        <div class="flex items-center justify-between">
          <div class="min-w-0 flex-1">
            <p class="text-sm font-medium text-blue-700">Total Alerts</p>
            <p class="text-2xl sm:text-3xl font-bold text-blue-600 truncate"><%- (stats && stats.totalAlerts) || 0 %></p>
            <p class="text-xs text-blue-500 mt-1">Active alerts</p>
          </div>
          <div class="w-12 h-12 bg-blue-200 rounded-lg flex items-center justify-center flex-shrink-0">
            <i class="fa fa-bell text-blue-600"></i>
          </div>
        </div>
      </div>
    </div>

    <!-- Alerts Table -->
    <div class="bg-white rounded-xl shadow-sm border border-gray-100">
      <div class="px-4 sm:px-6 py-4 border-b bg-gradient-to-r from-gray-50 to-red-50">
        <div class="flex items-center justify-between">
          <h2 class="text-lg font-semibold text-gray-900 flex items-center gap-2">
            <i class="fa fa-list text-red-500"></i>
            Stock Alerts
          </h2>
          <div class="text-sm text-gray-600">
            <span class="font-medium"><%- (alerts && alerts.length) || 0 %></span> items
          </div>
        </div>
      </div>
      
      <!-- Mobile Cards (Hidden on Desktop) -->
      <div class="block lg:hidden">
        <% if (alerts && alerts.length > 0) { %>
          <div class="divide-y divide-gray-200">
            <% alerts.forEach(alert => { %>
              <% const currentStock = alert.stock || alert.currentStock || 0; %>
              <% const threshold = alert.threshold || 5; %>
              <% const status = currentStock === 0 ? 'Out of Stock' : currentStock <= 2 ? 'Critical' : 'Low Stock'; %>
              <% const statusColor = currentStock === 0 ? 'bg-red-100 text-red-800 border-red-200' : currentStock <= 2 ? 'bg-orange-100 text-orange-800 border-orange-200' : 'bg-yellow-100 text-yellow-800 border-yellow-200'; %>
              
              <div class="p-4 hover:bg-gray-50 transition-colors">
                <div class="flex items-start gap-3">
                  <div class="w-12 h-12 rounded-lg overflow-hidden flex-shrink-0">
                    <% if (alert.thumbnail) { %>
                      <img class="w-full h-full object-cover" src="/uploads/products/<%- alert.thumbnail %>" alt="Product">
                    <% } else { %>
                      <div class="w-full h-full bg-gray-200 flex items-center justify-center">
                        <i class="fa fa-cube text-gray-400"></i>
                      </div>
                    <% } %>
                  </div>
                  <div class="flex-1 min-w-0">
                    <div class="flex items-start justify-between gap-2 mb-2">
                      <div class="min-w-0">
                        <h3 class="text-sm font-medium text-gray-900 truncate">
                          <%- (alert.title || alert.productTitle || 'Unknown Product').substring(0, 40) %><%- (alert.title || alert.productTitle || '').length > 40 ? '...' : '' %>
                        </h3>
                        <p class="text-xs text-gray-500 font-mono"><%- alert.sku || alert.variantSku || 'N/A' %></p>
                      </div>
                      <span class="inline-flex px-2 py-1 text-xs font-medium rounded-full border <%= statusColor %> whitespace-nowrap">
                        <%- status %>
                      </span>
                    </div>
                    <div class="flex items-center justify-between">
                      <div class="flex items-center gap-4 text-sm">
                        <div class="text-center">
                          <div class="font-bold <%= currentStock === 0 ? 'text-red-600' : currentStock <= 2 ? 'text-orange-600' : 'text-yellow-600' %>">
                            <%- currentStock %>
                          </div>
                          <div class="text-xs text-gray-500">Current</div>
                        </div>
                        <div class="text-center">
                          <div class="font-medium text-gray-600"><%- threshold %></div>
                          <div class="text-xs text-gray-500">Threshold</div>
                        </div>
                      </div>
                      <% if (alert.productId || alert._id) { %>
                        <button onclick="restockProduct('<%- alert.productId || alert._id %>', '<%- alert.sku || alert.variantSku %>')" 
                                class="flex items-center gap-1 px-3 py-1.5 text-xs bg-green-100 text-green-700 rounded-lg hover:bg-green-200 transition-colors border border-green-200 font-medium">
                          <i class="fa fa-plus"></i>
                          Restock
                        </button>
                      <% } %>
                    </div>
                  </div>
                </div>
              </div>
            <% }) %>
          </div>
        <% } else { %>
          <div class="text-center py-12">
            <div class="w-16 h-16 bg-green-100 rounded-full flex items-center justify-center mx-auto mb-4">
              <i class="fa fa-check-circle text-2xl text-green-500"></i>
            </div>
            <h3 class="text-lg font-medium text-gray-900 mb-2">All Products Well Stocked!</h3>
            <p class="text-gray-600">No low stock alerts at this time.</p>
          </div>
        <% } %>
      </div>

      <!-- Desktop Table (Hidden on Mobile) -->
      <div class="hidden lg:block overflow-x-auto">
        <% if (alerts && alerts.length > 0) { %>
          <table class="w-full">
            <thead class="bg-gray-50">
              <tr>
                <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Product</th>
                <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">SKU</th>
                <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Current Stock</th>
                <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Threshold</th>
                <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Status</th>
                <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Actions</th>
              </tr>
            </thead>
            <tbody class="bg-white divide-y divide-gray-200">
              <% alerts.forEach(alert => { %>
                <% const currentStock = alert.stock || alert.currentStock || 0; %>
                <% const threshold = alert.threshold || 5; %>
                <% const status = currentStock === 0 ? 'Out of Stock' : currentStock <= 2 ? 'Critical' : 'Low Stock'; %>
                <% const statusColor = currentStock === 0 ? 'bg-red-100 text-red-800' : currentStock <= 2 ? 'bg-orange-100 text-orange-800' : 'bg-yellow-100 text-yellow-800'; %>
                
                <tr class="hover:bg-gray-50">
                  <td class="px-6 py-4 whitespace-nowrap">
                    <div class="flex items-center">
                      <div class="flex-shrink-0 h-10 w-10">
                        <% if (alert.thumbnail) { %>
                          <img class="h-10 w-10 rounded-lg object-cover" src="/uploads/products/<%- alert.thumbnail %>" alt="Product">
                        <% } else { %>
                          <div class="h-10 w-10 rounded-lg bg-gray-200 flex items-center justify-center">
                            <i class="fas fa-cube text-gray-400"></i>
                          </div>
                        <% } %>
                      </div>
                      <div class="ml-4">
                        <div class="text-sm font-medium text-gray-900">
                          <%- (alert.title || alert.productTitle || 'Unknown Product').substring(0, 40) %><%- (alert.title || alert.productTitle || '').length > 40 ? '...' : '' %>
                        </div>
                      </div>
                    </div>
                  </td>
                  <td class="px-6 py-4 whitespace-nowrap">
                    <div class="text-sm font-mono text-gray-900"><%- alert.sku || alert.variantSku || 'N/A' %></div>
                  </td>
                  <td class="px-6 py-4 whitespace-nowrap">
                    <div class="text-sm font-bold <%= currentStock === 0 ? 'text-red-600' : currentStock <= 2 ? 'text-orange-600' : 'text-yellow-600' %>">
                      <%- currentStock %> units
                    </div>
                  </td>
                  <td class="px-6 py-4 whitespace-nowrap">
                    <div class="text-sm text-gray-500"><%- threshold %> units</div>
                  </td>
                  <td class="px-6 py-4 whitespace-nowrap">
                    <span class="inline-flex px-2 py-1 text-xs font-semibold rounded-full <%= statusColor %>">
                      <%- status %>
                    </span>
                  </td>
                  <td class="px-6 py-4 whitespace-nowrap text-sm font-medium">
                    <div class="flex gap-2">
                      <% if (alert.productId || alert._id) { %>
                        <button onclick="restockProduct('<%- alert.productId || alert._id %>', '<%- alert.sku || alert.variantSku %>')" 
                                class="text-blue-600 hover:text-blue-900 px-2 py-1 rounded bg-blue-50 hover:bg-blue-100 transition-all">
                          <i class="fas fa-plus mr-1"></i>Restock
                        </button>
                      <% } %>
                    </div>
                  </td>
                </tr>
              <% }) %>
            </tbody>
          </table>
        <% } else { %>
          <div class="text-center py-12">
            <div class="w-20 h-20 bg-green-100 rounded-full flex items-center justify-center mx-auto mb-4">
              <i class="fa fa-check-circle text-3xl text-green-500"></i>
            </div>
            <h3 class="text-lg font-medium text-gray-900 mb-2">All Products Well Stocked!</h3>
            <p class="text-gray-600">No low stock alerts at this time.</p>
          </div>
        <% } %>
      </div>
    </div>
  </div>
</div>

<!-- Restock Modal -->
<div id="restockModal" class="fixed inset-0 bg-black bg-opacity-50 hidden z-50 flex items-center justify-center p-4">
  <div class="bg-white rounded-xl shadow-2xl max-w-md w-full max-h-screen overflow-y-auto">
    <div class="px-6 py-4 border-b border-gray-200">
      <div class="flex items-center justify-between">
        <h3 class="text-lg font-semibold text-gray-900 flex items-center gap-2">
          <i class="fa fa-plus text-green-600"></i>
          Restock Product
        </h3>
        <button type="button" onclick="closeRestockModal()" class="text-gray-400 hover:text-gray-600 transition-colors">
          <i class="fa fa-times"></i>
        </button>
      </div>
    </div>
    
    <form id="restockForm" method="POST" action="/admin/v1/inventory/restock">
      <input type="hidden" name="_csrf" value="<%= csrfToken %>">
      <div class="px-6 py-6 space-y-4">
        <input type="hidden" id="restockProductId" name="productId">
        <input type="hidden" id="restockVariantSku" name="variantSku">
        
        <div>
          <label class="block text-sm font-medium text-gray-700 mb-2">Quantity to Add</label>
          <input type="number" name="quantity" min="1" required 
                 class="w-full px-4 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-green-500 focus:border-green-500 transition-colors"
                 placeholder="Enter quantity to add">
        </div>
        
        <div>
          <label class="block text-sm font-medium text-gray-700 mb-2">Notes (Optional)</label>
          <textarea name="notes" rows="3" 
                    class="w-full px-4 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-green-500 focus:border-green-500 transition-colors resize-none"
                    placeholder="Reason for restocking (e.g., new shipment, inventory adjustment)..."></textarea>
        </div>
      </div>
      
      <div class="px-6 py-4 border-t border-gray-200 bg-gray-50 rounded-b-xl">
        <div class="flex flex-col sm:flex-row gap-3 sm:justify-end">
          <button type="button" onclick="closeRestockModal()" 
                  class="px-4 py-2 text-gray-700 bg-white border border-gray-300 rounded-lg hover:bg-gray-50 transition-colors font-medium">
            Cancel
          </button>
          <button type="submit" 
                  class="px-4 py-2 bg-green-600 text-white rounded-lg hover:bg-green-700 transition-colors font-medium flex items-center justify-center gap-2">
            <i class="fa fa-plus"></i>
            Add Stock
          </button>
        </div>
      </div>
    </form>
  </div>
</div>

<script>
function restockProduct(productId, variantSku) {
  document.getElementById('restockProductId').value = productId;
  document.getElementById('restockVariantSku').value = variantSku;
  document.getElementById('restockModal').classList.remove('hidden');
}

function closeRestockModal() {
  document.getElementById('restockModal').classList.add('hidden');
  document.getElementById('restockForm').reset();
}

// Close modal on outside click
document.getElementById('restockModal').addEventListener('click', function(e) {
  if (e.target === this) {
    closeRestockModal();
  }
});
</script>

<%- include('../partials/footer.ejs') %>