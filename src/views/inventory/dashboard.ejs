<%- include('../partials/header.ejs', { title: 'Inventory Dashboard' }) %>

<!-- Navigation -->
<nav class="mb-6 sm:mb-8">
  <div class="bg-white rounded-xl shadow-sm border border-gray-100 p-3 sm:p-4">
    <div class="flex flex-wrap items-center gap-2 text-sm">
      <a href="/admin/v1/staff/dashboard" class="flex items-center gap-1.5 px-3 py-1.5 rounded-lg bg-blue-50 text-blue-700 hover:bg-blue-100 transition-colors">
        <i class="fa fa-home text-xs"></i>
        <span class="hidden sm:inline">Dashboard</span>
      </a>
      <i class="fa fa-chevron-right text-gray-400 text-xs"></i>
      <span class="flex items-center gap-1.5 px-3 py-1.5 rounded-lg bg-green-50 text-green-700 font-medium">
        <i class="fa fa-boxes text-xs"></i>
        Inventory
      </span>
    </div>
  </div>
</nav>

<div class="min-h-screen bg-gray-50">
  <div class="max-w-7xl mx-auto px-4 sm:px-6 py-6 sm:py-8">
    
    <!-- Header -->
    <div class="mb-6 sm:mb-8">
      <div class="flex flex-col sm:flex-row sm:items-center sm:justify-between gap-4">
        <div>
          <h1 class="text-2xl sm:text-3xl font-bold text-gray-900">Inventory Dashboard</h1>
          <p class="text-gray-600 mt-1 sm:mt-2">Monitor stock levels and inventory movements</p>
        </div>
        <div class="flex flex-col sm:flex-row gap-2 sm:gap-3">
          <a href="/admin/reports/comprehensive" class="flex items-center justify-center gap-2 px-4 py-2 bg-white border border-gray-300 rounded-lg hover:bg-gray-50 transition-colors text-sm font-medium">
            <i class="fa fa-chart-line text-xs"></i>
            <span class="hidden sm:inline">Main Dashboard</span>
            <span class="sm:hidden">Dashboard</span>
          </a>
          <a href="/admin/inventory/movements" class="flex items-center justify-center gap-2 px-4 py-2 bg-blue-600 text-white rounded-lg hover:bg-blue-700 transition-colors text-sm font-medium">
            <i class="fa fa-history text-xs"></i>
            <span class="hidden sm:inline">View Movements</span>
            <span class="sm:hidden">Movements</span>
          </a>
        </div>
      </div>
    </div>

    <!-- Flash Messages -->
    <% if (success && success.length) { %>
      <div class="mb-8 p-4 rounded-xl bg-green-50 border border-green-200 text-green-800">
        <% success.forEach(msg => { %>
          <div class="flex items-center gap-2">
            <i class="fas fa-check-circle"></i>
            <%= msg %>
          </div>
        <% }) %>
      </div>
    <% } %>

    <% if (error && error.length) { %>
      <div class="mb-8 p-4 rounded-xl bg-red-50 border border-red-200 text-red-800">
        <% error.forEach(msg => { %>
          <div class="flex items-center gap-2">
            <i class="fas fa-exclamation-circle"></i>
            <%= msg %>
          </div>
        <% }) %>
      </div>
    <% } %>

    <!-- KPI Cards -->
    <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-4 gap-4 sm:gap-6 mb-6 sm:mb-8">
      <div class="bg-gradient-to-br from-red-50 to-red-100 rounded-xl p-4 sm:p-6 border border-red-200 hover:shadow-md transition-all duration-200">
        <div class="flex items-center justify-between">
          <div class="min-w-0 flex-1">
            <p class="text-sm font-medium text-red-700">Critical Stock</p>
            <p class="text-2xl sm:text-3xl font-bold text-red-600 truncate"><%= data.criticalStockCount || 0 %></p>
            <p class="text-xs sm:text-sm text-red-500 mt-1 flex items-center gap-1">
              <i class="fa fa-times-circle"></i>
              <span>Out of stock</span>
            </p>
          </div>
          <div class="w-10 h-10 sm:w-12 sm:h-12 bg-red-200 rounded-lg flex items-center justify-center flex-shrink-0">
            <i class="fa fa-exclamation-triangle text-red-600"></i>
          </div>
        </div>
      </div>
      
      <div class="bg-gradient-to-br from-yellow-50 to-yellow-100 rounded-xl p-4 sm:p-6 border border-yellow-200 hover:shadow-md transition-all duration-200">
        <div class="flex items-center justify-between">
          <div class="min-w-0 flex-1">
            <p class="text-sm font-medium text-yellow-700">Low Stock</p>
            <p class="text-2xl sm:text-3xl font-bold text-yellow-600 truncate"><%= data.lowStockCount || 0 %></p>
            <p class="text-xs sm:text-sm text-yellow-500 mt-1 flex items-center gap-1">
              <i class="fa fa-exclamation-circle"></i>
              <span>Below threshold</span>
            </p>
          </div>
          <div class="w-10 h-10 sm:w-12 sm:h-12 bg-yellow-200 rounded-lg flex items-center justify-center flex-shrink-0">
            <i class="fa fa-exclamation-circle text-yellow-600"></i>
          </div>
        </div>
      </div>
      
      <div class="bg-gradient-to-br from-blue-50 to-blue-100 rounded-xl p-4 sm:p-6 border border-blue-200 hover:shadow-md transition-all duration-200">
        <div class="flex items-center justify-between">
          <div class="min-w-0 flex-1">
            <p class="text-sm font-medium text-blue-700">Total Products</p>
            <p class="text-2xl sm:text-3xl font-bold text-blue-600 truncate"><%= data.totalProducts || 0 %></p>
            <p class="text-xs sm:text-sm text-blue-500 mt-1 flex items-center gap-1">
              <i class="fa fa-box"></i>
              <span><%= data.activeProducts || 0 %> active</span>
            </p>
          </div>
          <div class="w-10 h-10 sm:w-12 sm:h-12 bg-blue-200 rounded-lg flex items-center justify-center flex-shrink-0">
            <i class="fa fa-box text-blue-600"></i>
          </div>
        </div>
      </div>
      
      <div class="bg-gradient-to-br from-green-50 to-green-100 rounded-xl p-4 sm:p-6 border border-green-200 hover:shadow-md transition-all duration-200">
        <div class="flex items-center justify-between">
          <div class="min-w-0 flex-1">
            <p class="text-sm font-medium text-green-700">Stock Value</p>
            <p class="text-xl sm:text-2xl font-bold text-green-600 truncate">₹<%= (data.stockValue || 0).toLocaleString('en-IN') %></p>
            <p class="text-xs sm:text-sm text-green-500 mt-1 flex items-center gap-1">
              <i class="fa fa-rupee-sign"></i>
              <span>Total inventory</span>
            </p>
          </div>
          <div class="w-10 h-10 sm:w-12 sm:h-12 bg-green-200 rounded-lg flex items-center justify-center flex-shrink-0">
            <i class="fa fa-rupee-sign text-green-600"></i>
          </div>
        </div>
      </div>
    </div>

    <!-- Content Sections -->
    <div class="grid grid-cols-1 xl:grid-cols-2 gap-6">
      
      <!-- Low Stock Alerts -->
      <div class="bg-white rounded-xl p-4 sm:p-6 shadow-sm border border-gray-100">
        <div class="flex items-center justify-between mb-4 sm:mb-6">
          <h3 class="text-lg font-semibold text-gray-900 flex items-center gap-2">
            <i class="fa fa-exclamation-triangle text-red-500"></i>
            Low Stock Alerts
          </h3>
          <a href="/admin/inventory/low-stock" class="text-sm text-blue-600 hover:text-blue-700 font-medium">View all →</a>
        </div>
        <div class="space-y-3">
          <% if (data.lowStockAlerts && data.lowStockAlerts.length > 0) { %>
            <% data.lowStockAlerts.slice(0, 5).forEach(alert => { %>
              <div class="flex items-center gap-3 p-3 bg-gradient-to-r from-red-50 to-orange-50 rounded-lg border border-red-100 hover:shadow-sm transition-shadow">
                <div class="w-10 h-10 bg-red-100 rounded-lg flex items-center justify-center flex-shrink-0">
                  <i class="fa fa-exclamation-triangle text-red-600"></i>
                </div>
                <div class="flex-1 min-w-0">
                  <p class="text-sm font-medium text-gray-900 truncate"><%= alert.title || 'Unknown Product' %></p>
                  <p class="text-xs text-gray-500">SKU: <%= alert.sku || 'N/A' %></p>
                </div>
                <div class="text-right flex-shrink-0">
                  <p class="text-sm font-bold text-red-600"><%= alert.stock || alert.currentStock || 0 %></p>
                  <p class="text-xs text-gray-500">units left</p>
                </div>
              </div>
            <% }) %>
          <% } else { %>
            <div class="text-center py-8">
              <div class="w-16 h-16 bg-green-100 rounded-full flex items-center justify-center mx-auto mb-4">
                <i class="fa fa-check-circle text-2xl text-green-500"></i>
              </div>
              <p class="text-gray-500 font-medium">All products are well stocked</p>
              <p class="text-xs text-gray-400 mt-1">No low stock alerts at this time</p>
            </div>
          <% } %>
        </div>
      </div>

      <!-- Recent Movements -->
      <div class="bg-white rounded-xl p-4 sm:p-6 shadow-sm border border-gray-100">
        <div class="flex items-center justify-between mb-4 sm:mb-6">
          <h3 class="text-lg font-semibold text-gray-900 flex items-center gap-2">
            <i class="fa fa-history text-blue-500"></i>
            Recent Movements
          </h3>
          <a href="/admin/inventory/movements" class="text-sm text-blue-600 hover:text-blue-700 font-medium">View all →</a>
        </div>
        <div class="space-y-3">
          <% if (data.recentMovements && data.recentMovements.length > 0) { %>
            <% data.recentMovements.slice(0, 5).forEach(movement => { %>
              <div class="flex items-center gap-3 p-3 bg-gray-50 rounded-lg hover:bg-gray-100 transition-colors">
                <div class="w-10 h-10 bg-<%= movement.type === 'sale' ? 'red' : movement.type === 'restock' ? 'green' : 'blue' %>-100 rounded-lg flex items-center justify-center flex-shrink-0">
                  <i class="fa fa-<%= movement.type === 'sale' ? 'minus' : movement.type === 'restock' ? 'plus' : 'exchange-alt' %> text-<%= movement.type === 'sale' ? 'red' : movement.type === 'restock' ? 'green' : 'blue' %>-600"></i>
                </div>
                <div class="flex-1 min-w-0">
                  <p class="text-sm font-medium text-gray-900 truncate"><%= movement.productTitle || movement.product?.title || 'Unknown Product' %></p>
                  <div class="flex flex-wrap items-center gap-2 text-xs text-gray-500">
                    <span class="bg-white px-2 py-1 rounded border">SKU: <%= movement.variantSku || 'N/A' %></span>
                    <% 
                      // Fix stock transition display
                      let prevStock = movement.previousStock || 0;
                      let newStock = movement.newStock || 0;
                      
                      if (movement.type === 'restock' && prevStock >= newStock) {
                        prevStock = Math.max(0, newStock - (movement.quantity || 0));
                      }
                      if (movement.type === 'sale' && prevStock <= newStock) {
                        prevStock = newStock + (movement.quantity || 0);
                      }
                    %>
                    <span class="bg-blue-50 text-blue-700 px-2 py-1 rounded border border-blue-200">
                      <%= Math.max(0, prevStock) %>→<%= Math.max(0, newStock) %>
                    </span>
                  </div>
                </div>
                <div class="text-right flex-shrink-0">
                  <p class="text-sm font-bold text-<%= movement.type === 'sale' ? 'red' : movement.type === 'restock' ? 'green' : 'blue' %>-600">
                    <%= movement.type === 'sale' ? '-' : '+' %><%= movement.quantity %>
                  </p>
                  <p class="text-xs text-gray-500"><%= new Date(movement.createdAt).toLocaleDateString() %></p>
                </div>
              </div>
            <% }) %>
          <% } else { %>
            <div class="text-center py-8">
              <div class="w-16 h-16 bg-gray-100 rounded-full flex items-center justify-center mx-auto mb-4">
                <i class="fa fa-history text-2xl text-gray-400"></i>
              </div>
              <p class="text-gray-500 font-medium">No recent movements</p>
              <p class="text-xs text-gray-400 mt-1">Inventory activity will appear here</p>
            </div>
          <% } %>
        </div>
      </div>
    </div>
  </div>
</div>

<%- include('../partials/footer.ejs') %>

