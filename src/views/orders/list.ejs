<%- include('../partials/header.ejs', { title: 'Order Management' }) %>

<div class="min-h-screen bg-gradient-to-br from-gray-50 to-blue-50">
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-4 sm:py-6">
    
    <!-- Header -->
    <div class="flex flex-col lg:flex-row lg:justify-between lg:items-center mb-6 sm:mb-8 gap-4">
      <div class="text-center lg:text-left">
        <h1 class="text-2xl sm:text-3xl lg:text-4xl font-bold text-gray-900 mb-2">Order Management</h1>
        <p class="text-gray-600 text-sm sm:text-base">Manage and track all customer orders efficiently</p>
      </div>
      <div class="flex flex-col sm:flex-row items-center gap-3 w-full lg:w-auto">
        <a href="/admin/v1/staff/dashboard" class="w-full sm:w-auto px-4 py-2.5 bg-white border border-gray-300 rounded-lg hover:bg-gray-50 transition-colors text-center font-medium">
          Dashboard
        </a>
        <a href="/admin/v1/order/export" class="w-full sm:w-auto px-4 py-2.5 bg-green-600 text-white rounded-lg hover:bg-green-700 transition-colors text-center font-medium">
          Export Orders
        </a>
      </div>
    </div>

    <!-- Flash Messages -->
    <% if (success && success.length) { %>
      <div class="mb-6 p-4 rounded-lg bg-green-50 border border-green-200 text-green-800">
        <% success.forEach(msg => { %>
          <div class="flex items-center gap-2">
            <i class="fas fa-check-circle"></i>
            <%= msg %>
          </div>
        <% }) %>
      </div>
    <% } %>

    <% if (error && error.length) { %>
      <div class="mb-6 p-4 rounded-lg bg-red-50 border border-red-200 text-red-800">
        <% error.forEach(msg => { %>
          <div class="flex items-center gap-2">
            <i class="fas fa-exclamation-circle"></i>
            <%= msg %>
          </div>
        <% }) %>
      </div>
    <% } %>

    <!-- Filters -->
    <div class="bg-white rounded-xl shadow-sm border border-gray-200 mb-8">
      <div class="px-6 py-4 border-b border-gray-100">
        <h3 class="text-lg font-semibold text-gray-900">Filter & Search Orders</h3>
        <p class="text-sm text-gray-500 mt-1">Use filters to find specific orders quickly</p>
      </div>
      <div class="p-6">
        <form method="GET" action="/admin/v1/order" class="space-y-6">
          <!-- Search Bar -->
          <div class="flex flex-col sm:flex-row gap-4">
            <div class="flex-1">
              <label class="block text-sm font-medium text-gray-700 mb-2">Search Orders</label>
              <input type="text" name="search" placeholder="Order ID, Customer name, Email, Tracking number..." value="<%= filters.search || '' %>" class="w-full px-4 py-2.5 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-blue-500 transition-colors">
            </div>
            <div class="flex items-end gap-3">
              <button type="submit" class="px-6 py-2.5 bg-blue-600 text-white rounded-lg hover:bg-blue-700 transition-colors font-medium">
                Search
              </button>
              <a href="/admin/v1/order" class="px-4 py-2.5 bg-gray-100 text-gray-700 rounded-lg hover:bg-gray-200 transition-colors" title="Clear All Filters">
                Clear
              </a>
            </div>
          </div>
          
          <!-- Filter Grid -->
          <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-3 xl:grid-cols-5 gap-4">
            <div>
              <label class="block text-sm font-medium text-gray-700 mb-2">Status</label>
              <select name="status" class="w-full px-3 py-2.5 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-blue-500 bg-white transition-colors">
                <option value="">All Statuses</option>
                <option value="pending" <%= filters.status === "pending" ? "selected" : "" %>>Pending</option>
                <option value="processing" <%= filters.status === "processing" ? "selected" : "" %>>Processing</option>
                <option value="shipped" <%= filters.status === "shipped" ? "selected" : "" %>>Shipped</option>
                <option value="delivered" <%= filters.status === "delivered" ? "selected" : "" %>>Delivered</option>
                <option value="cancelled" <%= filters.status === "cancelled" ? "selected" : "" %>>Cancelled</option>
              </select>
            </div>
            
            <div>
              <label class="block text-sm font-medium text-gray-700 mb-2">Payment Method</label>
              <select name="paymentMethod" class="w-full px-3 py-2.5 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-blue-500 bg-white transition-colors">
                <option value="">All Methods</option>
                <option value="cod" <%= filters.paymentMethod === "cod" ? "selected" : "" %>>Cash on Delivery</option>
                <option value="card" <%= filters.paymentMethod === "card" ? "selected" : "" %>>Card Payment</option>
                <option value="online" <%= filters.paymentMethod === "online" ? "selected" : "" %>>Online Payment</option>
              </select>
            </div>

            <div>
              <label class="block text-sm font-medium text-gray-700 mb-2">Sort By</label>
              <select name="sortBy" class="w-full px-3 py-2.5 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-blue-500 bg-white transition-colors">
                <option value="priority" <%= (filters.sortBy || 'priority') === "priority" ? "selected" : "" %>>Priority</option>
                <option value="date_desc" <%= filters.sortBy === "date_desc" ? "selected" : "" %>>Newest First</option>
                <option value="date_asc" <%= filters.sortBy === "date_asc" ? "selected" : "" %>>Oldest First</option>
                <option value="amount_desc" <%= filters.sortBy === "amount_desc" ? "selected" : "" %>>Highest Amount</option>
                <option value="amount_asc" <%= filters.sortBy === "amount_asc" ? "selected" : "" %>>Lowest Amount</option>
              </select>
            </div>

            <div>
              <label class="block text-sm font-medium text-gray-700 mb-2">From Date</label>
              <input type="date" name="dateFrom" value="<%= filters.dateFrom || '' %>" class="w-full px-3 py-2.5 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-blue-500 transition-colors">
            </div>

            <div>
              <label class="block text-sm font-medium text-gray-700 mb-2">To Date</label>
              <input type="date" name="dateTo" value="<%= filters.dateTo || '' %>" class="w-full px-3 py-2.5 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-blue-500 transition-colors">
            </div>
          </div>
        </form>
      </div>
    </div>

    <!-- Orders Display -->
    <div class="space-y-4">
      <!-- Desktop Table View -->
      <div class="hidden lg:block bg-white rounded-xl shadow-sm border border-gray-200 overflow-hidden">
        <div class="px-6 py-4 border-b border-gray-100">
          <h3 class="text-lg font-semibold text-gray-900">Orders List</h3>
          <p class="text-sm text-gray-500 mt-1">Manage and track customer orders</p>
        </div>
        <div class="overflow-x-auto">
          <table class="w-full">
            <thead class="bg-gray-50 border-b">
              <tr>
                <th class="px-4 py-4 text-center text-sm font-semibold text-gray-900 w-16">#</th>
                <th class="px-6 py-4 text-left text-sm font-semibold text-gray-900">Order</th>
                <th class="px-6 py-4 text-left text-sm font-semibold text-gray-900">Customer</th>
                <th class="px-6 py-4 text-left text-sm font-semibold text-gray-900">Shipping Address</th>
                <th class="px-6 py-4 text-left text-sm font-semibold text-gray-900">Items & Total</th>
                <th class="px-6 py-4 text-left text-sm font-semibold text-gray-900">Status</th>
                <th class="px-6 py-4 text-left text-sm font-semibold text-gray-900">Date</th>
                <th class="px-6 py-4 text-center text-sm font-semibold text-gray-900">Actions</th>
              </tr>
            </thead>
            <tbody class="divide-y divide-gray-200">
              <% if (!orders || !orders.length) { %>
                <tr>
                  <td colspan="8" class="px-6 py-12 text-center text-gray-500">
                    <div class="flex flex-col items-center gap-3">
                      <div class="text-4xl text-gray-300">📦</div>
                      <p class="text-lg font-medium">No orders found</p>
                      <p class="text-sm">Try adjusting your filters or check back later</p>
                    </div>
                  </td>
                </tr>
              <% } else { %>
              <% orders.forEach((order, index) => { %>
                <% 
                  const itemsPerPage = limit || 10;
                  const orderNumber = (currentPage - 1) * itemsPerPage + index + 1;
                %>
                <tr class="hover:bg-gray-50 transition-colors <%= order.status === 'cancelled' ? 'bg-red-50 text-gray-400' : '' %>">
                  <!-- Row Number -->
                  <td class="px-4 py-4 text-center">
                    <span class="inline-flex items-center justify-center w-8 h-8 rounded-full bg-blue-100 text-blue-800 text-sm font-semibold">
                      <%= orderNumber %>
                    </span>
                  </td>
                  
                  <!-- Order Info -->
                  <td class="px-6 py-4">
                    <div class="flex flex-col gap-1">
                      <span class="font-mono text-sm font-semibold text-blue-600">#<%= order._id.toString().slice(-8).toUpperCase() %></span>
                      <% if (order.trackingNumber) { %>
                        <span class="text-xs text-gray-500">Track: <%= order.trackingNumber %></span>
                      <% } %>
                    </div>
                  </td>

                  <!-- Customer -->
                  <td class="px-6 py-4">
                    <div class="flex flex-col gap-1">
                      <span class="font-medium text-gray-900"><%= order.user?.fullname || order.user?.username || 'Guest' %></span>
                      <span class="text-sm text-gray-500"><%= order.user?.email || 'N/A' %></span>
                      <span class="text-xs text-gray-400"><%= order.user?.phone || 'No phone' %></span>
                    </div>
                  </td>

                  <!-- Shipping Address -->
                  <td class="px-6 py-4">
                    <% if (order.shippingAddress) { %>
                      <div class="text-sm text-gray-900 max-w-xs">
                        <div class="text-gray-600 text-xs leading-relaxed">
                          <strong><%= order.shippingAddress.fullname %></strong><br>
                          <%= order.shippingAddress.street %><br>
                          <%= order.shippingAddress.city %>, <%= order.shippingAddress.state %><br>
                          <%= order.shippingAddress.postalCode %>
                        </div>
                        <div class="text-xs text-gray-500 mt-1">
                          <i class="fas fa-phone"></i> <%= order.shippingAddress.phone %>
                        </div>
                      </div>
                    <% } else { %>
                      <span class="text-gray-400 text-sm">No address</span>
                    <% } %>
                  </td>

                  <!-- Items & Total -->
                  <td class="px-6 py-4">
                    <div class="flex flex-col gap-1">
                      <span class="font-semibold text-lg text-gray-900">Rs <%= order.totalPrice.toLocaleString() %></span>
                      <span class="text-sm text-gray-500"><%= order.totalItem %> items (<%= order.totalQty %> qty)</span>
                      <span class="text-xs text-gray-400 capitalize"><%= order.paymentMethod %></span>
                      
                      <!-- Mixed Status & Revenue Impact Indicators -->
                      <% if (order.items && order.items.length > 0) { %>
                        <% 
                          const itemStatuses = order.items.reduce((acc, item) => {
                            const status = item.status || 'pending';
                            acc[status] = (acc[status] || 0) + 1;
                            return acc;
                          }, {});
                          const statusCount = Object.keys(itemStatuses).length;
                          const deliveredCount = itemStatuses.delivered || 0;
                          const cancelledCount = itemStatuses.cancelled || 0;
                          const activeCount = order.items.length - cancelledCount;
                          
                          // Calculate revenue impact
                          let deliveredRevenue = 0, cancelledRevenue = 0;
                          order.items.forEach(item => {
                            const itemRevenue = item.totalPrice || 0;
                            if (item.status === 'delivered') deliveredRevenue += itemRevenue;
                            else if (item.status === 'cancelled') cancelledRevenue += itemRevenue;
                          });
                          const fulfillmentRate = activeCount > 0 ? Math.round((deliveredCount / activeCount) * 100) : 0;
                        %>
                        
                        <% if (statusCount > 1) { %>
                          <div class="text-xs bg-gradient-to-r from-orange-100 to-red-100 text-orange-800 px-2 py-1 rounded-full mt-1 inline-flex items-center gap-1 border border-orange-200">
                            <i class="fas fa-exclamation-triangle text-orange-600"></i>
                            Mixed Status Order
                          </div>
                          
                          <!-- Revenue Impact for Mixed Orders -->
                          <div class="mt-2 grid grid-cols-2 gap-1 text-xs">
                            <% if (deliveredRevenue > 0) { %>
                              <div class="bg-green-50 text-green-700 px-2 py-1 rounded border border-green-200">
                                <i class="fas fa-check-circle mr-1"></i>Rs <%= deliveredRevenue.toLocaleString() %>
                              </div>
                            <% } %>
                            <% if (cancelledRevenue > 0) { %>
                              <div class="bg-red-50 text-red-700 px-2 py-1 rounded border border-red-200">
                                <i class="fas fa-times-circle mr-1"></i>Rs <%= cancelledRevenue.toLocaleString() %>
                              </div>
                            <% } %>
                          </div>
                        <% } %>
                        
                        <% if (deliveredCount > 0 && deliveredCount < order.items.length) { %>
                          <div class="text-xs bg-blue-100 text-blue-800 px-2 py-1 rounded-full mt-1 inline-flex items-center gap-1">
                            <i class="fas fa-chart-pie mr-1"></i>
                            <%= fulfillmentRate %>% fulfilled (<%= deliveredCount %>/<%= activeCount %>)
                          </div>
                        <% } %>
                        
                        <% const variantItems = order.items.filter(item => item.variantSku && item.variantSku.trim() !== ''); %>
                        <% if (variantItems.length > 0) { %>
                          <div class="text-xs text-blue-600 mt-1">
                            <i class="fas fa-layer-group mr-1"></i><%= variantItems.length %> variant(s)
                          </div>
                        <% } %>
                      <% } %>
                    </div>
                  </td>

                  <!-- Status -->
                  <td class="px-6 py-4">
                    <div class="flex flex-col gap-2">
                      <span class="inline-flex px-3 py-1 rounded-full text-xs font-medium <%= 
                        order.status === 'pending' ? 'bg-yellow-100 text-yellow-800' :
                        order.status === 'processing' ? 'bg-blue-100 text-blue-800' :
                        order.status === 'shipped' ? 'bg-purple-100 text-purple-800' :
                        order.status === 'delivered' ? 'bg-green-100 text-green-800' :
                        'bg-red-100 text-red-800'
                      %>">
                        <%= order.status.charAt(0).toUpperCase() + order.status.slice(1) %>
                      </span>
                      <% if(order.status === 'cancelled') { %>
                        <span class="inline-flex px-2 py-1 rounded text-xs font-medium bg-red-200 text-red-900">Order Cancelled</span>
                      <% } %>
                      <span class="inline-flex px-2 py-1 rounded text-xs font-medium <%= order.paid ? 'bg-green-100 text-green-700' : 'bg-red-100 text-red-700' %>">
                        <%= order.paid ? 'Paid' : 'Unpaid' %>
                      </span>
                    </div>
                  </td>

                  <!-- Date -->
                  <td class="px-6 py-4">
                    <div class="flex flex-col gap-1">
                      <span class="text-sm font-medium text-gray-900"><%= new Date(order.createdAt).toLocaleDateString() %></span>
                      <span class="text-xs text-gray-500"><%= new Date(order.createdAt).toLocaleTimeString() %></span>
                    </div>
                  </td>

                  <!-- Actions -->
                  <td class="px-6 py-4">
                    <div class="flex items-center justify-center gap-2">
                      <a href="/admin/v1/order/<%= order._id %>" class="inline-flex items-center gap-1 px-3 py-2 rounded-lg bg-blue-100 text-blue-700 hover:bg-blue-200 transition-colors text-sm font-medium" title="View Details">
                        <i class="fas fa-eye"></i>
                        <span class="hidden sm:inline">View</span>
                      </a>

                      <a href="/admin/v1/order/<%= order._id %>/edit" class="inline-flex items-center gap-1 px-3 py-2 rounded-lg bg-yellow-100 text-yellow-700 hover:bg-yellow-200 transition-colors text-sm font-medium" title="Edit Order">
                        <i class="fas fa-edit"></i>
                        <span class="hidden sm:inline">Edit</span>
                      </a>
                    </div>
                  </td>
                </tr>
              <% }) %>
              <% } %>
            </tbody>
          </table>
        </div>
      </div>

      <!-- Mobile Card View -->
      <div class="lg:hidden space-y-4">
        <% if (!orders || !orders.length) { %>
          <div class="bg-white rounded-2xl shadow-lg border border-gray-100 p-8 text-center">
            <i class="fas fa-shopping-cart text-4xl text-gray-300 mb-4"></i>
            <p class="text-lg font-medium text-gray-700 mb-2">No orders found</p>
            <p class="text-sm text-gray-500">Try adjusting your filters or check back later</p>
          </div>
        <% } else { %>
          <% orders.forEach((order, index) => { %>
            <% 
              const itemsPerPage = limit || 10;
              const orderNumber = (currentPage - 1) * itemsPerPage + index + 1;
            %>
            <div class="bg-white rounded-2xl shadow-lg border border-gray-100 p-4 <%= order.status === 'cancelled' ? 'bg-red-50 border-red-200' : '' %>">
              <!-- Order Header -->
              <div class="flex justify-between items-start mb-4">
                <div class="flex items-center gap-3">
                  <span class="inline-flex items-center justify-center w-10 h-10 rounded-full bg-blue-100 text-blue-800 text-sm font-bold">
                    <%= orderNumber %>
                  </span>
                  <div>
                    <h3 class="font-mono text-lg font-bold text-blue-600">#<%= order._id.toString().slice(-8).toUpperCase() %></h3>
                    <% if (order.trackingNumber) { %>
                      <p class="text-sm text-gray-500">Track: <%= order.trackingNumber %></p>
                    <% } %>
                  </div>
                </div>
                <div class="flex flex-col gap-2">
                  <span class="inline-flex px-3 py-1 rounded-full text-xs font-medium <%= 
                    order.status === 'pending' ? 'bg-yellow-100 text-yellow-800' :
                    order.status === 'processing' ? 'bg-blue-100 text-blue-800' :
                    order.status === 'shipped' ? 'bg-purple-100 text-purple-800' :
                    order.status === 'delivered' ? 'bg-green-100 text-green-800' :
                    'bg-red-100 text-red-800'
                  %>">
                    <%= order.status.charAt(0).toUpperCase() + order.status.slice(1) %>
                  </span>
                  <span class="inline-flex px-2 py-1 rounded text-xs font-medium <%= order.paid ? 'bg-green-100 text-green-700' : 'bg-red-100 text-red-700' %>">
                    <%= order.paid ? 'Paid' : 'Unpaid' %>
                  </span>
                </div>
              </div>

              <!-- Customer Info -->
              <div class="mb-4 p-3 bg-gray-50 rounded-xl">
                <h4 class="font-semibold text-gray-800 mb-2">Customer</h4>
                <p class="font-medium text-gray-900"><%= order.user?.fullname || order.user?.username || 'Guest' %></p>
                <p class="text-sm text-gray-600"><%= order.user?.email || 'N/A' %></p>
                <p class="text-xs text-gray-500"><%= order.user?.phone || 'No phone' %></p>
              </div>

              <!-- Order Details -->
              <div class="grid grid-cols-2 gap-4 mb-4">
                <div class="p-3 bg-blue-50 rounded-xl">
                  <p class="text-sm text-blue-600 font-medium">Total Amount</p>
                  <p class="text-xl font-bold text-blue-800">Rs <%= order.totalPrice.toLocaleString() %></p>
                  <p class="text-xs text-blue-600"><%= order.totalItem %> items (<%= order.totalQty %> qty)</p>
                  
                  <!-- Mixed Status Indicators for Mobile -->
                  <% if (order.items && order.items.length > 0) { %>
                    <% 
                      const itemStatuses = order.items.reduce((acc, item) => {
                        const status = item.status || 'pending';
                        acc[status] = (acc[status] || 0) + 1;
                        return acc;
                      }, {});
                      const statusCount = Object.keys(itemStatuses).length;
                      const deliveredCount = itemStatuses.delivered || 0;
                      const cancelledCount = itemStatuses.cancelled || 0;
                      
                      // Calculate revenue impact for mobile
                      let deliveredRevenue = 0, cancelledRevenue = 0;
                      order.items.forEach(item => {
                        const itemRevenue = item.totalPrice || 0;
                        if (item.status === 'delivered') deliveredRevenue += itemRevenue;
                        else if (item.status === 'cancelled') cancelledRevenue += itemRevenue;
                      });
                    %>
                    
                    <% if (statusCount > 1) { %>
                      <div class="mt-2">
                        <p class="text-xs bg-gradient-to-r from-orange-200 to-red-200 text-orange-800 px-2 py-1 rounded-full inline-flex items-center gap-1">
                          <i class="fas fa-exclamation-triangle mr-1"></i>Mixed Status Order
                        </p>
                        
                        <!-- Revenue Impact Summary for Mobile -->
                        <div class="mt-1 flex gap-1">
                          <% if (deliveredRevenue > 0) { %>
                            <span class="text-xs bg-green-100 text-green-700 px-2 py-1 rounded">
                              ✓ Rs <%= deliveredRevenue.toLocaleString() %>
                            </span>
                          <% } %>
                          <% if (cancelledRevenue > 0) { %>
                            <span class="text-xs bg-red-100 text-red-700 px-2 py-1 rounded">
                              ✗ Rs <%= cancelledRevenue.toLocaleString() %>
                            </span>
                          <% } %>
                        </div>
                      </div>
                    <% } %>
                    
                    <% const variantItems = order.items.filter(item => item.variantSku && item.variantSku.trim() !== ''); %>
                    <% if (variantItems.length > 0) { %>
                      <p class="text-xs text-blue-700 mt-1">
                        <i class="fas fa-layer-group mr-1"></i><%= variantItems.length %> variant(s)
                      </p>
                    <% } %>
                  <% } %>
                </div>
                <div class="p-3 bg-green-50 rounded-xl">
                  <p class="text-sm text-green-600 font-medium">Order Date</p>
                  <p class="text-sm font-bold text-green-800"><%= new Date(order.createdAt).toLocaleDateString() %></p>
                  <p class="text-xs text-green-600"><%= new Date(order.createdAt).toLocaleTimeString() %></p>
                  
                  <!-- Fulfillment Status for Mobile -->
                  <% if (order.items && order.items.length > 0) { %>
                    <% 
                      const deliveredCount = order.items.filter(item => item.status === 'delivered').length;
                      const cancelledCount = order.items.filter(item => item.status === 'cancelled').length;
                      const activeCount = order.items.length - cancelledCount;
                      const fulfillmentRate = activeCount > 0 ? Math.round((deliveredCount / activeCount) * 100) : 0;
                    %>
                    <% if (deliveredCount > 0 || cancelledCount > 0) { %>
                      <div class="mt-1">
                        <% if (deliveredCount > 0) { %>
                          <p class="text-xs text-green-700">
                            <i class="fas fa-check-circle mr-1"></i><%= fulfillmentRate %>% fulfilled (<%= deliveredCount %>/<%= activeCount %>)
                          </p>
                        <% } %>
                        <% if (cancelledCount > 0) { %>
                          <p class="text-xs text-red-700">
                            <i class="fas fa-times-circle mr-1"></i><%= cancelledCount %> cancelled
                          </p>
                        <% } %>
                      </div>
                    <% } %>
                  <% } %>
                </div>
              </div>

              <!-- Shipping Address -->
              <% if (order.shippingAddress) { %>
                <div class="mb-4 p-3 bg-purple-50 rounded-xl">
                  <h4 class="font-semibold text-purple-800 mb-2">Shipping Address</h4>
                  <div class="text-sm text-purple-700">
                    <strong><%= order.shippingAddress.fullname %></strong><br>
                    <%= order.shippingAddress.street %><br>
                    <%= order.shippingAddress.city %>, <%= order.shippingAddress.state %><br>
                    <%= order.shippingAddress.postalCode %><br>
                    <i class="fas fa-phone"></i> <%= order.shippingAddress.phone %>
                  </div>
                </div>
              <% } %>

              <!-- Actions -->
              <div class="flex gap-2">
                <a href="/admin/v1/order/<%= order._id %>" class="flex-1 text-center px-4 py-2 bg-blue-100 text-blue-700 rounded-xl hover:bg-blue-200 transition-colors font-medium">
                  <i class="fas fa-eye mr-2"></i>View
                </a>
                <a href="/admin/v1/order/<%= order._id %>/edit" class="flex-1 text-center px-4 py-2 bg-yellow-100 text-yellow-700 rounded-xl hover:bg-yellow-200 transition-colors font-medium">
                  <i class="fas fa-edit mr-2"></i>Edit
                </a>
              </div>
            </div>
          <% }) %>
        <% } %>
      </div>
    </div>

    <!-- Pagination -->
    <% if (typeof totalPages !== 'undefined' && totalPages > 1) { %>
      <div class="flex flex-col sm:flex-row justify-between items-center mt-6 gap-4">
        <div class="text-sm text-gray-600">
          <% 
            const itemsPerPage = limit || 10;
            const startItem = (currentPage - 1) * itemsPerPage + 1;
            const endItem = Math.min(currentPage * itemsPerPage, totalOrders || 0);
          %>
          Showing <%= startItem %> - <%= endItem %> of <%= totalOrders || 0 %> orders
        </div>
        
        <div class="flex items-center gap-2">
          <!-- Items per page selector -->
          <div class="flex items-center gap-2 mr-4">
            <label class="text-sm text-gray-600">Show:</label>
            <select onchange="changeLimit(this.value)" class="px-2 py-1 border border-gray-300 rounded text-sm">
              <option value="10" <%= (limit || 10) === 10 ? 'selected' : '' %>>10</option>
              <option value="25" <%= limit === 25 ? 'selected' : '' %>>25</option>
              <option value="50" <%= limit === 50 ? 'selected' : '' %>>50</option>
              <option value="100" <%= limit === 100 ? 'selected' : '' %>>100</option>
            </select>
          </div>
          
          <!-- Previous -->
          <% if (currentPage > 1) { %>
            <% 
              const filterParams = Object.entries(filters || {})
                .filter(([k,v]) => v && v.toString().trim() !== '')
                .map(([k,v]) => `${encodeURIComponent(k)}=${encodeURIComponent(v)}`)
                .join('&');
              const prevUrl = `?page=${currentPage - 1}${filterParams ? '&' + filterParams : ''}&limit=${limit || 10}`;
            %>
            <a href="<%= prevUrl %>" 
               class="px-4 py-2 rounded-lg bg-white border border-gray-300 text-gray-700 hover:bg-gray-50 transition-colors">
              <i class="fas fa-chevron-left mr-1"></i>Previous
            </a>
          <% } %>
          
          <!-- Page numbers -->
          <% for (let i = Math.max(1, currentPage - 2); i <= Math.min(totalPages, currentPage + 2); i++) { %>
            <% 
              const filterParams = Object.entries(filters || {})
                .filter(([k,v]) => v && v.toString().trim() !== '')
                .map(([k,v]) => `${encodeURIComponent(k)}=${encodeURIComponent(v)}`)
                .join('&');
              const pageUrl = `?page=${i}${filterParams ? '&' + filterParams : ''}&limit=${limit || 10}`;
            %>
            <a href="<%= pageUrl %>" 
               class="px-4 py-2 rounded-lg <%= i === currentPage ? 'bg-blue-600 text-white' : 'bg-white border border-gray-300 text-gray-700 hover:bg-gray-50' %> transition-colors">
              <%= i %>
            </a>
          <% } %>
          
          <!-- Next -->
          <% if (currentPage < totalPages) { %>
            <% 
              const filterParams = Object.entries(filters || {})
                .filter(([k,v]) => v && v.toString().trim() !== '')
                .map(([k,v]) => `${encodeURIComponent(k)}=${encodeURIComponent(v)}`)
                .join('&');
              const nextUrl = `?page=${currentPage + 1}${filterParams ? '&' + filterParams : ''}&limit=${limit || 10}`;
            %>
            <a href="<%= nextUrl %>" 
               class="px-4 py-2 rounded-lg bg-white border border-gray-300 text-gray-700 hover:bg-gray-50 transition-colors">
              Next<i class="fas fa-chevron-right ml-1"></i>
            </a>
          <% } %>
        </div>
      </div>
      
      <script>
        function changeLimit(newLimit) {
          const url = new URL(window.location);
          url.searchParams.set('limit', newLimit);
          url.searchParams.set('page', '1');
          window.location.href = url.toString();
        }
      </script>
    <% } %>
  </div>
</div>



