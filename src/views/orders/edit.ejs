<%- include('../partials/header.ejs', { title: 'Edit Order' }) %>

<div class="min-h-screen bg-gray-50 py-6">
  <div class="max-w-4xl mx-auto px-4">
    
    <!-- Header -->
    <div class="flex items-center gap-4 mb-6">
      <a href="/admin/v1/order/<%= order._id %>" class="px-3 py-2 bg-white rounded-lg shadow-sm hover:shadow-md">
        <i class="fas fa-arrow-left mr-2"></i>Back
      </a>
      <div class="flex-1">
        <h1 class="text-2xl font-bold">Order #<%= orderNumber %></h1>
        <p class="text-gray-600">Rs <%= formattedTotal %> • <%= itemCount %> items</p>
      </div>
      <div class="text-right">
        <span class="px-4 py-2 rounded-full text-sm font-medium bg-blue-100 text-blue-800">
          Order: <%= statusDisplay %>
        </span>
      </div>
    </div>

    <!-- Flash Messages -->
    <% if (success && success.length) { %>
      <div class="mb-4 p-3 bg-green-100 border border-green-200 text-green-800 rounded-lg">
        <%= success[0] %>
      </div>
    <% } %>
    <% if (error && error.length) { %>
      <div class="mb-4 p-3 bg-red-100 border border-red-200 text-red-800 rounded-lg">
        <%= error[0] %>
      </div>
    <% } %>

    <!-- Status Summary -->
    <div class="bg-white rounded-lg shadow-sm border mb-6">
      <div class="p-4 border-b">
        <h2 class="text-lg font-semibold">Order Status Summary</h2>
      </div>
      <div class="p-4">
        <div id="status-summary" class="mb-4">
          <!-- Status counts will be loaded here -->
        </div>
      </div>
    </div>

    <!-- Main Actions -->
    <div class="bg-white rounded-lg shadow-sm border mb-6">
      <div class="p-4 border-b">
        <h2 class="text-lg font-semibold">Smart Actions</h2>
        <p class="text-sm text-gray-600 mt-1">Intelligent actions that only affect eligible items.</p>
      </div>
      <div class="p-4">
        <div class="grid grid-cols-1 md:grid-cols-4 gap-3">
          <button data-bulk-action="processing" onclick="bulkAction('processing')" class="p-3 bg-blue-500 text-white rounded-lg hover:bg-blue-600 transition-all">
            <i class="fas fa-play mr-2"></i>Process Eligible
          </button>
          <button data-bulk-action="shipped" onclick="bulkAction('shipped')" class="p-3 bg-purple-500 text-white rounded-lg hover:bg-purple-600 transition-all">
            <i class="fas fa-truck mr-2"></i>Ship Eligible
          </button>
          <button data-bulk-action="delivered" onclick="bulkAction('delivered')" class="p-3 bg-green-500 text-white rounded-lg hover:bg-green-600 transition-all">
            <i class="fas fa-check mr-2"></i>Deliver Eligible
          </button>
          <button onclick="cancelOrder()" class="p-3 bg-red-500 text-white rounded-lg hover:bg-red-600 transition-all">
            <i class="fas fa-times mr-2"></i>Cancel Order
          </button>
        </div>
      </div>
    </div>

    <!-- Items -->
    <div class="bg-white rounded-lg shadow-sm border mb-6">
      <div class="p-4 border-b">
        <h2 class="text-lg font-semibold">Items</h2>
      </div>
      <div class="divide-y" id="order-items">
        <% if (processedItems && processedItems.length > 0) { %>
          <% processedItems.forEach((item, index) => { %>
            <div class="p-4" data-item-status="<%= item.originalItem.status || 'pending' %>">
              <div class="flex items-center justify-between">
                <div class="flex items-center gap-3">
                  <div class="w-12 h-12 bg-gray-100 rounded-lg overflow-hidden">
                    <% if (item.imageUrl) { %>
                      <img src="<%= item.imageUrl %>" class="w-full h-full object-cover">
                    <% } else { %>
                      <div class="w-full h-full flex items-center justify-center text-gray-400">
                        <i class="fas fa-cube"></i>
                      </div>
                    <% } %>
                  </div>
                  <div>
                    <h3 class="font-medium"><%= item.title %></h3>
                    <p class="text-sm text-gray-600"><%= item.priceDisplay %></p>
                    <% if (item.originalItem.variantSku) { %>
                      <p class="text-xs text-gray-500">SKU: <%= item.originalItem.variantSku %></p>
                    <% } %>
                  </div>
                </div>
                <div class="flex items-center gap-3">
                  <span class="px-3 py-1 rounded-full text-sm font-medium 
                    <% if (item.originalItem.status === 'pending') { %>bg-yellow-100 text-yellow-800<% } %>
                    <% if (item.originalItem.status === 'processing') { %>bg-blue-100 text-blue-800<% } %>
                    <% if (item.originalItem.status === 'shipped') { %>bg-purple-100 text-purple-800<% } %>
                    <% if (item.originalItem.status === 'delivered') { %>bg-green-100 text-green-800<% } %>
                    <% if (item.originalItem.status === 'cancelled') { %>bg-red-100 text-red-800<% } %>">
                    <%= item.statusDisplay %>
                  </span>
                  <% if (item.canUpdate) { %>
                    <div class="flex gap-1">
                      <button data-index="<%= index %>" data-action="processing" class="item-action px-2 py-1 bg-blue-500 text-white text-xs rounded hover:bg-blue-600 transition-all">Process</button>
                      <button data-index="<%= index %>" data-action="shipped" class="item-action px-2 py-1 bg-purple-500 text-white text-xs rounded hover:bg-purple-600 transition-all">Ship</button>
                      <button data-index="<%= index %>" data-action="delivered" class="item-action px-2 py-1 bg-green-500 text-white text-xs rounded hover:bg-green-600 transition-all">Deliver</button>
                      <button data-index="<%= index %>" data-action="cancel" class="item-cancel px-2 py-1 bg-red-500 text-white text-xs rounded hover:bg-red-600 transition-all">Cancel</button>
                    </div>
                  <% } else { %>
                    <span class="text-xs text-gray-500">Final Status</span>
                  <% } %>
                </div>
              </div>
            </div>
          <% }) %>
        <% } %>
      </div>
    </div>

    <!-- Order Details -->
    <div class="bg-white rounded-lg shadow-sm border">
      <div class="p-4 border-b">
        <h2 class="text-lg font-semibold">Order Details</h2>
      </div>
      <form method="POST" action="/admin/v1/order/<%= order._id %>?_method=PUT" class="p-4 space-y-4">
        <div class="grid grid-cols-1 md:grid-cols-2 gap-4">
          <div>
            <label class="block text-sm font-medium mb-1">Order Status</label>
            <div class="flex gap-2">
              <select name="status" class="flex-1 px-3 py-2 border rounded-lg" value="<%= orderStatus %>">
                <option value="pending" <%= orderStatus === 'pending' ? 'selected' : '' %>>Pending</option>
                <option value="processing" <%= orderStatus === 'processing' ? 'selected' : '' %>>Processing</option>
                <option value="shipped" <%= orderStatus === 'shipped' ? 'selected' : '' %>>Shipped</option>
                <option value="delivered" <%= orderStatus === 'delivered' ? 'selected' : '' %>>Delivered</option>
                <option value="cancelled" <%= orderStatus === 'cancelled' ? 'selected' : '' %>>Cancelled</option>
              </select>
              <button type="button" onclick="smartOrderManager.autoCorrectStatus()" class="px-3 py-2 bg-blue-500 text-white rounded-lg hover:bg-blue-600 text-sm" title="Auto-correct status based on items">
                <i class="fas fa-magic"></i>
              </button>
            </div>
          </div>
          <div>
            <label class="block text-sm font-medium mb-1">Payment</label>
            <select name="paid" class="w-full px-3 py-2 border rounded-lg">
              <option value="false">Unpaid</option>
              <option value="true">Paid</option>
            </select>
          </div>
        </div>
        <div>
          <label class="block text-sm font-medium mb-1">Tracking Number</label>
          <input type="text" name="trackingNumber" value="<%= trackingNumber %>" placeholder="Enter tracking number" class="w-full px-3 py-2 border rounded-lg">
        </div>
        <div>
          <label class="block text-sm font-medium mb-1">Message to Customer</label>
          <textarea name="statusMessage" rows="2" placeholder="Optional message..." class="w-full px-3 py-2 border rounded-lg"></textarea>
        </div>
        <div class="flex gap-3">
          <button type="submit" class="px-4 py-2 bg-blue-600 text-white rounded-lg hover:bg-blue-700">
            Update Order
          </button>
          <a href="/admin/v1/order/<%= order._id %>" class="px-4 py-2 bg-gray-100 text-gray-700 rounded-lg hover:bg-gray-200">
            Cancel
          </a>
        </div>
      </form>
    </div>
  </div>
</div>

<div id="order-data" 
     data-order-id="<%= order._id %>" 
     data-order-status="<%= orderStatus %>" 
     data-paid-status="<%= paidStatus %>" 
     data-order-items='<%- orderItemsJson %>' 
     style="display: none;"></div>
<script src="/js/smart-order-management.js"></script>

<%- include('../partials/footer.ejs') %>

