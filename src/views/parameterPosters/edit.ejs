<%- include('../partials/header.ejs', { title: 'Edit Parameter Poster' }) %>

<!-- Navigation Bar -->
<nav class="flex flex-wrap gap-3 mb-8 p-4 bg-white rounded-xl shadow-sm border border-gray-100 items-center">
  <a href="/admin/v1/staff/dashboard" class="flex items-center gap-2 px-4 py-2 rounded-lg bg-blue-50 text-blue-700 hover:bg-blue-100 transition">
    <i class="fa fa-home"></i> Dashboard
  </a>
  <a href="/admin/v1/content/parameter-posters" class="flex items-center gap-2 px-4 py-2 rounded-lg bg-gray-50 text-gray-700 hover:bg-gray-100 transition">
    <i class="fa fa-image"></i> Parameter Posters
  </a>
  <a href="/admin/v1/content/parameter-posters/<%= poster._id %>" class="flex items-center gap-2 px-4 py-2 rounded-lg bg-gray-50 text-gray-700 hover:bg-gray-100 transition">
    <i class="fa fa-eye"></i> View Poster
  </a>
</nav>

<main class="container mx-auto max-w-lg px-4">
  <!-- Flash Messages -->
  <% if (error && error.length) { %>
    <div class="mb-6 p-4 rounded-lg border-l-4 border-red-400 bg-red-50 text-red-800 shadow-sm">
      <% error.forEach(msg => { %>
        <div class="flex items-center gap-2">
          <i class="fa fa-exclamation-circle"></i>
          <%= msg %>
        </div>
      <% }) %>
    </div>
  <% } %>
  <% if (success && success.length) { %>
    <div class="mb-6 p-4 rounded-lg border-l-4 border-green-400 bg-green-50 text-green-800 shadow-sm">
      <% success.forEach(msg => { %>
        <div class="flex items-center gap-2">
          <i class="fa fa-check-circle"></i>
          <%= msg %>
        </div>
      <% }) %>
    </div>
  <% } %>

  <div class="bg-white rounded-xl shadow-md p-8 mb-10 border border-gray-100">
    <div class="flex flex-col sm:flex-row sm:justify-between sm:items-center mb-8 gap-4">
      <h1 class="text-2xl font-bold text-gray-800">Edit Parameter Poster</h1>
      <a href="/admin/v1/content/parameter-posters" class="text-sm text-blue-600 hover:text-blue-700 flex items-center transition">
        <span class="mr-1">‚Üê</span> Back to List
      </a>
    </div>
    
    <form action="/admin/v1/content/parameter-posters/<%= poster._id %>?_method=PUT" method="POST" enctype="multipart/form-data" class="space-y-6">
      <div>
        <label for="title" class="block font-semibold mb-2 text-gray-700">Title *</label>
        <input 
          id="title" 
          name="title" 
          type="text" 
          value="<%= poster.title %>"
          placeholder="Enter poster title"
          required 
          class="w-full p-3 rounded-lg border border-gray-200 focus:border-blue-500 focus:ring-2 focus:ring-blue-100 transition"
        >
      </div>
      
      <div>
        <label for="parameterType" class="block font-semibold mb-2 text-gray-700">Parameter Type *</label>
        <select 
          id="parameterType" 
          name="parameterType" 
          required
          class="w-full p-3 rounded-lg border border-gray-200 focus:border-blue-500 focus:ring-2 focus:ring-blue-100 transition"
        >
          <option value="category" <%= poster.parameterType === 'category' ? 'selected' : '' %>>Category</option>
          <option value="brand" <%= poster.parameterType === 'brand' ? 'selected' : '' %>>Brand</option>
        </select>
      </div>
      
      <div>
        <label for="parameterId" class="block font-semibold mb-2 text-gray-700">Parameter *</label>
        <select 
          id="parameterId" 
          name="parameterId" 
          required
          class="w-full p-3 rounded-lg border border-gray-200 focus:border-blue-500 focus:ring-2 focus:ring-blue-100 transition"
        >
          <% if (poster.parameterType === 'category') { %>
            <% categories.forEach(category => { %>
              <option value="<%= category._id %>" <%= poster.parameterId.toString() === category._id.toString() ? 'selected' : '' %>><%= category.name %></option>
            <% }) %>
          <% } else { %>
            <% brands.forEach(brand => { %>
              <option value="<%= brand._id %>" <%= poster.parameterId.toString() === brand._id.toString() ? 'selected' : '' %>><%= brand.name %></option>
            <% }) %>
          <% } %>
        </select>
      </div>
      
      <div>
        <label for="status" class="block font-semibold mb-2 text-gray-700">Status</label>
        <select 
          id="status" 
          name="status" 
          class="w-full p-3 rounded-lg border border-gray-200 focus:border-blue-500 focus:ring-2 focus:ring-blue-100 transition"
        >
          <option value="active" <%= poster.status === 'active' ? 'selected' : '' %>>Active</option>
          <option value="inactive" <%= poster.status === 'inactive' ? 'selected' : '' %>>Inactive</option>
        </select>
      </div>
      
      <div>
        <label for="image" class="block font-semibold mb-2 text-gray-700">Poster Image</label>
        <% if (poster.image) { %>
          <div class="mb-3">
            <img src="<%= poster.image %>" alt="<%= poster.title %>" class="w-32 h-20 object-cover rounded-lg shadow-sm border">
            <p class="text-sm text-gray-500 mt-1">Current image</p>
          </div>
        <% } %>
        <input 
          id="image" 
          name="image" 
          type="file" 
          accept="image/*" 
          class="w-full p-3 rounded-lg border border-gray-200 focus:border-blue-500 focus:ring-2 focus:ring-blue-100 transition file:mr-4 file:py-2 file:px-4 file:rounded-lg file:border-0 file:text-sm file:font-medium file:bg-blue-50 file:text-blue-700 hover:file:bg-blue-100"
        >
        <p class="mt-1 text-sm text-gray-500">Leave empty to keep current image. JPEG or PNG format.</p>
      </div>
      
      <div class="flex flex-col sm:flex-row gap-3 sm:justify-end">
        <a href="/admin/v1/content/parameter-posters" class="px-4 py-3 rounded-lg bg-gray-100 text-gray-700 hover:bg-gray-200 transition flex items-center justify-center gap-2">
          <i class="fa fa-times"></i> Cancel
        </a>
        <button type="submit" class="px-4 py-3 rounded-lg bg-blue-600 text-white font-semibold hover:bg-blue-700 transition flex items-center justify-center gap-2">
          <i class="fa fa-save"></i> Update Poster
        </button>
      </div>
    </form>
  </div>
</main>

<script>
document.getElementById('parameterType').addEventListener('change', function() {
    const parameterType = this.value;
    const parameterSelect = document.getElementById('parameterId');
    
    parameterSelect.innerHTML = '';
    
    if (parameterType === 'category') {
        <% categories.forEach(category => { %>
            parameterSelect.innerHTML += '<option value="<%= category._id %>"><%= category.name %></option>';
        <% }) %>
    } else if (parameterType === 'brand') {
        <% brands.forEach(brand => { %>
            parameterSelect.innerHTML += '<option value="<%= brand._id %>"><%= brand.name %></option>';
        <% }) %>
    }
});
</script>

<%- include('../partials/footer.ejs') %>