<%- include('../partials/header.ejs', { title: 'Ads Panel Management' }) %>

<!-- Navigation Bar -->
<nav class="flex flex-wrap gap-3 mb-8 p-4 bg-white rounded-xl shadow-sm border border-gray-100 items-center">
  <a href="/admin/v1/staff/dashboard" class="flex items-center gap-2 px-4 py-2 rounded-lg bg-blue-50 text-blue-700 hover:bg-blue-100 transition">
    <i class="fa fa-home"></i> Dashboard
  </a>
  <a href="/admin/v1/parameters/ads-panel/create" class="flex items-center gap-2 px-4 py-2 rounded-lg bg-green-50 text-green-700 hover:bg-green-100 transition">
    <i class="fa fa-plus"></i> Add Ads Panel
  </a>
</nav>

<main class="container mx-auto max-w-7xl px-4 mt-8">
  <div class="flex flex-col md:flex-row md:justify-between md:items-center mb-8 gap-4">
    <h1 class="text-3xl font-bold text-gray-800">Manage Ads Panels</h1>
    <div class="text-sm text-gray-500">
      Total Items: <span class="font-semibold"><%= items?.length || 0 %></span>
    </div>
  </div>

  <!-- Flash Messages -->
  <% if (success && success.length) { %>
    <div class="mb-6 p-4 rounded-lg border-l-4 border-green-400 bg-green-50 text-green-800 shadow-sm">
      <% success.forEach(msg => { %>
        <div class="flex items-center gap-2">
          <i class="fa fa-check-circle"></i>
          <%= msg %>
        </div>
      <% }) %>
    </div>
  <% } %>
  <% if (error && error.length) { %>
    <div class="mb-6 p-4 rounded-lg border-l-4 border-red-400 bg-red-50 text-red-800 shadow-sm">
      <% error.forEach(msg => { %>
        <div class="flex items-center gap-2">
          <i class="fa fa-exclamation-circle"></i>
          <%= msg %>
        </div>
      <% }) %>
    </div>
  <% } %>

  <div class="bg-white rounded-xl shadow-md overflow-x-auto mb-10 border border-gray-100">
    <% if (!items || items.length === 0) { %>
      <div class="py-12 text-center text-gray-400">
        <i class="fa fa-ad text-4xl mb-4 opacity-25"></i>
        <p class="text-lg font-medium">No ads panels found</p>
        <p class="text-gray-500 mb-6">Create your first ads panel</p>
        <a href="/admin/v1/parameters/ads-panel/create" class="inline-flex items-center gap-2 px-4 py-2 rounded-lg bg-green-600 text-white font-semibold hover:bg-green-700 transition">
          <i class="fa fa-plus"></i> Create First Panel
        </a>
      </div>
    <% } else { %>
      <table class="w-full text-sm">
        <thead>
          <tr class="border-b border-gray-200 bg-gray-50">
            <th class="py-3 px-4 text-left font-semibold text-gray-600 w-12">S.N</th>
            <th class="py-3 px-4 text-left font-semibold text-gray-600">Image</th>
            <th class="py-3 px-4 text-left font-semibold text-gray-600">Title</th>
            <th class="py-3 px-4 text-left font-semibold text-gray-600">Location ID</th>
            <th class="py-3 px-4 text-left font-semibold text-gray-600">Link</th>
            <th class="py-3 px-4 text-left font-semibold text-gray-600">Status</th>
            <th class="py-3 px-4 text-left font-semibold text-gray-600">Actions</th>
          </tr>
        </thead>
        <tbody>
          <% items.forEach((item, idx) => { %>
            <tr class="hover:bg-blue-50 transition-colors border-b border-gray-100 last:border-0">
              <td class="py-4 px-4 font-semibold text-gray-500"><%= idx + 1 %></td>
              <td class="py-4 px-4">
                <% if (item.image) { %>
                  <img src="/uploads/<%= item.image %>" alt="<%= item.title %>" class="w-20 h-12 object-cover rounded-lg shadow-sm" />
                <% } else { %>
                  <div class="w-20 h-12 bg-gray-100 rounded-lg flex items-center justify-center">
                    <i class="fa fa-image text-gray-400"></i>
                  </div>
                <% } %>
              </td>
              <td class="py-4 px-4 font-medium text-gray-800"><%= item.title || '—' %></td>
              <td class="py-4 px-4">
                <span class="inline-flex items-center px-2 py-1 rounded-md text-xs font-medium bg-blue-100 text-blue-800">
                  <%= item.locationId %>
                </span>
              </td>
              <td class="py-4 px-4">
                <% if (item.link) { %>
                  <a href="<%= item.link %>" target="_blank" class="text-blue-600 hover:underline flex items-center gap-1">
                    <i class="fa fa-external-link-alt text-xs"></i> Visit
                  </a>
                <% } else { %>
                  <span class="text-gray-400">—</span>
                <% } %>
              </td>
              <td class="py-4 px-4">
                <span class="inline-flex items-center px-3 py-1 rounded-full text-xs font-semibold
                  <%= item.status === 'active' ? 'bg-green-100 text-green-700' : 'bg-gray-100 text-gray-700' %>">
                  <i class="fa fa-circle text-[6px] mr-1.5 <%= item.status === 'active' ? 'text-green-500' : 'text-gray-500' %>"></i>
                  <%= item.status || 'active' %>
                </span>
              </td>
              <td class="py-4 px-4">
                <div class="flex flex-wrap gap-2">
                  <a href="/admin/v1/parameters/ads-panel/<%= item._id %>" class="btn btn-small bg-blue-100 text-blue-700 hover:bg-blue-200 transition flex items-center px-3 py-2">
                    <i class="fa fa-eye mr-1.5"></i> View
                  </a>
                  <a href="/admin/v1/parameters/ads-panel/<%= item._id %>/edit" class="btn btn-small bg-yellow-100 text-yellow-700 hover:bg-yellow-200 transition flex items-center px-3 py-2">
                    <i class="fa fa-edit mr-1.5"></i> Edit
                  </a>
                  <form action="/admin/v1/parameters/ads-panel/<%= item._id %>?_method=DELETE" method="POST" class="inline">
                    <button type="submit" class="btn btn-small bg-red-100 text-red-600 hover:bg-red-200 transition flex items-center px-3 py-2" onclick="return confirm('Delete this ads panel? This action cannot be undone.')">
                      <i class="fa fa-trash mr-1.5"></i> Delete
                    </button>
                  </form>
                </div>
              </td>
            </tr>
          <% }) %>
        </tbody>
      </table>
    <% } %>
  </div>
</main>

<%- include('../partials/footer.ejs') %>