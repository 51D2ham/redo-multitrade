<%- include('../partials/header.ejs', { title: 'Spec List Details' }) %>

<!-- Modern Navigation Bar -->
<nav class="flex flex-wrap gap-3 mb-8 p-4 bg-white rounded-xl shadow-sm border border-gray-100 items-center">
  <a href="/admin/v1/staff/dashboard" class="flex items-center gap-2 px-4 py-2 rounded-lg bg-blue-50 text-blue-700 hover:bg-blue-100 transition">
    <i class="fa fa-home"></i> Dashboard
  </a>
  <a href="/admin/v1/parameters" class="flex items-center gap-2 px-4 py-2 rounded-lg bg-gray-50 text-gray-700 hover:bg-gray-100 transition">
    <i class="fa fa-cog"></i> System Parameters
  </a>
  <a href="/admin/v1/parameters/spec-lists" class="flex items-center gap-2 px-4 py-2 rounded-lg bg-gray-50 text-gray-700 hover:bg-gray-100 transition">
    <i class="fa fa-list"></i> Spec List
  </a>
</nav>

<main class="container mx-auto max-w-2xl px-4 mt-8">
  <div class="flex flex-col md:flex-row md:justify-between md:items-center mb-8 gap-4">
    <h1 class="text-3xl font-bold text-gray-800">Spec List Details</h1>
  </div>
  
  <!-- Flash Messages -->
  <% if (success && success.length) { %>
    <div class="mb-6 p-4 rounded-lg border-l-4 border-green-400 bg-green-50 text-green-800 shadow-sm">
      <% success.forEach(msg => { %>
        <div class="flex items-center gap-2">
          <i class="fa fa-check-circle"></i>
          <%= msg %>
        </div>
      <% }) %>
    </div>
  <% } %>
  <% if (error && error.length) { %>
    <div class="mb-6 p-4 rounded-lg border-l-4 border-red-400 bg-red-50 text-red-800 shadow-sm">
      <% error.forEach(msg => { %>
        <div class="flex items-center gap-2">
          <i class="fa fa-exclamation-circle"></i>
          <%= msg %>
        </div>
      <% }) %>
    </div>
  <% } %>

  <div class="bg-white rounded-xl shadow-md p-8 mb-10 border border-gray-100">
    <div class="flex justify-between items-center mb-6">
      <h2 class="text-xl font-semibold text-gray-800">Specification Details</h2>
      <div class="flex gap-2">
        <a href="/admin/v1/parameters/spec-lists/<%= specList._id %>/edit" class="px-4 py-2 rounded-lg bg-blue-600 text-white hover:bg-blue-700 transition flex items-center gap-2">
          <i class="fa fa-edit"></i> Edit
        </a>
        <a href="/admin/v1/parameters/spec-lists" class="px-4 py-2 rounded-lg bg-gray-100 text-gray-700 hover:bg-gray-200 transition">
          Back to List
        </a>
      </div>
    </div>

    <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
      <div>
        <label class="block font-semibold mb-1 text-gray-700">Display in Filter</label>
        <p class="text-gray-900 text-lg">
          <% if (specList.displayInFilter) { %>
            <span class="inline-flex items-center gap-1 px-2 py-1 text-xs rounded-full bg-blue-100 text-blue-800"><i class="fa fa-check"></i> Yes</span>
          <% } else { %>
            <span class="inline-flex items-center gap-1 px-2 py-1 text-xs rounded-full bg-gray-100 text-gray-500"><i class="fa fa-times"></i> No</span>
          <% } %>
        </p>
      </div>
      <div>
        <label class="block font-semibold mb-1 text-gray-700">Title</label>
        <p class="text-gray-900 text-lg"><%= specList.title %></p>
      </div>

      <div>
        <label class="block font-semibold mb-1 text-gray-700">Default Value</label>
        <p class="text-gray-900 text-lg"><%= specList.value || 'Not set' %></p>
      </div>

      <div>
        <label class="block font-semibold mb-1 text-gray-700">Category</label>
        <p class="text-gray-900 text-lg">
          <% if (specList.category) { %>
            <%= specList.category.name %>
          <% } else { %>
            <span class="text-gray-500">Not specified</span>
          <% } %>
        </p>
      </div>

      <div>
        <label class="block font-semibold mb-1 text-gray-700">Sub Category</label>
        <p class="text-gray-900 text-lg">
          <% if (specList.subCategory) { %>
            <%= specList.subCategory.name %>
          <% } else { %>
            <span class="text-gray-500">Not specified</span>
          <% } %>
        </p>
      </div>

      <div>
        <label class="block font-semibold mb-1 text-gray-700">Type</label>
        <p class="text-gray-900 text-lg">
          <% if (specList.type) { %>
            <%= specList.type.name %>
          <% } else { %>
            <span class="text-gray-500">Not specified</span>
          <% } %>
        </p>
      </div>

      <div>
        <label class="block font-semibold mb-1 text-gray-700">Brand</label>
        <p class="text-gray-900 text-lg">
          <% if (specList.brand) { %>
            <%= specList.brand.name %>
          <% } else { %>
            <span class="text-gray-500">Not specified</span>
          <% } %>
        </p>
      </div>

      <div>
        <label class="block font-semibold mb-1 text-gray-700">Status</label>
        <span class="px-3 py-1 text-sm rounded-full <%= specList.status === 'active' ? 'bg-green-100 text-green-800' : 'bg-red-100 text-red-800' %>">
          <%= specList.status %>
        </span>
      </div>

      <div>
        <label class="block font-semibold mb-1 text-gray-700">Created At</label>
        <p class="text-gray-900 text-lg">
          <%= new Date(specList.createdAt).toLocaleDateString('en-US', { 
            year: 'numeric', 
            month: 'long', 
            day: 'numeric',
            hour: '2-digit',
            minute: '2-digit'
          }) %>
        </p>
      </div>

      <div>
        <label class="block font-semibold mb-1 text-gray-700">Last Updated</label>
        <p class="text-gray-900 text-lg">
          <%= new Date(specList.updatedAt).toLocaleDateString('en-US', { 
            year: 'numeric', 
            month: 'long', 
            day: 'numeric',
            hour: '2-digit',
            minute: '2-digit'
          }) %>
        </p>
      </div>
    </div>

    <div class="mt-8 pt-6 border-t border-gray-200">
      <form action="/admin/v1/parameters/spec-lists/<%= specList._id %>" method="POST" class="inline">
        <input type="hidden" name="_method" value="DELETE">
        <button 
          type="submit" 
          class="px-4 py-2 rounded-lg bg-red-600 text-white hover:bg-red-700 transition flex items-center gap-2"
          onclick="return confirm('Are you sure you want to delete this spec list? This action cannot be undone.')"
        >
          <i class="fa fa-trash"></i> Delete Spec List
        </button>
      </form>
    </div>
  </div>
</main>

<%- include('../partials/footer.ejs') %>

