<%- include('../partials/header.ejs', { title: 'Spec Lists' }) %>

<% 
  // Initialize all safe variables at the top
  const safeFilters = typeof filters !== 'undefined' ? filters : {};
  const successMsgs = success ? (Array.isArray(success) ? success : [success]) : [];
  const errorMsgs = error ? (Array.isArray(error) ? error : [error]) : [];
  const specs = specLists ? (Array.isArray(specLists) ? specLists : [specLists]) : [];
  const safeCategories = typeof categories !== 'undefined' ? categories : [];
  const safeSubCategories = typeof subCategories !== 'undefined' ? subCategories : [];
  const safeTypes = typeof types !== 'undefined' ? types : [];
  const safeBrands = typeof brands !== 'undefined' ? brands : [];
  const safePagination = typeof pagination !== 'undefined' ? pagination : { current: 1, total: 1, hasNext: false, hasPrev: false, next: 1, prev: 1, totalSpecLists: 0 };
%>

<!-- Modern Navigation Bar -->
<nav class="flex flex-wrap gap-3 mb-8 p-4 bg-white rounded-xl shadow-sm border border-gray-100 items-center">
  <a href="/admin/v1/staff/dashboard" class="flex items-center gap-2 px-4 py-2 rounded-lg bg-blue-50 text-blue-700 hover:bg-blue-100 transition">
    <i class="fa fa-home" aria-hidden="true"></i> <span class="sr-only">Dashboard</span>
  </a>
  <a href="/admin/v1/parameters" class="flex items-center gap-2 px-4 py-2 rounded-lg bg-gray-50 text-gray-700 hover:bg-gray-100 transition">
    <i class="fa fa-cog" aria-hidden="true"></i> System Parameters
  </a>
</nav>

<main class="container mx-auto max-w-7xl px-4 mt-8">
  <div class="flex flex-col md:flex-row md:justify-between md:items-center mb-8 gap-4">
    <h1 class="text-3xl font-bold text-gray-800">Spec List Management</h1>
    <a href="/admin/v1/parameters/spec-lists/new" class="px-4 py-2.5 rounded-lg bg-green-600 text-white font-medium hover:bg-green-700 transition flex items-center gap-2">
      <i class="fa fa-plus" aria-hidden="true"></i> <span>Add Spec List</span>
    </a>
  </div>

  <!-- Search and Filters -->
  <div class="bg-white rounded-xl shadow-md p-6 border border-gray-100 mb-6">
    <div class="flex items-center gap-3 mb-4">
      <div class="w-8 h-8 bg-blue-100 rounded-lg flex items-center justify-center">
        <i class="fa fa-filter text-blue-600"></i>
      </div>
      <h3 class="text-lg font-semibold text-gray-800">Search & Filter Spec Lists</h3>
    </div>
    <form method="GET" class="space-y-4">
      <!-- Row 1: Search and Sort -->
      <div class="grid grid-cols-1 md:grid-cols-2 gap-4">
        <div>
          <label class="block font-semibold mb-2 text-gray-700">Search</label>
          <div class="relative">
            <input name="search" value="<%= safeFilters.search || '' %>" 
                   class="w-full p-3 pl-10 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-blue-500" 
                   placeholder="Search by title or value..." />
            <i class="fa fa-search absolute left-3 top-1/2 transform -translate-y-1/2 text-gray-400"></i>
          </div>
        </div>
        
        <div>
          <label class="block font-semibold mb-2 text-gray-700">Sort By</label>
          <select name="sort" class="w-full p-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-blue-500">
            <option value="newest" <%= safeFilters.sort === 'newest' ? 'selected' : '' %>>Newest First</option>
            <option value="oldest" <%= safeFilters.sort === 'oldest' ? 'selected' : '' %>>Oldest First</option>
            <option value="title_asc" <%= safeFilters.sort === 'title_asc' ? 'selected' : '' %>>Title A-Z</option>
            <option value="title_desc" <%= safeFilters.sort === 'title_desc' ? 'selected' : '' %>>Title Z-A</option>
          </select>
        </div>
      </div>
      
      <!-- Row 2: Parameters -->
      <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-4">
        <div>
          <label class="block font-semibold mb-2 text-gray-700">Category</label>
          <select name="category" id="categoryFilter" class="w-full p-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-blue-500">
            <option value="">All Categories</option>
            <% if (safeCategories && safeCategories.length > 0) { safeCategories.forEach(cat => { %>
              <option value="<%= cat._id %>" <%= safeFilters.category === cat._id.toString() ? 'selected' : '' %>>
                <%= cat.name %>
              </option>
            <% }); } %>
          </select>
        </div>
        
        <div>
          <label class="block font-semibold mb-2 text-gray-700">Sub Category</label>
          <select name="subCategory" id="subCategoryFilter" class="w-full p-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-blue-500">
            <option value="">All Sub Categories</option>
          </select>
        </div>
        
        <div>
          <label class="block font-semibold mb-2 text-gray-700">Type</label>
          <select name="type" id="typeFilter" class="w-full p-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-blue-500">
            <option value="">All Types</option>
          </select>
        </div>
        
        <div>
          <label class="block font-semibold mb-2 text-gray-700">Brand</label>
          <select name="brand" id="brandFilter" class="w-full p-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-blue-500">
            <option value="">All Brands</option>
          </select>
        </div>
      </div>
      
      <!-- Row 3: Status and Actions -->
      <div class="grid grid-cols-1 md:grid-cols-3 gap-4 items-end">
        <div>
          <label class="block font-semibold mb-2 text-gray-700">Status</label>
          <select name="status" class="w-full p-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-blue-500">
            <option value="">All Status</option>
            <option value="active" <%= safeFilters.status === 'active' ? 'selected' : '' %>>Active</option>
            <option value="inactive" <%= safeFilters.status === 'inactive' ? 'selected' : '' %>>Inactive</option>
          </select>
        </div>
        
        <div>
          <label class="block font-semibold mb-2 text-gray-700">Display in Filter</label>
          <select name="displayInFilter" class="w-full p-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-blue-500">
            <option value="">All</option>
            <option value="true" <%= safeFilters.displayInFilter === 'true' ? 'selected' : '' %>>Yes</option>
            <option value="false" <%= safeFilters.displayInFilter === 'false' ? 'selected' : '' %>>No</option>
          </select>
        </div>
        
        <div class="flex gap-2">
          <button type="submit" class="flex-1 px-6 py-3 bg-blue-600 text-white rounded-lg hover:bg-blue-700 transition font-medium">
            <i class="fa fa-search mr-2"></i>Apply Filters
          </button>
          <a href="/admin/v1/parameters/spec-lists" class="px-4 py-3 bg-gray-100 text-gray-600 rounded-lg hover:bg-gray-200 transition" title="Clear All Filters">
            <i class="fa fa-times"></i>
          </a>
        </div>
      </div>
    </form>
  </div>



  <!-- Flash Messages -->
  <% if (successMsgs.length > 0) { %>
    <div class="mb-6 p-4 rounded-lg border-l-4 border-green-400 bg-green-50 text-green-800 shadow-sm" role="status" aria-live="polite">
      <% successMsgs.forEach(function(msg){ %>
        <% if (msg) { %>
          <div class="flex items-center gap-2">
            <i class="fa fa-check-circle" aria-hidden="true"></i>
            <span><%= msg %></span>
          </div>
        <% } %>
      <% }) %>
    </div>
  <% } %>

  <% if (errorMsgs.length > 0) { %>
    <div class="mb-6 p-4 rounded-lg border-l-4 border-red-400 bg-red-50 text-red-800 shadow-sm" role="alert" aria-live="assertive">
      <% errorMsgs.forEach(function(msg){ %>
        <% if (msg) { %>
          <div class="flex items-center gap-2">
            <i class="fa fa-exclamation-circle" aria-hidden="true"></i>
            <span><%= msg %></span>
          </div>
        <% } %>
      <% }) %>
    </div>
  <% } %>

  <div class="bg-white rounded-xl shadow-md mb-10 border border-gray-100">
    <div class="bg-gray-50 px-6 py-4 border-b border-gray-200">
      <div class="flex items-center justify-between">
        <h3 class="text-lg font-semibold text-gray-800 flex items-center gap-2">
          <i class="fa fa-table text-blue-600"></i> Spec Lists Catalog
        </h3>
        <div class="flex items-center gap-4 text-sm text-gray-600">
          <span>Showing <%= specs.length %> of <%= safePagination.totalSpecLists || specs.length %> spec lists</span>
          <% if (safeFilters.search || safeFilters.status || safeFilters.category || safeFilters.displayInFilter) { %>
            <span class="px-2 py-1 bg-blue-100 text-blue-700 rounded-full text-xs">
              <i class="fa fa-filter"></i> Filtered
            </span>
          <% } %>
        </div>
      </div>
    </div>
    
    <% if (specs.length === 0) { %>
      <div class="p-8 text-center">
        <i class="fa fa-list text-5xl text-gray-300 mb-4" aria-hidden="true"></i>
        <h2 class="text-xl font-semibold text-gray-800 mb-2">No Spec Lists Found</h2>
        <p class="text-gray-500 mb-6">Get started by creating your first spec list</p>
        <a href="/admin/v1/parameters/spec-lists/new" class="inline-flex items-center px-4 py-2.5 rounded-lg bg-blue-600 text-white font-medium hover:bg-blue-700 transition">
          <i class="fa fa-plus mr-2" aria-hidden="true"></i> Create First Spec List
        </a>
      </div>
    <% } else { %>
      <!-- Mobile Cards (Hidden on Desktop) -->
      <div class="block md:hidden">
        <% specs.forEach((specList, idx) => { %>
          <% if (specList && specList._id) { %>
            <div class="p-4 border-b border-gray-100 last:border-0">
              <div class="flex items-center justify-between mb-3">
                <span class="text-xs font-medium text-gray-500 bg-gray-100 px-2 py-1 rounded">#<%= idx + 1 %></span>
              </div>
              <div class="grid grid-cols-2 gap-3 mb-3">
                <div>
                  <div class="text-xs text-gray-500 mb-1">Title</div>
                  <div class="font-medium text-gray-800"><%= specList.title || '-' %></div>
                </div>
                <div>
                  <div class="text-xs text-gray-500 mb-1">Value</div>
                  <div class="text-gray-700"><%= specList.value || '-' %></div>
                </div>
                <div>
                  <div class="text-xs text-gray-500 mb-1">Category</div>
                  <div class="text-gray-700">
                    <% if (specList.category && specList.category.name) { %>
                      <%= specList.category.name %>
                    <% } else { %>
                      <span class="text-gray-400">All Categories</span>
                    <% } %>
                  </div>
                </div>
                <div>
                  <div class="text-xs text-gray-500 mb-1">Status</div>
                  <% if (specList.status === 'active') { %>
                    <span class="px-2 py-1 text-xs rounded-full bg-green-100 text-green-800">Active</span>
                  <% } else { %>
                    <span class="px-2 py-1 text-xs rounded-full bg-red-100 text-red-800">Inactive</span>
                  <% } %>
                </div>
              </div>
              <div class="flex gap-2 pt-3 border-t border-gray-100">
                <a href="/admin/v1/parameters/spec-lists/<%= specList._id %>" class="flex-1 text-center px-3 py-2 bg-blue-50 text-blue-700 rounded-lg hover:bg-blue-100 transition text-sm font-medium border border-blue-200">
                  View
                </a>
                <a href="/admin/v1/parameters/spec-lists/<%= specList._id %>/edit" class="flex-1 text-center px-3 py-2 bg-gray-50 text-gray-700 rounded-lg hover:bg-gray-100 transition text-sm font-medium border border-gray-200">
                  Edit
                </a>
                <form action="/admin/v1/parameters/spec-lists/<%= specList._id %>" method="POST" class="flex-1">
                  <input type="hidden" name="_method" value="DELETE">
                  <% if (typeof csrfToken !== 'undefined') { %>
                    <input type="hidden" name="_csrf" value="<%= csrfToken %>">
                  <% } %>
                  <button type="submit" class="w-full px-3 py-2 bg-red-50 text-red-700 rounded-lg hover:bg-red-100 transition text-sm font-medium border border-red-200" onclick="return confirmDelete()">
                    Delete
                  </button>
                </form>
              </div>
            </div>
          <% } %>
        <% }) %>
      </div>

      <!-- Desktop Table (Hidden on Mobile) -->
      <div class="hidden md:block overflow-x-auto">
        <table class="w-full text-sm" role="table" aria-label="Spec list">
          <thead>
            <tr class="border-b border-gray-200 bg-gray-50">
              <th class="py-3 px-4 text-left font-semibold text-gray-600 w-12"><i class="fa fa-list"></i> S.N</th>
              <th class="py-3 px-4 text-left font-semibold text-gray-600"><i class="fa fa-tag"></i> Title</th>
              <th class="py-3 px-4 text-left font-semibold text-gray-600"><i class="fa fa-info-circle"></i> Value</th>
              <th class="py-3 px-4 text-left font-semibold text-gray-600"><i class="fa fa-folder"></i> Parameters</th>
              <th class="py-3 px-4 text-left font-semibold text-gray-600"><i class="fa fa-filter"></i> Display in Filter</th>
              <th class="py-3 px-4 text-left font-semibold text-gray-600"><i class="fa fa-toggle-on"></i> Status</th>
              <th class="py-3 px-4 text-left font-semibold text-gray-600"><i class="fa fa-calendar"></i> Created At</th>
              <th class="py-3 px-4 text-left font-semibold text-gray-600"><i class="fa fa-cogs"></i> Actions</th>
            </tr>
          </thead>
          <tbody>
            <% specs.forEach((specList, idx) => { %>
              <% if (specList && specList._id) { %>
                <tr class="hover:bg-blue-50 transition-colors border-b border-gray-100 last:border-0">
                  <td class="py-4 px-4 font-semibold text-gray-500"><%= idx + 1 %></td>
                  <td class="py-4 px-4 font-medium text-gray-800"><%= specList.title || '-' %></td>
                  <td class="py-4 px-4 text-gray-700"><%= specList.value || '-' %></td>
                  <td class="py-4 px-4 text-gray-700">
                    <div class="space-y-1">
                      <% if (specList.category && specList.category.name) { %>
                        <div class="text-xs bg-blue-100 text-blue-800 px-2 py-1 rounded inline-block">Cat: <%= specList.category.name %></div>
                      <% } %>
                      <% if (specList.subCategory && specList.subCategory.name) { %>
                        <div class="text-xs bg-green-100 text-green-800 px-2 py-1 rounded inline-block">Sub: <%= specList.subCategory.name %></div>
                      <% } %>
                      <% if (specList.type && specList.type.name) { %>
                        <div class="text-xs bg-purple-100 text-purple-800 px-2 py-1 rounded inline-block">Type: <%= specList.type.name %></div>
                      <% } %>
                      <% if (specList.brand && specList.brand.name) { %>
                        <div class="text-xs bg-orange-100 text-orange-800 px-2 py-1 rounded inline-block">Brand: <%= specList.brand.name %></div>
                      <% } %>
                      <% if (!specList.category && !specList.subCategory && !specList.type && !specList.brand) { %>
                        <span class="text-gray-400 text-xs">Universal</span>
                      <% } %>
                    </div>
                  </td>
                  <td class="py-4 px-4 text-center">
                    <% if (specList.displayInFilter) { %>
                      <span class="inline-flex items-center gap-1 px-2 py-1 text-xs rounded-full bg-blue-100 text-blue-800"><i class="fa fa-check"></i> Yes</span>
                    <% } else { %>
                      <span class="inline-flex items-center gap-1 px-2 py-1 text-xs rounded-full bg-gray-100 text-gray-500"><i class="fa fa-times"></i> No</span>
                    <% } %>
                  </td>
                  <td class="py-4 px-4">
                    <% if (specList.status === 'active') { %>
                      <span class="px-2 py-1 text-xs rounded-full bg-green-100 text-green-800">Active</span>
                    <% } else { %>
                      <span class="px-2 py-1 text-xs rounded-full bg-red-100 text-red-800">Inactive</span>
                    <% } %>
                  </td>
                  <td class="py-4 px-4 text-gray-500">
                    <% if (specList.createdAt) { %>
                      <%= new Date(specList.createdAt).toLocaleDateString('en-US', { year: 'numeric', month: 'short', day: 'numeric' }) %>
                    <% } else { %>
                      <span class="text-gray-400">—</span>
                    <% } %>
                  </td>
                  <td class="py-4 px-4">
                    <div class="flex items-center justify-center gap-2">
                      <a href="/admin/v1/parameters/spec-lists/<%= specList._id %>" class="px-4 py-2 rounded-lg bg-blue-50 text-blue-700 hover:bg-blue-100 transition-colors text-sm font-medium border border-blue-200" title="View Spec List Details">
                        View
                      </a>
                      <a href="/admin/v1/parameters/spec-lists/<%= specList._id %>/edit" class="px-4 py-2 rounded-lg bg-gray-50 text-gray-700 hover:bg-gray-100 transition-colors text-sm font-medium border border-gray-200" title="Edit Spec List">
                        Edit
                      </a>
                      <form action="/admin/v1/parameters/spec-lists/<%= specList._id %>" method="POST" class="inline">
                        <input type="hidden" name="_method" value="DELETE">
                        <% if (typeof csrfToken !== 'undefined') { %>
                          <input type="hidden" name="_csrf" value="<%= csrfToken %>">
                        <% } %>
                        <button type="submit" class="px-4 py-2 rounded-lg bg-red-50 text-red-700 hover:bg-red-100 transition-colors text-sm font-medium border border-red-200" onclick="return confirmDelete()" title="Delete Spec List">
                          Delete
                        </button>
                      </form>
                    </div>
                  </td>
                </tr>
              <% } %>
            <% }) %>
          </tbody>
        </table>
      </div>
    <% } %>
  </div>

  <!-- Pagination -->
  <% if (safePagination && safePagination.total > 1) { %>
    <div class="flex flex-col sm:flex-row justify-between items-center mt-8 gap-4">
      <div class="text-sm text-gray-600">
        Showing page <%= safePagination.current %> of <%= safePagination.total %>
      </div>
      <nav class="flex items-center gap-2">
        <% if (safePagination.hasPrev) { %>
          <a href="?page=1<%= safeFilters.search ? '&search=' + encodeURIComponent(safeFilters.search) : '' %><%= safeFilters.status ? '&status=' + safeFilters.status : '' %><%= safeFilters.category ? '&category=' + safeFilters.category : '' %><%= safeFilters.displayInFilter ? '&displayInFilter=' + safeFilters.displayInFilter : '' %><%= safeFilters.sort ? '&sort=' + safeFilters.sort : '' %>" 
             class="px-3 py-2 rounded-lg bg-white border border-gray-300 text-gray-700 hover:bg-blue-50 hover:border-blue-300 transition" 
             title="First Page">
            <i class="fa fa-angle-double-left"></i>
          </a>
          <a href="?page=<%= safePagination.prev %><%= safeFilters.search ? '&search=' + encodeURIComponent(safeFilters.search) : '' %><%= safeFilters.status ? '&status=' + safeFilters.status : '' %><%= safeFilters.category ? '&category=' + safeFilters.category : '' %><%= safeFilters.displayInFilter ? '&displayInFilter=' + safeFilters.displayInFilter : '' %><%= safeFilters.sort ? '&sort=' + safeFilters.sort : '' %>" 
             class="px-3 py-2 rounded-lg bg-white border border-gray-300 text-gray-700 hover:bg-blue-50 hover:border-blue-300 transition" 
             title="Previous Page">
            <i class="fa fa-chevron-left"></i>
          </a>
        <% } %>
        
        <% for (let i = Math.max(1, safePagination.current - 2); i <= Math.min(safePagination.total, safePagination.current + 2); i++) { %>
          <% if (i === safePagination.current) { %>
            <span class="px-4 py-2 rounded-lg bg-blue-600 text-white font-semibold"><%= i %></span>
          <% } else { %>
            <a href="?page=<%= i %><%= safeFilters.search ? '&search=' + encodeURIComponent(safeFilters.search) : '' %><%= safeFilters.status ? '&status=' + safeFilters.status : '' %><%= safeFilters.category ? '&category=' + safeFilters.category : '' %><%= safeFilters.displayInFilter ? '&displayInFilter=' + safeFilters.displayInFilter : '' %><%= safeFilters.sort ? '&sort=' + safeFilters.sort : '' %>" 
               class="px-3 py-2 rounded-lg bg-white border border-gray-300 text-gray-700 hover:bg-blue-50 hover:border-blue-300 transition">
              <%= i %>
            </a>
          <% } %>
        <% } %>
        
        <% if (safePagination.hasNext) { %>
          <a href="?page=<%= safePagination.next %><%= safeFilters.search ? '&search=' + encodeURIComponent(safeFilters.search) : '' %><%= safeFilters.status ? '&status=' + safeFilters.status : '' %><%= safeFilters.category ? '&category=' + safeFilters.category : '' %><%= safeFilters.displayInFilter ? '&displayInFilter=' + safeFilters.displayInFilter : '' %><%= safeFilters.sort ? '&sort=' + safeFilters.sort : '' %>" 
             class="px-3 py-2 rounded-lg bg-white border border-gray-300 text-gray-700 hover:bg-blue-50 hover:border-blue-300 transition" 
             title="Next Page">
            <i class="fa fa-chevron-right"></i>
          </a>
          <a href="?page=<%= safePagination.total %><%= safeFilters.search ? '&search=' + encodeURIComponent(safeFilters.search) : '' %><%= safeFilters.status ? '&status=' + safeFilters.status : '' %><%= safeFilters.category ? '&category=' + safeFilters.category : '' %><%= safeFilters.displayInFilter ? '&displayInFilter=' + safeFilters.displayInFilter : '' %><%= safeFilters.sort ? '&sort=' + safeFilters.sort : '' %>" 
             class="px-3 py-2 rounded-lg bg-white border border-gray-300 text-gray-700 hover:bg-blue-50 hover:border-blue-300 transition" 
             title="Last Page">
            <i class="fa fa-angle-double-right"></i>
          </a>
        <% } %>
      </nav>
    </div>
  <% } %>

</main>

<script>
function confirmDelete() {
  return confirm('Are you sure you want to delete this spec list? This action cannot be undone.');
}

// Filter data - use safe variables
const allSubCategories = <%- JSON.stringify(safeSubCategories.map(sub => ({ _id: sub._id, name: sub.name, category: sub.category ? sub.category._id || sub.category : null }))) %>;
const allTypes = <%- JSON.stringify(safeTypes.map(type => ({ _id: type._id, name: type.name, subCategory: type.subCategory ? type.subCategory._id || type.subCategory : null }))) %>;
const allBrands = <%- JSON.stringify(safeBrands.map(brand => ({ _id: brand._id, name: brand.name }))) %>;

// Current filter values
const currentFilters = {
  category: '<%= safeFilters.category || "" %>',
  subCategory: '<%= safeFilters.subCategory || "" %>',
  type: '<%= safeFilters.type || "" %>',
  brand: '<%= safeFilters.brand || "" %>'
};

document.addEventListener('DOMContentLoaded', function() {
  const categoryFilter = document.getElementById('categoryFilter');
  const subCategoryFilter = document.getElementById('subCategoryFilter');
  const typeFilter = document.getElementById('typeFilter');
  const brandFilter = document.getElementById('brandFilter');
  
  // Populate brands (always available)
  function populateBrands() {
    brandFilter.innerHTML = '<option value="">All Brands</option>';
    if (allBrands && allBrands.length > 0) {
      allBrands.forEach(brand => {
        const option = document.createElement('option');
        option.value = brand._id;
        option.textContent = brand.name;
        if (currentFilters.brand === brand._id) option.selected = true;
        brandFilter.appendChild(option);
      });
    }
  }
  
  // Populate subcategories based on selected category
  function populateSubCategories(selectedCategory) {
    subCategoryFilter.innerHTML = '<option value="">All Sub Categories</option>';
    
    if (selectedCategory && allSubCategories) {
      const filteredSubs = allSubCategories.filter(sub => 
        sub.category && sub.category.toString() === selectedCategory
      );
      
      filteredSubs.forEach(sub => {
        const option = document.createElement('option');
        option.value = sub._id;
        option.textContent = sub.name;
        if (currentFilters.subCategory === sub._id) option.selected = true;
        subCategoryFilter.appendChild(option);
      });
    }
  }
  
  // Populate types based on selected subcategory
  function populateTypes(selectedSubCategory) {
    typeFilter.innerHTML = '<option value="">All Types</option>';
    
    if (selectedSubCategory && allTypes) {
      const filteredTypes = allTypes.filter(type => 
        type.subCategory && type.subCategory.toString() === selectedSubCategory
      );
      
      filteredTypes.forEach(type => {
        const option = document.createElement('option');
        option.value = type._id;
        option.textContent = type.name;
        if (currentFilters.type === type._id) option.selected = true;
        typeFilter.appendChild(option);
      });
    }
  }
  
  // Category change handler
  categoryFilter.addEventListener('change', function() {
    const selectedCategory = this.value;
    populateSubCategories(selectedCategory);
    populateTypes(''); // Reset types when category changes
  });
  
  // Subcategory change handler
  subCategoryFilter.addEventListener('change', function() {
    const selectedSubCategory = this.value;
    populateTypes(selectedSubCategory);
  });
  
  // Initialize dropdowns on page load
  populateBrands();
  if (currentFilters.category) {
    populateSubCategories(currentFilters.category);
  }
  if (currentFilters.subCategory) {
    populateTypes(currentFilters.subCategory);
  }
  
  // Auto-submit on sort change
  const sortSelect = document.querySelector('select[name="sort"]');
  if (sortSelect) {
    sortSelect.addEventListener('change', function() {
      this.form.submit();
    });
  }
  
  // Add loading state to filter form
  const filterForm = document.querySelector('form');
  if (filterForm) {
    filterForm.addEventListener('submit', function() {
      const submitBtn = this.querySelector('button[type="submit"]');
      if (submitBtn) {
        const originalText = submitBtn.innerHTML;
        submitBtn.innerHTML = '<i class="fa fa-spinner fa-spin mr-2"></i>Applying...';
        submitBtn.disabled = true;
        
        // Re-enable after 5 seconds as fallback
        setTimeout(() => {
          submitBtn.innerHTML = originalText;
          submitBtn.disabled = false;
        }, 5000);
      }
    });
  }
});
</script>

