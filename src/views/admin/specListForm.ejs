<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title><%= title %></title>
    <link href="https://cdn.jsdelivr.net/npm/tailwindcss@2.2.19/dist/tailwind.min.css" rel="stylesheet">
</head>
<body class="bg-gray-100">
    <div class="container mx-auto px-4 py-8">
        <div class="max-w-2xl mx-auto">
            <div class="bg-white shadow-md rounded-lg p-6">
                <div class="flex justify-between items-center mb-6">
                    <h1 class="text-2xl font-bold text-gray-800"><%= title %></h1>
                    <a href="/admin/v1/parameters/spec-lists" class="bg-gray-500 hover:bg-gray-700 text-white font-bold py-2 px-4 rounded">
                        Back to List
                    </a>
                </div>

                <form method="POST" action="<%= specList ? `/admin/v1/parameters/spec-lists/${specList._id}?_method=PUT` : '/admin/v1/parameters/spec-lists' %>">
                    <div class="mb-4">
                        <label for="title" class="block text-gray-700 text-sm font-bold mb-2">Title *</label>
                        <input type="text" id="title" name="title" value="<%= specList ? specList.title : '' %>" 
                               class="w-full px-3 py-2 border rounded-lg focus:outline-none focus:border-blue-500" required>
                    </div>

                    <div class="mb-4">
                        <label for="value" class="block text-gray-700 text-sm font-bold mb-2">Default Value</label>
                        <input type="text" id="value" name="value" value="<%= specList ? (specList.value || '') : '' %>" 
                               class="w-full px-3 py-2 border rounded-lg focus:outline-none focus:border-blue-500">
                    </div>

                    <div class="mb-4">
                        <label for="category" class="block text-gray-700 text-sm font-bold mb-2">Category</label>
                        <select id="category" name="category" class="w-full px-3 py-2 border rounded-lg focus:outline-none focus:border-blue-500">
                            <option value="">All Categories</option>
                            <% categories.forEach(cat => { %>
                            <option value="<%= cat._id %>" <%= specList && specList.category && specList.category.toString() === cat._id.toString() ? 'selected' : '' %>>
                                <%= cat.name %>
                            </option>
                            <% }); %>
                        </select>
                    </div>

                    <div class="mb-4">
                        <label for="subCategory" class="block text-gray-700 text-sm font-bold mb-2">Sub Category</label>
                        <select id="subCategory" name="subCategory" class="w-full px-3 py-2 border rounded-lg focus:outline-none focus:border-blue-500">
                            <option value="">All Sub Categories</option>
                            <% subCategories.forEach(subCat => { %>
                            <option value="<%= subCat._id %>" <%= specList && specList.subCategory && specList.subCategory.toString() === subCat._id.toString() ? 'selected' : '' %>>
                                <%= subCat.name %>
                            </option>
                            <% }); %>
                        </select>
                    </div>

                    <div class="mb-4">
                        <label for="type" class="block text-gray-700 text-sm font-bold mb-2">Type</label>
                        <select id="type" name="type" class="w-full px-3 py-2 border rounded-lg focus:outline-none focus:border-blue-500">
                            <option value="">All Types</option>
                            <% types.forEach(type => { %>
                            <option value="<%= type._id %>" <%= specList && specList.type && specList.type.toString() === type._id.toString() ? 'selected' : '' %>>
                                <%= type.name %>
                            </option>
                            <% }); %>
                        </select>
                    </div>

                    <div class="mb-4">
                        <label for="brand" class="block text-gray-700 text-sm font-bold mb-2">Brand</label>
                        <select id="brand" name="brand" class="w-full px-3 py-2 border rounded-lg focus:outline-none focus:border-blue-500">
                            <option value="">All Brands</option>
                            <% brands.forEach(brand => { %>
                            <option value="<%= brand._id %>" <%= specList && specList.brand && specList.brand.toString() === brand._id.toString() ? 'selected' : '' %>>
                                <%= brand.name %>
                            </option>
                            <% }); %>
                        </select>
                    </div>

                    <div class="mb-6">
                        <label for="status" class="block text-gray-700 text-sm font-bold mb-2">Status</label>
                        <select id="status" name="status" class="w-full px-3 py-2 border rounded-lg focus:outline-none focus:border-blue-500">
                            <option value="active" <%= specList && specList.status === 'active' ? 'selected' : '' %>>Active</option>
                            <option value="inactive" <%= specList && specList.status === 'inactive' ? 'selected' : '' %>>Inactive</option>
                        </select>
                    </div>

                    <div class="flex justify-end">
                        <button type="submit" class="bg-blue-500 hover:bg-blue-700 text-white font-bold py-2 px-4 rounded">
                            <%= specList ? 'Update' : 'Create' %> Spec List
                        </button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</body>
</html>

