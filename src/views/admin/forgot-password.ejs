<%- include('../partials/auth-header.ejs', { title: 'Forgot Password' }) %>

      <!-- Header -->
      <div class="text-center mb-8">
        <a href="/admin/v1/staff/login" class="inline-flex items-center text-blue-600 hover:text-blue-700 transition mb-4">
          <i class="fa fa-arrow-left mr-2"></i> Back to Login
        </a>
        <h1 class="text-3xl font-bold text-gray-800">Reset Password</h1>
        <p class="text-gray-500 mt-2">Enter your email to receive password reset instructions</p>
      </div>

  <!-- Flash Messages -->
  <% if (error && error.length) { %>
    <div class="mb-6 p-4 rounded-lg border-l-4 border-red-400 bg-red-50 text-red-800 shadow-sm">
      <% error.forEach(msg => { %>
        <div class="flex items-center gap-2">
          <i class="fa fa-exclamation-circle"></i>
          <%= msg %>
        </div>
      <% }) %>
    </div>
  <% } %>
  <% if (success && success.length) { %>
    <div class="mb-6 p-4 rounded-lg border-l-4 border-green-400 bg-green-50 text-green-800 shadow-sm">
      <% success.forEach(msg => { %>
        <div class="flex items-center gap-2">
          <i class="fa fa-check-circle"></i>
          <%= msg %>
        </div>
      <% }) %>
    </div>
  <% } %>

  <!-- Reset Form -->
  <div class="bg-white rounded-xl shadow-md p-8 border border-gray-100">
    <form action="/admin/v1/staff/forgot-password" method="POST" class="space-y-6">
      <div>
        <label for="email" class="block font-semibold mb-2 text-gray-700">Registered Email</label>
        <input
          id="email"
          name="email"
          type="email"
          placeholder="name@company.com"
          class="w-full p-3 rounded-lg border border-gray-200 focus:border-blue-500 focus:ring-2 focus:ring-blue-100 transition"
          required
        >
      </div>

      <button type="submit" class="w-full px-4 py-3 rounded-lg bg-blue-600 text-white font-semibold hover:bg-blue-700 transition flex items-center justify-center">
        <i class="fa fa-envelope mr-2"></i> Send Reset Instructions
      </button>
    </form>
  </div>
  
      <div class="text-center mt-6 text-gray-500">
        <p>Remember your password? <a href="/admin/v1/staff/login" class="text-blue-600 hover:text-blue-700 font-medium">Sign in</a></p>
      </div>

<%- include('../partials/auth-footer.ejs') %>