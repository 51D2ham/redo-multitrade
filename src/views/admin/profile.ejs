<%- include('../partials/header.ejs', { title: 'Admin Profile' }) %>

<!-- Modern Navigation Bar -->
<nav class="flex flex-wrap gap-3 mb-8 p-4 bg-white rounded-xl shadow-sm border border-gray-100 items-center">
  <a href="/admin/v1/staff/dashboard" class="flex items-center gap-2 px-4 py-2 rounded-lg bg-blue-50 text-blue-700 hover:bg-blue-100 transition">
    <i class="fa fa-home"></i> Dashboard
  </a>
  <a href="/admin/v1/staff" class="flex items-center gap-2 px-4 py-2 rounded-lg bg-gray-50 text-gray-700 hover:bg-gray-100 transition">
    <i class="fa fa-users"></i> Staff List
  </a>
  <a href="/admin/v1/staff/<%= admin._id %>/edit" class="flex items-center gap-2 px-4 py-2 rounded-lg bg-gray-50 text-gray-700 hover:bg-gray-100 transition">
    <i class="fa fa-user-edit"></i> Edit Profile
  </a>
</nav>

<main class="container mx-auto max-w-3xl px-4 mt-8">
  <div class="bg-white rounded-xl shadow-md overflow-hidden border border-gray-100">
    <!-- Profile Header -->
    <div class="bg-gradient-to-r from-blue-50 to-indigo-50 p-8 border-b border-gray-100">
      <div class="flex flex-col md:flex-row md:items-center md:justify-between gap-6">
        <div class="flex items-center gap-6">
          <div class="relative">
            <div class="w-24 h-24 rounded-full overflow-hidden border-4 border-white shadow-lg">
              <% if (admin.profileImage) { %>
                <img 
                  src="/uploads/<%= admin.profileImage %>" 
                  alt="<%= admin.username %>'s profile"
                  class="w-full h-full object-cover"
                >
              <% } else { %>
                <div class="w-full h-full bg-gray-200 flex items-center justify-center text-gray-500">
                  <i class="fa fa-user text-4xl"></i>
                </div>
              <% } %>
            </div>
            <div class="absolute -bottom-2 -right-2 bg-white p-1.5 rounded-full shadow-md border border-gray-100">
              <span class="inline-flex items-center px-2.5 py-1 rounded-full text-xs font-medium
                <%= admin.role === 'admin' ? 'bg-blue-100 text-blue-800' :
                    admin.role === 'superadmin' ? 'bg-purple-100 text-purple-800' :
                    'bg-green-100 text-green-800' %>">
                <i class="fa fa-id-badge text-[6px] mr-1.5 
                  <%= admin.role === 'admin' ? 'text-blue-500' :
                      admin.role === 'superadmin' ? 'text-purple-500' :
                      'text-green-500' %>"></i>
                <%= admin.role.charAt(0).toUpperCase() + admin.role.slice(1) %>
              </span>
            </div>
          </div>
          <div>
            <h1 class="text-2xl font-bold text-gray-800"><%= admin.username %></h1>
            <p class="text-gray-500 mt-1"><%= admin.fullname %></p>
            <div class="mt-2 flex flex-wrap gap-2">
              <span class="inline-flex items-center px-2.5 py-1.5 rounded-lg text-xs font-medium bg-blue-50 text-blue-700">
                <i class="fa fa-envelope mr-1.5"></i> <%= admin.email %>
              </span>
              <% if (admin.phone) { %>
                <span class="inline-flex items-center px-2.5 py-1.5 rounded-lg text-xs font-medium bg-gray-50 text-gray-700">
                  <i class="fa fa-phone mr-1.5"></i> <%= admin.phone %>
                </span>
              <% } %>
            </div>
          </div>
        </div>
        <div class="text-right md:shrink-0">
          <a 
            href="/admin/v1/staff/<%= admin._id %>/edit" 
            class="inline-flex items-center px-4 py-2.5 rounded-lg bg-blue-600 text-white font-medium hover:bg-blue-700 transition"
          >
            <i class="fa fa-edit mr-2"></i> Edit Profile
          </a>
        </div>
      </div>
    </div>

    <!-- Flash Messages -->
    <% if (error && error.length) { %>
      <div class="mx-8 mt-6 p-4 rounded-lg border-l-4 border-red-400 bg-red-50 text-red-800 shadow-sm">
        <% error.forEach(msg => { %>
          <div class="flex items-center gap-2">
            <i class="fa fa-exclamation-circle"></i>
            <%= msg %>
          </div>
        <% }) %>
      </div>
    <% } %>
    <% if (success && success.length) { %>
      <div class="mx-8 mt-6 p-4 rounded-lg border-l-4 border-green-400 bg-green-50 text-green-800 shadow-sm">
        <% success.forEach(msg => { %>
          <div class="flex items-center gap-2">
            <i class="fa fa-check-circle"></i>
            <%= msg %>
          </div>
        <% }) %>
      </div>
    <% } %>

    <div class="p-8">
      <!-- Account Information Section -->
      <div class="mb-10">
        <h2 class="font-semibold text-lg text-gray-800 mb-5 flex items-center gap-2">
          <i class="fa fa-user-circle text-blue-600"></i> Account Information
        </h2>
        <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
          <div class="bg-gray-50 rounded-xl p-5 border border-gray-100">
            <h3 class="font-medium text-gray-500 mb-3 flex items-center gap-1.5">
              <i class="fa fa-venus-mars"></i> Gender
            </h3>
            <div class="flex items-center">
              <% if (admin.gender) { %>
                <span class="inline-flex items-center px-3 py-1.5 rounded-full text-sm font-medium
                  <%= admin.gender === 'male' ? 'bg-blue-100 text-blue-700' :
                      admin.gender === 'female' ? 'bg-pink-100 text-pink-700' :
                      'bg-gray-100 text-gray-700' %>">
                  <i class="fa fa-<%= admin.gender === 'male' ? 'mars' : admin.gender === 'female' ? 'venus' : 'genderless' %> mr-2"></i>
                  <%= admin.gender.charAt(0).toUpperCase() + admin.gender.slice(1) %>
                </span>
              <% } else { %>
                <span class="text-gray-400 italic">Not specified</span>
              <% } %>
            </div>
          </div>
          <div class="bg-gray-50 rounded-xl p-5 border border-gray-100">
            <h3 class="font-medium text-gray-500 mb-3 flex items-center gap-1.5">
              <i class="fa fa-id-badge"></i> Account Status
            </h3>
            <span class="inline-flex items-center px-3 py-1.5 rounded-full text-sm font-medium
              <%= admin.status === 'active' ? 'bg-green-100 text-green-800' :
                  admin.status === 'inactive' ? 'bg-yellow-100 text-yellow-800' :
                  'bg-red-100 text-red-800' %>">
              <i class="fa fa-circle text-[6px] mr-2 
                <%= admin.status === 'active' ? 'text-green-500' :
                    admin.status === 'inactive' ? 'text-yellow-500' :
                    'text-red-500' %>"></i>
              <%= admin.status.charAt(0).toUpperCase() + admin.status.slice(1) %>
            </span>
          </div>
          <div class="bg-gray-50 rounded-xl p-5 border border-gray-100">
            <h3 class="font-medium text-gray-500 mb-3 flex items-center gap-1.5">
              <i class="fa fa-calendar-plus"></i> Account Created
            </h3>
            <p class="text-gray-800 font-medium">
              <%= new Date(admin.createdAt).toLocaleDateString('en-US', { 
                year: 'numeric', 
                month: 'long', 
                day: 'numeric',
                hour: '2-digit',
                minute: '2-digit'
              }) %>
            </p>
          </div>
          <div class="bg-gray-50 rounded-xl p-5 border border-gray-100">
            <h3 class="font-medium text-gray-500 mb-3 flex items-center gap-1.5">
              <i class="fa fa-user-clock"></i> Last Login
            </h3>
            <p class="text-gray-800 font-medium">
              <% if (admin.lastLogin) { %>
                <%= new Date(admin.lastLogin).toLocaleDateString('en-US', { 
                  year: 'numeric', 
                  month: 'long', 
                  day: 'numeric',
                  hour: '2-digit',
                  minute: '2-digit'
                }) %>
              <% } else { %>
                <span class="text-gray-400 italic">Never logged in</span>
              <% } %>
            </p>
          </div>
        </div>
      </div>

      <!-- Address Section -->
      <div class="mb-10">
        <h2 class="font-semibold text-lg text-gray-800 mb-5 flex items-center gap-2">
          <i class="fa fa-map-marker-alt text-blue-600"></i> Address Information
        </h2>
        <% if (admin.Address) { %>
          <div class="bg-gray-50 rounded-xl p-6 border border-gray-100 space-y-3">
            <p class="flex items-start">
              <i class="fa fa-home text-gray-400 mt-1 mr-2.5"></i>
              <span class="text-gray-700"><%= admin.Address %></span>
            </p>
          </div>
        <% } else { %>
          <div class="bg-gray-50 rounded-xl p-6 border border-gray-100 text-center">
            <i class="fa fa-map-marker-slash text-3xl text-gray-300 mb-3"></i>
            <p class="text-gray-500">No address registered</p>
            <p class="mt-2 text-sm text-gray-400">This admin hasn't specified their address</p>
          </div>
        <% } %>
      </div>

      <!-- Security Section -->
      <div class="mb-10">
        <h2 class="font-semibold text-lg text-gray-800 mb-5 flex items-center gap-2">
          <i class="fa fa-shield-alt text-blue-600"></i> Security Settings
        </h2>
        <div class="grid grid-cols-1 gap-4">
          <a href="/admin/v1/staff/change-password" class="bg-gray-50 rounded-xl p-5 border border-gray-100 hover:bg-gray-100 transition flex items-center justify-between">
            <div class="flex items-center">
              <div class="w-12 h-12 rounded-xl bg-blue-100 text-blue-700 flex items-center justify-center mr-4">
                <i class="fa fa-key text-xl"></i>
              </div>
              <div>
                <h3 class="font-medium text-gray-800">Change Password</h3>
                <p class="text-gray-500 text-sm">Update your account password</p>
              </div>
            </div>
            <i class="fa fa-chevron-right text-gray-400"></i>
          </a>
        </div>
      </div>

      <!-- Session Management -->
      <div>
        <h2 class="font-semibold text-lg text-gray-800 mb-5 flex items-center gap-2">
          <i class="fa fa-laptop text-blue-600"></i> Active Sessions
        </h2>
        <div class="bg-gray-50 rounded-xl p-5 border border-gray-100">
          <div class="flex items-center justify-between py-3 border-b border-gray-100 last:border-0">
            <div>
              <h3 class="font-medium text-gray-800">Current Session</h3>
              <p class="text-gray-500 text-sm">This device • <%= new Date().toLocaleString() %></p>
            </div>
            <span class="px-2.5 py-1 rounded-full text-xs font-medium bg-green-100 text-green-800">
              Active
            </span>
          </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</main>

<%- include('../partials/footer.ejs') %>

