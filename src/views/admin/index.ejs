<%- include('../partials/header.ejs', { title: 'Admins' }) %>

<!-- Modern Navigation Bar -->
<nav class="flex flex-wrap gap-3 mb-8 p-4 bg-white rounded-xl shadow-sm border border-gray-100 items-center">
  <a href="/admin/v1/staff/dashboard" class="flex items-center gap-2 px-4 py-2 rounded-lg bg-blue-50 text-blue-700 hover:bg-blue-100 transition">
    <i class="fa fa-home"></i> Dashboard
  </a>
  <a href="/admin/v1/staff/register" class="flex items-center gap-2 px-4 py-2 rounded-lg bg-green-50 text-green-700 hover:bg-green-100 transition">
    <i class="fa fa-user-plus"></i> Add Admin
  </a>
</nav>
<main class="container mx-auto max-w-7xl px-4 mt-8">
  <div class="flex flex-col md:flex-row md:justify-between md:items-center mb-8 gap-4">
    <h1 class="text-3xl font-bold text-gray-800">Staff Management</h1>
    <div class="text-sm text-gray-500">
      Total Staff: <span class="font-semibold"><%= pagination?.total || 0 %></span>
    </div>
  </div>
  <!-- Flash Messages -->
  <% if (success && success.length) { %>
    <div class="mb-6 p-4 rounded-lg border-l-4 border-green-400 bg-green-50 text-green-800 shadow-sm">
      <% success.forEach(msg => { %>
        <div class="flex items-center gap-2">
          <i class="fa fa-check-circle"></i>
          <%= msg %>
        </div>
      <% }) %>
    </div>
  <% } %>
  <% if (error && error.length) { %>
    <div class="mb-6 p-4 rounded-lg border-l-4 border-red-400 bg-red-50 text-red-800 shadow-sm">
      <% error.forEach(msg => { %>
        <div class="flex items-center gap-2">
          <i class="fa fa-exclamation-circle"></i>
          <%= msg %>
        </div>
      <% }) %>
    </div>
  <% } %>
  <!-- Filters Card -->
  <div class="bg-white rounded-xl shadow-md p-6 mb-10 border border-gray-100">
    <form method="GET" action="/admin/v1/staff" class="grid grid-cols-1 md:grid-cols-4 gap-4 items-end">
      <div>
        <label for="search" class="block font-semibold mb-1 text-gray-700">Search</label>
        <input
          id="search"
          name="search"
          type="text"
          placeholder="Name or email"
          value="<%= filters.search || '' %>"
          class="w-full p-3 rounded-lg border border-gray-200 focus:border-blue-500 focus:ring-2 focus:ring-blue-100 transition"
        >
      </div>
      <div>
        <label for="role" class="block font-semibold mb-1 text-gray-700">Role</label>
        <select 
          id="role" 
          name="role"
          class="w-full p-3 rounded-lg border border-gray-200 focus:border-blue-500 focus:ring-2 focus:ring-blue-100 transition"
        >
          <option value="">All Roles</option>
          <% ['admin', 'superAdmin'].forEach(r => { %>
            <option value="<%= r %>" <%= filters.role === r ? 'selected' : '' %>>
              <%= r.charAt(0).toUpperCase() + r.slice(1) %>
            </option>
          <% }) %>
        </select>
      </div>
      <div class="md:col-span-2">
        <button type="submit" class="w-full px-4 py-3 rounded-lg bg-blue-600 text-white font-semibold hover:bg-blue-700 transition flex items-center gap-2">
          <i class="fa fa-filter"></i> Apply Filters
        </button>
      </div>
    </form>
  </div>
  <!-- Staff Table Card -->
  <div class="bg-white rounded-xl shadow-md overflow-x-auto mb-10 border border-gray-100">
    <table class="w-full text-sm">
      <thead>
        <tr class="border-b border-gray-200 bg-gray-50">
          <th class="py-3 px-4 text-left font-semibold text-gray-600 w-12">S.N</th>
          <th class="py-3 px-4 text-left font-semibold text-gray-600">Name</th>
          <th class="py-3 px-4 text-left font-semibold text-gray-600">Email</th>
          <th class="py-3 px-4 text-left font-semibold text-gray-600">Phone</th>
          <th class="py-3 px-4 text-left font-semibold text-gray-600">Role</th>
          <th class="py-3 px-4 text-left font-semibold text-gray-600">Actions</th>
        </tr>
      </thead>
      <tbody>
        <% if (!admins || admins.length === 0) { %>
          <tr>
            <td colspan="6" class="py-12 text-center text-gray-400">
              <i class="fa fa-user-shield text-4xl mb-4 opacity-25"></i>
              <p class="text-lg font-medium">No staff members found</p>
              <p class="text-gray-500">Try adjusting your search or filters</p>
            </td>
          </tr>
        <% } else { %>
          <% admins.filter(admin => admin.role !== 'developer').forEach((admin, idx) => { %>
            <tr class="hover:bg-blue-50 transition-colors border-b border-gray-100 last:border-0">
              <td class="py-4 px-4 font-semibold text-gray-500"><%= (pagination && typeof pagination.limit === 'number' && typeof pagination.currentPage === 'number' ? (pagination.currentPage - 1) * pagination.limit : 0) + idx + 1 %></td>
              <td class="py-4 px-4 font-medium text-gray-800 flex items-center gap-3">
                <% if (admin.profileImage) { %>
                  <img src="<%= admin.profileImage %>" alt="Profile" class="w-10 h-10 rounded-full object-cover">
                <% } else { %>
                  <div class="w-10 h-10 rounded-full bg-gray-200 flex items-center justify-center text-gray-600 font-medium">
                    <%= admin.fullname ? admin.fullname.charAt(0).toUpperCase() : '?' %>
                  </div>
                <% } %>
                <span><%= admin.fullname || 'Unnamed Admin' %></span>
              </td>
              <td class="py-4 px-4 text-gray-700"><%= admin.email || '—' %></td>
              <td class="py-4 px-4 text-gray-700"><%= admin.phone || '—' %></td>
              <td class="py-4 px-4">
                <% 
                  const adminRole = admin.role || 'admin';
                  const displayRole = adminRole.charAt(0).toUpperCase() + adminRole.slice(1);
                  const roleColor = adminRole === 'superadmin' ? 'yellow' : adminRole === 'developer' ? 'purple' : 'blue';
                %>
                <span class="inline-flex items-center px-3 py-1 rounded-full text-xs font-semibold
                  bg-<%= roleColor %>-100 text-<%= roleColor %>-700">
                  <i class="fa fa-circle text-[6px] mr-1.5 text-<%= roleColor %>-500"></i>
                  <%= displayRole %>
                </span>
              </td>
              <td class="py-4 px-4">
                <div class="flex flex-wrap gap-2">
                  <a href="/admin/v1/staff/<%= admin._id %>/profile" class="btn btn-small bg-blue-100 text-blue-700 hover:bg-blue-200 transition flex items-center px-3 py-2">
                    <i class="fa fa-eye mr-1.5"></i> View
                  </a>
                  <a href="/admin/v1/staff/<%= admin._id %>/edit" class="btn btn-small bg-yellow-100 text-yellow-700 hover:bg-yellow-200 transition flex items-center px-3 py-2">
                    <i class="fa fa-edit mr-1.5"></i> Edit
                  </a>
                  <form action="/admin/v1/staff/<%= admin._id %>/delete" method="POST" class="inline">
                    <input type="hidden" name="_method" value="DELETE">
                    <button 
                      type="submit" 
                      class="btn btn-small bg-red-100 text-red-600 hover:bg-red-200 transition flex items-center px-3 py-2"
                      onclick="return confirm('Permanently delete this staff member? This action cannot be undone.')"
                    >
                      <i class="fa fa-trash mr-1.5"></i> Delete
                    </button>
                  </form>
                </div>
              </td>
            </tr>
          <% }) %>
        <% } %>
      </tbody>
    </table>
  <style nonce="<%= (typeof cspNonce !== 'undefined' ? cspNonce : '') %>">
      @media (max-width: 768px) {
        table.w-full, thead, tbody, th, td, tr { display: block; }
        thead tr { display: none; }
        tbody tr { margin-bottom: 1rem; background: #fff; border-radius: 0.5rem; box-shadow: 0 1px 4px rgba(0,0,0,0.04); }
        td { position: relative; padding-left: 50%; min-height: 40px; }
        td:before {
          position: absolute;
          left: 1rem;
          top: 50%;
          transform: translateY(-50%);
          white-space: nowrap;
          font-weight: 600;
          color: #6b7280;
          font-size: 0.95em;
        }
        td:nth-child(1):before { content: 'S.N'; }
        td:nth-child(2):before { content: 'Name'; }
        td:nth-child(3):before { content: 'Email'; }
        td:nth-child(4):before { content: 'Phone'; }
        td:nth-child(5):before { content: 'Role'; }
        td:nth-child(6):before { content: 'Actions'; }
      }
    </style>
  </div>
  <!-- Pagination -->
  <% if (admins && admins.length > 0) { %>
    <div class="flex flex-col md:flex-row justify-between items-center gap-4 bg-white p-4 rounded-xl border border-gray-100">
      <% 
        const pageSize = pagination?.limit || 10;
        const total = pagination?.total || 0;
        const start = total === 0 ? 0 : (pagination.currentPage - 1) * pageSize + 1;
        const end = total === 0 ? 0 : Math.min(start + pageSize - 1, total);
      %>
      
      <span class="text-sm text-gray-500">
        Showing <%= start %> - <%= end %> of <%= total %>
      </span>
      
      <div class="flex flex-wrap gap-2">
        <% if (pagination.hasPrev) { %>
          <a 
            href="?page=<%= pagination.currentPage - 1 %>&search=<%= encodeURIComponent(filters.search || '') %>&role=<%= filters.role || '' %>"
            class="px-4 py-2 rounded-lg bg-blue-50 text-blue-600 hover:bg-blue-100 transition flex items-center"
          >
            <i class="fa fa-arrow-left mr-2"></i> Previous
          </a>
        <% } %>
        
        <span class="px-4 py-2 rounded-lg bg-gray-50 text-gray-700">
          Page <%= pagination.currentPage %> of <%= pagination.totalPages %>
        </span>
        
        <% if (pagination.hasNext) { %>
          <a 
            href="?page=<%= pagination.currentPage + 1 %>&search=<%= encodeURIComponent(filters.search || '') %>&role=<%= filters.role || '' %>"
            class="px-4 py-2 rounded-lg bg-blue-50 text-blue-600 hover:bg-blue-100 transition flex items-center"
          >
            Next <i class="fa fa-arrow-right ml-2"></i>
          </a>
        <% } %>
      </div>
    </div>
  <% } %>
</main>
<%- include('../partials/footer.ejs') %>