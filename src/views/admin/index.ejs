<%- include('../partials/header.ejs', { title: 'Admins' }) %>

<!-- Modern Navigation Bar -->
<nav class="flex flex-wrap gap-3 mb-8 p-4 bg-white rounded-xl shadow-sm border border-gray-100 items-center">
  <a href="/admin/v1/staff/dashboard" class="flex items-center gap-2 px-4 py-2 rounded-lg bg-blue-50 text-blue-700 hover:bg-blue-100 transition">
    <i class="fa fa-home"></i> Dashboard
  </a>
  <a href="/admin/v1/staff/register" class="flex items-center gap-2 px-4 py-2 rounded-lg bg-green-50 text-green-700 hover:bg-green-100 transition">
    <i class="fa fa-user-plus"></i> Add Admin
  </a>
</nav>
<main class="container mx-auto max-w-7xl px-4 mt-8">
  <div class="flex flex-col md:flex-row md:justify-between md:items-center mb-8 gap-4">
    <h1 class="text-3xl font-bold text-gray-800">Staff Management</h1>
    <div class="text-sm text-gray-500">
      Total Staff: <span class="font-semibold"><%= pagination?.total || 0 %></span>
    </div>
  </div>
  <!-- Flash Messages -->
  <% if (success && success.length) { %>
    <div class="mb-6 p-4 rounded-lg border-l-4 border-green-400 bg-green-50 text-green-800 shadow-sm">
      <% success.forEach(msg => { %>
        <div class="flex items-center gap-2">
          <i class="fa fa-check-circle"></i>
          <%= msg %>
        </div>
      <% }) %>
    </div>
  <% } %>
  <% if (error && error.length) { %>
    <div class="mb-6 p-4 rounded-lg border-l-4 border-red-400 bg-red-50 text-red-800 shadow-sm">
      <% error.forEach(msg => { %>
        <div class="flex items-center gap-2">
          <i class="fa fa-exclamation-circle"></i>
          <%= msg %>
        </div>
      <% }) %>
    </div>
  <% } %>
  <!-- Filters Card -->
  <div class="bg-white rounded-xl shadow-md p-6 mb-10 border border-gray-100">
    <form method="GET" action="/admin/v1/staff" class="grid grid-cols-1 md:grid-cols-4 gap-4 items-end">
      <div>
        <label for="search" class="block font-semibold mb-1 text-gray-700">Search</label>
        <input
          id="search"
          name="search"
          type="text"
          placeholder="Name or email"
          value="<%= filters.search || '' %>"
          class="w-full p-3 rounded-lg border border-gray-200 focus:border-blue-500 focus:ring-2 focus:ring-blue-100 transition"
        >
      </div>
      <div>
        <label for="role" class="block font-semibold mb-1 text-gray-700">Role</label>
        <select 
          id="role" 
          name="role"
          class="w-full p-3 rounded-lg border border-gray-200 focus:border-blue-500 focus:ring-2 focus:ring-blue-100 transition"
        >
          <option value="">All Roles</option>
          <% ['admin', 'superAdmin'].forEach(r => { %>
            <option value="<%= r %>" <%= filters.role === r ? 'selected' : '' %>>
              <%= r.charAt(0).toUpperCase() + r.slice(1) %>
            </option>
          <% }) %>
        </select>
      </div>
      <div class="md:col-span-2">
        <button type="submit" class="w-full px-4 py-3 rounded-lg bg-blue-600 text-white font-semibold hover:bg-blue-700 transition flex items-center gap-2">
          <i class="fa fa-filter"></i> Apply Filters
        </button>
      </div>
    </form>
  </div>
  <!-- Staff List -->
  <div class="bg-white rounded-xl shadow-md mb-10 border border-gray-100">
    <% if (!admins || admins.length === 0) { %>
      <div class="p-8 text-center">
        <i class="fa fa-user-shield text-5xl text-gray-300 mb-4"></i>
        <h2 class="text-xl font-semibold text-gray-800 mb-2">No Staff Members Found</h2>
        <p class="text-gray-500 mb-6">Try adjusting your search or filters</p>
        <a href="/admin/v1/staff/register" class="inline-flex items-center px-4 py-2.5 rounded-lg bg-blue-600 text-white font-medium hover:bg-blue-700 transition">
          <i class="fa fa-plus mr-2"></i> Add First Admin
        </a>
      </div>
    <% } else { %>
      <!-- Mobile Cards (Hidden on Desktop) -->
      <div class="block lg:hidden space-y-4 p-4">
        <% admins.filter(admin => admin.role !== 'developer').forEach((admin, idx) => { %>
          <div class="bg-white border border-gray-200 rounded-xl p-4 shadow-sm hover:shadow-md transition-shadow">
            <div class="flex items-start justify-between mb-4">
              <div class="flex items-center gap-3">
                <% if (admin.profileImage) { %>
                  <img src="<%= admin.profileImage %>" alt="Profile" class="w-12 h-12 rounded-full object-cover">
                <% } else { %>
                  <div class="w-12 h-12 rounded-full bg-gradient-to-br from-indigo-400 to-indigo-600 flex items-center justify-center text-white font-semibold">
                    <%= admin.fullname ? admin.fullname.charAt(0).toUpperCase() : '?' %>
                  </div>
                <% } %>
                <div>
                  <h3 class="font-semibold text-gray-900"><%= admin.fullname || 'Unnamed Admin' %></h3>
                  <p class="text-sm text-gray-600"><%= admin.email || '—' %></p>
                </div>
              </div>
              <span class="text-xs font-medium px-2 py-1 rounded-full bg-blue-100 text-blue-700">
                #<%= (pagination && typeof pagination.limit === 'number' && typeof pagination.currentPage === 'number' ? (pagination.currentPage - 1) * pagination.limit : 0) + idx + 1 %>
              </span>
              <div class="text-right">
                <% 
                  const adminRole = admin.role || 'admin';
                  const displayRole = adminRole.charAt(0).toUpperCase() + adminRole.slice(1);
                  const roleColor = adminRole === 'superadmin' ? 'amber' : adminRole === 'developer' ? 'purple' : 'indigo';
                %>
                <div class="mt-2">
                  <span class="inline-flex items-center px-2 py-1 rounded-full text-xs font-semibold bg-<%= roleColor %>-100 text-<%= roleColor %>-700">
                    <%= displayRole %>
                  </span>
                </div>
              </div>
            </div>
            
            <div class="mb-4 text-sm">
              <span class="text-gray-500 font-medium">Phone:</span>
              <p class="text-gray-900"><%= admin.phone || '—' %></p>
            </div>
            
            <div class="flex flex-wrap gap-2 pt-3 border-t border-gray-100">
              <a href="/admin/v1/staff/<%= admin._id %>/profile" class="flex-1 text-center px-3 py-2 bg-blue-50 text-blue-700 rounded-lg hover:bg-blue-100 transition text-sm font-medium">
                <i class="fa fa-eye mr-1"></i> View
              </a>
              <a href="/admin/v1/staff/<%= admin._id %>/edit" class="flex-1 text-center px-3 py-2 bg-yellow-50 text-yellow-700 rounded-lg hover:bg-yellow-100 transition text-sm font-medium">
                <i class="fa fa-edit mr-1"></i> Edit
              </a>
              <form action="/admin/v1/staff/<%= admin._id %>/delete" method="POST" class="flex-1">
                <input type="hidden" name="_method" value="DELETE">
                <button type="submit" class="w-full px-3 py-2 bg-red-50 text-red-600 rounded-lg hover:bg-red-100 transition text-sm font-medium" onclick="return confirm('Delete this staff member?')">
                  <i class="fa fa-trash mr-1"></i> Delete
                </button>
              </form>
            </div>
          </div>
        <% }) %>
      </div>
      
      <!-- Desktop Table (Hidden on Mobile) -->
      <div class="hidden lg:block overflow-x-auto">
        <table class="w-full text-sm">
          <thead>
            <tr class="border-b border-gray-200 bg-gray-50">
              <th class="py-3 px-4 text-left font-semibold text-gray-600 w-12">S.N</th>
              <th class="py-3 px-4 text-left font-semibold text-gray-600">Staff Member</th>
              <th class="py-3 px-4 text-left font-semibold text-gray-600">Contact</th>
              <th class="py-3 px-4 text-left font-semibold text-gray-600">Role</th>
              <th class="py-3 px-4 text-left font-semibold text-gray-600">Actions</th>
            </tr>
          </thead>
          <tbody>
            <% admins.filter(admin => admin.role !== 'developer').forEach((admin, idx) => { %>
              <tr class="hover:bg-blue-50 transition-colors border-b border-gray-100 last:border-0">
                <td class="py-4 px-4 font-semibold text-gray-500">
                  <%= (pagination && typeof pagination.limit === 'number' && typeof pagination.currentPage === 'number' ? (pagination.currentPage - 1) * pagination.limit : 0) + idx + 1 %>
                </td>
                <td class="py-4 px-4">
                  <div class="flex items-center gap-3">
                    <% if (admin.profileImage) { %>
                      <img src="<%= admin.profileImage %>" alt="Profile" class="w-10 h-10 rounded-full object-cover">
                    <% } else { %>
                      <div class="w-10 h-10 rounded-full bg-gradient-to-br from-indigo-400 to-indigo-600 flex items-center justify-center text-white font-medium">
                        <%= admin.fullname ? admin.fullname.charAt(0).toUpperCase() : '?' %>
                      </div>
                    <% } %>
                    <div>
                      <div class="font-medium text-gray-800"><%= admin.fullname || 'Unnamed Admin' %></div>
                      <div class="text-xs text-gray-500">ID: <%= admin._id.toString().slice(-6) %></div>
                    </div>
                  </div>
                </td>
                <td class="py-4 px-4">
                  <div class="text-gray-700">
                    <div class="font-medium"><%= admin.email || '—' %></div>
                    <div class="text-xs text-gray-500"><%= admin.phone || 'No phone' %></div>
                  </div>
                </td>
                <td class="py-4 px-4">
                  <% 
                    const adminRole = admin.role || 'admin';
                    const displayRole = adminRole.charAt(0).toUpperCase() + adminRole.slice(1);
                    const roleColor = adminRole === 'superadmin' ? 'amber' : adminRole === 'developer' ? 'purple' : 'indigo';
                  %>
                  <span class="inline-flex items-center px-3 py-1 rounded-full text-xs font-semibold bg-<%= roleColor %>-100 text-<%= roleColor %>-700">
                    <i class="fa fa-shield-alt text-[10px] mr-1.5 text-<%= roleColor %>-500"></i>
                    <%= displayRole %>
                  </span>
                </td>
                <td class="py-4 px-4">
                  <div class="flex flex-wrap gap-2">
                    <a href="/admin/v1/staff/<%= admin._id %>/profile" class="btn btn-small bg-blue-100 text-blue-700 hover:bg-blue-200 transition flex items-center px-3 py-2">
                      <i class="fa fa-eye mr-1.5"></i> View
                    </a>
                    <a href="/admin/v1/staff/<%= admin._id %>/edit" class="btn btn-small bg-yellow-100 text-yellow-700 hover:bg-yellow-200 transition flex items-center px-3 py-2">
                      <i class="fa fa-edit mr-1.5"></i> Edit
                    </a>
                    <form action="/admin/v1/staff/<%= admin._id %>/delete" method="POST" class="inline">
                      <input type="hidden" name="_method" value="DELETE">
                      <button type="submit" class="btn btn-small bg-red-100 text-red-600 hover:bg-red-200 transition flex items-center px-3 py-2" onclick="return confirm('Permanently delete this staff member? This action cannot be undone.')">
                        <i class="fa fa-trash mr-1.5"></i> Delete
                      </button>
                    </form>
                  </div>
                </td>
              </tr>
            <% }) %>
          </tbody>
        </table>
      </div>
    <% } %>
  </div>
  <!-- Pagination -->
  <% if (admins && admins.length > 0) { %>
    <div class="flex flex-col md:flex-row justify-between items-center gap-4 bg-white p-4 rounded-xl border border-gray-100">
      <% 
        const pageSize = pagination?.limit || 10;
        const total = pagination?.total || 0;
        const start = total === 0 ? 0 : (pagination.currentPage - 1) * pageSize + 1;
        const end = total === 0 ? 0 : Math.min(start + pageSize - 1, total);
      %>
      
      <span class="text-sm text-gray-500">
        Showing <%= start %> - <%= end %> of <%= total %>
      </span>
      
      <div class="flex flex-wrap gap-2">
        <% if (pagination.hasPrev) { %>
          <a 
            href="?page=<%= pagination.currentPage - 1 %>&search=<%= encodeURIComponent(filters.search || '') %>&role=<%= filters.role || '' %>"
            class="px-4 py-2 rounded-lg bg-blue-50 text-blue-600 hover:bg-blue-100 transition flex items-center"
          >
            <i class="fa fa-arrow-left mr-2"></i> Previous
          </a>
        <% } %>
        
        <span class="px-4 py-2 rounded-lg bg-gray-50 text-gray-700">
          Page <%= pagination.currentPage %> of <%= pagination.totalPages %>
        </span>
        
        <% if (pagination.hasNext) { %>
          <a 
            href="?page=<%= pagination.currentPage + 1 %>&search=<%= encodeURIComponent(filters.search || '') %>&role=<%= filters.role || '' %>"
            class="px-4 py-2 rounded-lg bg-blue-50 text-blue-600 hover:bg-blue-100 transition flex items-center"
          >
            Next <i class="fa fa-arrow-right ml-2"></i>
          </a>
        <% } %>
      </div>
    </div>
  <% } %>
</main>
<%- include('../partials/footer.ejs') %>