<%- include('../partials/header.ejs', { title: 'Change Password' }) %>

<!-- Modern Navigation Bar -->
<nav class="flex flex-wrap gap-3 mb-8 p-4 bg-white rounded-xl shadow-sm border border-gray-100 items-center">
  <a href="/admin/v1/staff/dashboard" class="flex items-center gap-2 px-4 py-2 rounded-lg bg-blue-50 text-blue-700 hover:bg-blue-100 transition">
    <i class="fa fa-home"></i> Dashboard
  </a>
  <a href="/admin/v1/staff/change-password" class="flex items-center gap-2 px-4 py-2 rounded-lg bg-gray-50 text-gray-700 hover:bg-gray-100 transition">
    <i class="fa fa-key"></i> Change Password
  </a>
</nav>

<main class="container mx-auto max-w-2xl px-4 mt-8">
  <div class="bg-white rounded-xl shadow-md overflow-hidden border border-gray-100">
    <!-- Header -->
    <div class="bg-gradient-to-r from-blue-50 to-indigo-50 p-8 border-b border-gray-100">
      <div class="flex items-center gap-4">
        <div class="w-16 h-16 rounded-xl bg-blue-100 text-blue-700 flex items-center justify-center">
          <i class="fa fa-shield-alt text-2xl"></i>
        </div>
        <div>
          <h1 class="text-2xl font-bold text-gray-800">Change Password</h1>
          <p class="text-gray-600 mt-1">Update your account security credentials</p>
        </div>
      </div>
    </div>

    <!-- Flash Messages -->
    <% if (error && error.length) { %>
      <div class="mx-8 mt-6 p-4 rounded-lg border-l-4 border-red-400 bg-red-50 text-red-800 shadow-sm">
        <% error.forEach(msg => { %>
          <div class="flex items-center gap-2">
            <i class="fa fa-exclamation-circle"></i>
            <%= msg %>
          </div>
        <% }) %>
      </div>
    <% } %>
    <% if (success && success.length) { %>
      <div class="mx-8 mt-6 p-4 rounded-lg border-l-4 border-green-400 bg-green-50 text-green-800 shadow-sm">
        <% success.forEach(msg => { %>
          <div class="flex items-center gap-2">
            <i class="fa fa-check-circle"></i>
            <%= msg %>
          </div>
        <% }) %>
      </div>
    <% } %>

    <div class="p-8">
      <!-- Security Form Section -->
      <div class="mb-10">
        <h2 class="font-semibold text-lg text-gray-800 mb-5 flex items-center gap-2">
          <i class="fa fa-key text-blue-600"></i> Password Update
        </h2>
        
        <form action="/admin/v1/staff/change-password" method="POST" class="space-y-6">
          <!-- Current Password -->
          <div class="bg-gray-50 rounded-xl p-5 border border-gray-100">
            <label for="oldPassword" class="block font-medium text-gray-700 mb-3 flex items-center gap-2">
              <i class="fa fa-lock text-gray-400"></i> Current Password
            </label>
            <input
              id="oldPassword"
              name="oldPassword"
              type="password"
              placeholder="Enter your current password"
              class="w-full px-4 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-blue-500 transition-all"
              required
            >
          </div>

          <!-- New Password -->
          <div class="bg-gray-50 rounded-xl p-5 border border-gray-100">
            <label for="newPassword" class="block font-medium text-gray-700 mb-3 flex items-center gap-2">
              <i class="fa fa-key text-gray-400"></i> New Password
            </label>
            <input
              id="newPassword"
              name="newPassword"
              type="password"
              placeholder="Enter your new password"
              class="w-full px-4 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-blue-500 transition-all"
              required
            >
            <p class="mt-2 text-sm text-gray-500 flex items-center gap-2">
              <i class="fa fa-info-circle text-gray-400"></i>
              Minimum 8 characters with letters, numbers & symbols
            </p>
          </div>

          <!-- Submit Button -->
          <button type="submit" class="w-full py-3 px-4 bg-blue-600 text-white font-medium rounded-lg hover:bg-blue-700 transition flex items-center justify-center gap-2">
            <i class="fa fa-save"></i>
            Update Password
          </button>
        </form>
      </div>

      <!-- Security Info -->
      <div>
        <div class="bg-blue-50 rounded-xl p-6 border border-blue-100">
          <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
            <div>
              <h3 class="font-medium text-blue-800 mb-3 flex items-center gap-2">
                <i class="fa fa-shield-check text-blue-600"></i> Requirements
              </h3>
              <ul class="space-y-1 text-sm text-blue-700">
                <li>• 8+ characters</li>
                <li>• Upper & lowercase</li>
                <li>• Numbers & symbols</li>
              </ul>
            </div>
            <div>
              <h3 class="font-medium text-blue-800 mb-3 flex items-center gap-2">
                <i class="fa fa-lightbulb text-blue-600"></i> Tips
              </h3>
              <ul class="space-y-1 text-sm text-blue-700">
                <li>• Use unique password</li>
                <li>• Avoid personal info</li>
                <li>• Consider password manager</li>
              </ul>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</main>

<%- include('../partials/footer.ejs') %>

