<%- include('../partials/header.ejs', { title: 'Content Management' }) %>

<!-- Welcome Header -->
<div class="mb-8">
  <div class="bg-gradient-to-br from-blue-600 via-purple-600 to-indigo-700 rounded-2xl p-8 text-white shadow-2xl">
    <div class="flex flex-col lg:flex-row lg:items-center lg:justify-between">
      <div>
        <h1 class="text-3xl lg:text-4xl font-bold mb-2">Content Management</h1>
        <p class="text-lg opacity-90">Manage website content and promotional materials</p>
      </div>
      <div class="mt-4 lg:mt-0">
        <div class="bg-white/10 backdrop-blur-sm px-6 py-3 rounded-xl border border-white/20">
          <span class="font-semibold capitalize flex items-center gap-2">
            <i class="fas fa-palette text-blue-200"></i>
            Content Manager
          </span>
        </div>
      </div>
    </div>
  </div>
</div>

<!-- Flash Messages -->
<% if (success && success.length) { %>
  <div class="mb-6 p-4 rounded-xl border border-green-200 bg-green-50 text-green-800">
    <% success.forEach(msg => { %>
      <div class="flex items-center gap-2">
        <i class="fas fa-check-circle"></i>
        <%= msg %>
      </div>
    <% }) %>
  </div>
<% } %>
<% if (error && error.length) { %>
  <div class="mb-6 p-4 rounded-xl border border-red-200 bg-red-50 text-red-800">
    <% error.forEach(msg => { %>
      <div class="flex items-center gap-2">
        <i class="fas fa-exclamation-circle"></i>
        <%= msg %>
      </div>
    <% }) %>
  </div>
<% } %>

<!-- Key Metrics -->
<div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-6 mb-8">
  <div class="bg-white rounded-2xl p-6 shadow-lg border border-gray-100 hover:shadow-xl transition-all duration-300 group">
    <div class="flex items-center justify-between">
      <div>
        <p class="text-sm font-medium text-gray-600 mb-1">Hero Banners</p>
        <h3 class="text-3xl font-bold text-gray-900"><%= counts?.heroContent || 0 %></h3>
        <p class="text-xs text-blue-600 mt-1">↗ Total carousel items</p>
      </div>
      <div class="p-4 bg-gradient-to-br from-blue-400 to-blue-600 rounded-xl group-hover:scale-110 transition-transform">
        <i class="fas fa-images text-2xl text-white"></i>
      </div>
    </div>
  </div>

  <div class="bg-white rounded-2xl p-6 shadow-lg border border-gray-100 hover:shadow-xl transition-all duration-300 group">
    <div class="flex items-center justify-between">
      <div>
        <p class="text-sm font-medium text-gray-600 mb-1">Published</p>
        <h3 class="text-3xl font-bold text-gray-900"><%= (heroCarousel || []).filter(item => item.status === 'active').length %></h3>
        <p class="text-xs text-emerald-600 mt-1">↗ Live content</p>
      </div>
      <div class="p-4 bg-gradient-to-br from-emerald-400 to-emerald-600 rounded-xl group-hover:scale-110 transition-transform">
        <i class="fas fa-check-circle text-2xl text-white"></i>
      </div>
    </div>
  </div>

  <div class="bg-white rounded-2xl p-6 shadow-lg border border-gray-100 hover:shadow-xl transition-all duration-300 group">
    <div class="flex items-center justify-between">
      <div>
        <p class="text-sm font-medium text-gray-600 mb-1">Company Info</p>
        <h3 class="text-3xl font-bold text-gray-900"><%= counts?.companyInfo || 0 %></h3>
        <p class="text-xs text-amber-600 mt-1">↗ Business details</p>
      </div>
      <div class="p-4 bg-gradient-to-br from-amber-400 to-amber-600 rounded-xl group-hover:scale-110 transition-transform">
        <i class="fas fa-building text-2xl text-white"></i>
      </div>
    </div>
  </div>

  <div class="bg-white rounded-2xl p-6 shadow-lg border border-gray-100 hover:shadow-xl transition-all duration-300 group">
    <div class="flex items-center justify-between">
      <div>
        <p class="text-sm font-medium text-gray-600 mb-1">Ads Panels</p>
        <h3 class="text-3xl font-bold text-gray-900"><%= counts?.adsPanel || 0 %></h3>
        <p class="text-xs text-purple-600 mt-1">↗ Advertisement panels</p>
      </div>
      <div class="p-4 bg-gradient-to-br from-purple-400 to-purple-600 rounded-xl group-hover:scale-110 transition-transform">
        <i class="fas fa-ad text-2xl text-white"></i>
      </div>
    </div>
  </div>
</div>

<!-- Content Management Center -->
<div class="bg-white rounded-2xl shadow-lg border border-gray-100">
  <div class="p-6">
    <h2 class="text-2xl font-bold text-gray-900 mb-6 flex items-center gap-3">
      <div class="w-8 h-8 bg-gradient-to-r from-blue-500 to-purple-600 rounded-lg flex items-center justify-center">
        <i class="fas fa-tachometer-alt text-white text-sm"></i>
      </div>
      Content Management Center
    </h2>
    
    <div class="grid grid-cols-1 md:grid-cols-2 xl:grid-cols-3 gap-6">
      <a href="/admin/v1/parameters/hero-carousel" class="group bg-gradient-to-br from-blue-50 to-blue-100 rounded-2xl p-6 border border-blue-200 hover:shadow-xl hover:scale-105 transition-all duration-300">
        <div class="flex items-center gap-4 mb-4">
          <div class="p-3 bg-blue-500 rounded-xl text-white group-hover:bg-blue-600 transition-colors">
            <i class="fas fa-images text-xl"></i>
          </div>
          <div>
            <h3 class="text-lg font-bold text-gray-900">Hero Carousel</h3>
            <p class="text-sm text-blue-700">Homepage banners</p>
          </div>
        </div>
        <div class="flex items-center justify-between">
          <span class="text-sm font-medium text-blue-800">Manage Banners</span>
          <i class="fas fa-arrow-right text-blue-600 group-hover:translate-x-1 transition-transform"></i>
        </div>
      </a>

      <a href="/admin/v1/parameters/company-info" class="group bg-gradient-to-br from-amber-50 to-amber-100 rounded-2xl p-6 border border-amber-200 hover:shadow-xl hover:scale-105 transition-all duration-300">
        <div class="flex items-center gap-4 mb-4">
          <div class="p-3 bg-amber-500 rounded-xl text-white group-hover:bg-amber-600 transition-colors">
            <i class="fas fa-building text-xl"></i>
          </div>
          <div>
            <h3 class="text-lg font-bold text-gray-900">Company Info</h3>
            <p class="text-sm text-amber-700">Business details</p>
          </div>
        </div>
        <div class="flex items-center justify-between">
          <span class="text-sm font-medium text-amber-800">Manage Info</span>
          <i class="fas fa-arrow-right text-amber-600 group-hover:translate-x-1 transition-transform"></i>
        </div>
      </a>

      <a href="/admin/v1/parameters/ads-panel" class="group bg-gradient-to-br from-purple-50 to-purple-100 rounded-2xl p-6 border border-purple-200 hover:shadow-xl hover:scale-105 transition-all duration-300">
        <div class="flex items-center gap-4 mb-4">
          <div class="p-3 bg-purple-500 rounded-xl text-white group-hover:bg-purple-600 transition-colors">
            <i class="fas fa-ad text-xl"></i>
          </div>
          <div>
            <h3 class="text-lg font-bold text-gray-900">Ads Panels</h3>
            <p class="text-sm text-purple-700">Advertisement management</p>
          </div>
        </div>
        <div class="flex items-center justify-between">
          <span class="text-sm font-medium text-purple-800">Manage Ads</span>
          <i class="fas fa-arrow-right text-purple-600 group-hover:translate-x-1 transition-transform"></i>
        </div>
      </a>
    </div>
  </div>
</div>

<%- include('../partials/footer.ejs') %>