<%- include('../partials/header.ejs', { title: 'Content Management' }) %>

<div class="min-h-screen bg-gradient-to-br from-slate-50 to-blue-50">
  <div class="max-w-7xl mx-auto px-6 py-8">
    
    <!-- Header -->
    <div class="mb-8">
      <div class="flex flex-col lg:flex-row lg:items-center lg:justify-between gap-4">
        <div>
          <h1 class="text-2xl lg:text-3xl font-bold text-gray-900">Content Management</h1>
          <p class="text-gray-600 mt-2">Manage website content and promotional materials</p>
        </div>
        <div class="flex items-center gap-3">
          <div class="w-12 h-12 bg-purple-100 rounded-lg flex items-center justify-center">
            <i class="fas fa-palette text-purple-600"></i>
          </div>
        </div>
      </div>
    </div>

    <!-- Flash Messages -->
    <% if (success && success.length) { %>
      <div class="mb-6 p-4 rounded-xl border border-green-200 bg-green-50 text-green-800">
        <% success.forEach(msg => { %>
          <div class="flex items-center gap-2">
            <i class="fas fa-check-circle"></i>
            <%= msg %>
          </div>
        <% }) %>
      </div>
    <% } %>
    <% if (error && error.length) { %>
      <div class="mb-6 p-4 rounded-xl border border-red-200 bg-red-50 text-red-800">
        <% error.forEach(msg => { %>
          <div class="flex items-center gap-2">
            <i class="fas fa-exclamation-circle"></i>
            <%= msg %>
          </div>
        <% }) %>
      </div>
    <% } %>

    <!-- Key Metrics -->
    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-6 mb-8">
      <div class="bg-white rounded-xl p-6 shadow-sm border hover:shadow-md transition-shadow">
        <div class="flex items-center justify-between">
          <div>
            <p class="text-sm font-medium text-gray-600 mb-1">Hero Banners</p>
            <h3 class="text-2xl font-bold text-gray-900"><%= counts?.heroContent || 0 %></h3>
            <p class="text-xs text-blue-600 mt-1">Total carousel items</p>
          </div>
          <div class="w-12 h-12 bg-blue-100 rounded-lg flex items-center justify-center">
            <i class="fas fa-images text-blue-600"></i>
          </div>
        </div>
      </div>

      <div class="bg-white rounded-xl p-6 shadow-sm border hover:shadow-md transition-shadow">
        <div class="flex items-center justify-between">
          <div>
            <p class="text-sm font-medium text-gray-600 mb-1">Published</p>
            <h3 class="text-2xl font-bold text-gray-900"><%= (heroCarousel || []).filter(item => item.status === 'active').length %></h3>
            <p class="text-xs text-green-600 mt-1">Live content</p>
          </div>
          <div class="w-12 h-12 bg-green-100 rounded-lg flex items-center justify-center">
            <i class="fas fa-check-circle text-green-600"></i>
          </div>
        </div>
      </div>

      <div class="bg-white rounded-xl p-6 shadow-sm border hover:shadow-md transition-shadow">
        <div class="flex items-center justify-between">
          <div>
            <p class="text-sm font-medium text-gray-600 mb-1">Company Info</p>
            <h3 class="text-2xl font-bold text-gray-900"><%= counts?.companyInfo || 0 %></h3>
            <p class="text-xs text-yellow-600 mt-1">Business details</p>
          </div>
          <div class="w-12 h-12 bg-yellow-100 rounded-lg flex items-center justify-center">
            <i class="fas fa-building text-yellow-600"></i>
          </div>
        </div>
      </div>

      <div class="bg-white rounded-xl p-6 shadow-sm border hover:shadow-md transition-shadow">
        <div class="flex items-center justify-between">
          <div>
            <p class="text-sm font-medium text-gray-600 mb-1">Ads Panels</p>
            <h3 class="text-2xl font-bold text-gray-900"><%= counts?.adsPanel || 0 %></h3>
            <p class="text-xs text-purple-600 mt-1">Advertisement panels</p>
          </div>
          <div class="w-12 h-12 bg-purple-100 rounded-lg flex items-center justify-center">
            <i class="fas fa-ad text-purple-600"></i>
          </div>
        </div>
      </div>
    </div>

    <!-- Content Management Center -->
    <div class="bg-white rounded-xl shadow-sm border">
      <div class="p-6">
        <h2 class="text-lg font-semibold text-gray-900 mb-6 flex items-center gap-3">
          <div class="w-8 h-8 bg-blue-100 rounded-lg flex items-center justify-center">
            <i class="fas fa-tachometer-alt text-blue-600 text-sm"></i>
          </div>
          Content Management Center
        </h2>
        
        <div class="grid grid-cols-1 md:grid-cols-2 xl:grid-cols-3 gap-6">
          <a href="/admin/v1/parameters/hero-carousel" class="group bg-blue-50 rounded-xl p-6 border border-blue-200 hover:shadow-md hover:bg-blue-100 transition-all">
            <div class="flex items-center gap-4 mb-4">
              <div class="p-3 bg-blue-500 rounded-lg text-white group-hover:bg-blue-600 transition-colors">
                <i class="fas fa-images text-lg"></i>
              </div>
              <div>
                <h3 class="text-lg font-bold text-gray-900">Hero Carousel</h3>
                <p class="text-sm text-blue-700">Homepage banners</p>
              </div>
            </div>
            <div class="flex items-center justify-between">
              <span class="text-sm font-medium text-blue-800">Manage Banners</span>
              <i class="fas fa-arrow-right text-blue-600 group-hover:translate-x-1 transition-transform"></i>
            </div>
          </a>

          <a href="/admin/v1/parameters/company-info" class="group bg-yellow-50 rounded-xl p-6 border border-yellow-200 hover:shadow-md hover:bg-yellow-100 transition-all">
            <div class="flex items-center gap-4 mb-4">
              <div class="p-3 bg-yellow-500 rounded-lg text-white group-hover:bg-yellow-600 transition-colors">
                <i class="fas fa-building text-lg"></i>
              </div>
              <div>
                <h3 class="text-lg font-bold text-gray-900">Company Info</h3>
                <p class="text-sm text-yellow-700">Business details</p>
              </div>
            </div>
            <div class="flex items-center justify-between">
              <span class="text-sm font-medium text-yellow-800">Manage Info</span>
              <i class="fas fa-arrow-right text-yellow-600 group-hover:translate-x-1 transition-transform"></i>
            </div>
          </a>

          <a href="/admin/v1/parameters/ads-panel" class="group bg-purple-50 rounded-xl p-6 border border-purple-200 hover:shadow-md hover:bg-purple-100 transition-all">
            <div class="flex items-center gap-4 mb-4">
              <div class="p-3 bg-purple-500 rounded-lg text-white group-hover:bg-purple-600 transition-colors">
                <i class="fas fa-ad text-lg"></i>
              </div>
              <div>
                <h3 class="text-lg font-bold text-gray-900">Ads Panels</h3>
                <p class="text-sm text-purple-700">Advertisement management</p>
              </div>
            </div>
            <div class="flex items-center justify-between">
              <span class="text-sm font-medium text-purple-800">Manage Ads</span>
              <i class="fas fa-arrow-right text-purple-600 group-hover:translate-x-1 transition-transform"></i>
            </div>
          </a>
        </div>
      </div>
    </div>

  </div>
</div>

<%- include('../partials/footer.ejs') %>