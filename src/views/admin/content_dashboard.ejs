<%- include('../partials/header.ejs', { title: 'Content Management' }) %>

<div class="min-h-screen bg-gradient-to-br from-slate-50 to-blue-50">
  <div class="max-w-7xl mx-auto px-6 py-8">
    
    <!-- Header -->
    <div class="mb-8">
      <div class="flex flex-col lg:flex-row lg:items-center lg:justify-between gap-4">
        <div>
          <h1 class="text-2xl lg:text-3xl font-bold text-gray-900">Content Management</h1>
          <p class="text-gray-600 mt-2">Manage website content and promotional materials</p>
        </div>
        <div class="flex items-center gap-3">
          <div class="w-12 h-12 bg-purple-100 rounded-lg flex items-center justify-center">
            <i class="fas fa-palette text-purple-600"></i>
          </div>
        </div>
      </div>
    </div>

    <!-- Flash Messages -->
    <% if (success && success.length) { %>
      <div class="mb-6 p-4 rounded-xl border border-green-200 bg-green-50 text-green-800">
        <% success.forEach(msg => { %>
          <div class="flex items-center gap-2">
            <i class="fas fa-check-circle"></i>
            <%= msg %>
          </div>
        <% }) %>
      </div>
    <% } %>
    <% if (error && error.length) { %>
      <div class="mb-6 p-4 rounded-xl border border-red-200 bg-red-50 text-red-800">
        <% error.forEach(msg => { %>
          <div class="flex items-center gap-2">
            <i class="fas fa-exclamation-circle"></i>
            <%= msg %>
          </div>
        <% }) %>
      </div>
    <% } %>

    <!-- Key Metrics -->
    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-5 gap-6 mb-8">
      <div class="bg-white rounded-2xl p-6 shadow-sm border border-gray-200 hover:shadow-xl hover:-translate-y-1 transition-all duration-300 relative overflow-hidden">
        <div class="absolute top-0 right-0 w-20 h-20 bg-gradient-to-br from-blue-500/10 to-blue-600/10 rounded-full -mr-10 -mt-10"></div>
        <div class="relative">
          <div class="flex items-center gap-3 mb-4">
            <div class="w-12 h-12 bg-gradient-to-br from-blue-500 to-blue-600 rounded-xl flex items-center justify-center shadow-lg">
              <i class="fas fa-images text-white text-lg"></i>
            </div>
            <div>
              <p class="text-sm font-semibold text-gray-600 uppercase tracking-wide">Hero Banners</p>
              <h3 class="text-2xl font-bold text-gray-900"><%= counts?.heroContent || 0 %></h3>
            </div>
          </div>
          <div class="flex items-center gap-2 bg-blue-50 px-3 py-2 rounded-lg">
            <i class="fas fa-carousel text-blue-600 text-sm"></i>
            <p class="text-sm font-medium text-blue-700">Carousel items</p>
          </div>
        </div>
      </div>

      <div class="bg-white rounded-2xl p-6 shadow-sm border border-gray-200 hover:shadow-xl hover:-translate-y-1 transition-all duration-300 relative overflow-hidden">
        <div class="absolute top-0 right-0 w-20 h-20 bg-gradient-to-br from-green-500/10 to-green-600/10 rounded-full -mr-10 -mt-10"></div>
        <div class="relative">
          <div class="flex items-center gap-3 mb-4">
            <div class="w-12 h-12 bg-gradient-to-br from-green-500 to-green-600 rounded-xl flex items-center justify-center shadow-lg">
              <i class="fas fa-image text-white text-lg"></i>
            </div>
            <div>
              <p class="text-sm font-semibold text-gray-600 uppercase tracking-wide">Posters</p>
              <h3 class="text-2xl font-bold text-gray-900"><%= counts?.parameterPoster || 0 %></h3>
            </div>
          </div>
          <div class="flex items-center gap-2 bg-green-50 px-3 py-2 rounded-lg">
            <i class="fas fa-folder-open text-green-600 text-sm"></i>
            <p class="text-sm font-medium text-green-700">Category/Brand</p>
          </div>
        </div>
      </div>

      <div class="bg-white rounded-2xl p-6 shadow-sm border border-gray-200 hover:shadow-xl hover:-translate-y-1 transition-all duration-300 relative overflow-hidden">
        <div class="absolute top-0 right-0 w-20 h-20 bg-gradient-to-br from-yellow-500/10 to-yellow-600/10 rounded-full -mr-10 -mt-10"></div>
        <div class="relative">
          <div class="flex items-center gap-3 mb-4">
            <div class="w-12 h-12 bg-gradient-to-br from-yellow-500 to-yellow-600 rounded-xl flex items-center justify-center shadow-lg">
              <i class="fas fa-building text-white text-lg"></i>
            </div>
            <div>
              <p class="text-sm font-semibold text-gray-600 uppercase tracking-wide">Company Info</p>
              <h3 class="text-2xl font-bold text-gray-900"><%= counts?.companyInfo || 0 %></h3>
            </div>
          </div>
          <div class="flex items-center gap-2 bg-yellow-50 px-3 py-2 rounded-lg">
            <i class="fas fa-info-circle text-yellow-600 text-sm"></i>
            <p class="text-sm font-medium text-yellow-700">Business details</p>
          </div>
        </div>
      </div>

      <div class="bg-white rounded-2xl p-6 shadow-sm border border-gray-200 hover:shadow-xl hover:-translate-y-1 transition-all duration-300 relative overflow-hidden">
        <div class="absolute top-0 right-0 w-20 h-20 bg-gradient-to-br from-indigo-500/10 to-indigo-600/10 rounded-full -mr-10 -mt-10"></div>
        <div class="relative">
          <div class="flex items-center gap-3 mb-4">
            <div class="w-12 h-12 bg-gradient-to-br from-indigo-500 to-indigo-600 rounded-xl flex items-center justify-center shadow-lg">
              <i class="fas fa-tags text-white text-lg"></i>
            </div>
            <div>
              <p class="text-sm font-semibold text-gray-600 uppercase tracking-wide">Brand Carousel</p>
              <h3 class="text-2xl font-bold text-gray-900"><%= counts?.brandCarousel || 0 %></h3>
            </div>
          </div>
          <div class="flex items-center gap-2 bg-indigo-50 px-3 py-2 rounded-lg">
            <i class="fas fa-star text-indigo-600 text-sm"></i>
            <p class="text-sm font-medium text-indigo-700">Featured brands</p>
          </div>
        </div>
      </div>

      <div class="bg-white rounded-2xl p-6 shadow-sm border border-gray-200 hover:shadow-xl hover:-translate-y-1 transition-all duration-300 relative overflow-hidden">
        <div class="absolute top-0 right-0 w-20 h-20 bg-gradient-to-br from-purple-500/10 to-purple-600/10 rounded-full -mr-10 -mt-10"></div>
        <div class="relative">
          <div class="flex items-center gap-3 mb-4">
            <div class="w-12 h-12 bg-gradient-to-br from-purple-500 to-purple-600 rounded-xl flex items-center justify-center shadow-lg">
              <i class="fas fa-ad text-white text-lg"></i>
            </div>
            <div>
              <p class="text-sm font-semibold text-gray-600 uppercase tracking-wide">Ads Panels</p>
              <h3 class="text-2xl font-bold text-gray-900"><%= counts?.adsPanel || 0 %></h3>
            </div>
          </div>
          <div class="flex items-center gap-2 bg-purple-50 px-3 py-2 rounded-lg">
            <i class="fas fa-bullhorn text-purple-600 text-sm"></i>
            <p class="text-sm font-medium text-purple-700">Advertisement panels</p>
          </div>
        </div>
      </div>
    </div>

    <!-- Content Management Center -->
    <div class="bg-white rounded-xl shadow-sm border">
      <div class="p-6">
        <h2 class="text-lg font-semibold text-gray-900 mb-6 flex items-center gap-3">
          <div class="w-8 h-8 bg-blue-100 rounded-lg flex items-center justify-center">
            <i class="fas fa-tachometer-alt text-blue-600 text-sm"></i>
          </div>
          Content Management Center
        </h2>
        
        <div class="grid grid-cols-1 md:grid-cols-2 xl:grid-cols-5 gap-6">
          <a href="/admin/v1/parameters/hero-carousel" class="group bg-blue-50 rounded-xl p-6 border border-blue-200 hover:shadow-md hover:bg-blue-100 transition-all">
            <div class="flex items-center gap-4 mb-4">
              <div class="p-3 bg-blue-500 rounded-lg text-white group-hover:bg-blue-600 transition-colors">
                <i class="fas fa-images text-lg"></i>
              </div>
              <div>
                <h3 class="text-lg font-bold text-gray-900">Hero Carousel</h3>
                <p class="text-sm text-blue-700">Homepage banners</p>
              </div>
            </div>
            <div class="flex items-center justify-between">
              <span class="text-sm font-medium text-blue-800">Manage Banners</span>
              <i class="fas fa-arrow-right text-blue-600 group-hover:translate-x-1 transition-transform"></i>
            </div>
          </a>

          <a href="/admin/v1/content/parameter-posters" class="group bg-green-50 rounded-xl p-6 border border-green-200 hover:shadow-md hover:bg-green-100 transition-all">
            <div class="flex items-center gap-4 mb-4">
              <div class="p-3 bg-green-500 rounded-lg text-white group-hover:bg-green-600 transition-colors">
                <i class="fas fa-image text-lg"></i>
              </div>
              <div>
                <h3 class="text-lg font-bold text-gray-900">Parameter Posters</h3>
                <p class="text-sm text-green-700">Category/Brand images</p>
              </div>
            </div>
            <div class="flex items-center justify-between">
              <span class="text-sm font-medium text-green-800">Manage Posters</span>
              <i class="fas fa-arrow-right text-green-600 group-hover:translate-x-1 transition-transform"></i>
            </div>
          </a>

          <a href="/admin/v1/parameters/company-info" class="group bg-yellow-50 rounded-xl p-6 border border-yellow-200 hover:shadow-md hover:bg-yellow-100 transition-all">
            <div class="flex items-center gap-4 mb-4">
              <div class="p-3 bg-yellow-500 rounded-lg text-white group-hover:bg-yellow-600 transition-colors">
                <i class="fas fa-building text-lg"></i>
              </div>
              <div>
                <h3 class="text-lg font-bold text-gray-900">Company Info</h3>
                <p class="text-sm text-yellow-700">Business details</p>
              </div>
            </div>
            <div class="flex items-center justify-between">
              <span class="text-sm font-medium text-yellow-800">Manage Info</span>
              <i class="fas fa-arrow-right text-yellow-600 group-hover:translate-x-1 transition-transform"></i>
            </div>
          </a>

          <a href="/admin/v1/content/brand-carousel" class="group bg-indigo-50 rounded-xl p-6 border border-indigo-200 hover:shadow-md hover:bg-indigo-100 transition-all">
            <div class="flex items-center gap-4 mb-4">
              <div class="p-3 bg-indigo-500 rounded-lg text-white group-hover:bg-indigo-600 transition-colors">
                <i class="fas fa-tags text-lg"></i>
              </div>
              <div>
                <h3 class="text-lg font-bold text-gray-900">Brand Carousel</h3>
                <p class="text-sm text-indigo-700">Featured brands</p>
              </div>
            </div>
            <div class="flex items-center justify-between">
              <span class="text-sm font-medium text-indigo-800">Manage Brands</span>
              <i class="fas fa-arrow-right text-indigo-600 group-hover:translate-x-1 transition-transform"></i>
            </div>
          </a>

          <a href="/admin/v1/parameters/ads-panel" class="group bg-purple-50 rounded-xl p-6 border border-purple-200 hover:shadow-md hover:bg-purple-100 transition-all">
            <div class="flex items-center gap-4 mb-4">
              <div class="p-3 bg-purple-500 rounded-lg text-white group-hover:bg-purple-600 transition-colors">
                <i class="fas fa-ad text-lg"></i>
              </div>
              <div>
                <h3 class="text-lg font-bold text-gray-900">Ads Panels</h3>
                <p class="text-sm text-purple-700">Advertisement management</p>
              </div>
            </div>
            <div class="flex items-center justify-between">
              <span class="text-sm font-medium text-purple-800">Manage Ads</span>
              <i class="fas fa-arrow-right text-purple-600 group-hover:translate-x-1 transition-transform"></i>
            </div>
          </a>
        </div>
      </div>
    </div>

  </div>
</div>

<%- include('../partials/footer.ejs') %>

