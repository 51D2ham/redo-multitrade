<%- include('../partials/header.ejs', { title: 'Parameter Dashboard' }) %>

<!-- Header Section -->
<div class="mb-8">
  <div class="flex items-center gap-4 mb-4">
    <div class="w-12 h-12 bg-gradient-to-r from-blue-500 to-purple-600 rounded-xl flex items-center justify-center">
      <i class="fas fa-cog text-white text-xl"></i>
    </div>
    <div>
      <h1 class="text-3xl font-bold text-gray-800">System Parameters</h1>
      <p class="text-gray-600">Manage your e-commerce catalog structure</p>
    </div>
  </div>
</div>

<!-- Top Management Sections -->
<div class="grid grid-cols-1 lg:grid-cols-2 gap-8 mb-8">
  <!-- Products Management -->
  <div class="bg-white rounded-xl shadow-md border border-gray-100 p-6">
    <div class="flex items-center gap-3 mb-6">
      <div class="w-10 h-10 bg-gradient-to-br from-blue-500 to-purple-600 rounded-xl flex items-center justify-center">
        <i class="fas fa-box text-white text-lg"></i>
      </div>
      <div>
        <h3 class="text-xl font-semibold text-gray-800">Products Management</h3>
        <p class="text-gray-600 text-sm">Manage your product catalog</p>
      </div>
    </div>
    
    <div class="grid grid-cols-3 gap-4">
      <a href="/admin/v1/products" class="block bg-gradient-to-br from-blue-50 to-blue-100 rounded-lg p-4 border border-blue-200 hover:shadow-lg hover:scale-105 transition-all duration-200 cursor-pointer">
        <div class="flex items-center justify-between mb-3">
          <div class="bg-blue-500 rounded-full p-2">
            <i class="fas fa-boxes text-white text-sm"></i>
          </div>
          <span class="bg-blue-200 text-blue-800 px-2 py-1 rounded-full text-xs font-medium">
            <%= counts.products || 0 %>
          </span>
        </div>
        <h4 class="font-semibold text-gray-800 mb-2">View All</h4>
        <div class="inline-flex items-center gap-2 text-blue-700 font-medium text-sm">
          <i class="fas fa-arrow-right"></i> Manage
        </div>
      </a>
      
      <a href="/admin/v1/products/new" class="block bg-gradient-to-br from-green-50 to-green-100 rounded-lg p-4 border border-green-200 hover:shadow-lg hover:scale-105 transition-all duration-200 cursor-pointer">
        <div class="flex items-center justify-between mb-3">
          <div class="bg-green-500 rounded-full p-2">
            <i class="fas fa-plus text-white text-sm"></i>
          </div>
          <span class="bg-green-200 text-green-800 px-2 py-1 rounded-full text-xs font-medium">
            New
          </span>
        </div>
        <h4 class="font-semibold text-gray-800 mb-2">Add New</h4>
        <div class="inline-flex items-center gap-2 text-green-700 font-medium text-sm">
          <i class="fas fa-arrow-right"></i> Create
        </div>
      </a>
      
      <a href="/admin/v1/products/bulk-upload" class="block bg-gradient-to-br from-purple-50 to-purple-100 rounded-lg p-4 border border-purple-200 hover:shadow-lg hover:scale-105 transition-all duration-200 cursor-pointer">
        <div class="flex items-center justify-between mb-3">
          <div class="bg-purple-500 rounded-full p-2">
            <i class="fas fa-upload text-white text-sm"></i>
          </div>
          <span class="bg-purple-200 text-purple-800 px-2 py-1 rounded-full text-xs font-medium">
            CSV
          </span>
        </div>
        <h4 class="font-semibold text-gray-800 mb-2">Bulk Upload</h4>
        <div class="inline-flex items-center gap-2 text-purple-700 font-medium text-sm">
