  </div>

  <!-- Spec Lists Management -->
  <div class="bg-white rounded-xl shadow-md border border-gray-100 p-6">
    <div class="flex items-center gap-3 mb-6">
      <div class="w-10 h-10 bg-gradient-to-br from-indigo-500 to-indigo-600 rounded-xl flex items-center justify-center">
        <i class="fas fa-list-alt text-white text-lg"></i>
      </div>
      <div>
        <h3 class="text-xl font-semibold text-gray-800">Spec Lists</h3>
        <p class="text-gray-600 text-sm">Product specifications</p>
