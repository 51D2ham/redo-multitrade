<%- include('../partials/header.ejs', { title: 'System Parameters' }) %>

<div class="min-h-screen bg-gradient-to-br from-slate-50 to-blue-50">
  <div class="max-w-7xl mx-auto px-6 py-8">
    
    <!-- Header -->
    <div class="mb-8">
      <div class="flex flex-col lg:flex-row lg:items-center lg:justify-between gap-4">
        <div>
          <h1 class="text-2xl lg:text-3xl font-bold text-gray-900">System Parameters</h1>
          <p class="text-gray-600 mt-2">Configure your e-commerce catalog structure and settings</p>
        </div>
        <div class="flex items-center gap-3">
          <div class="w-12 h-12 bg-blue-100 rounded-lg flex items-center justify-center">
            <i class="fas fa-cog text-blue-600"></i>
          </div>
        </div>
      </div>
    </div>

    <!-- Quick Access Section -->
    <div class="grid grid-cols-1 lg:grid-cols-2 gap-6 mb-8">
      <!-- Products Management -->
      <div class="bg-white rounded-xl p-6 shadow-sm border hover:shadow-md transition-shadow">
        <div class="flex items-center gap-4 mb-6">
          <div class="w-12 h-12 bg-blue-100 rounded-lg flex items-center justify-center">
            <i class="fas fa-box text-blue-600 text-xl"></i>
          </div>
          <div>
            <h3 class="text-xl font-bold text-gray-900">Products</h3>
            <p class="text-gray-600">Manage your product catalog</p>
          </div>
        </div>
        
        <div class="grid grid-cols-3 gap-4">
          <a href="/admin/v1/products" class="group bg-blue-50 rounded-lg p-4 border border-blue-200 hover:shadow-md hover:bg-blue-100 transition-all">
            <div class="text-center">
              <div class="w-10 h-10 bg-blue-500 rounded-lg mx-auto mb-3 flex items-center justify-center group-hover:bg-blue-600 transition-colors">
                <i class="fas fa-boxes text-white text-sm"></i>
              </div>
              <span class="block text-xl font-bold text-blue-700 mb-1"><%= counts.products || 0 %></span>
              <p class="text-sm font-medium text-blue-800">View All</p>
            </div>
          </a>
          
          <a href="/admin/v1/products/new" class="group bg-green-50 rounded-lg p-4 border border-green-200 hover:shadow-md hover:bg-green-100 transition-all">
            <div class="text-center">
              <div class="w-10 h-10 bg-green-500 rounded-lg mx-auto mb-3 flex items-center justify-center group-hover:bg-green-600 transition-colors">
                <i class="fas fa-plus text-white text-sm"></i>
              </div>
              <span class="block text-lg font-bold text-green-700 mb-1">New</span>
              <p class="text-sm font-medium text-green-800">Add Product</p>
            </div>
          </a>
          
          <a href="/admin/v1/products/bulk-upload" class="group bg-purple-50 rounded-lg p-4 border border-purple-200 hover:shadow-md hover:bg-purple-100 transition-all">
            <div class="text-center">
              <div class="w-10 h-10 bg-purple-500 rounded-lg mx-auto mb-3 flex items-center justify-center group-hover:bg-purple-600 transition-colors">
                <i class="fas fa-upload text-white text-sm"></i>
              </div>
              <span class="block text-lg font-bold text-purple-700 mb-1">CSV</span>
              <p class="text-sm font-medium text-purple-800">Bulk Upload</p>
            </div>
          </a>
        </div>
      </div>

      <!-- Specifications Management -->
      <div class="bg-white rounded-xl p-6 shadow-sm border hover:shadow-md transition-shadow">
        <div class="flex items-center gap-4 mb-6">
          <div class="w-12 h-12 bg-indigo-100 rounded-lg flex items-center justify-center">
            <i class="fas fa-list-alt text-indigo-600 text-xl"></i>
          </div>
          <div>
            <h3 class="text-xl font-bold text-gray-900">Specifications</h3>
            <p class="text-gray-600">Product specification lists</p>
          </div>
        </div>
        
        <div class="grid grid-cols-2 gap-4">
          <a href="/admin/v1/parameters/spec-lists" class="group bg-indigo-50 rounded-lg p-6 border border-indigo-200 hover:shadow-md hover:bg-indigo-100 transition-all">
            <div class="text-center">
              <div class="w-10 h-10 bg-indigo-500 rounded-lg mx-auto mb-3 flex items-center justify-center group-hover:bg-indigo-600 transition-colors">
                <i class="fas fa-list text-white text-sm"></i>
              </div>
              <span class="block text-xl font-bold text-indigo-700 mb-1"><%= counts.specLists || 0 %></span>
              <p class="text-sm font-medium text-indigo-800">View All</p>
            </div>
          </a>
          
          <a href="/admin/v1/parameters/spec-lists/new" class="group bg-green-50 rounded-lg p-6 border border-green-200 hover:shadow-md hover:bg-green-100 transition-all">
            <div class="text-center">
              <div class="w-10 h-10 bg-green-500 rounded-lg mx-auto mb-3 flex items-center justify-center group-hover:bg-green-600 transition-colors">
                <i class="fas fa-plus text-white text-sm"></i>
              </div>
              <span class="block text-lg font-bold text-green-700 mb-1">New</span>
              <p class="text-sm font-medium text-green-800">Add Spec</p>
            </div>
          </a>
        </div>
      </div>
    </div>

    <!-- Catalog Parameters -->
    <div class="bg-white rounded-xl p-6 shadow-sm border">
      <h2 class="text-lg font-semibold text-gray-900 mb-6 flex items-center gap-3">
        <div class="w-8 h-8 bg-slate-100 rounded-lg flex items-center justify-center">
          <i class="fas fa-layer-group text-slate-600 text-sm"></i>
        </div>
        Catalog Parameters
      </h2>
      
      <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-6">
        <!-- Categories -->
        <div class="group">
          <div class="bg-blue-50 rounded-xl p-6 border border-blue-200 hover:shadow-md transition-all">
            <div class="text-center mb-4">
              <div class="w-12 h-12 bg-blue-500 rounded-lg mx-auto mb-4 flex items-center justify-center group-hover:bg-blue-600 transition-colors">
                <i class="fas fa-folder text-white text-xl"></i>
              </div>
              <h3 class="text-lg font-bold text-gray-900 mb-2">Categories</h3>
              <span class="text-2xl font-bold text-blue-700"><%= counts.categories || 0 %></span>
              <p class="text-sm text-blue-600 mt-1">Main classifications</p>
            </div>
            <div class="grid grid-cols-2 gap-2">
              <a href="/admin/v1/parameters/categories" class="bg-blue-500 text-white text-center py-2 rounded-lg hover:bg-blue-600 transition-colors text-sm font-medium">
                View All
              </a>
              <a href="/admin/v1/parameters/categories/new" class="bg-green-500 text-white text-center py-2 rounded-lg hover:bg-green-600 transition-colors text-sm font-medium">
                Add New
              </a>
            </div>
          </div>
        </div>

        <!-- Subcategories -->
        <div class="group">
          <div class="bg-green-50 rounded-xl p-6 border border-green-200 hover:shadow-md transition-all">
            <div class="text-center mb-4">
              <div class="w-12 h-12 bg-green-500 rounded-lg mx-auto mb-4 flex items-center justify-center group-hover:bg-green-600 transition-colors">
                <i class="fas fa-sitemap text-white text-xl"></i>
              </div>
              <h3 class="text-lg font-bold text-gray-900 mb-2">Subcategories</h3>
              <span class="text-2xl font-bold text-green-700"><%= counts.subcategories || 0 %></span>
              <p class="text-sm text-green-600 mt-1">Sub classifications</p>
            </div>
            <div class="grid grid-cols-2 gap-2">
              <a href="/admin/v1/parameters/subcategories" class="bg-green-500 text-white text-center py-2 rounded-lg hover:bg-green-600 transition-colors text-sm font-medium">
                View All
              </a>
              <a href="/admin/v1/parameters/subcategories/new" class="bg-blue-500 text-white text-center py-2 rounded-lg hover:bg-blue-600 transition-colors text-sm font-medium">
                Add New
              </a>
            </div>
          </div>
        </div>

        <!-- Types -->
        <div class="group">
          <div class="bg-purple-50 rounded-xl p-6 border border-purple-200 hover:shadow-md transition-all">
            <div class="text-center mb-4">
              <div class="w-12 h-12 bg-purple-500 rounded-lg mx-auto mb-4 flex items-center justify-center group-hover:bg-purple-600 transition-colors">
                <i class="fas fa-tags text-white text-xl"></i>
              </div>
              <h3 class="text-lg font-bold text-gray-900 mb-2">Types</h3>
              <span class="text-2xl font-bold text-purple-700"><%= counts.types || 0 %></span>
              <p class="text-sm text-purple-600 mt-1">Product types</p>
            </div>
            <div class="grid grid-cols-2 gap-2">
              <a href="/admin/v1/parameters/types" class="bg-purple-500 text-white text-center py-2 rounded-lg hover:bg-purple-600 transition-colors text-sm font-medium">
                View All
              </a>
              <a href="/admin/v1/parameters/types/new" class="bg-green-500 text-white text-center py-2 rounded-lg hover:bg-green-600 transition-colors text-sm font-medium">
                Add New
              </a>
            </div>
          </div>
        </div>

        <!-- Brands -->
        <div class="group">
          <div class="bg-orange-50 rounded-xl p-6 border border-orange-200 hover:shadow-md transition-all">
            <div class="text-center mb-4">
              <div class="w-12 h-12 bg-orange-500 rounded-lg mx-auto mb-4 flex items-center justify-center group-hover:bg-orange-600 transition-colors">
                <i class="fas fa-star text-white text-xl"></i>
              </div>
              <h3 class="text-lg font-bold text-gray-900 mb-2">Brands</h3>
              <span class="text-2xl font-bold text-orange-700"><%= counts.brands || 0 %></span>
              <p class="text-sm text-orange-600 mt-1">Brand names</p>
            </div>
            <div class="grid grid-cols-2 gap-2">
              <a href="/admin/v1/parameters/brands" class="bg-orange-500 text-white text-center py-2 rounded-lg hover:bg-orange-600 transition-colors text-sm font-medium">
                View All
              </a>
              <a href="/admin/v1/parameters/brands/new" class="bg-green-500 text-white text-center py-2 rounded-lg hover:bg-green-600 transition-colors text-sm font-medium">
                Add New
              </a>
            </div>
          </div>
        </div>
      </div>
    </div>

  </div>
</div>

<%- include('../partials/footer.ejs') %>