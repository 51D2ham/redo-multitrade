        <div class="flex items-center justify-between mb-3">
          <div class="bg-indigo-500 rounded-full p-2">
            <i class="fas fa-list text-white text-sm"></i>
          </div>
          <span class="bg-indigo-200 text-indigo-800 px-2 py-1 rounded-full text-xs font-medium">
            <%= counts.specLists || 0 %>
          </span>
        </div>
        <h4 class="font-semibold text-gray-800 mb-2">View All</h4>
        <div class="inline-flex items-center gap-2 text-indigo-700 font-medium text-sm">
