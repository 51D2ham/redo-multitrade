<%- include('../partials/header.ejs', { title: 'New Category' }) %>

<!-- Modern Navigation Bar -->
<nav class="flex flex-wrap gap-3 mb-8 p-4 bg-white rounded-xl shadow-sm border border-gray-100 items-center">
  <a href="/admin/v1/staff/dashboard" class="flex items-center gap-2 px-4 py-2 rounded-lg bg-blue-50 text-blue-700 hover:bg-blue-100 transition">
    <i class="fa fa-home"></i> Dashboard
  </a>
  <a href="/admin/v1/parameters" class="flex items-center gap-2 px-4 py-2 rounded-lg bg-gray-50 text-gray-700 hover:bg-gray-100 transition">
    <i class="fa fa-cog"></i> System Parameters
  </a>
  <a href="/admin/v1/parameters/categories" class="flex items-center gap-2 px-4 py-2 rounded-lg bg-gray-50 text-gray-700 hover:bg-gray-100 transition">
    <i class="fa fa-list"></i> Category List
  </a>
</nav>

<main class="container mx-auto max-w-2xl px-4 mt-8">
  <div class="flex flex-col md:flex-row md:justify-between md:items-center mb-8 gap-4">
    <h1 class="text-3xl font-bold text-gray-800">Create New Category</h1>
  </div>
  
  <!-- Flash Messages -->
  <% if (success && success.length) { %>
    <div class="mb-6 p-4 rounded-lg border-l-4 border-green-400 bg-green-50 text-green-800 shadow-sm">
      <% success.forEach(msg => { %>
        <div class="flex items-center gap-2">
          <i class="fa fa-check-circle"></i>
          <%= msg %>
        </div>
      <% }) %>
    </div>
  <% } %>
  <% if (error && error.length) { %>
    <div class="mb-6 p-4 rounded-lg border-l-4 border-red-400 bg-red-50 text-red-800 shadow-sm">
      <% error.forEach(msg => { %>
        <div class="flex items-center gap-2">
          <i class="fa fa-exclamation-circle"></i>
          <%= msg %>
        </div>
      <% }) %>
    </div>
  <% } %>

  <div class="bg-white rounded-xl shadow-md p-8 mb-10 border border-gray-100">
    <form action="/admin/v1/parameters/categories" method="POST" enctype="multipart/form-data" class="space-y-6">

      <input type="hidden" name="_csrf" value="<%= csrfToken %>">
      <div>
        <label for="name" class="block font-semibold mb-1 text-gray-700">Category Name *</label>
        <input
          id="name"
          name="name"
          type="text"
          class="w-full p-3 rounded-lg border border-gray-200 focus:border-blue-500 focus:ring-2 focus:ring-blue-100 transition"
          required
          placeholder="Enter category name"
        >
        <p class="text-sm text-gray-500 mt-1">Enter the category name (e.g., Electronics, Clothing)</p>
      </div>

      <div>
        <label for="icon" class="block font-semibold mb-1 text-gray-700">Category Icon</label>
        <input
          id="icon"
          name="icon"
          type="file"
          accept="image/*"
          class="w-full p-3 rounded-lg border border-gray-200 focus:border-blue-500 focus:ring-2 focus:ring-blue-100 transition"
        >
        <p class="text-sm text-gray-500 mt-1">Upload category icon (JPG, PNG, WEBP)</p>
      </div>

      <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
        <div class="flex items-center gap-3">
          <input
            id="isActive"
            name="isActive"
            type="checkbox"
            checked
            class="w-4 h-4 text-blue-600 bg-gray-100 border-gray-300 rounded focus:ring-blue-500"
          >
          <label for="isActive" class="font-semibold text-gray-700">Active</label>
          <p class="text-sm text-gray-500">Category is visible to customers</p>
        </div>

        <div class="flex items-center gap-3">
          <input
            id="isFeatured"
            name="isFeatured"
            type="checkbox"
            class="w-4 h-4 text-blue-600 bg-gray-100 border-gray-300 rounded focus:ring-blue-500"
          >
          <label for="isFeatured" class="font-semibold text-gray-700">Featured</label>
          <p class="text-sm text-gray-500">Show in featured categories</p>
        </div>
      </div>
      
      <div class="flex justify-end gap-3">
        <a href="/admin/v1/parameters/categories" class="px-4 py-2 rounded-lg bg-gray-100 text-gray-700 hover:bg-gray-200 transition">Cancel</a>
        <button type="submit" class="px-4 py-2 rounded-lg bg-blue-600 text-white font-semibold hover:bg-blue-700 transition flex items-center gap-2">
          <i class="fa fa-save"></i> Create Category
        </button>
      </div>
    </form>
  </div>
</main>

<%- include('../partials/footer.ejs') %>

