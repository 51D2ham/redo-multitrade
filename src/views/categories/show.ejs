<%- include('../partials/header.ejs', { title: 'Category Details' }) %>

<!-- Modern Navigation Bar -->
<nav class="flex flex-wrap gap-3 mb-8 p-4 bg-white rounded-xl shadow-sm border border-gray-100 items-center">
  <a href="/admin/v1/staff/dashboard" class="flex items-center gap-2 px-4 py-2 rounded-lg bg-blue-50 text-blue-700 hover:bg-blue-100 transition">
    <i class="fa fa-home"></i> Dashboard
  </a>
  <a href="/admin/v1/parameters" class="flex items-center gap-2 px-4 py-2 rounded-lg bg-gray-50 text-gray-700 hover:bg-gray-100 transition">
    <i class="fa fa-cog"></i> System Parameters
  </a>
  <a href="/admin/v1/parameters/categories" class="flex items-center gap-2 px-4 py-2 rounded-lg bg-gray-50 text-gray-700 hover:bg-gray-100 transition">
    <i class="fa fa-list"></i> Category List
  </a>
</nav>

<main class="container mx-auto max-w-3xl px-4 mt-8">
  <!-- Flash Messages -->
  <% if (success && success.length) { %>
    <div class="mb-6 p-4 rounded-lg border-l-4 border-green-400 bg-green-50 text-green-800 shadow-sm">
      <% success.forEach(msg => { %>
        <div class="flex items-center gap-2">
          <i class="fa fa-check-circle"></i>
          <%= msg %>
        </div>
      <% }) %>
    </div>
  <% } %>
  <% if (error && error.length) { %>
    <div class="mb-6 p-4 rounded-lg border-l-4 border-red-400 bg-red-50 text-red-800 shadow-sm">
      <% error.forEach(msg => { %>
        <div class="flex items-center gap-2">
          <i class="fa fa-exclamation-circle"></i>
          <%= msg %>
        </div>
      <% }) %>
    </div>
  <% } %>

  <div class="bg-white rounded-xl shadow-md p-8 mb-10 border border-gray-100">
    <div class="flex flex-col md:flex-row md:justify-between md:items-start mb-8 gap-4">
      <div>
        <h1 class="text-3xl font-bold text-gray-800"><%= category.name %></h1>
        <p class="text-gray-500 mt-1">Category Details</p>
      </div>
      <div class="flex flex-col sm:flex-row gap-2 mt-4 md:mt-0">
        <a href="/admin/v1/parameters/categories/<%= category._id %>/edit" class="px-4 py-2.5 rounded-lg bg-yellow-100 text-yellow-700 hover:bg-yellow-200 transition flex items-center gap-2">
          <i class="fa fa-edit"></i> Edit Category
        </a>
        <form action="/admin/v1/parameters/categories/<%= category._id %>" method="POST" class="inline">
          <input type="hidden" name="_method" value="DELETE">
          <button 
            type="submit" 
            class="px-4 py-2.5 rounded-lg bg-red-100 text-red-600 hover:bg-red-200 transition flex items-center gap-2"
            onclick="return confirm('Are you sure you want to delete this category? This cannot be undone.')"
          >
            <i class="fa fa-trash"></i> Delete Category
          </button>
        </form>
      </div>
    </div>

    <div class="space-y-8">
      <div class="bg-gray-50 rounded-xl p-6 border border-gray-100">
        <h2 class="font-semibold text-lg text-gray-800 mb-5 flex items-center gap-2">
          <i class="fa fa-info-circle text-blue-600"></i> Category Information
        </h2>
        <div class="space-y-6">
          <div>
            <p class="font-medium text-gray-500 mb-2 flex items-center gap-1.5">
              <i class="fa fa-user"></i> Created By
            </p>
            <% if (category.admin) { %>
              <div class="pl-6 border-l-2 border-blue-100">
                <p class="font-medium text-gray-800"><%= category.admin.username %></p>
                <p class="text-sm text-gray-500"><%= category.admin.email %></p>
              </div>
            <% } else { %>
              <p class="pl-6 text-gray-400">Admin information not available</p>
            <% } %>
          </div>
          
          <div>
            <p class="font-medium text-gray-500 mb-2 flex items-center gap-1.5">
              <i class="fa fa-calendar"></i> Created At
            </p>
            <p class="pl-6">
              <%= new Date(category.createdAt).toLocaleDateString('en-US', { 
                year: 'numeric', 
                month: 'long', 
                day: 'numeric',
                hour: '2-digit',
                minute: '2-digit'
              }) %>
            </p>
          </div>
          
          <div>
            <p class="font-medium text-gray-500 mb-2 flex items-center gap-1.5">
              <i class="fa fa-sync"></i> Last Updated
            </p>
            <p class="pl-6">
              <%= new Date(category.updatedAt).toLocaleDateString('en-US', { 
                year: 'numeric', 
                month: 'long', 
                day: 'numeric',
                hour: '2-digit',
                minute: '2-digit'
              }) %>
            </p>
          </div>
        </div>
      </div>

      <!-- Subcategories Section -->
      <% if (subcategories && subcategories.length > 0) { %>
        <div class="bg-gray-50 rounded-xl p-6 border border-gray-100">
          <h2 class="font-semibold text-lg text-gray-800 mb-5 flex items-center gap-2">
            <i class="fa fa-sitemap text-blue-600"></i> Subcategories (<%= subcategories.length %>)
          </h2>
          
          <div class="space-y-3">
            <% subcategories.forEach(sub => { %>
              <div class="flex items-center justify-between p-3 bg-white rounded-lg border border-gray-100 hover:shadow-sm transition">
                <div>
                  <h3 class="font-medium text-gray-800"><%= sub.name %></h3>
                  <% if (sub.admin) { %>
                    <p class="text-xs text-gray-500">Created by: <%= sub.admin.username %></p>
                  <% } %>
                </div>
                <div class="flex items-center gap-2">
                  <a href="/admin/v1/parameters/subcategories/<%= sub._id %>" class="text-blue-600 hover:text-blue-800">
                    <i class="fa fa-eye"></i>
                  </a>
                  <a href="/admin/v1/parameters/subcategories/<%= sub._id %>/edit" class="text-yellow-600 hover:text-yellow-800">
                    <i class="fa fa-edit"></i>
                  </a>
                </div>
              </div>
            <% }) %>
          </div>
        </div>
      <% } else { %>
        <div class="bg-gray-50 rounded-xl p-6 border border-gray-100 text-center">
          <i class="fa fa-sitemap text-3xl text-gray-300 mb-3"></i>
          <p class="text-gray-500">No subcategories found</p>
          <p class="mt-2 text-sm text-gray-400">Create subcategories to organize your products</p>
          <a href="/admin/v1/parameters/subcategories/new" class="mt-3 inline-flex items-center px-3 py-1.5 rounded-lg bg-blue-100 text-blue-700 hover:bg-blue-200 transition">
            <i class="fa fa-plus"></i> Add Subcategory
          </a>
        </div>
      <% } %>
    </div>
  </div>
</main>

<%- include('../partials/footer.ejs') %>

