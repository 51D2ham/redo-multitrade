<%- include('../partials/header.ejs', { title: 'Products Management' }) %>

<!-- Navigation -->
<nav class="flex gap-3 mb-6 p-4 bg-white rounded-lg shadow-sm">
  <a href="/admin/v1/staff/dashboard" class="flex items-center gap-2 px-4 py-2 rounded-lg bg-blue-50 text-blue-700 hover:bg-blue-100">
    <i class="fa fa-home"></i> Dashboard
  </a>
  <a href="/admin/v1/products/new" class="flex items-center gap-2 px-4 py-2 rounded-lg bg-green-600 text-white hover:bg-green-700">
    <i class="fa fa-plus"></i> Add Product
  </a>
</nav>

<main class="container mx-auto max-w-7xl px-4">
  <div class="flex justify-between items-center mb-6">
    <h1 class="text-3xl font-bold text-gray-800">Products Management</h1>
  </div>

  <!-- Flash Messages -->
  <% if (success && success.length) { %>
    <div class="mb-4 p-4 rounded-lg bg-green-50 text-green-800 border-l-4 border-green-400">
      <% success.forEach(msg => { %>
        <div><i class="fa fa-check-circle mr-2"></i><%= msg %></div>
      <% }) %>
    </div>
  <% } %>
  <% if (error && error.length) { %>
    <div class="mb-4 p-4 rounded-lg bg-red-50 text-red-800 border-l-4 border-red-400">
      <% error.forEach(msg => { %>
        <div><i class="fa fa-exclamation-circle mr-2"></i><%= msg %></div>
      <% }) %>
    </div>
  <% } %>

  <!-- Search & Filters -->
  <div class="bg-white rounded-lg shadow-sm p-4 mb-6">
    <form method="GET" id="searchForm" class="space-y-4">
      <!-- Search Bar -->
      <div class="relative">
        <input name="search" id="searchInput" value="<%= filters.search || '' %>" 
               class="w-full px-4 py-3 border rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-blue-500" 
               placeholder="Search products by title, SKU, description..." 
               autocomplete="off" />
        <button type="button" id="clearSearch" class="absolute right-3 top-3 text-gray-400 hover:text-gray-600" style="display: none;">
          ×
        </button>
      </div>
      
      <!-- Filters -->
      <div class="grid grid-cols-1 md:grid-cols-4 gap-4">
        <select name="status" class="w-full p-3 border rounded-lg focus:ring-2 focus:ring-blue-500">
          <option value="">All Status</option>
          <option value="draft" <%= filters.status === 'draft' ? 'selected' : '' %>>Draft</option>
          <option value="active" <%= filters.status === 'active' ? 'selected' : '' %>>Active</option>
          <option value="inactive" <%= filters.status === 'inactive' ? 'selected' : '' %>>Inactive</option>
        </select>
        
        <select name="category" class="w-full p-3 border rounded-lg focus:ring-2 focus:ring-blue-500">
          <option value="">All Categories</option>
          <% if (categories) { categories.forEach(cat => { %>
            <option value="<%= cat._id %>" <%= filters.category === cat._id.toString() ? 'selected' : '' %>>
              <%= cat.name %>
            </option>
          <% }); } %>
        </select>
        
        <select name="brand" class="w-full p-3 border rounded-lg focus:ring-2 focus:ring-blue-500">
          <option value="">All Brands</option>
          <% if (brands) { brands.forEach(brand => { %>
            <option value="<%= brand._id %>" <%= filters.brand === brand._id.toString() ? 'selected' : '' %>>
              <%= brand.name %>
            </option>
          <% }); } %>
        </select>
        
        <select name="stock" class="w-full p-3 border rounded-lg focus:ring-2 focus:ring-blue-500">
          <option value="">All Stock</option>
          <option value="instock" <%= filters.stock === 'instock' ? 'selected' : '' %>>In Stock</option>
          <option value="lowstock" <%= filters.stock === 'lowstock' ? 'selected' : '' %>>Low Stock</option>
          <option value="outofstock" <%= filters.stock === 'outofstock' ? 'selected' : '' %>>Out of Stock</option>
        </select>
      </div>
      
      <!-- Actions -->
      <div class="flex gap-3">
        <button type="submit" class="px-6 py-2 bg-blue-600 text-white rounded-lg hover:bg-blue-700">
          Search
        </button>
        <a href="/admin/v1/products" class="px-6 py-2 bg-gray-100 text-gray-700 rounded-lg hover:bg-gray-200">
          Clear
        </a>
      </div>
    </form>
  </div>

  <!-- Products Table -->
  <div class="bg-white rounded-lg shadow-sm overflow-hidden">
    <div class="bg-gray-50 px-6 py-4 border-b">
      <h3 class="text-lg font-semibold text-gray-800">Products Catalog</h3>
    </div>
    
    <% if (products.length === 0) { %>
      <div class="p-8 text-center">
        <i class="fa fa-box text-5xl text-gray-300 mb-4"></i>
        <h2 class="text-xl font-semibold text-gray-800 mb-2">No Products Found</h2>
        <a href="/admin/v1/products/new" class="inline-flex items-center px-4 py-2 rounded-lg bg-blue-600 text-white hover:bg-blue-700">
          <i class="fa fa-plus mr-2"></i> Create First Product
        </a>
      </div>
    <% } else { %>
      <div class="overflow-x-auto">
        <table class="w-full text-sm">
          <thead>
            <tr class="border-b bg-gray-50">
              <th class="py-3 px-4 text-left font-semibold text-gray-600">Product</th>
              <th class="py-3 px-4 text-left font-semibold text-gray-600">Category</th>
              <th class="py-3 px-4 text-left font-semibold text-gray-600">Price</th>
              <th class="py-3 px-4 text-left font-semibold text-gray-600">Stock</th>
              <th class="py-3 px-4 text-left font-semibold text-gray-600">Status</th>
              <th class="py-3 px-4 text-left font-semibold text-gray-600">Actions</th>
            </tr>
          </thead>
          <tbody>
            <% products.forEach((product, idx) => { %>
              <tr class="hover:bg-gray-50 border-b">
                <td class="py-4 px-4">
                  <div class="flex items-center">
                    <% if (product.images && product.images.length > 0) { %>
                      <div class="w-12 h-12 rounded-lg overflow-hidden mr-3 border">
                        <img src="/uploads/products/<%= product.images[0] %>" alt="<%= product.title %>" class="w-full h-full object-cover">
                      </div>
                    <% } %>
                    <div>
                      <div class="font-medium text-gray-800"><%= product.title %></div>
                      <div class="text-xs text-gray-500">
                        SKU: <%= product.variants && product.variants[0] ? product.variants[0].sku : 'N/A' %>
                      </div>
                    </div>
                  </div>
                </td>
                <td class="py-4 px-4">
                  <div class="font-medium text-gray-800"><%= product.category?.name || 'Uncategorized' %></div>
                  <% if (product.brand?.name) { %>
                    <div class="text-xs text-purple-600"><%= product.brand.name %></div>
                  <% } %>
                </td>
                <td class="py-4 px-4">
                  <div class="font-semibold text-gray-800">₹<%= product.price || 0 %></div>
                </td>
                <td class="py-4 px-4">
                  <div class="flex items-center gap-2">
                    <% const realTimeStock = product.variants ? product.variants.reduce((sum, v) => sum + (v.stock || 0), 0) : 0; %>
                    <span class="font-medium text-gray-800"><%= realTimeStock %></span>
                    <% 
                      let stockClass = 'bg-green-100 text-green-800';
                      let stockText = 'in stock';
                      if (realTimeStock === 0) {
                        stockClass = 'bg-red-100 text-red-800';
                        stockText = 'out of stock';
                      } else if (realTimeStock <= 5) {
                        stockClass = 'bg-orange-100 text-orange-800';
                        stockText = 'low stock';
                      }
                    %>
                    <span class="px-2 py-1 text-xs font-medium rounded-full <%= stockClass %>">
                      <%= stockText %>
                    </span>
                  </div>
                </td>
                <td class="py-4 px-4">
                  <% 
                    let statusClass = 'bg-gray-100 text-gray-800';
                    if (product.status === 'active') {
                      statusClass = 'bg-green-100 text-green-800';
                    } else if (product.status === 'inactive') {
                      statusClass = 'bg-red-100 text-red-800';
                    } else if (product.status === 'draft') {
                      statusClass = 'bg-yellow-100 text-yellow-800';
                    }
                  %>
                  <span class="px-3 py-1 text-sm font-medium rounded-full <%= statusClass %>">
                    <%= product.status.charAt(0).toUpperCase() + product.status.slice(1) %>
                  </span>
                  <% if (product.featured) { %>
                    <span class="px-3 py-1 text-sm font-medium rounded-full bg-blue-100 text-blue-800 ml-2">
                      <i class="fa fa-star"></i> Featured
                    </span>
                  <% } %>
                </td>
                <td class="py-4 px-4">
                  <div class="flex gap-2">
                    <a href="/admin/v1/products/<%= product._id %>" class="px-3 py-1 bg-blue-100 text-blue-700 rounded hover:bg-blue-200">
                      <i class="fa fa-eye"></i>
                    </a>
                    <a href="/admin/v1/products/<%= product._id %>/edit" class="px-3 py-1 bg-yellow-100 text-yellow-700 rounded hover:bg-yellow-200">
                      <i class="fa fa-edit"></i>
                    </a>
                    <form action="/admin/v1/products/<%= product._id %>" method="POST" class="inline">
                      <input type="hidden" name="_method" value="DELETE">
                      <button type="submit" class="px-3 py-1 bg-red-100 text-red-600 rounded hover:bg-red-200" 
                              onclick="return confirm('Delete this product?')">
                        <i class="fa fa-trash"></i>
                      </button>
                    </form>
                  </div>
                </td>
              </tr>
            <% }) %>
          </tbody>
        </table>
      </div>
    <% } %>
  </div>

  <!-- Pagination -->
  <% if (pagination && pagination.total > 1) { %>
    <div class="flex justify-between items-center mt-6">
      <div class="text-sm text-gray-600">
        Page <%= pagination.current %> of <%= pagination.total %>
      </div>
      <nav class="flex gap-2">
        <% if (pagination.hasPrev) { %>
          <a href="?page=<%= pagination.prev %>" class="px-3 py-2 rounded bg-white border hover:bg-gray-50">
            <i class="fa fa-chevron-left"></i>
          </a>
        <% } %>
        <span class="px-4 py-2 rounded bg-blue-600 text-white"><%= pagination.current %></span>
        <% if (pagination.hasNext) { %>
          <a href="?page=<%= pagination.next %>" class="px-3 py-2 rounded bg-white border hover:bg-gray-50">
            <i class="fa fa-chevron-right"></i>
          </a>
        <% } %>
      </nav>
    </div>
  <% } %>
</main>

<script>
// Enhanced Search Functionality
document.addEventListener('DOMContentLoaded', function() {
  const searchInput = document.getElementById('searchInput');
  const clearSearch = document.getElementById('clearSearch');
  const searchForm = document.getElementById('searchForm');
  let searchTimeout;
  
  // Show/hide clear button
  function toggleClearButton() {
    clearSearch.style.display = searchInput.value ? 'block' : 'none';
  }
  
  // Clear search
  clearSearch.addEventListener('click', function() {
    searchInput.value = '';
    toggleClearButton();
    searchInput.focus();
  });
  
  // Real-time search with debounce
  searchInput.addEventListener('input', function() {
    toggleClearButton();
    
    clearTimeout(searchTimeout);
    searchTimeout = setTimeout(() => {
      if (searchInput.value.length >= 2 || searchInput.value.length === 0) {
        searchForm.submit();
      }
    }, 500);
  });
  
  // Auto-submit on filter change
  const filterSelects = document.querySelectorAll('select[name="status"], select[name="category"], select[name="brand"], select[name="stock"]');
  filterSelects.forEach(select => {
    select.addEventListener('change', () => {
      searchForm.submit();
    });
  });
  

  
  // Initialize
  toggleClearButton();
  
  // Keyboard shortcuts
  document.addEventListener('keydown', function(e) {
    if (e.ctrlKey && e.key === 'f') {
      e.preventDefault();
      searchInput.focus();
    }
  });
});
</script>

