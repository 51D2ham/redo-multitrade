<%- include('../partials/header.ejs', { title: 'Products Management' }) %>

<!-- Modern Navigation Bar -->
<nav class="flex flex-wrap gap-3 mb-8 p-4 bg-white rounded-xl shadow-sm border border-gray-100 items-center">
  <a href="/admin/v1/staff/dashboard" class="flex items-center gap-2 px-4 py-2 rounded-lg bg-blue-50 text-blue-700 hover:bg-blue-100 transition">
    <i class="fa fa-home"></i> Dashboard
  </a>
  <a href="/admin/v1/staff/parameter-dashboard" class="flex items-center gap-2 px-4 py-2 rounded-lg bg-gray-50 text-gray-700 hover:bg-gray-100 transition">
    <i class="fa fa-cog"></i> System Parameters
  </a>
  <a href="/admin/v1/products/new" class="flex items-center gap-2 px-4 py-2 rounded-lg bg-green-600 text-white hover:bg-green-700 transition">
    <i class="fa fa-plus"></i> Add Product
  </a>
</nav>

<main class="container mx-auto max-w-7xl px-4 mt-8">
  <div class="flex flex-col md:flex-row md:justify-between md:items-center mb-8 gap-4">
    <h1 class="text-3xl font-bold text-gray-800">Products Management</h1>
    <div class="flex items-center gap-3">
    </div>
  </div>

  <!-- Flash Messages -->
  <% if (success && success.length) { %>
    <div class="mb-6 p-4 rounded-lg border-l-4 border-green-400 bg-green-50 text-green-800 shadow-sm">
      <% success.forEach(msg => { %>
        <div class="flex items-center gap-2">
          <i class="fa fa-check-circle"></i> <%= msg %>
        </div>
      <% }) %>
    </div>
  <% } %>
  <% if (error && error.length) { %>
    <div class="mb-6 p-4 rounded-lg border-l-4 border-red-400 bg-red-50 text-red-800 shadow-sm">
      <% error.forEach(msg => { %>
        <div class="flex items-center gap-2">
          <i class="fa fa-exclamation-circle"></i> <%= msg %>
        </div>
      <% }) %>
    </div>
  <% } %>

  <!-- Filters and Search -->
  <div class="bg-white rounded-xl shadow-md p-6 border border-gray-100 mb-6">
    <div class="flex items-center gap-3 mb-4">
      <div class="w-8 h-8 bg-blue-100 rounded-lg flex items-center justify-center">
        <i class="fa fa-filter text-blue-600"></i>
      </div>
      <h3 class="text-lg font-semibold text-gray-800">Filter & Search Products</h3>
    </div>
    <form method="GET" class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-6 gap-4">
      <div>
        <label class="block font-semibold mb-2 text-gray-700">Search Products</label>
        <div class="relative">
          <input name="search" value="<%= filters.search || '' %>" 
                 class="w-full p-3 pl-10 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-blue-500" 
                 placeholder="Search by title, SKU, description..." />
          <i class="fa fa-search absolute left-3 top-1/2 transform -translate-y-1/2 text-gray-400"></i>
        </div>
      </div>
      
      <div>
        <label class="block font-semibold mb-2 text-gray-700">Sort By</label>
        <select name="sort" class="w-full p-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-blue-500">
          <option value="newest" <%= filters.sort === 'newest' ? 'selected' : '' %>>Newest First</option>
          <option value="oldest" <%= filters.sort === 'oldest' ? 'selected' : '' %>>Oldest First</option>
          <option value="title_asc" <%= filters.sort === 'title_asc' ? 'selected' : '' %>>Title A-Z</option>
          <option value="title_desc" <%= filters.sort === 'title_desc' ? 'selected' : '' %>>Title Z-A</option>
          <option value="price_asc" <%= filters.sort === 'price_asc' ? 'selected' : '' %>>Price Low-High</option>
          <option value="price_desc" <%= filters.sort === 'price_desc' ? 'selected' : '' %>>Price High-Low</option>
          <option value="stock_asc" <%= filters.sort === 'stock_asc' ? 'selected' : '' %>>Stock Low-High</option>
          <option value="stock_desc" <%= filters.sort === 'stock_desc' ? 'selected' : '' %>>Stock High-Low</option>
        </select>
      </div>
      
      <div>
        <label class="block font-semibold mb-2 text-gray-700">Status</label>
        <select name="status" class="w-full p-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-blue-500">
          <option value="">All Status</option>
          <option value="draft" <%= filters.status === 'draft' ? 'selected' : '' %>>Draft</option>
          <option value="active" <%= filters.status === 'active' ? 'selected' : '' %>>Active</option>
          <option value="inactive" <%= filters.status === 'inactive' ? 'selected' : '' %>>Inactive</option>
          <option value="discontinued" <%= filters.status === 'discontinued' ? 'selected' : '' %>>Discontinued</option>
        </select>
      </div>
      
      <div>
        <label class="block font-semibold mb-2 text-gray-700">Category</label>
        <select name="category" class="w-full p-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-blue-500">
          <option value="">All Categories</option>
          <% if (categories) { categories.forEach(cat => { %>
            <option value="<%= cat._id %>" <%= filters.category === cat._id.toString() ? 'selected' : '' %>>
              <%= cat.name %>
            </option>
          <% }); } %>
        </select>
      </div>
      
      <div>
        <label class="block font-semibold mb-2 text-gray-700">Brand</label>
        <select name="brand" class="w-full p-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-blue-500">
          <option value="">All Brands</option>
          <% if (brands) { brands.forEach(brand => { %>
            <option value="<%= brand._id %>" <%= filters.brand === brand._id.toString() ? 'selected' : '' %>>
              <%= brand.name %>
            </option>
          <% }); } %>
        </select>
      </div>
      
      <div class="flex items-end gap-2">
        <button type="submit" class="flex-1 px-4 py-3 bg-blue-600 text-white rounded-lg hover:bg-blue-700 transition">
          <i class="fa fa-search mr-2"></i>Apply
        </button>
        <a href="/admin/v1/products" class="px-3 py-3 bg-gray-100 text-gray-600 rounded-lg hover:bg-gray-200 transition" title="Clear All">
          <i class="fa fa-times"></i>
        </a>
      </div>
    </form>
  </div>

  <!-- Products Table -->
  <div class="bg-white rounded-xl shadow-md border border-gray-100 overflow-hidden">
    <div class="bg-gray-50 px-6 py-4 border-b border-gray-200">
      <div class="flex items-center justify-between">
        <h3 class="text-lg font-semibold text-gray-800 flex items-center gap-2">
          <i class="fa fa-table text-blue-600"></i> Products Catalog
        </h3>
        <div class="flex items-center gap-4 text-sm text-gray-600">
          <span>Showing <%= products.length %> of <%= pagination.totalProducts || products.length %> products</span>
          <% if (filters.search || filters.status || filters.category || filters.brand) { %>
            <span class="px-2 py-1 bg-blue-100 text-blue-700 rounded-full text-xs">
              <i class="fa fa-filter"></i> Filtered
            </span>
          <% } %>
        </div>
      </div>
    </div>
    
    <% if (products.length === 0) { %>
      <div class="p-8 text-center">
        <i class="fa fa-box text-5xl text-gray-300 mb-4"></i>
        <h2 class="text-xl font-semibold text-gray-800 mb-2">No Products Found</h2>
        <p class="text-gray-500 mb-6">Get started by creating your first product</p>
        <a href="/admin/v1/products/new" class="inline-flex items-center px-4 py-2.5 rounded-lg bg-blue-600 text-white font-medium hover:bg-blue-700 transition">
          <i class="fa fa-plus mr-2"></i> Create First Product
        </a>
      </div>
    <% } else { %>
      <!-- Mobile Cards (Hidden on Desktop) -->
      <div class="block md:hidden">
        <% products.forEach((product, idx) => { %>
          <div class="p-4 border-b border-gray-100 last:border-0">
            <div class="flex items-center justify-between mb-2">
              <span class="text-xs font-medium text-gray-500 bg-gray-100 px-2 py-1 rounded">#<%= idx + 1 %></span>
            </div>
            <div class="flex items-start gap-3 mb-3">
              <% if (product.thumbnail || (product.images && product.images[0])) { %>
                <div class="w-16 h-16 rounded-lg overflow-hidden shadow-sm border border-gray-200 flex-shrink-0">
                  <img src="<%= product.thumbnail || product.images[0] %>" alt="<%= product.title %>" class="w-full h-full object-cover">
                </div>
              <% } else { %>
                <div class="w-16 h-16 bg-gray-100 rounded-lg flex items-center justify-center flex-shrink-0">
                  <i class="fa fa-image text-gray-400"></i>
                </div>
              <% } %>
              <div class="flex-1 min-w-0">
                <div class="font-medium text-gray-800 mb-1"><%= product.title %></div>
                <div class="text-xs text-gray-500 mb-1">
                  SKU: <%= product.variants && product.variants[0] ? product.variants[0].sku : 'N/A' %>
                </div>
                <div class="flex items-center gap-2 mb-2">
                  <% 
                    let statusClass = 'bg-gray-100 text-gray-700';
                    if (product.status === 'active') {
                      statusClass = 'bg-green-100 text-green-700';
                    } else if (product.status === 'inactive') {
                      statusClass = 'bg-red-100 text-red-700';
                    } else if (product.status === 'draft') {
                      statusClass = 'bg-yellow-100 text-yellow-700';
                    }
                  %>
                  <span class="px-2 py-1 text-xs font-semibold rounded-full <%= statusClass %>">
                    <%= product.status %>
                  </span>
                  <% if (product.featured) { %>
                    <span class="px-2 py-1 text-xs font-semibold rounded-full bg-blue-100 text-blue-700">
                      <i class="fa fa-star"></i> Featured
                    </span>
                  <% } %>
                </div>
              </div>
            </div>
            <div class="grid grid-cols-2 gap-3 mb-3">
              <div>
                <div class="text-xs text-gray-500 mb-1">Category</div>
                <div class="text-sm font-medium text-gray-800"><%= product.category?.name || 'Uncategorized' %></div>
                <% if (product.brand?.name) { %>
                  <div class="text-xs text-purple-600">
                    <i class="fa fa-star"></i> <%= product.brand.name %>
                  </div>
                <% } %>
              </div>
              <div>
                <div class="text-xs text-gray-500 mb-1">Price</div>
                <% if (product.minPrice && product.maxPrice && product.minPrice !== product.maxPrice) { %>
                  <div class="text-sm font-semibold text-gray-800">₹<%= product.minPrice %> - ₹<%= product.maxPrice %></div>
                <% } else { %>
                  <div class="text-sm font-semibold text-gray-800">₹<%= product.price %></div>
                <% } %>
              </div>
              <div>
                <div class="text-xs text-gray-500 mb-1">Stock</div>
                <div class="flex items-center gap-2">
                  <span class="text-sm font-medium text-gray-800"><%= product.totalStock || 0 %></span>
                  <% 
                    let stockClass = 'bg-green-100 text-green-700';
                    if (product.totalStock === 0) {
                      stockClass = 'bg-red-100 text-red-700';
                    } else if (product.totalStock <= 10) {
                      stockClass = 'bg-orange-100 text-orange-700';
                    }
                  %>
                  <span class="px-2 py-1 text-xs font-medium rounded-full <%= stockClass %>">
                    <% if (product.totalStock === 0) { %>
                      Out
                    <% } else if (product.totalStock <= 10) { %>
                      Low
                    <% } else { %>
                      In Stock
                    <% } %>
                  </span>
                </div>
              </div>
              <div>
                <div class="text-xs text-gray-500 mb-1">Variants</div>
                <div class="text-sm text-gray-700">
                  <%= product.variants ? product.variants.length : 0 %> variant<%= (product.variants && product.variants.length !== 1) ? 's' : '' %>
                </div>
              </div>
            </div>
            <div class="flex flex-wrap gap-2 pt-3 border-t border-gray-100">
              <a href="/admin/v1/products/<%= product._id %>" class="flex items-center gap-1 px-3 py-1.5 text-xs bg-blue-100 text-blue-700 rounded-lg hover:bg-blue-200 transition">
                <i class="fa fa-eye"></i> View
              </a>
              <a href="/admin/v1/products/<%= product._id %>/edit" class="flex items-center gap-1 px-3 py-1.5 text-xs bg-yellow-100 text-yellow-700 rounded-lg hover:bg-yellow-200 transition">
                <i class="fa fa-edit"></i> Edit
              </a>
              <form action="/admin/v1/products/<%= product._id %>" method="POST" class="inline">
                <input type="hidden" name="_method" value="DELETE">
                <button type="submit" class="flex items-center gap-1 px-3 py-1.5 text-xs bg-red-100 text-red-600 rounded-lg hover:bg-red-200 transition" onclick="return confirm('Are you sure you want to delete this product? This cannot be undone.')">
                  <i class="fa fa-trash"></i> Delete
                </button>
              </form>
            </div>
          </div>
        <% }) %>
      </div>

      <!-- Desktop Table (Hidden on Mobile) -->
      <div class="hidden md:block overflow-x-auto">
        <table class="w-full text-sm">
          <thead>
            <tr class="border-b border-gray-200 bg-gray-50">
              <th class="py-3 px-4 text-left font-semibold text-gray-600 w-12">
                <% 
                  const dateSort = filters.sort === 'newest' ? 'oldest' : 'newest';
                  const dateSortUrl = `?sort=${dateSort}${filters.search ? '&search=' + encodeURIComponent(filters.search) : ''}${filters.status ? '&status=' + filters.status : ''}${filters.category ? '&category=' + filters.category : ''}${filters.brand ? '&brand=' + filters.brand : ''}`;
                %>
                <a href="<%= dateSortUrl %>" class="flex items-center gap-1 hover:text-blue-600">
                  S.N <i class="fa fa-sort text-xs"></i>
                </a>
              </th>
              <th class="py-3 px-4 text-left font-semibold text-gray-600">
                <% 
                  const titleSort = filters.sort === 'title_asc' ? 'title_desc' : 'title_asc';
                  const titleSortUrl = `?sort=${titleSort}${filters.search ? '&search=' + encodeURIComponent(filters.search) : ''}${filters.status ? '&status=' + filters.status : ''}${filters.category ? '&category=' + filters.category : ''}${filters.brand ? '&brand=' + filters.brand : ''}`;
                %>
                <a href="<%= titleSortUrl %>" class="flex items-center gap-1 hover:text-blue-600">
                  Product <i class="fa fa-sort text-xs"></i>
                </a>
              </th>
              <th class="py-3 px-4 text-left font-semibold text-gray-600">Category</th>
              <th class="py-3 px-4 text-left font-semibold text-gray-600">
                <% 
                  const priceSort = filters.sort === 'price_asc' ? 'price_desc' : 'price_asc';
                  const priceSortUrl = `?sort=${priceSort}${filters.search ? '&search=' + encodeURIComponent(filters.search) : ''}${filters.status ? '&status=' + filters.status : ''}${filters.category ? '&category=' + filters.category : ''}${filters.brand ? '&brand=' + filters.brand : ''}`;
                %>
                <a href="<%= priceSortUrl %>" class="flex items-center gap-1 hover:text-blue-600">
                  Price <i class="fa fa-sort text-xs"></i>
                </a>
              </th>
              <th class="py-3 px-4 text-left font-semibold text-gray-600">
                <% 
                  const stockSort = filters.sort === 'stock_asc' ? 'stock_desc' : 'stock_asc';
                  const stockSortUrl = `?sort=${stockSort}${filters.search ? '&search=' + encodeURIComponent(filters.search) : ''}${filters.status ? '&status=' + filters.status : ''}${filters.category ? '&category=' + filters.category : ''}${filters.brand ? '&brand=' + filters.brand : ''}`;
                %>
                <a href="<%= stockSortUrl %>" class="flex items-center gap-1 hover:text-blue-600">
                  Stock <i class="fa fa-sort text-xs"></i>
                </a>
              </th>
              <th class="py-3 px-4 text-left font-semibold text-gray-600">Status</th>
              <th class="py-3 px-4 text-left font-semibold text-gray-600">Actions</th>
            </tr>
          </thead>
          <tbody>
            <% products.forEach((product, idx) => { %>
              <tr class="hover:bg-blue-50 transition-colors border-b border-gray-100 last:border-0">
                <td class="py-4 px-4 font-semibold text-gray-500">
                  <%= idx + 1 %>
                </td>
                <td class="py-4 px-4">
                  <div class="flex items-center">
                    <% if (product.thumbnail || (product.images && product.images[0])) { %>
                      <div class="w-12 h-12 rounded-lg overflow-hidden mr-3 shadow-sm border border-gray-200">
                        <img src="<%= product.thumbnail || product.images[0] %>" alt="<%= product.title %>" class="w-full h-full object-cover">
                      </div>
                    <% } else { %>
                      <div class="w-12 h-12 bg-gray-100 rounded-lg flex items-center justify-center mr-3">
                        <i class="fa fa-image text-gray-400"></i>
                      </div>
                    <% } %>
                    <div>
                      <div class="font-medium text-gray-800"><%= product.title %></div>
                      <div class="text-xs text-gray-500">
                        SKU: <%= product.variants && product.variants[0] ? product.variants[0].sku : 'N/A' %>
                      </div>
                      <% if (product.variants && product.variants.length > 1) { %>
                        <div class="text-xs text-blue-600">
                          <i class="fa fa-layer-group"></i> <%= product.variants.length %> variants
                        </div>
                      <% } %>
                    </div>
                  </div>
                </td>
                <td class="py-4 px-4">
                  <div class="font-medium text-gray-800"><%= product.category?.name || 'Uncategorized' %></div>
                  <% if (product.subCategory?.name) { %>
                    <div class="text-xs text-gray-500"><%= product.subCategory.name %></div>
                  <% } %>
                  <% if (product.brand?.name) { %>
                    <div class="text-xs text-purple-600">
                      <i class="fa fa-star"></i> <%= product.brand.name %>
                    </div>
                  <% } %>
                </td>
                <td class="py-4 px-4">
                  <% if (product.minPrice && product.maxPrice && product.minPrice !== product.maxPrice) { %>
                    <div class="font-semibold text-gray-800">₹<%= product.minPrice %> - ₹<%= product.maxPrice %></div>
                  <% } else { %>
                    <div class="font-semibold text-gray-800">₹<%= product.price %></div>
                    <% if (product.variants && product.variants[0] && product.variants[0].discountPrice) { %>
                      <div class="text-xs text-green-600">₹<%= product.variants[0].discountPrice %> (Sale)</div>
                    <% } %>
                  <% } %>
                </td>
                <td class="py-4 px-4">
                  <div class="flex items-center gap-2">
                    <div class="font-medium text-gray-800"><%= product.totalStock || 0 %></div>
                    <% 
                      let stockClass = 'bg-green-100 text-green-700';
                      if (product.totalStock === 0) {
                        stockClass = 'bg-red-100 text-red-700';
                      } else if (product.totalStock <= 10) {
                        stockClass = 'bg-orange-100 text-orange-700';
                      }
                    %>
                    <span class="px-2 py-1 text-xs font-medium rounded-full <%= stockClass %>">
                      <% if (product.totalStock === 0) { %>
                        Out of Stock
                      <% } else if (product.totalStock <= 10) { %>
                        Low Stock
                      <% } else { %>
                        In Stock
                      <% } %>
                    </span>
                  </div>
                </td>
                <td class="py-4 px-4">
                  <div class="flex flex-col gap-1">
                    <% 
                      let statusClass = 'bg-gray-100 text-gray-700';
                      if (product.status === 'active') {
                        statusClass = 'bg-green-100 text-green-700';
                      } else if (product.status === 'inactive') {
                        statusClass = 'bg-red-100 text-red-700';
                      } else if (product.status === 'draft') {
                        statusClass = 'bg-yellow-100 text-yellow-700';
                      }
                    %>
                    <span class="px-2 py-1 text-xs font-semibold rounded-full <%= statusClass %>">
                      <%= product.status %>
                    </span>
                    <% if (product.featured) { %>
                      <span class="px-2 py-1 text-xs font-semibold rounded-full bg-blue-100 text-blue-700">
                        <i class="fa fa-star"></i> Featured
                      </span>
                    <% } %>
                  </div>
                </td>
                <td class="py-4 px-4">
                  <div class="flex flex-wrap gap-2">
                    <a href="/admin/v1/products/<%= product._id %>" class="btn btn-small bg-blue-100 text-blue-700 hover:bg-blue-200 transition flex items-center px-3 py-2">
                      <i class="fa fa-eye mr-1.5"></i> View
                    </a>
                    <a href="/admin/v1/products/<%= product._id %>/edit" class="btn btn-small bg-yellow-100 text-yellow-700 hover:bg-yellow-200 transition flex items-center px-3 py-2">
                      <i class="fa fa-edit mr-1.5"></i> Edit
                    </a>
                    <form action="/admin/v1/products/<%= product._id %>" method="POST" class="inline">
                      <input type="hidden" name="_method" value="DELETE">
                      <button 
                        type="submit" 
                        class="btn btn-small bg-red-100 text-red-600 hover:bg-red-200 transition flex items-center px-3 py-2"
                        onclick="return confirm('Are you sure you want to delete this product? This cannot be undone.')"
                      >
                        <i class="fa fa-trash mr-1.5"></i> Delete
                      </button>
                    </form>
                  </div>
                </td>
              </tr>
            <% }) %>
          </tbody>
        </table>
      </div>
    <% } %>
  </div>

  <!-- Pagination -->
  <% if (pagination && pagination.total > 1) { %>
    <div class="flex flex-col sm:flex-row justify-between items-center mt-8 gap-4">
      <div class="text-sm text-gray-600">
        Showing page <%= pagination.current %> of <%= pagination.total %>
      </div>
      <nav class="flex items-center gap-2">
        <% if (pagination.hasPrev) { %>
          <a href="?page=1<%= filters.search ? '&search=' + encodeURIComponent(filters.search) : '' %><%= filters.status ? '&status=' + filters.status : '' %><%= filters.category ? '&category=' + filters.category : '' %><%= filters.brand ? '&brand=' + filters.brand : '' %><%= filters.sort ? '&sort=' + filters.sort : '' %>" 
             class="px-3 py-2 rounded-lg bg-white border border-gray-300 text-gray-700 hover:bg-blue-50 hover:border-blue-300 transition" 
             title="First Page">
            <i class="fa fa-angle-double-left"></i>
          </a>
          <a href="?page=<%= pagination.prev %><%= filters.search ? '&search=' + encodeURIComponent(filters.search) : '' %><%= filters.status ? '&status=' + filters.status : '' %><%= filters.category ? '&category=' + filters.category : '' %><%= filters.brand ? '&brand=' + filters.brand : '' %><%= filters.sort ? '&sort=' + filters.sort : '' %>" 
             class="px-3 py-2 rounded-lg bg-white border border-gray-300 text-gray-700 hover:bg-blue-50 hover:border-blue-300 transition" 
             title="Previous Page">
            <i class="fa fa-chevron-left"></i>
          </a>
        <% } %>
        
        <% for (let i = Math.max(1, pagination.current - 2); i <= Math.min(pagination.total, pagination.current + 2); i++) { %>
          <% if (i === pagination.current) { %>
            <span class="px-4 py-2 rounded-lg bg-blue-600 text-white font-semibold"><%= i %></span>
          <% } else { %>
            <a href="?page=<%= i %><%= filters.search ? '&search=' + encodeURIComponent(filters.search) : '' %><%= filters.status ? '&status=' + filters.status : '' %><%= filters.category ? '&category=' + filters.category : '' %><%= filters.brand ? '&brand=' + filters.brand : '' %><%= filters.sort ? '&sort=' + filters.sort : '' %>" 
               class="px-3 py-2 rounded-lg bg-white border border-gray-300 text-gray-700 hover:bg-blue-50 hover:border-blue-300 transition">
              <%= i %>
            </a>
          <% } %>
        <% } %>
        
        <% if (pagination.hasNext) { %>
          <a href="?page=<%= pagination.next %><%= filters.search ? '&search=' + encodeURIComponent(filters.search) : '' %><%= filters.status ? '&status=' + filters.status : '' %><%= filters.category ? '&category=' + filters.category : '' %><%= filters.brand ? '&brand=' + filters.brand : '' %><%= filters.sort ? '&sort=' + filters.sort : '' %>" 
