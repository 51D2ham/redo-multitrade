<%- include('../partials/header.ejs', { title: `${product.title} - Product Details` }) %>

<!-- Navigation -->
<nav class="flex flex-wrap gap-2 sm:gap-3 mb-6 sm:mb-8 p-3 sm:p-4 bg-white rounded-xl shadow-sm border border-gray-100 items-center">
  <a href="/admin/v1/staff/dashboard" class="flex items-center gap-1 sm:gap-2 px-2 sm:px-4 py-2 rounded-lg bg-blue-50 text-blue-700 hover:bg-blue-100 transition text-sm sm:text-base">
    <i class="fa fa-home"></i> <span class="hidden sm:inline">Dashboard</span>
  </a>
  <a href="/admin/v1/products" class="flex items-center gap-1 sm:gap-2 px-2 sm:px-4 py-2 rounded-lg bg-gray-50 text-gray-700 hover:bg-gray-100 transition text-sm sm:text-base">
    <i class="fa fa-box"></i> <span class="hidden sm:inline">Products</span>
  </a>
  <a href="/admin/v1/products/<%= product._id %>/edit" class="px-2 sm:px-4 py-2 rounded-lg bg-green-100 text-green-700 hover:bg-green-200 transition flex items-center gap-1 sm:gap-2 text-sm sm:text-base">
    <i class="fa fa-edit"></i> <span class="hidden sm:inline">Edit Product</span>
  </a>
</nav>

<main class="container mx-auto max-w-6xl px-3 sm:px-4 mt-4 sm:mt-8">
  <!-- Flash Messages -->
  <% if (success && success.length) { %>
    <div class="mb-6 p-4 rounded-lg border-l-4 border-green-400 bg-green-50 text-green-800 shadow-sm">
      <% success.forEach(msg => { %>
        <div class="flex items-center gap-2">
          <i class="fa fa-check-circle"></i> <%= msg %>
        </div>
      <% }) %>
    </div>
  <% } %>

  <!-- Product Header -->
  <div class="bg-white rounded-xl shadow-md p-4 sm:p-6 lg:p-8 border border-gray-100 mb-6 sm:mb-8">
    <div class="flex flex-col lg:flex-row gap-4 sm:gap-6 lg:gap-8">
      <!-- Product Images -->
      <div class="lg:w-2/5">
        <% if (product.images && product.images.length > 0) { %>
          <div class="space-y-4">
            <div class="relative">
              <img src="<%= product.images[0] %>" alt="<%= product.title %>" class="w-full h-80 object-cover rounded-lg shadow-md">
            </div>
            <% if (product.images.length > 1) { %>
              <div class="grid grid-cols-4 gap-3">
                <% product.images.slice(1, 5).forEach(image => { %>
                  <img src="<%= image %>" alt="<%= product.title %>" class="w-full h-20 object-cover rounded-lg border">
                <% }) %>
              </div>
            <% } %>
          </div>
        <% } else { %>
          <div class="w-full h-80 bg-gray-100 rounded-lg flex items-center justify-center">
            <div class="text-center">
              <i class="fa fa-image text-4xl text-gray-400 mb-2"></i>
              <p class="text-gray-500">No images available</p>
            </div>
          </div>
        <% } %>
      </div>

      <!-- Product Information -->
      <div class="lg:w-3/5">
        <div class="flex flex-col sm:flex-row sm:justify-between sm:items-start mb-6 gap-4">
          <div>
            <h1 class="text-2xl sm:text-3xl font-bold text-gray-800 mb-2"><%= product.title %></h1>
            <p class="text-sm sm:text-base text-gray-600">ID: <%= product._id %></p>
          </div>
          <div class="flex flex-wrap gap-2">
            <span class="px-3 py-1 text-sm font-medium rounded-full <%= product.status === 'active' ? 'bg-green-100 text-green-800' : product.status === 'draft' ? 'bg-yellow-100 text-yellow-800' : 'bg-gray-100 text-gray-800' %>">
              <%= product.status.charAt(0).toUpperCase() + product.status.slice(1) %>
            </span>
            <% if (product.featured) { %>
              <span class="px-3 py-1 text-sm font-medium rounded-full bg-blue-100 text-blue-800">
                <i class="fa fa-star"></i> Featured
              </span>
            <% } %>
          </div>
        </div>

        <!-- Key Metrics -->
        <div class="grid grid-cols-2 lg:grid-cols-4 gap-3 sm:gap-4 mb-4 sm:mb-6">
          <div class="bg-blue-50 rounded-lg p-3 sm:p-4">
            <div class="text-xs sm:text-sm text-blue-600 mb-1">Base Price</div>
            <div class="text-lg sm:text-xl font-bold text-blue-800">Rs <%= product.price %></div>
          </div>
          <div class="bg-green-50 rounded-lg p-3 sm:p-4">
            <div class="text-xs sm:text-sm text-green-600 mb-1">Total Stock</div>
            <div class="text-lg sm:text-xl font-bold text-green-800"><%= product.variants ? product.variants.reduce((sum, v) => sum + (v.qty || 0), 0) : 0 %></div>
          </div>
          <div class="bg-purple-50 rounded-lg p-3 sm:p-4">
            <div class="text-xs sm:text-sm text-purple-600 mb-1">Variants</div>
            <div class="text-lg sm:text-xl font-bold text-purple-800"><%= product.variants ? product.variants.length : 0 %></div>
          </div>
          <div class="bg-orange-50 rounded-lg p-3 sm:p-4">
            <div class="text-xs sm:text-sm text-orange-600 mb-1">Views</div>
            <div class="text-lg sm:text-xl font-bold text-orange-800"><%= product.views || 0 %></div>
          </div>
        </div>

        <!-- Additional Product Info -->
        <div class="grid grid-cols-1 md:grid-cols-3 gap-4 mb-6">
          <div class="bg-gray-50 rounded-lg p-4">
            <div class="text-sm text-gray-600 mb-1">Product ID</div>
            <div class="text-sm font-mono bg-white px-2 py-1 rounded border"><%= product._id %></div>
          </div>
          <div class="bg-gray-50 rounded-lg p-4">
            <div class="text-sm text-gray-600 mb-1">Slug</div>
            <div class="text-sm font-mono bg-white px-2 py-1 rounded border"><%= product.slug || 'Not set' %></div>
          </div>
          <div class="bg-gray-50 rounded-lg p-4">
            <div class="text-sm text-gray-600 mb-1">Created</div>
            <div class="text-sm text-gray-800"><%= new Date(product.createdAt).toLocaleDateString('en-US', { year: 'numeric', month: 'short', day: 'numeric' }) %></div>
          </div>
        </div>

        <!-- Categories -->
        <div class="bg-gradient-to-r from-gray-50 to-blue-50 rounded-lg p-4 mb-6">
          <h4 class="font-semibold text-gray-800 mb-3 flex items-center gap-2">
            <i class="fa fa-tags text-blue-600"></i> Product Classification
          </h4>
          <div class="grid grid-cols-2 gap-4">
            <div class="flex items-center gap-3">
              <div class="w-2 h-2 bg-blue-500 rounded-full"></div>
              <div>
                <span class="text-sm text-gray-600">Category:</span>
                <span class="ml-1 font-medium text-gray-900"><%= product.category?.name || 'Uncategorized' %></span>
              </div>
            </div>
            <div class="flex items-center gap-3">
              <div class="w-2 h-2 bg-green-500 rounded-full"></div>
              <div>
                <span class="text-sm text-gray-600">Sub Category:</span>
                <span class="ml-1 font-medium text-gray-900"><%= product.subCategory?.name || 'None' %></span>
              </div>
            </div>
            <div class="flex items-center gap-3">
              <div class="w-2 h-2 bg-purple-500 rounded-full"></div>
              <div>
                <span class="text-sm text-gray-600">Type:</span>
                <span class="ml-1 font-medium text-gray-900"><%= product.type?.name || 'None' %></span>
              </div>
            </div>
            <div class="flex items-center gap-3">
              <div class="w-2 h-2 bg-orange-500 rounded-full"></div>
              <div>
                <span class="text-sm text-gray-600">Brand:</span>
                <span class="ml-1 font-medium text-gray-900"><%= product.brand?.name || 'None' %></span>
              </div>
            </div>
          </div>
        </div>

        <!-- Description -->
        <div class="mb-6">
          <label class="block text-sm font-medium text-gray-500 mb-2">Description</label>
          <div class="bg-gray-50 rounded-lg p-4">
            <p class="text-gray-700"><%= product.description %></p>
          </div>
        </div>

        <% if (product.shortDescription) { %>
          <div class="mb-6">
            <label class="block text-sm font-medium text-gray-500 mb-2">Short Description</label>
            <div class="bg-blue-50 rounded-lg p-4">
              <p class="text-gray-700"><%= product.shortDescription %></p>
            </div>
          </div>
        <% } %>
      </div>
    </div>
  </div>

  <!-- Product Variants -->
  <div class="bg-white rounded-xl shadow-md p-6 border border-gray-100 mb-6">
    <div class="flex items-center justify-between mb-6">
      <h3 class="text-xl font-bold text-gray-800 flex items-center gap-2">
        <i class="fa fa-layer-group text-orange-600"></i> Product Variants
      </h3>
      <span class="bg-orange-50 text-orange-700 px-3 py-1 rounded-full text-sm">
        <%= product.variants ? product.variants.length : 0 %> variants
      </span>
    </div>
    
    <% if (product.variants && product.variants.length > 0) { %>
      <div class="overflow-x-auto -mx-4 sm:mx-0">
        <table class="w-full min-w-[600px]">
          <thead class="bg-gray-50">
            <tr>
              <th class="px-2 sm:px-4 py-3 text-left text-xs font-medium text-gray-500 uppercase">SKU</th>
              <th class="px-2 sm:px-4 py-3 text-left text-xs font-medium text-gray-500 uppercase">Color</th>
              <th class="px-2 sm:px-4 py-3 text-left text-xs font-medium text-gray-500 uppercase">Size</th>
              <th class="px-2 sm:px-4 py-3 text-left text-xs font-medium text-gray-500 uppercase">Price</th>
              <th class="px-2 sm:px-4 py-3 text-left text-xs font-medium text-gray-500 uppercase">Stock</th>
              <th class="px-2 sm:px-4 py-3 text-left text-xs font-medium text-gray-500 uppercase">Status</th>
              <th class="px-2 sm:px-4 py-3 text-left text-xs font-medium text-gray-500 uppercase">Default</th>
            </tr>
          </thead>
          <tbody class="divide-y divide-gray-200">
            <% product.variants.forEach(variant => { %>
              <tr class="hover:bg-gray-50">
                <td class="px-2 sm:px-4 py-3">
                  <span class="text-xs sm:text-sm font-mono bg-gray-100 px-2 py-1 rounded"><%= variant.sku %></span>
                </td>
                <td class="px-2 sm:px-4 py-3">
                  <% if (variant.color) { %>
                    <span class="text-sm text-gray-700"><%= variant.color %></span>
                  <% } else { %>
                    <span class="text-sm text-gray-400">-</span>
                  <% } %>
                </td>
                <td class="px-4 py-3">
                  <% if (variant.size) { %>
                    <span class="text-sm bg-blue-100 text-blue-800 px-2 py-1 rounded"><%= variant.size %></span>
                  <% } else { %>
                    <span class="text-sm text-gray-400">-</span>
                  <% } %>
                </td>
                <td class="px-4 py-3">
                  <div class="flex flex-col">
                    <% if (variant.discountPrice && variant.discountPrice < variant.price) { %>
                      <span class="text-sm line-through text-gray-500">Rs <%= variant.price %></span>
                      <span class="text-sm font-semibold text-green-600">Rs <%= variant.discountPrice %></span>
                    <% } else { %>
                      <span class="text-sm font-semibold">Rs <%= variant.price %></span>
                    <% } %>
                  </div>
                </td>
                <td class="px-4 py-3">
                  <span class="text-sm font-medium"><%= variant.qty || 0 %></span>
                  <% if (variant.qty <= (variant.thresholdQty || 5) && variant.qty > 0) { %>
                    <i class="fa fa-exclamation-triangle text-orange-500 ml-1" title="Low Stock"></i>
                  <% } %>
                </td>
                <td class="px-4 py-3">
                  <span class="px-2 py-1 text-xs font-medium rounded-full <%= variant.status === 'in_stock' ? 'bg-green-100 text-green-800' : variant.status === 'low_stock' ? 'bg-orange-100 text-orange-800' : 'bg-red-100 text-red-800' %>">
                    <%= variant.status ? variant.status.replace('_', ' ') : 'unknown' %>
                  </span>
                </td>
                <td class="px-4 py-3 text-center">
                  <% if (variant.isDefault) { %>
                    <i class="fa fa-star text-blue-600"></i>
                  <% } else { %>
                    <span class="text-gray-400">-</span>
                  <% } %>
                </td>
              </tr>
            <% }) %>
          </tbody>
        </table>
      </div>
    <% } else { %>
      <div class="text-center py-8">
        <i class="fa fa-layer-group text-4xl text-gray-300 mb-4"></i>
        <h4 class="text-lg font-medium text-gray-900 mb-2">No variants defined</h4>
        <p class="text-gray-500">This product doesn't have any variants configured.</p>
      </div>
    <% } %>
  </div>

  <!-- Business Information -->
  <div class="bg-white rounded-xl shadow-md p-6 border border-gray-100 mb-6">
    <h3 class="text-xl font-bold text-gray-800 mb-6 flex items-center gap-2">
      <i class="fa fa-briefcase text-green-600"></i> Business Information
    </h3>
    
    <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
      <div class="space-y-4">
        <div class="bg-green-50 rounded-lg p-4">
          <label class="block text-sm font-medium text-green-700 mb-1 flex items-center gap-2">
            <i class="fa fa-shield-alt"></i> Warranty
          </label>
          <p class="text-gray-900"><%= product.warranty || 'No warranty information' %></p>
        </div>
        
        <div class="bg-blue-50 rounded-lg p-4">
          <label class="block text-sm font-medium text-blue-700 mb-1 flex items-center gap-2">
            <i class="fa fa-undo"></i> Return Policy
          </label>
          <p class="text-gray-900"><%= product.returnPolicy || 'No return policy specified' %></p>
        </div>
      </div>
      
      <div class="space-y-4">
        <div class="bg-purple-50 rounded-lg p-4">
          <label class="block text-sm font-medium text-purple-700 mb-1 flex items-center gap-2">
            <i class="fa fa-shipping-fast"></i> Shipping Info
          </label>
          <p class="text-gray-900"><%= product.shippingInfo || 'Standard shipping applies' %></p>
        </div>
        
        <div class="bg-orange-50 rounded-lg p-4">
          <label class="block text-sm font-medium text-orange-700 mb-2 flex items-center gap-2">
            <i class="fa fa-tags"></i> Product Tags
          </label>
          <% if (product.tags && product.tags.length > 0) { %>
            <div class="flex flex-wrap gap-2">
              <% product.tags.forEach(tag => { %>
                <span class="px-3 py-1 bg-white border border-orange-200 text-orange-800 text-sm rounded-full">#<%= tag %></span>
              <% }) %>
            </div>
          <% } else { %>
            <p class="text-gray-500 italic">No tags assigned</p>
          <% } %>
        </div>
      </div>
    </div>
  </div>

  <!-- Technical Specifications -->
  <div class="bg-white rounded-xl shadow-md p-6 border border-gray-100 mb-6">
    <div class="flex items-center justify-between mb-6">
      <h3 class="text-xl font-bold text-gray-800 flex items-center gap-2">
        <i class="fa fa-cogs text-purple-600"></i> Technical Specifications
      </h3>
      <% if (specifications && specifications.length > 0) { %>
        <span class="bg-purple-50 text-purple-700 px-3 py-1 rounded-full text-sm font-medium">
          <%= specifications.length %> specifications
        </span>
      <% } %>
    </div>
    
    <% if (specifications && specifications.length > 0) { %>
      <div class="grid grid-cols-1 lg:grid-cols-2 gap-6">
        <% specifications.forEach((spec, index) => { %>
          <div class="bg-gradient-to-r from-purple-50 to-indigo-50 rounded-lg p-4 border border-purple-100">
            <div class="flex items-start justify-between">
              <div class="flex-1">
                <div class="flex items-center gap-2 mb-2">
                  <div class="w-2 h-2 bg-purple-500 rounded-full"></div>
                  <h4 class="font-semibold text-purple-800 text-sm uppercase tracking-wide">
                    <%= spec.specList?.title || 'Unknown Spec' %>
                  </h4>
                </div>
                <p class="text-gray-800 font-medium text-lg leading-relaxed">
                  <%= spec.value %>
                </p>
              </div>
              <div class="ml-3 flex-shrink-0">
                <span class="inline-flex items-center justify-center w-6 h-6 bg-purple-100 text-purple-600 rounded-full text-xs font-bold">
                  <%= index + 1 %>
                </span>
              </div>
            </div>
          </div>
        <% }) %>
      </div>
      
      <!-- Specifications Summary -->
      <div class="mt-6 bg-gray-50 rounded-lg p-4">
        <h4 class="font-semibold text-gray-800 mb-3 flex items-center gap-2">
          <i class="fa fa-list-alt text-gray-600"></i> Specifications Overview
        </h4>
        <div class="grid grid-cols-1 md:grid-cols-3 gap-4">
          <div class="text-center">
            <div class="text-2xl font-bold text-purple-600"><%= specifications.length %></div>
            <div class="text-sm text-gray-600">Total Specs</div>
          </div>
          <div class="text-center">
            <div class="text-2xl font-bold text-indigo-600">
              <%= [...new Set(specifications.map(s => s.specList?.title))].length %>
            </div>
            <div class="text-sm text-gray-600">Unique Categories</div>
          </div>
          <div class="text-center">
            <div class="text-2xl font-bold text-blue-600">
              <%= specifications.reduce((sum, s) => sum + (s.value ? s.value.split(' ').length : 0), 0) %>
            </div>
            <div class="text-sm text-gray-600">Total Words</div>
          </div>
        </div>
      </div>
    <% } else { %>
      <div class="text-center py-12">
        <div class="mx-auto w-24 h-24 bg-gray-100 rounded-full flex items-center justify-center mb-4">
          <i class="fa fa-cogs text-3xl text-gray-400"></i>
        </div>
        <h4 class="text-lg font-medium text-gray-900 mb-2">No Technical Specifications</h4>
        <p class="text-gray-500 mb-4">This product doesn't have any technical specifications defined yet.</p>
        <a href="/admin/v1/products/<%= product._id %>/edit" class="inline-flex items-center gap-2 px-4 py-2 bg-purple-600 text-white rounded-lg hover:bg-purple-700 transition">
          <i class="fa fa-plus"></i> Add Specifications
        </a>
      </div>
    <% } %>
  </div>

  <!-- Customer Reviews - Summary Only -->
  <div class="bg-white rounded-xl shadow-md border border-gray-100 mb-6">
    <div class="p-6">
      <div class="flex flex-col lg:flex-row lg:items-center lg:justify-between gap-4">
        <div class="flex items-center gap-4">
          <div class="w-12 h-12 bg-yellow-100 rounded-full flex items-center justify-center">
            <i class="fa fa-star text-yellow-600 text-xl"></i>
          </div>
          <div>
            <h3 class="text-lg sm:text-xl font-bold text-gray-800">Customer Reviews</h3>
            <p class="text-sm sm:text-base text-gray-600">Review management for this product</p>
          </div>
        </div>
        
        <!-- Review Stats -->
        <div class="flex flex-wrap items-center gap-4 sm:gap-6">
          <div class="text-center">
            <div class="text-xl sm:text-2xl font-bold text-yellow-600"><%= product.rating || 0 %></div>
            <div class="text-xs sm:text-sm text-gray-500">Average Rating</div>
          </div>
          <div class="text-center">
            <div class="text-xl sm:text-2xl font-bold text-blue-600"><%= product.reviewCount || 0 %></div>
            <div class="text-xs sm:text-sm text-gray-500">Total Reviews</div>
          </div>
          <% if (reviews && reviews.length > 0) { %>
            <% const pendingCount = reviews.filter(r => r.status === 'pending').length; %>
            <% if (pendingCount > 0) { %>
              <div class="text-center">
                <div class="text-xl sm:text-2xl font-bold text-orange-600"><%= pendingCount %></div>
                <div class="text-xs sm:text-sm text-gray-500">Pending</div>
              </div>
            <% } %>
          <% } %>
          
          <!-- Manage Button -->
          <a href="/admin/v1/products/<%= product._id %>/reviews" class="px-3 sm:px-6 py-2 sm:py-3 bg-blue-600 text-white rounded-lg hover:bg-blue-700 transition font-medium flex items-center gap-2 text-sm sm:text-base">
            <i class="fa fa-cog"></i> <span class="hidden sm:inline">Manage Reviews</span><span class="sm:hidden">Manage</span>
          </a>
        </div>
      </div>
      
      <!-- Quick Status Bar -->
      <% if (reviews && reviews.length > 0) { %>
        <div class="mt-4 pt-4 border-t border-gray-100">
          <div class="flex items-center justify-between">
            <div class="flex items-center gap-4 text-sm text-gray-600">
              <span><%= reviews.filter(r => r.status === 'approved').length %> Approved</span>
              <span><%= reviews.filter(r => r.status === 'pending').length %> Pending</span>
              <span><%= reviews.filter(r => r.status === 'rejected').length %> Rejected</span>
            </div>
            <div class="text-sm text-gray-500">
              Last review: <%= new Date(Math.max(...reviews.map(r => new Date(r.createdAt)))).toLocaleDateString('en-US', { month: 'short', day: 'numeric' }) %>
            </div>
          </div>
        </div>
      <% } else { %>
        <div class="mt-4 pt-4 border-t border-gray-100 text-center">
          <p class="text-gray-500">No customer reviews yet for this product.</p>
        </div>
      <% } %>
    </div>
  </div>

  <!-- Product Analytics & Metadata -->
  <div class="bg-white rounded-xl shadow-md p-6 border border-gray-100 mb-6">
    <h3 class="text-xl font-bold text-gray-800 mb-6 flex items-center gap-2">
      <i class="fa fa-chart-line text-indigo-600"></i> Product Analytics & Metadata
    </h3>
    
    <div class="grid grid-cols-1 md:grid-cols-3 gap-6">
      <div class="bg-indigo-50 rounded-lg p-4">
        <div class="flex items-center justify-between mb-2">
          <span class="text-sm font-medium text-indigo-700">Product Performance</span>
          <i class="fa fa-chart-bar text-indigo-600"></i>
        </div>
        <div class="space-y-2">
          <div class="flex justify-between">
            <span class="text-sm text-gray-600">Orders:</span>
            <span class="text-sm font-semibold"><%= product.totalOrders || 0 %></span>
          </div>
          <div class="flex justify-between">
            <span class="text-sm text-gray-600">Rating:</span>
            <span class="text-sm font-semibold"><%= product.rating || 0 %>/5 ⭐</span>
          </div>
        </div>
      </div>
      
      <div class="bg-gray-50 rounded-lg p-4">
        <div class="flex items-center justify-between mb-2">
          <span class="text-sm font-medium text-gray-700">System Information</span>
          <i class="fa fa-database text-gray-600"></i>
        </div>
        <div class="space-y-2">
          <div>
            <span class="text-xs text-gray-500">Created:</span>
            <div class="text-sm font-medium"><%= new Date(product.createdAt).toLocaleDateString('en-US', { year: 'numeric', month: 'short', day: 'numeric', hour: '2-digit', minute: '2-digit' }) %></div>
          </div>
          <div>
            <span class="text-xs text-gray-500">Last Updated:</span>
            <div class="text-sm font-medium"><%= new Date(product.updatedAt).toLocaleDateString('en-US', { year: 'numeric', month: 'short', day: 'numeric', hour: '2-digit', minute: '2-digit' }) %></div>
          </div>
        </div>
      </div>
      
      <div class="bg-yellow-50 rounded-lg p-4">
        <div class="flex items-center justify-between mb-2">
          <span class="text-sm font-medium text-yellow-700">Inventory Status</span>
          <i class="fa fa-warehouse text-yellow-600"></i>
        </div>
        <div class="space-y-2">
          <% 
            const totalStock = product.variants ? product.variants.reduce((sum, v) => sum + (v.qty || 0), 0) : 0;
            const lowStockVariants = product.variants ? product.variants.filter(v => v.qty <= (v.thresholdQty || 5) && v.qty > 0).length : 0;
            const outOfStockVariants = product.variants ? product.variants.filter(v => v.qty === 0).length : 0;
          %>
          <div class="flex justify-between">
            <span class="text-sm text-gray-600">Total Stock:</span>
            <span class="text-sm font-semibold <%= totalStock > 0 ? 'text-green-600' : 'text-red-600' %>"><%= totalStock %></span>
          </div>
          <div class="flex justify-between">
            <span class="text-sm text-gray-600">Low Stock:</span>
            <span class="text-sm font-semibold text-orange-600"><%= lowStockVariants %> variants</span>
          </div>
          <div class="flex justify-between">
            <span class="text-sm text-gray-600">Out of Stock:</span>
            <span class="text-sm font-semibold text-red-600"><%= outOfStockVariants %> variants</span>
          </div>
        </div>
      </div>
    </div>
  </div>

  <!-- Actions -->
  <div class="flex flex-col sm:flex-row sm:justify-between sm:items-center mt-8 gap-4">
    <div class="flex gap-3">
      <a href="/admin/v1/products" class="px-4 sm:px-6 py-3 rounded-lg bg-gray-100 text-gray-700 hover:bg-gray-200 transition font-medium flex items-center gap-2 text-sm sm:text-base">
        <i class="fa fa-arrow-left"></i> <span class="hidden sm:inline">Back to Products</span><span class="sm:hidden">Back</span>
      </a>
    </div>
    <div class="flex flex-col sm:flex-row gap-3">
      <a href="/admin/v1/products/<%= product._id %>/edit" class="px-4 sm:px-6 py-3 rounded-lg bg-blue-600 text-white font-semibold hover:bg-blue-700 transition flex items-center justify-center gap-2 text-sm sm:text-base">
        <i class="fa fa-edit"></i> <span class="hidden sm:inline">Edit Product</span><span class="sm:hidden">Edit</span>
      </a>
      <a href="/admin/v1/reviews?product=<%= product._id %>" class="px-4 sm:px-6 py-3 rounded-lg bg-purple-600 text-white font-semibold hover:bg-purple-700 transition flex items-center justify-center gap-2 text-sm sm:text-base">
        <i class="fa fa-star"></i> <span class="hidden sm:inline">All Reviews</span><span class="sm:hidden">Reviews</span>
      </a>
    </div>
  </div>
</main>

