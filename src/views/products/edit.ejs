<%- include('../partials/header.ejs', { title: `Edit ${product.title}` }) %>

<div class="min-h-screen bg-gradient-to-br from-gray-50 to-blue-50">
  <div class="max-w-6xl mx-auto px-4 sm:px-6 lg:px-8 py-4 sm:py-6">
    
    <!-- Header -->
    <div class="flex flex-col lg:flex-row lg:justify-between lg:items-center mb-6 sm:mb-8 gap-4">
      <div class="text-center lg:text-left">
        <h1 class="text-2xl sm:text-3xl lg:text-4xl font-bold text-gray-900 mb-2">Edit Product</h1>
        <p class="text-gray-600 text-sm sm:text-base">Update product information and settings</p>
      </div>
      <div class="flex flex-col sm:flex-row items-center gap-3 w-full lg:w-auto">
        <a href="/admin/v1/staff/dashboard" class="w-full sm:w-auto px-4 py-2.5 bg-white border border-gray-300 rounded-lg hover:bg-gray-50 transition-colors text-center font-medium">
          Dashboard
        </a>
        <a href="/admin/v1/products" class="w-full sm:w-auto px-4 py-2.5 bg-gray-600 text-white rounded-lg hover:bg-gray-700 transition-colors text-center font-medium">
          All Products
        </a>
        <a href="/admin/v1/products/<%= product._id %>" class="w-full sm:w-auto px-4 py-2.5 bg-yellow-500 text-white rounded-lg hover:bg-yellow-600 transition-colors text-center font-medium">
          View Product
        </a>
      </div>
    </div>

    <!-- Flash Messages -->
    <% if (success && success.length) { %>
      <div class="mb-6 p-4 rounded-lg bg-green-50 border border-green-200 text-green-800">
        <% success.forEach(msg => { %>
          <div class="flex items-center gap-2">
            <div class="text-green-600">✓</div>
            <%= msg %>
          </div>
        <% }) %>
      </div>
    <% } %>

    <% if (error && error.length) { %>
      <div class="mb-6 p-4 rounded-lg bg-red-50 border border-red-200 text-red-800">
        <% error.forEach(msg => { %>
          <div class="flex items-center gap-2">
            <div class="text-red-600">✗</div>
            <%= msg %>
          </div>
        <% }) %>
      </div>
    <% } %>

    <form action="/admin/v1/products/<%= product._id %>?_method=PUT" method="POST" enctype="multipart/form-data" class="space-y-6" id="productForm">
      <!-- Basic Information -->
      <div class="bg-white rounded-xl shadow-sm border border-gray-200 p-6">
        <h3 class="text-lg font-semibold text-gray-900 mb-4">Basic Information</h3>
        
        <div class="grid grid-cols-1 md:grid-cols-2 gap-4">
          <div>
            <label class="block font-semibold mb-2 text-gray-700">Product Title *</label>
            <input name="title" value="<%= product.title %>" 
                   class="w-full p-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-blue-500" 
                   placeholder="Premium Wireless Headphones" required />
          </div>
          
          <div>
            <label class="block font-semibold mb-2 text-gray-700">Brand *</label>
            <select name="brand" required class="w-full p-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-blue-500">
              <option value="">Select Brand</option>
              <% brands.forEach(brand => { %>
                <option value="<%= brand._id %>" <%= brand._id.toString() === product.brand.toString() ? 'selected' : '' %>>
                  <%= brand.name %>
                </option>
              <% }) %>
            </select>
          </div>
        </div>

        <div class="mt-4">
          <label class="block font-semibold mb-2 text-gray-700">Short Description</label>
          <textarea name="shortDescription" rows="2" 
                    class="w-full p-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-blue-500" 
                    placeholder="Brief product description..."><%= product.shortDescription || '' %></textarea>
        </div>

        <div class="mt-4">
          <label class="block font-semibold mb-2 text-gray-700">Full Description *</label>
          <textarea name="description" rows="4" 
                    class="w-full p-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-blue-500" 
                    placeholder="Detailed product description..." required><%= product.description %></textarea>
        </div>
      </div>

      <!-- Categories -->
      <div class="bg-white rounded-xl shadow-sm border border-gray-200 p-6">
        <h3 class="text-lg font-semibold text-gray-900 mb-4">Categories</h3>
        
        <div class="grid grid-cols-1 md:grid-cols-3 gap-4">
          <div>
            <label class="block font-semibold mb-2 text-gray-700">Category *</label>
            <select name="category" required class="w-full p-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-blue-500">
              <option value="">Select Category</option>
              <% categories.forEach(cat => { %>
                <option value="<%= cat._id %>" <%= cat._id.toString() === product.category.toString() ? 'selected' : '' %>>
                  <%= cat.name %>
                </option>
              <% }) %>
            </select>
          </div>

          <div>
            <label class="block font-semibold mb-2 text-gray-700">Sub Category *</label>
            <select name="subCategory" required class="w-full p-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-blue-500">
              <option value="">Select Sub Category</option>
              <% subCategories.forEach(sub => { %>
                <option value="<%= sub._id %>" <%= sub._id.toString() === product.subCategory.toString() ? 'selected' : '' %>>
                  <%= sub.name %>
                </option>
              <% }) %>
            </select>
          </div>

          <div>
            <label class="block font-semibold mb-2 text-gray-700">Type *</label>
            <select name="type" required class="w-full p-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-blue-500">
              <option value="">Select Type</option>
              <% types.forEach(type => { %>
                <option value="<%= type._id %>" <%= type._id.toString() === product.type.toString() ? 'selected' : '' %>>
                  <%= type.name %>
                </option>
              <% }) %>
            </select>
          </div>
        </div>
      </div>

      <!-- Product Images -->
      <div class="bg-white rounded-xl shadow-sm border border-gray-200 p-6">
        <h3 class="text-xl font-bold text-gray-800 mb-4">Product Gallery</h3>
        
        <!-- Existing Images -->
        <% if (product.images && product.images.length > 0) { %>
          <div class="mb-6">
            <h4 class="font-semibold text-gray-700 mb-4">Current Images</h4>
            <div class="flex flex-col lg:flex-row gap-6">
              <!-- Main Image Display -->
              <div class="lg:w-2/5">
                <div class="space-y-4">
                  <div class="relative group">
                    <img src="/uploads/products/<%= product.images[0] %>" alt="<%= product.title %>" class="w-full h-80 object-cover rounded-lg shadow-md border">
                    <button type="button" class="absolute top-3 right-3 bg-red-500 text-white rounded-full w-8 h-8 flex items-center justify-center opacity-0 group-hover:opacity-100 transition remove-image-btn shadow-lg" data-image-filename="<%= product.images[0] %>">
                      ×
                    </button>
                    <div class="absolute bottom-3 left-3 bg-black bg-opacity-50 text-white px-2 py-1 rounded text-sm">
                      Main Image
                    </div>
                  </div>
                  
                  <!-- Thumbnail Grid -->
                  <% if (product.images.length > 1) { %>
                    <div class="grid grid-cols-4 gap-3">
                      <% product.images.slice(1, 5).forEach((img, index) => { %>
                        <div class="relative group">
                          <img src="/uploads/products/<%= img %>" alt="<%= product.title %>" class="w-full h-20 object-cover rounded-lg border hover:border-purple-300 transition">
                          <button type="button" class="absolute top-1 right-1 bg-red-500 text-white rounded-full w-5 h-5 flex items-center justify-center opacity-0 group-hover:opacity-100 transition remove-image-btn" data-image-filename="<%= img %>">
                            ×
                          </button>
                        </div>
                      <% }) %>
                    </div>
                  <% } %>
                  
                  <!-- Additional Images (if more than 5) -->
                  <% if (product.images.length > 5) { %>
                    <div class="mt-4">
                      <h5 class="text-sm font-medium text-gray-600 mb-3">Additional Images (<%= product.images.length - 5 %> more)</h5>
                      <div class="grid grid-cols-3 md:grid-cols-4 gap-3">
                        <% product.images.slice(5).forEach((img, index) => { %>
                          <div class="relative group">
                            <img src="/uploads/products/<%= img %>" alt="Product image <%= index + 6 %>" class="w-full h-20 object-cover rounded-lg border hover:border-purple-300 transition">
                            <button type="button" class="absolute top-1 right-1 bg-red-500 text-white rounded-full w-5 h-5 flex items-center justify-center opacity-0 group-hover:opacity-100 transition remove-image-btn" data-image-filename="<%= img %>">
                              ×
                            </button>
                          </div>
                        <% }) %>
                      </div>
                    </div>
                  <% } %>
                </div>
              </div>
              
              <!-- Image Management Info -->
              <div class="lg:w-3/5">
                <div class="bg-gradient-to-r from-purple-50 to-indigo-50 rounded-lg p-6 border border-purple-100">
                  <h5 class="font-semibold text-purple-800 mb-4">Image Management</h5>
                  
                  <div class="grid grid-cols-2 gap-4 mb-4">
                    <div class="bg-white rounded-lg p-3 border">
                      <div class="text-sm text-gray-600">Total Images</div>
                      <div class="text-xl font-bold text-purple-600"><%= product.images.length %></div>
                    </div>
                    <div class="bg-white rounded-lg p-3 border">
                      <div class="text-sm text-gray-600">Main Image</div>
                      <div class="text-sm font-medium text-gray-800">Image #1</div>
                    </div>
                  </div>
                  
                  <div class="space-y-2 text-sm text-gray-700">
                    <p>• The first image serves as the main product image and thumbnail</p>
                    <p>• Hover over any image to reveal the delete button</p>
                    <p>• Removing images will permanently delete them from the server</p>
                  </div>
                </div>
              </div>
            </div>
          </div>
        <% } else { %>
          <div class="mb-6">
            <div class="w-full h-80 bg-gray-100 rounded-lg flex items-center justify-center border-2 border-dashed border-gray-300">
              <div class="text-center">
                <div class="text-4xl text-gray-400 mb-3">📷</div>
                <h4 class="text-lg font-medium text-gray-600 mb-2">No images uploaded</h4>
                <p class="text-gray-500">Add some product images below to get started</p>
              </div>
            </div>
          </div>
        <% } %>
        
        <div>
          <label class="block font-semibold mb-2 text-gray-700">Upload Additional Images</label>
          <input type="file" name="images" multiple accept="image/*" id="imageInput"
                 class="w-full p-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-blue-500" />
          <p class="text-sm text-gray-500 mt-1">Add more product images (JPEG, PNG, WebP • Max 5MB each)</p>
          
          <!-- Image Preview -->
          <div id="imagePreview" class="mt-4 grid grid-cols-2 md:grid-cols-4 gap-4" style="display: none;">
          </div>
        </div>
        
        <input type="hidden" name="removedImages" id="removedImages" value="" />
      </div>

      <!-- Product Variants -->
      <div class="bg-white rounded-xl shadow-sm border border-gray-200 p-6">
        <h3 class="text-xl font-bold text-gray-800 mb-4">Product Variants</h3>
        
        <div id="variants-container">
          <% product.variants.forEach((variant, index) => { %>
            <div class="variant-item border border-gray-200 rounded-lg p-4 mb-4">
              <div class="flex justify-between items-center mb-4">
                <h4 class="font-semibold text-gray-700">Variant #<%= index + 1 %></h4>
                <% if (product.variants.length > 1 && !variant.isDefault) { %>
                  <button type="button" class="delete-variant px-3 py-1 bg-red-500 text-white rounded hover:bg-red-600 transition text-sm">
                    Delete
                  </button>
                <% } else if (variant.isDefault) { %>
                  <span class="px-3 py-1 bg-blue-100 text-blue-700 rounded text-sm font-medium">Default</span>
                <% } %>
              </div>
              <div class="grid grid-cols-1 md:grid-cols-4 gap-4">
                <input type="hidden" name="variants[<%= index %>][_id]" value="<%= variant._id %>" />
                <div>
                  <label class="block font-semibold mb-1 text-gray-700">SKU *</label>
                  <input name="variants[<%= index %>][sku]" type="text" value="<%= variant.sku %>" required
                         class="w-full p-2 border border-gray-300 rounded focus:ring-2 focus:ring-blue-500 focus:border-blue-500" />
                </div>
                <div>
                  <label class="block font-semibold mb-1 text-gray-700">Current Price *</label>
                  <input name="variants[<%= index %>][price]" type="number" step="0.01" min="0" value="<%= variant.price %>" required
                         class="w-full p-2 border border-gray-300 rounded focus:ring-2 focus:ring-blue-500 focus:border-blue-500" />
                </div>
                <div>
                  <label class="block font-semibold mb-1 text-gray-700">Original Price</label>
                  <input name="variants[<%= index %>][originalPrice]" type="number" step="0.01" min="0" value="<%= variant.originalPrice || '' %>"
                         class="w-full p-2 border border-gray-300 rounded focus:ring-2 focus:ring-blue-500 focus:border-blue-500" />
                </div>
                <div>
                  <label class="block font-semibold mb-1 text-gray-700">Stock *</label>
                  <input name="variants[<%= index %>][stock]" type="number" min="0" value="<%= variant.stock %>" required
                         class="w-full p-2 border border-gray-300 rounded focus:ring-2 focus:ring-blue-500 focus:border-blue-500" />
                </div>
                <div>
                  <label class="block font-semibold mb-1 text-gray-700">Color</label>
                  <input name="variants[<%= index %>][color]" type="text" value="<%= variant.color || '' %>"
                         class="w-full p-2 border border-gray-300 rounded focus:ring-2 focus:ring-blue-500 focus:border-blue-500" />
                </div>
                <div>
                  <label class="block font-semibold mb-1 text-gray-700">Size</label>
                  <input name="variants[<%= index %>][size]" type="text" value="<%= variant.size || '' %>"
                         class="w-full p-2 border border-gray-300 rounded focus:ring-2 focus:ring-blue-500 focus:border-blue-500" />
                </div>
              </div>
              <div class="mt-3">
                <label class="flex items-center">
                  <input name="defaultVariant" type="radio" value="<%= index %>" <%= variant.isDefault ? 'checked' : '' %>
                         class="rounded border-gray-300 text-blue-600 focus:ring-blue-500" />
                  <span class="ml-2 text-sm text-gray-700">Default variant</span>
                </label>
              </div>
            </div>
          <% }) %>
        </div>
        
        <button type="button" id="add-variant" class="px-4 py-2 bg-green-600 text-white rounded-lg hover:bg-green-700">
          Add Variant
        </button>
      </div>

      <!-- Technical Specifications -->
      <div class="bg-white rounded-xl shadow-sm border border-gray-200 p-6">
        <h3 class="text-xl font-bold text-gray-800 mb-4">Technical Specifications</h3>
        
        <div id="specifications-container">
          <% if (specifications && specifications.length > 0) { %>
            <% specifications.forEach((spec, index) => { %>
              <div class="specification-item border border-gray-200 rounded-lg p-4 mb-4">
                <div class="flex justify-between items-center mb-3">
                  <h4 class="font-semibold text-gray-700">Specification #<%= index + 1 %></h4>
                  <button type="button" class="delete-specification px-3 py-1 bg-red-500 text-white rounded hover:bg-red-600 transition text-sm">
                    Delete
                  </button>
                </div>
                <div class="grid grid-cols-1 md:grid-cols-2 gap-4">
                  <div>
                    <label class="block font-semibold mb-1 text-gray-700">Specification *</label>
                    <select name="specifications[<%= index %>][specList]" required class="w-full p-2 border border-gray-300 rounded focus:ring-2 focus:ring-blue-500 focus:border-blue-500">
                      <option value="">Select Specification</option>
                      <% specLists.forEach(specList => { %>
                        <option value="<%= specList._id %>" <%= spec.specList._id.toString() === specList._id.toString() ? 'selected' : '' %>>
                          <%= specList.title %>
                        </option>
                      <% }) %>
                    </select>
                  </div>
                  <div>
                    <label class="block font-semibold mb-1 text-gray-700">Value *</label>
                    <input name="specifications[<%= index %>][value]" type="text" value="<%= spec.value %>" required
                           class="w-full p-2 border border-gray-300 rounded focus:ring-2 focus:ring-blue-500 focus:border-blue-500" 
                           placeholder="Enter specification value" />
                  </div>
                </div>
              </div>
            <% }) %>
          <% } %>
        </div>
        
        <button type="button" id="add-specification" class="px-4 py-2 bg-green-600 text-white rounded-lg hover:bg-green-700">
          Add Specification
        </button>
      </div>

      <!-- Business Information -->
      <div class="bg-white rounded-xl shadow-sm border border-gray-200 p-6">
        <h3 class="text-xl font-bold text-gray-800 mb-4">Business Information</h3>
        
        <div class="grid grid-cols-1 md:grid-cols-2 gap-4">
          <div>
            <label class="block font-semibold mb-2 text-gray-700">Warranty</label>
            <input name="warranty" value="<%= product.warranty || '' %>" 
                   class="w-full p-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-blue-500" 
                   placeholder="1 year manufacturer warranty" />
          </div>
          
          <div>
            <label class="block font-semibold mb-2 text-gray-700">Return Policy</label>
            <input name="returnPolicy" value="<%= product.returnPolicy || '' %>" 
                   class="w-full p-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-blue-500" 
                   placeholder="30 days return policy" />
          </div>
          
          <div>
            <label class="block font-semibold mb-2 text-gray-700">Shipping Info</label>
            <input name="shippingInfo" value="<%= product.shippingInfo || '' %>" 
                   class="w-full p-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-blue-500" 
                   placeholder="Free shipping on orders over $50" />
          </div>
          
          <div>
            <label class="block font-semibold mb-2 text-gray-700">Tags</label>
            <input name="tags" value="<%= product.tags ? product.tags.join(', ') : '' %>" 
                   class="w-full p-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-blue-500" 
                   placeholder="smartphone, premium, 5G, wireless charging" />
            <p class="text-sm text-gray-500 mt-1">Separate multiple tags with commas</p>
          </div>
        </div>
      </div>

      <!-- Product Settings -->
      <div class="bg-white rounded-xl shadow-sm border border-gray-200 p-6">
        <h3 class="text-xl font-bold text-gray-800 mb-4">Product Settings</h3>
        
        <div class="grid grid-cols-1 md:grid-cols-2 gap-4">
          <div>
            <label class="block font-semibold mb-2 text-gray-700">Status</label>
            <select name="status" class="w-full p-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-blue-500">
              <option value="draft" <%= product.status === 'draft' ? 'selected' : '' %>>Draft</option>
              <option value="active" <%= product.status === 'active' ? 'selected' : '' %>>Active</option>
              <option value="inactive" <%= product.status === 'inactive' ? 'selected' : '' %>>Inactive</option>
            </select>
          </div>
          
          <div class="flex items-center">
            <label class="flex items-center">
              <input name="featured" type="checkbox" value="true" <%= product.featured ? 'checked' : '' %>
                     class="rounded border-gray-300 text-blue-600 focus:ring-blue-500" />
              <span class="ml-2 text-gray-700">Featured Product</span>
            </label>
          </div>
        </div>
      </div>

      <!-- Submit Buttons -->
      <div class="flex justify-end gap-3">
        <a href="/admin/v1/products" class="px-6 py-3 rounded-lg bg-gray-100 text-gray-700 hover:bg-gray-200 transition font-medium">
          Cancel
        </a>
        <button type="submit" class="px-6 py-3 rounded-lg bg-blue-600 text-white font-semibold hover:bg-blue-700 transition">
          Update Product
        </button>
      </div>
    </form>
  </div>
</div>

<script>
const removedImages = [];
let variantCount = parseInt('<%= product.variants.length %>');
let specificationCount = parseInt('<%= specifications ? specifications.length : 0 %>');

// Image upload preview
document.getElementById('imageInput').addEventListener('change', function(e) {
  const files = Array.from(e.target.files);
  const preview = document.getElementById('imagePreview');
  
  if (files.length > 0) {
    preview.style.display = 'grid';
    preview.innerHTML = '';
    
    files.forEach((file, index) => {
      if (file.type.startsWith('image/')) {
        const reader = new FileReader();
        reader.onload = function(e) {
          const div = document.createElement('div');
          div.className = 'relative border rounded-lg overflow-hidden';
          div.innerHTML = `
            <img src="${e.target.result}" alt="Preview ${index + 1}" class="w-full h-32 object-cover">
            <div class="absolute top-2 left-2 bg-blue-600 text-white text-xs px-2 py-1 rounded">
              ${index === 0 ? 'Thumbnail' : `Image ${index + 1}`}
            </div>
            <div class="absolute bottom-2 right-2 bg-black bg-opacity-50 text-white text-xs px-2 py-1 rounded">
              ${(file.size / 1024 / 1024).toFixed(1)}MB
            </div>
          `;
          preview.appendChild(div);
        };
        reader.readAsDataURL(file);
      }
    });
  } else {
    preview.style.display = 'none';
  }
});

// Image removal functionality
document.addEventListener('click', function(e) {
  if (e.target.closest('.remove-image-btn')) {
    const btn = e.target.closest('.remove-image-btn');
    const imageFilename = btn.dataset.imageFilename;
    
    if (confirm('Are you sure you want to remove this image?')) {
      removedImages.push(imageFilename);
      document.getElementById('removedImages').value = JSON.stringify(removedImages);
      btn.closest('.relative').remove();
    }
  }
});

// Variant management
function getNextVariantIndex() {
  return document.querySelectorAll('.variant-item').length;
}

document.getElementById('add-variant').addEventListener('click', function() {
  const container = document.getElementById('variants-container');
  const variantIndex = getNextVariantIndex();
  const newVariant = document.createElement('div');
  newVariant.className = 'variant-item border border-gray-200 rounded-lg p-4 mb-4';
  newVariant.innerHTML = `
    <div class="flex justify-between items-center mb-3">
      <h4 class="font-semibold text-gray-700">Variant #${variantIndex + 1}</h4>
      <button type="button" class="delete-variant px-3 py-1 bg-red-500 text-white rounded hover:bg-red-600">
        Delete
      </button>
    </div>
    <div class="grid grid-cols-1 md:grid-cols-4 gap-4">
      <div>
        <label class="block font-semibold mb-1 text-gray-700">SKU *</label>
        <input name="variants[${variantIndex}][sku]" type="text" required
               class="w-full p-2 border border-gray-300 rounded focus:ring-2 focus:ring-blue-500 focus:border-blue-500" 
               placeholder="PROD-${String(variantIndex + 1).padStart(3, '0')}" />
      </div>
      <div>
        <label class="block font-semibold mb-1 text-gray-700">Current Price *</label>
        <input name="variants[${variantIndex}][price]" type="number" step="0.01" min="0" required
               class="w-full p-2 border border-gray-300 rounded focus:ring-2 focus:ring-blue-500 focus:border-blue-500" 
               placeholder="99.99" />
      </div>
      <div>
        <label class="block font-semibold mb-1 text-gray-700">Original Price</label>
        <input name="variants[${variantIndex}][originalPrice]" type="number" step="0.01" min="0"
               class="w-full p-2 border border-gray-300 rounded focus:ring-2 focus:ring-blue-500 focus:border-blue-500" 
               placeholder="129.99" />
      </div>
      <div>
        <label class="block font-semibold mb-1 text-gray-700">Stock *</label>
        <input name="variants[${variantIndex}][stock]" type="number" min="0" required
               class="w-full p-2 border border-gray-300 rounded focus:ring-2 focus:ring-blue-500 focus:border-blue-500" 
               placeholder="100" />
      </div>
      <div>
        <label class="block font-semibold mb-1 text-gray-700">Color</label>
        <input name="variants[${variantIndex}][color]" type="text"
               class="w-full p-2 border border-gray-300 rounded focus:ring-2 focus:ring-blue-500 focus:border-blue-500" 
               placeholder="Black" />
      </div>
      <div>
        <label class="block font-semibold mb-1 text-gray-700">Size</label>
        <input name="variants[${variantIndex}][size]" type="text"
               class="w-full p-2 border border-gray-300 rounded focus:ring-2 focus:ring-blue-500 focus:border-blue-500" 
               placeholder="Medium" />
      </div>
    </div>
    <div class="mt-3">
      <label class="flex items-center">
        <input name="defaultVariant" type="radio" value="${variantIndex}"
               class="rounded border-gray-300 text-blue-600 focus:ring-blue-500" />
        <span class="ml-2 text-sm text-gray-700">Default variant</span>
      </label>
    </div>
  `;
  
  container.appendChild(newVariant);
  variantCount++;
});

// Delete variant functionality
document.addEventListener('click', function(e) {
  if (e.target.closest('.delete-variant')) {
    const variant = e.target.closest('.variant-item');
    const variants = document.querySelectorAll('.variant-item');
    
    if (variants.length > 1) {
      if (confirm('Are you sure you want to delete this variant?')) {
        variant.remove();
      }
    } else {
      alert('At least one variant is required');
    }
  }
});

// Specification management
function getNextSpecificationIndex() {
  return document.querySelectorAll('.specification-item').length;
}

document.getElementById('add-specification').addEventListener('click', function() {
  const container = document.getElementById('specifications-container');
  const specIndex = getNextSpecificationIndex();
  const newSpec = document.createElement('div');
  newSpec.className = 'specification-item border border-gray-200 rounded-lg p-4 mb-4';
  newSpec.innerHTML = `
    <div class="flex justify-between items-center mb-3">
      <h4 class="font-semibold text-gray-700">Specification #${specIndex + 1}</h4>
      <button type="button" class="delete-specification px-3 py-1 bg-red-500 text-white rounded hover:bg-red-600 transition text-sm">
        Delete
      </button>
    </div>
    <div class="grid grid-cols-1 md:grid-cols-2 gap-4">
      <div>
        <label class="block font-semibold mb-1 text-gray-700">Specification *</label>
        <select name="specifications[${specIndex}][specList]" required class="w-full p-2 border border-gray-300 rounded focus:ring-2 focus:ring-blue-500 focus:border-blue-500">
          <option value="">Select Specification</option>
          <% specLists.forEach(specList => { %>
            <option value="<%= specList._id %>"><%= specList.title %></option>
          <% }) %>
        </select>
      </div>
      <div>
        <label class="block font-semibold mb-1 text-gray-700">Value *</label>
        <input name="specifications[${specIndex}][value]" type="text" required
               class="w-full p-2 border border-gray-300 rounded focus:ring-2 focus:ring-blue-500 focus:border-blue-500" 
               placeholder="Enter specification value" />
      </div>
    </div>
  `;
  
  container.appendChild(newSpec);
  specificationCount++;
});

// Delete specification functionality
document.addEventListener('click', function(e) {
  if (e.target.closest('.delete-specification')) {
    const spec = e.target.closest('.specification-item');
    if (confirm('Are you sure you want to delete this specification?')) {
      spec.remove();
    }
  }
});
</script>

