<%- include('../partials/header.ejs', { title: 'Brand Carousel' }) %>

<nav class="flex flex-wrap gap-3 mb-8 p-4 bg-white rounded-xl shadow-sm border border-gray-100 items-center">
  <a href="/admin/v1/staff/dashboard" class="flex items-center gap-2 px-4 py-2 rounded-lg bg-blue-50 text-blue-700 hover:bg-blue-100 transition">
    <i class="fa fa-home"></i> Dashboard
  </a>
  <a href="/admin/v1/staff/content" class="flex items-center gap-2 px-4 py-2 rounded-lg bg-gray-50 text-gray-700 hover:bg-gray-100 transition">
    <i class="fa fa-cog"></i> Content Management
  </a>
</nav>

<main class="container mx-auto max-w-7xl px-4 mt-8">
  <div class="flex flex-col md:flex-row md:justify-between md:items-center mb-8 gap-4">
    <h1 class="text-3xl font-bold text-gray-800">Brand Carousel</h1>
    <a href="<%= baseUrl %>/new" class="px-4 py-2.5 rounded-lg bg-green-600 text-white font-medium hover:bg-green-700 transition flex items-center gap-2">
      <i class="fa fa-plus"></i> Add Brand
    </a>
  </div>

  <!-- Flash Messages -->
  <% if (success && success.length) { %>
    <div class="mb-6 p-4 rounded-lg border-l-4 border-green-400 bg-green-50 text-green-800 shadow-sm">
      <% success.forEach(msg => { %>
        <div class="flex items-center gap-2">
          <i class="fa fa-check-circle"></i>
          <%= msg %>
        </div>
      <% }) %>
    </div>
  <% } %>
  <% if (error && error.length) { %>
    <div class="mb-6 p-4 rounded-lg border-l-4 border-red-400 bg-red-50 text-red-800 shadow-sm">
      <% error.forEach(msg => { %>
        <div class="flex items-center gap-2">
          <i class="fa fa-exclamation-circle"></i>
          <%= msg %>
        </div>
      <% }) %>
    </div>
  <% } %>

  <div class="bg-white rounded-xl shadow-md mb-10 border border-gray-100">
    <% if (!items || items.length === 0) { %>
      <div class="p-8 text-center">
        <i class="fa fa-tags text-5xl text-gray-300 mb-4"></i>
        <h2 class="text-xl font-semibold text-gray-800 mb-2">No Brands in Carousel</h2>
        <p class="text-gray-500 mb-6">Add brands to display in the carousel</p>
        <a href="<%= baseUrl %>/new" class="inline-flex items-center px-4 py-2.5 rounded-lg bg-blue-600 text-white font-medium hover:bg-blue-700 transition">
          <i class="fa fa-plus mr-2"></i> Add First Brand
        </a>
      </div>
    <% } else { %>
      <div class="overflow-x-auto">
        <table class="w-full text-sm">
          <thead>
            <tr class="border-b border-gray-200 bg-gray-50">
              <th class="py-3 px-4 text-left font-semibold text-gray-600">Logo</th>
              <th class="py-3 px-4 text-left font-semibold text-gray-600">Brand</th>
              <th class="py-3 px-4 text-left font-semibold text-gray-600">Order</th>
              <th class="py-3 px-4 text-left font-semibold text-gray-600">Status</th>
              <th class="py-3 px-4 text-left font-semibold text-gray-600">Actions</th>
            </tr>
          </thead>
          <tbody>
            <% items.forEach(item => { %>
              <tr class="hover:bg-blue-50 transition-colors border-b border-gray-100 last:border-0">
                <td class="py-4 px-4">
                  <% if (item.brand.logo) { %>
                    <img src="/uploads/<%= item.brand.logo %>" alt="<%= item.brand.name %>" class="w-16 h-16 object-contain rounded border">
                  <% } else { %>
                    <div class="w-16 h-16 bg-gray-100 rounded border flex items-center justify-center">
                      <i class="fa fa-image text-gray-400"></i>
                    </div>
                  <% } %>
                </td>
                <td class="py-4 px-4">
                  <div class="font-medium text-gray-800"><%= item.brand.name %></div>
                </td>
                <td class="py-4 px-4">
                  <span class="px-2 py-1 rounded text-xs font-medium bg-gray-100 text-gray-800">
                    <%= item.order %>
                  </span>
                </td>
                <td class="py-4 px-4">
                  <span class="px-2 py-1 rounded text-xs font-medium <%= item.status === 'active' ? 'bg-green-100 text-green-800' : 'bg-red-100 text-red-800' %>">
                    <%= item.status %>
                  </span>
                </td>
                <td class="py-4 px-4">
                  <div class="flex gap-2">
                    <a href="<%= baseUrl %>/<%= item._id %>" class="px-3 py-2 bg-blue-100 text-blue-700 hover:bg-blue-200 transition rounded">
                      <i class="fa fa-eye"></i>
                    </a>
                    <a href="<%= baseUrl %>/<%= item._id %>/edit" class="px-3 py-2 bg-yellow-100 text-yellow-700 hover:bg-yellow-200 transition rounded">
                      <i class="fa fa-edit"></i>
                    </a>
                    <form action="<%= baseUrl %>/<%= item._id %>" method="POST" class="inline">
                      <input type="hidden" name="_method" value="DELETE">
                      <button type="submit" class="px-3 py-2 bg-red-100 text-red-600 hover:bg-red-200 transition rounded" onclick="return confirm('Remove this brand from carousel?')">
                        <i class="fa fa-trash"></i>
                      </button>
                    </form>
                  </div>
                </td>
              </tr>
            <% }) %>
          </tbody>
        </table>
      </div>
    <% } %>
  </div>
</main>

<%- include('../partials/footer.ejs') %>