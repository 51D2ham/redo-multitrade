<%- include('../partials/header.ejs', { title: user.username + "'s Profile" }) %>

<!-- Modern Navigation Bar -->
<nav class="flex flex-wrap gap-3 mb-8 p-4 bg-white rounded-xl shadow-sm border border-gray-100 items-center">
  <a href="/admin/v1/staff/dashboard" class="flex items-center gap-2 px-4 py-2 rounded-lg bg-blue-50 text-blue-700 hover:bg-blue-100 transition">
    <i class="fa fa-home"></i> Dashboard
  </a>
  <a href="/admin/v1/customers/users" class="flex items-center gap-2 px-4 py-2 rounded-lg bg-gray-50 text-gray-700 hover:bg-gray-100 transition">
    <i class="fa fa-users"></i> Customer List
  </a>
  <a href="/admin/v1/customers/users/<%= user._id %>/edit" class="flex items-center gap-2 px-4 py-2 rounded-lg bg-gray-50 text-gray-700 hover:bg-gray-100 transition">
    <i class="fa fa-user-edit"></i> Edit Profile
  </a>
</nav>

<main class="container mx-auto max-w-3xl px-4 mt-8">
  <div class="bg-white rounded-xl shadow-md overflow-hidden border border-gray-100">
    <!-- Profile Header -->
    <div class="bg-gradient-to-r from-blue-50 to-indigo-50 p-8 border-b border-gray-100">
      <div class="flex flex-col md:flex-row md:items-center md:justify-between gap-6">
        <div class="flex items-center gap-6">
          <div class="relative">
            <div class="w-24 h-24 rounded-full overflow-hidden border-4 border-white shadow-lg">
              <% if (user.profileImage) { %>
                <img 
                  src="/uploads/<%= user.profileImage %>" 
                  alt="<%= user.username %>'s profile"
                  class="w-full h-full object-cover"
                >
              <% } else { %>
                <div class="w-full h-full bg-gray-200 flex items-center justify-center text-gray-500">
                  <i class="fa fa-user text-4xl"></i>
                </div>
              <% } %>
            </div>
            <div class="absolute -bottom-2 -right-2 bg-white p-1.5 rounded-full shadow-md border border-gray-100">
              <% 
                // Safely handle undefined role
                const userRole = user.role || 'customer';
                const displayRole = userRole.charAt(0).toUpperCase() + userRole.slice(1);
                const roleColor = userRole === 'admin' ? 'purple' : userRole === 'staff' ? 'blue' : 'green';
              %>
              <span class="inline-flex items-center px-2.5 py-1 rounded-full text-xs font-medium
                bg-<%= roleColor %>-100 text-<%= roleColor %>-800">
                <i class="fa fa-id-badge text-[6px] mr-1.5 text-<%= roleColor %>-500"></i>
                <%= displayRole %>
              </span>
            </div>
          </div>
          <div>
            <h1 class="text-2xl font-bold text-gray-800"><%= user.username || 'Unnamed User' %></h1>
            <p class="text-gray-500 mt-1"><%= user.fullname || '—' %></p>
            <div class="mt-2 flex flex-wrap gap-2">
              <span class="inline-flex items-center px-2.5 py-1.5 rounded-lg text-xs font-medium bg-blue-50 text-blue-700">
                <i class="fa fa-envelope mr-1.5"></i> <%= user.email || '—' %>
              </span>
              <% if (user.phone) { %>
                <span class="inline-flex items-center px-2.5 py-1.5 rounded-lg text-xs font-medium bg-gray-50 text-gray-700">
                  <i class="fa fa-phone mr-1.5"></i> <%= user.phone %>
                </span>
              <% } %>
            </div>
          </div>
        </div>
        <div class="text-right md:shrink-0">
          <a 
            href="/admin/v1/customers/users/<%= user._id %>/edit" 
            class="inline-flex items-center px-4 py-2.5 rounded-lg bg-blue-600 text-white font-medium hover:bg-blue-700 transition"
          >
            <i class="fa fa-edit mr-2"></i> Edit Profile
          </a>
        </div>
      </div>
    </div>

    <!-- Flash Messages -->
    <% if (error && error.length) { %>
      <div class="mx-8 mt-6 p-4 rounded-lg border-l-4 border-red-400 bg-red-50 text-red-800 shadow-sm">
        <% error.forEach(msg => { %>
          <div class="flex items-center gap-2">
            <i class="fa fa-exclamation-circle"></i>
            <%= msg %>
          </div>
        <% }) %>
      </div>
    <% } %>
    <% if (success && success.length) { %>
      <div class="mx-8 mt-6 p-4 rounded-lg border-l-4 border-green-400 bg-green-50 text-green-800 shadow-sm">
        <% success.forEach(msg => { %>
          <div class="flex items-center gap-2">
            <i class="fa fa-check-circle"></i>
            <%= msg %>
          </div>
        <% }) %>
      </div>
    <% } %>

    <div class="p-8">
      <!-- Personal Information Section -->
      <div class="mb-10">
        <h2 class="font-semibold text-lg text-gray-800 mb-5 flex items-center gap-2">
          <i class="fa fa-user-circle text-blue-600"></i> Personal Information
        </h2>
        <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
          <div class="bg-gray-50 rounded-xl p-5 border border-gray-100">
            <h3 class="font-medium text-gray-500 mb-3 flex items-center gap-1.5">
              <i class="fa fa-venus-mars"></i> Gender
            </h3>
            <div class="flex items-center">
              <% if (user.gender) { %>
                <span class="inline-flex items-center px-3 py-1.5 rounded-full text-sm font-medium
                  <%= user.gender.toLowerCase() === 'male' ? 'bg-blue-100 text-blue-700' :
                      user.gender.toLowerCase() === 'female' ? 'bg-pink-100 text-pink-700' :
                      'bg-gray-100 text-gray-700' %>">
                  <i class="fa fa-<%= user.gender.toLowerCase() === 'male' ? 'mars' : user.gender.toLowerCase() === 'female' ? 'venus' : 'genderless' %> mr-2"></i>
                  <%= user.gender.charAt(0).toUpperCase() + user.gender.slice(1) %>
                </span>
              <% } else { %>
                <span class="text-gray-400 italic">Not specified</span>
              <% } %>
            </div>
          </div>
          <div class="bg-gray-50 rounded-xl p-5 border border-gray-100">
            <h3 class="font-medium text-gray-500 mb-3 flex items-center gap-1.5">
              <i class="fa fa-cake-candles"></i> Date of Birth
            </h3>
            <p class="text-gray-800 font-medium">
              <% if (user.dob) { 
                try {
                  const dobDate = new Date(user.dob);
                  if (!isNaN(dobDate.getTime())) { %>
                    <%= dobDate.toLocaleDateString('en-US', { 
                      year: 'numeric', 
                      month: 'long', 
                      day: 'numeric' 
                    }) %>
                    <span class="ml-2 text-sm text-gray-500">
                      (<%= Math.floor((new Date() - dobDate) / (365.25 * 24 * 60 * 60 * 1000)) %> years)
                    </span>
                  <% } else { %>
                    <span class="text-gray-400 italic">Invalid date</span>
                  <% }
                } catch (e) { %>
                  <span class="text-gray-400 italic">Invalid date format</span>
                <% } %>
              <% } else { %>
                <span class="text-gray-400 italic">Not specified</span>
              <% } %>
            </p>
          </div>
          <div class="bg-gray-50 rounded-xl p-5 border border-gray-100">
            <h3 class="font-medium text-gray-500 mb-3 flex items-center gap-1.5">
              <i class="fa fa-calendar-plus"></i> Account Created
            </h3>
            <p class="text-gray-800 font-medium">
              <% if (user.createdAt) { 
                try {
                  const createdAtDate = new Date(user.createdAt);
                  if (!isNaN(createdAtDate.getTime())) { %>
                    <%= createdAtDate.toLocaleDateString('en-US', { 
                      year: 'numeric', 
                      month: 'long', 
                      day: 'numeric',
                      hour: '2-digit',
                      minute: '2-digit'
                    }) %>
                  <% } else { %>
                    <span class="text-gray-400 italic">Invalid date</span>
                  <% }
                } catch (e) { %>
                  <span class="text-gray-400 italic">Invalid date format</span>
                <% } %>
              <% } else { %>
                <span class="text-gray-400 italic">Date unavailable</span>
              <% } %>
            </p>
          </div>
          <div class="bg-gray-50 rounded-xl p-5 border border-gray-100">
            <h3 class="font-medium text-gray-500 mb-3 flex items-center gap-1.5">
              <i class="fa fa-id-badge"></i> Account Status
            </h3>
            <span class="inline-flex items-center px-3 py-1.5 rounded-full text-sm font-medium bg-green-100 text-green-800">
              <i class="fa fa-circle text-[6px] mr-2 text-green-500"></i>
              Active
            </span>
          </div>
        </div>
      </div>

      <!-- Address Sections -->
      <div class="grid grid-cols-1 lg:grid-cols-2 gap-8">
        <!-- Permanent Address -->
        <div>
          <h2 class="font-semibold text-lg text-gray-800 mb-5 flex items-center gap-2">
            <i class="fa fa-map-marker-alt text-blue-600"></i> Permanent Address
          </h2>
          <% 
            // Safely handle address objects
            const hasPermanentAddress = user.permanentAddress && (
              (user.permanentAddress.locality && user.permanentAddress.locality.trim() !== '') ||
              (user.permanentAddress.city && user.permanentAddress.city.trim() !== '') ||
              (user.permanentAddress.postalCode && user.permanentAddress.postalCode.trim() !== '') ||
              (user.permanentAddress.province && user.permanentAddress.province.trim() !== '') ||
              (user.permanentAddress.country && user.permanentAddress.country.trim() !== '')
            );
          %>
          <% if (hasPermanentAddress) { %>
            <div class="bg-gray-50 rounded-xl p-6 border border-gray-100 space-y-3">
              <% if (user.permanentAddress.locality && user.permanentAddress.locality.trim() !== '') { %>
                <p class="flex items-start">
                  <i class="fa fa-home text-gray-400 mt-1 mr-2.5"></i>
                  <span class="text-gray-700"><%= user.permanentAddress.locality %></span>
                </p>
              <% } %>
              <div class="flex flex-wrap gap-x-4">
                <% if (user.permanentAddress.city && user.permanentAddress.city.trim() !== '') { %>
                  <p class="flex items-center">
                    <i class="fa fa-city text-gray-400 mr-2"></i>
                    <span class="text-gray-700"><%= user.permanentAddress.city %></span>
                  </p>
                <% } %>
                <% if (user.permanentAddress.postalCode && user.permanentAddress.postalCode.trim() !== '') { %>
                  <p class="flex items-center">
                    <i class="fa fa-mailbox text-gray-400 mr-2"></i>
                    <span class="text-gray-700"><%= user.permanentAddress.postalCode %></span>
                  </p>
                <% } %>
              </div>
              <% if (user.permanentAddress.province && user.permanentAddress.province.trim() !== '') { %>
                <p class="flex items-center">
                  <i class="fa fa-map text-gray-400 mr-2"></i>
                  <span class="text-gray-700"><%= user.permanentAddress.province %></span>
                </p>
              <% } %>
              <% if (user.permanentAddress.country && user.permanentAddress.country.trim() !== '') { %>
                <p class="flex items-center">
                  <i class="fa fa-globe text-gray-400 mr-2"></i>
                  <span class="text-gray-700"><%= user.permanentAddress.country %></span>
                </p>
              <% } %>
            </div>
          <% } else { %>
            <div class="bg-gray-50 rounded-xl p-6 border border-gray-100 text-center">
              <i class="fa fa-map-marker-slash text-3xl text-gray-300 mb-3"></i>
              <p class="text-gray-500">No permanent address registered</p>
              <p class="mt-2 text-sm text-gray-400">This user hasn't specified their permanent address</p>
            </div>
          <% } %>
        </div>

        <!-- Temporary Address -->
        <div>
          <h2 class="font-semibold text-lg text-gray-800 mb-5 flex items-center gap-2">
            <i class="fa fa-map-marked-alt text-blue-600"></i> Temporary Address
          </h2>
          <% 
            // Safely handle address objects
            const hasTempAddress = user.tempAddress && (
              (user.tempAddress.locality && user.tempAddress.locality.trim() !== '') ||
              (user.tempAddress.city && user.tempAddress.city.trim() !== '') ||
              (user.tempAddress.postalCode && user.tempAddress.postalCode.trim() !== '') ||
              (user.tempAddress.province && user.tempAddress.province.trim() !== '') ||
              (user.tempAddress.country && user.tempAddress.country.trim() !== '')
            );
          %>
          <% if (hasTempAddress) { %>
            <div class="bg-gray-50 rounded-xl p-6 border border-gray-100 space-y-3">
              <% if (user.tempAddress.locality && user.tempAddress.locality.trim() !== '') { %>
                <p class="flex items-start">
                  <i class="fa fa-home text-gray-400 mt-1 mr-2.5"></i>
                  <span class="text-gray-700"><%= user.tempAddress.locality %></span>
                </p>
              <% } %>
              <div class="flex flex-wrap gap-x-4">
                <% if (user.tempAddress.city && user.tempAddress.city.trim() !== '') { %>
                  <p class="flex items-center">
                    <i class="fa fa-city text-gray-400 mr-2"></i>
                    <span class="text-gray-700"><%= user.tempAddress.city %></span>
                  </p>
                <% } %>
                <% if (user.tempAddress.postalCode && user.tempAddress.postalCode.trim() !== '') { %>
                  <p class="flex items-center">
                    <i class="fa fa-mailbox text-gray-400 mr-2"></i>
                    <span class="text-gray-700"><%= user.tempAddress.postalCode %></span>
                  </p>
                <% } %>
              </div>
              <% if (user.tempAddress.province && user.tempAddress.province.trim() !== '') { %>
                <p class="flex items-center">
                  <i class="fa fa-map text-gray-400 mr-2"></i>
                  <span class="text-gray-700"><%= user.tempAddress.province %></span>
                </p>
              <% } %>
              <% if (user.tempAddress.country && user.tempAddress.country.trim() !== '') { %>
                <p class="flex items-center">
                  <i class="fa fa-globe text-gray-400 mr-2"></i>
                  <span class="text-gray-700"><%= user.tempAddress.country %></span>
                </p>
              <% } %>
            </div>
          <% } else { %>
            <div class="bg-gray-50 rounded-xl p-6 border border-gray-100 text-center">
              <i class="fa fa-map-marked-slash text-3xl text-gray-300 mb-3"></i>
              <p class="text-gray-500">No temporary address registered</p>
              <p class="mt-2 text-sm text-gray-400">This user hasn't specified a temporary address</p>
            </div>
          <% } %>
        </div>
      </div>
    </div>
  </div>
</main>

<%- include('../partials/footer.ejs') %>

