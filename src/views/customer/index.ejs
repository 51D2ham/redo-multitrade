<%- include('../partials/header.ejs', { title: 'User List' }) %>

<!-- Modern Navigation Bar -->
<nav class="flex flex-wrap gap-3 mb-8 p-4 bg-white rounded-xl shadow-sm border border-gray-100 items-center">
  <a href="/admin/v1/staff/dashboard" class="flex items-center gap-2 px-4 py-2 rounded-lg bg-blue-50 text-blue-700 hover:bg-blue-100 transition">
    <i class="fa fa-home"></i> Dashboard
  </a>
  <a href="/admin/v1/customers/users/new" class="flex items-center gap-2 px-4 py-2 rounded-lg bg-green-50 text-green-700 hover:bg-green-100 transition">
    <i class="fa fa-plus"></i> Add New User
  </a>
</nav>

<main class="container mx-auto max-w-7xl px-4 mt-8">
  <div class="flex flex-col md:flex-row md:justify-between md:items-center mb-8 gap-4">
    <h1 class="text-3xl font-bold text-gray-800">User Management</h1>
    <div class="text-sm text-gray-500">
      Total Users: <span class="font-semibold"><%= pagination?.total || 0 %></span>
    </div>
  </div>

  <!-- Flash Messages -->
  <% if (success && success.length) { %>
    <div class="mb-6 p-4 rounded-lg border-l-4 border-green-400 bg-green-50 text-green-800 shadow-sm">
      <% success.forEach(msg => { %>
        <div class="flex items-center gap-2">
          <i class="fa fa-check-circle"></i>
          <%= msg %>
        </div>
      <% }) %>
    </div>
  <% } %>
  <% if (error && error.length) { %>
    <div class="mb-6 p-4 rounded-lg border-l-4 border-red-400 bg-red-50 text-red-800 shadow-sm">
      <% error.forEach(msg => { %>
        <div class="flex items-center gap-2">
          <i class="fa fa-exclamation-circle"></i>
          <%= msg %>
        </div>
      <% }) %>
    </div>
  <% } %>

  <!-- Filters Card -->
  <div class="bg-white rounded-xl shadow-md p-6 mb-6 border border-gray-100">
    <div class="flex items-center gap-3 mb-4">
      <div class="w-8 h-8 bg-blue-100 rounded-lg flex items-center justify-center">
        <i class="fa fa-filter text-blue-600"></i>
      </div>
      <h3 class="text-lg font-semibold text-gray-800">Filter Users</h3>
    </div>
    <form method="GET" action="/admin/v1/customers/users" class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-5 gap-4">
      <div>
        <label class="block font-semibold mb-2 text-gray-700">Search Users</label>
        <div class="relative">
          <input
            type="text"
            name="search"
            placeholder="Name, email, phone..."
            value="<%= filters?.search || '' %>"
            class="w-full p-3 pl-10 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-blue-500"
          >
          <i class="fa fa-search absolute left-3 top-1/2 transform -translate-y-1/2 text-gray-400"></i>
        </div>
      </div>
      
      <div>
        <label class="block font-semibold mb-2 text-gray-700">Role</label>
        <select name="role" class="w-full p-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-blue-500">
          <option value="">All Roles</option>
          <option value="customer" <%= (filters?.role === 'customer') ? 'selected' : '' %>>Customer</option>
          <option value="admin" <%= (filters?.role === 'admin') ? 'selected' : '' %>>Admin</option>
          <option value="staff" <%= (filters?.role === 'staff') ? 'selected' : '' %>>Staff</option>
        </select>
      </div>
      
      <div>
        <label class="block font-semibold mb-2 text-gray-700">Status</label>
        <select name="status" class="w-full p-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-blue-500">
          <option value="">All Status</option>
          <option value="active" <%= (filters?.status === 'active') ? 'selected' : '' %>>Active</option>
          <option value="inactive" <%= (filters?.status === 'inactive') ? 'selected' : '' %>>Inactive</option>
          <option value="suspended" <%= (filters?.status === 'suspended') ? 'selected' : '' %>>Suspended</option>
        </select>
      </div>
      
      <div>
        <label class="block font-semibold mb-2 text-gray-700">Sort By</label>
        <select name="sortBy" class="w-full p-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-blue-500">
          <option value="createdAt" <%= (filters?.sortBy === 'createdAt') ? 'selected' : '' %>>Join Date</option>
          <option value="username" <%= (filters?.sortBy === 'username') ? 'selected' : '' %>>Username</option>
          <option value="email" <%= (filters?.sortBy === 'email') ? 'selected' : '' %>>Email</option>
          <option value="fullname" <%= (filters?.sortBy === 'fullname') ? 'selected' : '' %>>Full Name</option>
        </select>
      </div>
      
      <div class="flex items-end gap-2">
        <button type="submit" class="flex-1 px-4 py-3 bg-blue-600 text-white rounded-lg hover:bg-blue-700 transition">
          <i class="fa fa-search mr-2"></i>Filter
        </button>
        <a href="/admin/v1/customers/users" class="px-3 py-3 bg-gray-100 text-gray-600 rounded-lg hover:bg-gray-200 transition" title="Clear Filters">
          <i class="fa fa-times"></i>
        </a>
      </div>
    </form>
  </div>

  <!-- Users List -->
  <div class="bg-white rounded-xl shadow-md mb-10 border border-gray-100">
    <% if (!users || users.length === 0) { %>
      <div class="p-8 text-center">
        <i class="fa fa-users text-5xl text-gray-300 mb-4"></i>
        <h2 class="text-xl font-semibold text-gray-800 mb-2">No Users Found</h2>
        <p class="text-gray-500 mb-6">Try adjusting your search or filters</p>
        <a href="/admin/v1/customers/users/new" class="inline-flex items-center px-4 py-2.5 rounded-lg bg-blue-600 text-white font-medium hover:bg-blue-700 transition">
          <i class="fa fa-plus mr-2"></i> Add First User
        </a>
      </div>
    <% } else { %>
      <!-- Mobile Cards (Hidden on Desktop) -->
      <div class="block lg:hidden space-y-4 p-4">
        <% users.forEach((u, idx) => { %>
          <div class="bg-white border border-gray-200 rounded-xl p-4 shadow-sm hover:shadow-md transition-shadow">
            <div class="flex items-start justify-between mb-4">
              <div class="flex items-center gap-3">
                <% if (u.profileImage) { %>
                  <img src="<%= u.profileImage %>" alt="Profile" class="w-12 h-12 rounded-full object-cover">
                <% } else { %>
                  <div class="w-12 h-12 rounded-full bg-gradient-to-br from-emerald-400 to-emerald-600 flex items-center justify-center text-white font-semibold">
                    <%= u.username ? u.username.charAt(0).toUpperCase() : '?' %>
                  </div>
                <% } %>
                <div>
                  <h3 class="font-semibold text-gray-900"><%= u.username || 'Unnamed User' %></h3>
                  <p class="text-sm text-gray-600"><%= u.email || '—' %></p>
                </div>
              </div>
              <span class="text-xs font-medium px-2 py-1 rounded-full bg-blue-100 text-blue-700">
                #<%= (pagination.currentPage - 1) * 10 + idx + 1 %>
              </span>
              <div class="text-right">
                <% 
                  const userRole = u.role || 'customer';
                  const displayRole = userRole.charAt(0).toUpperCase() + userRole.slice(1);
                  const roleColor = userRole === 'admin' ? 'purple' : userRole === 'staff' ? 'blue' : 'emerald';
                %>
                <div class="mt-2">
                  <span class="inline-flex items-center px-2 py-1 rounded-full text-xs font-semibold bg-<%= roleColor %>-100 text-<%= roleColor %>-700">
                    <%= displayRole %>
                  </span>
                </div>
              </div>
            </div>
            
            <div class="grid grid-cols-2 gap-3 mb-4 text-sm">
              <div>
                <span class="text-gray-500 font-medium">Full Name:</span>
                <p class="text-gray-900"><%= u.fullname || u.firstName + ' ' + (u.lastName || '') || '—' %></p>
              </div>
              <div>
                <span class="text-gray-500 font-medium">Phone:</span>
                <p class="text-gray-900"><%= u.phone || '—' %></p>
              </div>
              <div>
                <span class="text-gray-500 font-medium">Status:</span>
                <% 
                  const userStatus = u.status || u.isActive === false ? 'inactive' : 'active';
                  const statusColor = userStatus === 'active' ? 'green' : userStatus === 'suspended' ? 'red' : 'gray';
                %>
                <span class="inline-flex items-center px-2 py-1 rounded-full text-xs font-semibold bg-<%= statusColor %>-100 text-<%= statusColor %>-700">
                  <%= userStatus.charAt(0).toUpperCase() + userStatus.slice(1) %>
                </span>
              </div>
              <div>
                <span class="text-gray-500 font-medium">Joined:</span>
                <% if (u.createdAt) { %>
                  <p class="text-gray-900"><%= new Date(u.createdAt).toLocaleDateString('en-US', { month: 'short', day: 'numeric', year: 'numeric' }) %></p>
                <% } else { %>
                  <p class="text-gray-400">—</p>
                <% } %>
              </div>
            </div>
            
            <div class="flex flex-wrap gap-2 pt-3 border-t border-gray-100">
              <a href="/admin/v1/customers/users/<%= u._id %>" class="flex-1 text-center px-3 py-2 bg-blue-50 text-blue-700 rounded-lg hover:bg-blue-100 transition text-sm font-medium">
                <i class="fa fa-eye mr-1"></i> View
              </a>
              <a href="/admin/v1/customers/users/<%= u._id %>/edit" class="flex-1 text-center px-3 py-2 bg-yellow-50 text-yellow-700 rounded-lg hover:bg-yellow-100 transition text-sm font-medium">
                <i class="fa fa-edit mr-1"></i> Edit
              </a>
              <form action="/admin/v1/customers/users/<%= u._id %>/delete" method="POST" class="flex-1">
                <input type="hidden" name="_method" value="DELETE">
                <button type="submit" class="w-full px-3 py-2 bg-red-50 text-red-600 rounded-lg hover:bg-red-100 transition text-sm font-medium" onclick="return confirm('Delete this user?')">
                  <i class="fa fa-trash mr-1"></i> Delete
                </button>
              </form>
            </div>
          </div>
        <% }) %>
      </div>
      
      <!-- Desktop Table (Hidden on Mobile) -->
      <div class="hidden lg:block overflow-x-auto">
        <table class="w-full text-sm">
          <thead>
            <tr class="border-b border-gray-200 bg-gray-50">
              <th class="py-3 px-4 text-left font-semibold text-gray-600 w-12">S.N</th>
              <th class="py-3 px-4 text-left font-semibold text-gray-600">User Details</th>
              <th class="py-3 px-4 text-left font-semibold text-gray-600">Contact Info</th>
              <th class="py-3 px-4 text-left font-semibold text-gray-600">Role & Status</th>
              <th class="py-3 px-4 text-left font-semibold text-gray-600">Join Date</th>
              <th class="py-3 px-4 text-left font-semibold text-gray-600">Actions</th>
            </tr>
          </thead>
          <tbody>
            <% users.forEach((u, idx) => { %>
              <tr class="hover:bg-blue-50 transition-colors border-b border-gray-100 last:border-0">
                <td class="py-4 px-4 font-semibold text-gray-500">
                  <%= (pagination.currentPage - 1) * 10 + idx + 1 %>
                </td>
                <td class="py-4 px-4">
                  <div class="flex items-center gap-3">
                    <% if (u.profileImage) { %>
                      <img src="<%= u.profileImage %>" alt="Profile" class="w-10 h-10 rounded-full object-cover">
                    <% } else { %>
                      <div class="w-10 h-10 rounded-full bg-gradient-to-br from-emerald-400 to-emerald-600 flex items-center justify-center text-white font-medium">
                        <%= u.username ? u.username.charAt(0).toUpperCase() : '?' %>
                      </div>
                    <% } %>
                    <div>
                      <div class="font-medium text-gray-800"><%= u.username || 'Unnamed User' %></div>
                      <div class="text-sm text-gray-600"><%= u.fullname || u.firstName + ' ' + (u.lastName || '') || 'No full name' %></div>
                      <div class="text-xs text-gray-500">ID: <%= u._id.toString().slice(-6) %></div>
                    </div>
                  </div>
                </td>
                <td class="py-4 px-4">
                  <div class="text-gray-700">
                    <div class="font-medium flex items-center gap-2">
                      <i class="fa fa-envelope text-gray-400 text-xs"></i>
                      <%= u.email || '—' %>
                    </div>
                    <div class="text-xs text-gray-500 flex items-center gap-2 mt-1">
                      <i class="fa fa-phone text-gray-400"></i>
                      <%= u.phone || 'No phone' %>
                    </div>
                    <% if (u.address) { %>
                      <div class="text-xs text-gray-500 flex items-center gap-2 mt-1">
                        <i class="fa fa-map-marker-alt text-gray-400"></i>
                        <%= u.address.substring(0, 30) %><%= u.address.length > 30 ? '...' : '' %>
                      </div>
                    <% } %>
                  </div>
                </td>
                <td class="py-4 px-4">
                  <div class="space-y-2">
                    <% 
                      const userRole = u.role || 'customer';
                      const displayRole = userRole.charAt(0).toUpperCase() + userRole.slice(1);
                      const roleColor = userRole === 'admin' ? 'purple' : userRole === 'staff' ? 'blue' : 'emerald';
                    %>
                    <span class="inline-flex items-center px-3 py-1 rounded-full text-xs font-semibold bg-<%= roleColor %>-100 text-<%= roleColor %>-700">
                      <i class="fa fa-user text-[8px] mr-1.5 text-<%= roleColor %>-500"></i>
                      <%= displayRole %>
                    </span>
                    <% 
                      const userStatus = u.status || (u.isActive === false ? 'inactive' : 'active');
                      const statusColor = userStatus === 'active' ? 'green' : userStatus === 'suspended' ? 'red' : 'gray';
                    %>
                    <div>
                      <span class="inline-flex items-center px-2 py-1 rounded-full text-xs font-medium bg-<%= statusColor %>-100 text-<%= statusColor %>-700">
                        <i class="fa fa-circle text-[6px] mr-1.5 text-<%= statusColor %>-500"></i>
                        <%= userStatus.charAt(0).toUpperCase() + userStatus.slice(1) %>
                      </span>
                    </div>
                  </div>
                </td>
                <td class="py-4 px-4 text-gray-500">
                  <% if (u.createdAt) { %>
                    <div class="font-medium"><%= new Date(u.createdAt).toLocaleDateString('en-US', { month: 'short', day: 'numeric', year: 'numeric' }) %></div>
                    <div class="text-xs text-gray-400"><%= new Date(u.createdAt).toLocaleDateString('en-US', { weekday: 'short' }) %></div>
                    <div class="text-xs text-gray-400 mt-1">
                      <%= Math.floor((new Date() - new Date(u.createdAt)) / (1000 * 60 * 60 * 24)) %> days ago
                    </div>
                  <% } else { %>
                    —
                  <% } %>
                </td>
                <td class="py-4 px-4">
                  <div class="flex flex-wrap gap-2">
                    <a href="/admin/v1/customers/users/<%= u._id %>" class="btn btn-small bg-blue-100 text-blue-700 hover:bg-blue-200 transition flex items-center px-3 py-2">
                      <i class="fa fa-eye mr-1.5"></i> View
                    </a>
                    <a href="/admin/v1/customers/users/<%= u._id %>/edit" class="btn btn-small bg-yellow-100 text-yellow-700 hover:bg-yellow-200 transition flex items-center px-3 py-2">
                      <i class="fa fa-edit mr-1.5"></i> Edit
                    </a>
                    <form action="/admin/v1/customers/users/<%= u._id %>/delete" method="POST" class="inline">
                      <input type="hidden" name="_method" value="DELETE">
                      <button type="submit" class="btn btn-small bg-red-100 text-red-600 hover:bg-red-200 transition flex items-center px-3 py-2" onclick="return confirm('Permanently delete this user? This action cannot be undone.')">
                        <i class="fa fa-trash mr-1.5"></i> Delete
                      </button>
                    </form>
                  </div>
                </td>
              </tr>
            <% }) %>
          </tbody>
        </table>
      </div>
    <% } %>
  </div>

  <!-- Pagination -->
  <% if (users && users.length > 0) { %>
    <div class="flex flex-col md:flex-row justify-between items-center gap-4 bg-white p-4 rounded-xl border border-gray-100">
      <% 
        const pageSize = 10;
        const total = pagination?.total || 0;
        const start = total === 0 ? 0 : (pagination.currentPage - 1) * pageSize + 1;
        const end = total === 0 ? 0 : Math.min(start + pageSize - 1, total);
      %>
      
      <span class="text-sm text-gray-500">
        Showing <%= start %> - <%= end %> of <%= total %>
      </span>
      
      <div class="flex flex-wrap gap-2">
        <% if (pagination.hasPrev) { %>
          <a 
            href="?page=<%= pagination.currentPage - 1 %>&search=<%= encodeURIComponent(filters.search || '') %>&sortBy=<%= filters.sortBy || '' %>&sortOrder=<%= filters.sortOrder || 'asc' %>"
            class="px-4 py-2 rounded-lg bg-blue-50 text-blue-600 hover:bg-blue-100 transition flex items-center"
          >
            <i class="fa fa-arrow-left mr-2"></i> Previous
          </a>
        <% } %>
        
        <span class="px-4 py-2 rounded-lg bg-gray-50 text-gray-700">
          Page <%= pagination.currentPage %> of <%= pagination.totalPages %>
        </span>
        
        <% if (pagination.hasNext) { %>
          <a 
            href="?page=<%= pagination.currentPage + 1 %>&search=<%= encodeURIComponent(filters.search || '') %>&sortBy=<%= filters.sortBy || '' %>&sortOrder=<%= filters.sortOrder || 'asc' %>"
            class="px-4 py-2 rounded-lg bg-blue-50 text-blue-600 hover:bg-blue-100 transition flex items-center"
          >
            Next <i class="fa fa-arrow-right ml-2"></i>
          </a>
        <% } %>
      </div>
    </div>
  <% } %>
</main>

<%- include('../partials/footer.ejs') %>