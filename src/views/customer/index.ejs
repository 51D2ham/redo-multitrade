<%- include('../partials/header.ejs', { title: 'User List' }) %>

<!-- Modern Navigation Bar -->
<nav class="flex flex-wrap gap-3 mb-8 p-4 bg-white rounded-xl shadow-sm border border-gray-100 items-center">
  <a href="/admin/v1/staff/dashboard" class="flex items-center gap-2 px-4 py-2 rounded-lg bg-blue-50 text-blue-700 hover:bg-blue-100 transition">
    <i class="fa fa-home"></i> Dashboard
  </a>
  <a href="/admin/v1/customers/users/new" class="flex items-center gap-2 px-4 py-2 rounded-lg bg-green-50 text-green-700 hover:bg-green-100 transition">
    <i class="fa fa-plus"></i> Add New User
  </a>
</nav>

<main class="container mx-auto max-w-7xl px-4 mt-8">
  <div class="flex flex-col md:flex-row md:justify-between md:items-center mb-8 gap-4">
    <h1 class="text-3xl font-bold text-gray-800">User Management</h1>
    <div class="text-sm text-gray-500">
      Total Users: <span class="font-semibold"><%= pagination?.total || 0 %></span>
    </div>
  </div>

  <!-- Flash Messages -->
  <% if (success && success.length) { %>
    <div class="mb-6 p-4 rounded-lg border-l-4 border-green-400 bg-green-50 text-green-800 shadow-sm">
      <% success.forEach(msg => { %>
        <div class="flex items-center gap-2">
          <i class="fa fa-check-circle"></i>
          <%= msg %>
        </div>
      <% }) %>
    </div>
  <% } %>
  <% if (error && error.length) { %>
    <div class="mb-6 p-4 rounded-lg border-l-4 border-red-400 bg-red-50 text-red-800 shadow-sm">
      <% error.forEach(msg => { %>
        <div class="flex items-center gap-2">
          <i class="fa fa-exclamation-circle"></i>
          <%= msg %>
        </div>
      <% }) %>
    </div>
  <% } %>

  <!-- Filters Card -->
  <div class="bg-white rounded-xl shadow-md p-6 mb-10 border border-gray-100">
    <form method="GET" action="/admin/v1/customers/users" class="grid grid-cols-1 md:grid-cols-4 gap-4 items-end">
      <!-- Search Input -->
      <div>
        <label class="block font-semibold mb-1 text-gray-700">Search</label>
        <input
          type="text"
          name="search"
          placeholder="Username or email"
          value="<%= filters.search || '' %>"
          class="w-full p-3 rounded-lg border border-gray-200 focus:border-blue-500 focus:ring-2 focus:ring-blue-100 transition"
        >
      </div>
      <!-- Sort By -->
      <div>
        <label class="block font-semibold mb-1 text-gray-700">Sort By</label>
        <select 
          name="sortBy"
          class="w-full p-3 rounded-lg border border-gray-200 focus:border-blue-500 focus:ring-2 focus:ring-blue-100 transition"
        >
          <option value="">—</option>
          <option value="username" <%= filters.sortBy === 'username' ? 'selected' : '' %>>Username</option>
          <option value="email" <%= filters.sortBy === 'email' ? 'selected' : '' %>>Email</option>
          <option value="createdAt" <%= filters.sortBy === 'createdAt' ? 'selected' : '' %>>Join Date</option>
        </select>
      </div>
      <!-- Sort Order -->
      <div>
        <label class="block font-semibold mb-1 text-gray-700">Order</label>
        <select 
          name="sortOrder"
          class="w-full p-3 rounded-lg border border-gray-200 focus:border-blue-500 focus:ring-2 focus:ring-blue-100 transition"
        >
          <option value="asc" <%= filters.sortOrder === 'asc' ? 'selected' : '' %>>Ascending</option>
          <option value="desc" <%= filters.sortOrder === 'desc' ? 'selected' : '' %>>Descending</option>
        </select>
      </div>
      <!-- Submit Button -->
      <div>
        <button type="submit" class="w-full px-4 py-3 rounded-lg bg-blue-600 text-white font-semibold hover:bg-blue-700 transition flex items-center justify-center">
          <i class="fa fa-filter mr-2"></i> Apply Filters
        </button>
      </div>
    </form>
  </div>

  <!-- Users Table Card -->
  <div class="bg-white rounded-xl shadow-md overflow-x-auto mb-10 border border-gray-100">
    <table class="w-full text-sm">
      <thead>
        <tr class="border-b border-gray-200 bg-gray-50">
          <th class="py-3 px-4 text-left font-semibold text-gray-600 w-12">S.N</th>
          <th class="py-3 px-4 text-left font-semibold text-gray-600">Username</th>
          <th class="py-3 px-4 text-left font-semibold text-gray-600">Email</th>
          <th class="py-3 px-4 text-left font-semibold text-gray-600">Phone</th>
          <th class="py-3 px-4 text-left font-semibold text-gray-600">Role</th>
          <th class="py-3 px-4 text-left font-semibold text-gray-600">Joined</th>
          <th class="py-3 px-4 text-left font-semibold text-gray-600">Actions</th>
        </tr>
      </thead>
      <tbody>
        <% if (!users || users.length === 0) { %>
          <tr>
            <td colspan="7" class="py-12 text-center text-gray-400">
              <i class="fa fa-users text-4xl mb-4 opacity-25"></i>
              <p class="text-lg font-medium">No users found</p>
              <p class="text-gray-500">Try adjusting your search or filters</p>
            </td>
          </tr>
        <% } else { %>
          <% users.forEach((u, idx) => { %>
            <tr class="hover:bg-blue-50 transition-colors border-b border-gray-100 last:border-0">
              <td class="py-4 px-4 font-semibold text-gray-500">
                <%= (pagination.currentPage - 1) * 10 + idx + 1 %>
              </td>
              <td class="py-4 px-4 font-medium text-gray-800 flex items-center gap-3">
                <% if (u.profileImage) { %>
                  <img src="<%= u.profileImage %>" alt="Profile" class="w-10 h-10 rounded-full object-cover">
                <% } else { %>
                  <div class="w-10 h-10 rounded-full bg-gray-200 flex items-center justify-center text-gray-600 font-medium">
                    <%= u.username ? u.username.charAt(0).toUpperCase() : '?' %>
                  </div>
                <% } %>
                <span><%= u.username || 'Unnamed User' %></span>
              </td>
              <td class="py-4 px-4 text-gray-700"><%= u.email || '—' %></td>
              <td class="py-4 px-4 text-gray-700"><%= u.phone || '—' %></td>
              <td class="py-4 px-4">
                <% 
                  // Safely handle undefined or null role
                  const userRole = u.role || 'customer';
                  const displayRole = userRole.charAt(0).toUpperCase() + userRole.slice(1);
                  const roleColor = userRole === 'admin' ? 'purple' : userRole === 'staff' ? 'blue' : 'green';
                %>
                <span class="inline-flex items-center px-3 py-1 rounded-full text-xs font-semibold
                  bg-<%= roleColor %>-100 text-<%= roleColor %>-700">
                  <i class="fa fa-circle text-[6px] mr-1.5 text-<%= roleColor %>-500"></i>
                  <%= displayRole %>
                </span>
              </td>
              <td class="py-4 px-4 text-gray-500">
                <% if (u.createdAt) { %>
                  <%= new Date(u.createdAt).toLocaleDateString('en-US', { 
                    year: 'numeric', 
                    month: 'short', 
                    day: 'numeric' 
                  }) %>
                <% } else { %>
                  —
                <% } %>
              </td>
              <td class="py-4 px-4">
                <div class="flex flex-wrap gap-2">
                  <a href="/admin/v1/customers/users/<%= u._id %>" class="btn btn-small bg-blue-100 text-blue-700 hover:bg-blue-200 transition flex items-center px-3 py-2">
                    <i class="fa fa-eye mr-1.5"></i> View
                  </a>
                  <a href="/admin/v1/customers/users/<%= u._id %>/edit" class="btn btn-small bg-yellow-100 text-yellow-700 hover:bg-yellow-200 transition flex items-center px-3 py-2">
                    <i class="fa fa-edit mr-1.5"></i> Edit
                  </a>
                  <form action="/admin/v1/customers/users/<%= u._id %>/delete" method="POST" class="inline">
                    <input type="hidden" name="_method" value="DELETE">
                    <button 
                      type="submit" 
                      class="btn btn-small bg-red-100 text-red-600 hover:bg-red-200 transition flex items-center px-3 py-2"
                      onclick="return confirm('Permanently delete this user? This action cannot be undone.')"
                    >
                      <i class="fa fa-trash mr-1.5"></i> Delete
                    </button>
                  </form>
                </div>
              </td>
            </tr>
          <% }) %>
        <% } %>
      </tbody>
    </table>
    
    <style nonce="<%= (typeof cspNonce !== 'undefined' ? cspNonce : '') %>">
      @media (max-width: 768px) {
        table.w-full, thead, tbody, th, td, tr { display: block; }
        thead tr { display: none; }
        tbody tr { 
          display: block; 
          margin-bottom: 1.5rem; 
          background: #fff; 
          border-radius: 0.75rem; 
          box-shadow: 0 1px 4px rgba(0,0,0,0.04);
          padding: 1.25rem;
        }
        td { 
          display: block; 
          padding: 0.75rem 0;
          text-align: right;
          position: relative;
          padding-left: 50%;
          min-height: 2.5rem;
        }
        td:before {
          content: attr(data-label);
          position: absolute;
          left: 1rem;
          top: 50%;
          transform: translateY(-50%);
          white-space: nowrap;
          font-weight: 600;
          color: #6b7280;
          width: 45%;
          text-align: left;
        }
        .mobile-actions {
          display: flex;
          justify-content: flex-end;
          gap: 0.5rem;
          margin-top: 0.5rem;
        }
      }
    </style>
  </div>

  <!-- Pagination -->
  <% if (users && users.length > 0) { %>
    <div class="flex flex-col md:flex-row justify-between items-center gap-4 bg-white p-4 rounded-xl border border-gray-100">
      <% 
        const pageSize = 10;
        const total = pagination?.total || 0;
        const start = total === 0 ? 0 : (pagination.currentPage - 1) * pageSize + 1;
        const end = total === 0 ? 0 : Math.min(start + pageSize - 1, total);
      %>
      
      <span class="text-sm text-gray-500">
        Showing <%= start %> - <%= end %> of <%= total %>
      </span>
      
      <div class="flex flex-wrap gap-2">
        <% if (pagination.hasPrev) { %>
          <a 
            href="?page=<%= pagination.currentPage - 1 %>&search=<%= encodeURIComponent(filters.search || '') %>&sortBy=<%= filters.sortBy || '' %>&sortOrder=<%= filters.sortOrder || 'asc' %>"
            class="px-4 py-2 rounded-lg bg-blue-50 text-blue-600 hover:bg-blue-100 transition flex items-center"
          >
            <i class="fa fa-arrow-left mr-2"></i> Previous
          </a>
        <% } %>
        
        <span class="px-4 py-2 rounded-lg bg-gray-50 text-gray-700">
          Page <%= pagination.currentPage %> of <%= pagination.totalPages %>
        </span>
        
        <% if (pagination.hasNext) { %>
          <a 
            href="?page=<%= pagination.currentPage + 1 %>&search=<%= encodeURIComponent(filters.search || '') %>&sortBy=<%= filters.sortBy || '' %>&sortOrder=<%= filters.sortOrder || 'asc' %>"
            class="px-4 py-2 rounded-lg bg-blue-50 text-blue-600 hover:bg-blue-100 transition flex items-center"
          >
            Next <i class="fa fa-arrow-right ml-2"></i>
          </a>
        <% } %>
      </div>
    </div>
  <% } %>
</main>

<%- include('../partials/footer.ejs') %>