<%
// Safe variable initialization
const safeItem = item || {};
const safeSuccess = success || [];
const safeError = error || [];
%>

<%- include('../partials/header.ejs', { title: 'Hero Content Details' }) %>

<!-- Breadcrumb Navigation -->
<nav class="flex items-center gap-2 text-sm text-gray-600 mb-4 px-4 sm:px-0">
  <a href="/admin/v1/staff/dashboard" class="hover:text-blue-600 transition-colors">Dashboard</a>
  <i class="fas fa-chevron-right text-xs text-gray-400"></i>
  <a href="/admin/v1/parameters/hero-carousel" class="hover:text-blue-600 transition-colors">Hero Content</a>
  <i class="fas fa-chevron-right text-xs text-gray-400"></i>
  <span class="text-gray-900 font-medium">Details</span>
</nav>

<!-- Action Navigation -->
<div class="flex flex-col sm:flex-row gap-2 sm:gap-3 mb-6 px-4 sm:px-0">
  <a href="/admin/v1/staff/dashboard" class="flex items-center justify-center sm:justify-start gap-2 px-4 py-2 rounded-lg bg-blue-50 text-blue-700 hover:bg-blue-100 transition text-sm font-medium">
    <i class="fa fa-home"></i> <span>Dashboard</span>
  </a>
  <a href="/admin/v1/parameters/hero-carousel" class="flex items-center justify-center sm:justify-start gap-2 px-4 py-2 rounded-lg bg-gray-50 text-gray-700 hover:bg-gray-100 transition text-sm font-medium">
    <i class="fa fa-images"></i> <span>Hero Content List</span>
  </a>
</div>

<!-- Flash Messages -->
<% if (safeSuccess.length > 0) { %>
  <div class="bg-green-100 border border-green-400 text-green-700 px-4 py-3 rounded mb-4 mx-4 sm:mx-0">
    <% safeSuccess.forEach(msg => { %><p><%= msg %></p><% }); %>
  </div>
<% } %>
<% if (safeError.length > 0) { %>
  <div class="bg-red-100 border border-red-400 text-red-700 px-4 py-3 rounded mb-4 mx-4 sm:mx-0">
    <% safeError.forEach(msg => { %><p><%= msg %></p><% }); %>
  </div>
<% } %>

<main class="container mx-auto max-w-4xl px-4">
  <div class="bg-white rounded-xl shadow-md p-4 sm:p-6 lg:p-8 border border-gray-100 mb-6">
    <h2 class="text-xl sm:text-2xl font-semibold text-gray-800 mb-4 sm:mb-6">Hero Content Details</h2>
    
    <div class="grid grid-cols-1 lg:grid-cols-2 gap-4 sm:gap-6">
      <!-- Content Details -->
      <div class="space-y-4">
        <div class="bg-gray-50 p-4 rounded-lg">
          <label class="block text-sm font-medium text-gray-600 mb-2">Title</label>
          <p class="text-gray-800 font-medium text-sm sm:text-base"><%= safeItem.title || '-' %></p>
        </div>
        
        <div class="bg-gray-50 p-4 rounded-lg">
          <label class="block text-sm font-medium text-gray-600 mb-2">Status</label>
          <span class="inline-flex items-center px-3 py-1 rounded-full text-sm font-medium
            <%= safeItem.status === 'active' ? 'bg-green-100 text-green-800' : 'bg-gray-100 text-gray-800' %>">
            <i class="fa <%= safeItem.status === 'active' ? 'fa-check-circle' : 'fa-times-circle' %> mr-1"></i>
            <%= safeItem.status || 'active' %>
          </span>
        </div>
        
        <div class="bg-gray-50 p-4 rounded-lg">
          <label class="block text-sm font-medium text-gray-600 mb-2">Link</label>
          <% if (safeItem.link) { %>
            <a href="<%= safeItem.link %>" target="_blank" class="text-blue-600 hover:text-blue-800 hover:underline break-all text-sm">
              <i class="fa fa-external-link mr-1"></i><%= safeItem.link %>
            </a>
          <% } else { %>
            <span class="text-gray-400 italic text-sm">No link provided</span>
          <% } %>
        </div>
        
        <div class="bg-gray-50 p-4 rounded-lg">
          <label class="block text-sm font-medium text-gray-600 mb-2">Created</label>
          <p class="text-gray-700 text-sm"><%= safeItem.createdAt ? new Date(safeItem.createdAt).toLocaleDateString() : '-' %></p>
        </div>
      </div>
      
      <!-- Image Preview -->
      <div class="order-first lg:order-last">
        <label class="block text-sm font-medium text-gray-600 mb-2">Image Preview</label>
        <% if (safeItem.image) { %>
          <div class="border border-gray-200 rounded-lg overflow-hidden">
            <img src="/uploads/<%= safeItem.image %>" alt="<%= safeItem.title || 'Hero image' %>" 
                 class="w-full h-auto max-h-48 sm:max-h-64 object-cover">
          </div>
        <% } else { %>
          <div class="border-2 border-dashed border-gray-300 rounded-lg p-6 sm:p-8 text-center">
            <i class="fa fa-image text-gray-400 text-2xl sm:text-3xl mb-2"></i>
            <p class="text-gray-500 text-sm">No image available</p>
          </div>
        <% } %>
      </div>
    </div>
  </div>

  <!-- Action Buttons -->
  <div class="flex flex-col sm:flex-row sm:justify-between sm:items-center gap-3">
    <a href="/admin/v1/parameters/hero-carousel" 
       class="px-4 py-3 rounded-lg bg-gray-100 text-gray-700 hover:bg-gray-200 transition flex items-center justify-center sm:justify-start gap-2 text-sm font-medium">
      <i class="fa fa-arrow-left"></i> Back to List
    </a>
    
    <div class="flex flex-col sm:flex-row gap-2 sm:gap-3">
      <a href="/admin/v1/parameters/hero-carousel/<%= safeItem._id %>/edit" 
         class="px-4 py-3 rounded-lg bg-blue-500 text-white hover:bg-blue-600 transition flex items-center justify-center gap-2 text-sm font-medium">
        <i class="fa fa-edit"></i> Edit
      </a>
      
      <form method="POST" action="/admin/v1/parameters/hero-carousel/<%= safeItem._id %>?_method=DELETE" 
            class="inline" onsubmit="return confirm('Are you sure you want to delete this hero content?')">
        <input type="hidden" name="_csrf" value="<%= csrfToken %>">
        <button type="submit" 
                class="w-full px-4 py-3 rounded-lg bg-red-500 text-white hover:bg-red-600 transition flex items-center justify-center gap-2 text-sm font-medium">
          <i class="fa fa-trash"></i> Delete
        </button>
      </form>
    </div>
  </div>
</main>

<%- include('../partials/footer.ejs') %>