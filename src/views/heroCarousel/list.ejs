<%- include('../partials/header.ejs', { title: 'Hero Content' }) %>

<!-- Modern Navigation Bar -->
<nav class="flex flex-wrap gap-3 mb-8 p-4 bg-white rounded-xl shadow-sm border border-gray-100 items-center">
  <a href="/admin/v1/staff/dashboard" class="flex items-center gap-2 px-4 py-2 rounded-lg bg-blue-50 text-blue-700 hover:bg-blue-100 transition">
    <i class="fa fa-home"></i> Dashboard
  </a>
  <a href="/admin/v1/staff/parameter-dashboard" class="flex items-center gap-2 px-4 py-2 rounded-lg bg-gray-50 text-gray-700 hover:bg-gray-100 transition">
    <i class="fa fa-cog"></i> System Parameters
  </a>
</nav>

<main class="container mx-auto max-w-7xl px-4 mt-8">
  <div class="flex flex-col md:flex-row md:justify-between md:items-center mb-8 gap-4">
    <h1 class="text-3xl font-bold text-gray-800">Hero Carousel Management</h1>
    <a href="/admin/v1/parameters/hero-carousel/new" class="px-4 py-2.5 rounded-lg bg-green-600 text-white font-medium hover:bg-green-700 transition flex items-center gap-2">
      <i class="fa fa-plus"></i> Add Hero Content
    </a>
  </div>

  <!-- Flash Messages -->
  <% if (success && success.length) { %>
    <div class="mb-6 p-4 rounded-lg border-l-4 border-green-400 bg-green-50 text-green-800 shadow-sm">
      <% success.forEach(msg => { %>
        <div class="flex items-center gap-2">
          <i class="fa fa-check-circle"></i>
          <%= msg %>
        </div>
      <% }) %>
    </div>
  <% } %>
  <% if (error && error.length) { %>
    <div class="mb-6 p-4 rounded-lg border-l-4 border-red-400 bg-red-50 text-red-800 shadow-sm">
      <% error.forEach(msg => { %>
        <div class="flex items-center gap-2">
          <i class="fa fa-exclamation-circle"></i>
          <%= msg %>
        </div>
      <% }) %>
    </div>
  <% } %>

  <div class="bg-white rounded-xl shadow-md mb-10 border border-gray-100">
    <% if (!items || items.length === 0) { %>
      <div class="p-8 text-center">
        <i class="fa fa-images text-5xl text-gray-300 mb-4"></i>
        <h2 class="text-xl font-semibold text-gray-800 mb-2">No Hero Content Found</h2>
        <p class="text-gray-500 mb-6">Get started by creating your first hero carousel item</p>
        <a href="/admin/v1/parameters/hero-carousel/new" class="inline-flex items-center px-4 py-2.5 rounded-lg bg-blue-600 text-white font-medium hover:bg-blue-700 transition">
          <i class="fa fa-plus mr-2"></i> Create First Item
        </a>
      </div>
    <% } else { %>
      <div class="overflow-x-auto">
        <table class="w-full text-sm">
          <thead>
            <tr class="border-b border-gray-200 bg-gray-50">
              <th class="py-3 px-4 text-left font-semibold text-gray-600 w-12">S.N</th>
              <th class="py-3 px-4 text-left font-semibold text-gray-600">Image</th>
              <th class="py-3 px-4 text-left font-semibold text-gray-600">Title</th>
              <th class="py-3 px-4 text-left font-semibold text-gray-600">Link</th>
              <th class="py-3 px-4 text-left font-semibold text-gray-600">Status</th>
              <th class="py-3 px-4 text-left font-semibold text-gray-600">Actions</th>
            </tr>
          </thead>
          <tbody>
            <% items.forEach((item, idx) => { %>
              <tr class="hover:bg-blue-50 transition-colors border-b border-gray-100 last:border-0">
                <td class="py-4 px-4 font-semibold text-gray-500">
                  <%= idx + 1 %>
                </td>
                <td class="py-4 px-4">
                  <% if (item.image) { %>
                    <img src="<%= item.image %>" alt="<%= item.title %>" class="w-20 h-12 object-cover rounded-lg shadow-sm" />
                  <% } else { %>
                    <div class="w-20 h-12 bg-gray-100 rounded-lg flex items-center justify-center">
                      <i class="fa fa-image text-gray-400"></i>
                    </div>
                  <% } %>
                </td>
                <td class="py-4 px-4 font-medium text-gray-800">
                  <%= item.title || '—' %>
                </td>
                <td class="py-4 px-4">
                  <% if (item.link) { %>
                    <a href="<%= item.link %>" target="_blank" class="text-blue-600 hover:underline flex items-center gap-1">
                      <i class="fa fa-external-link-alt text-xs"></i> Visit
                    </a>
                  <% } else { %>
                    <span class="text-gray-400">—</span>
                  <% } %>
                </td>
                <td class="py-4 px-4">
                  <span class="px-2 py-1 text-xs font-semibold rounded-full <%= item.status === 'active' ? 'bg-green-100 text-green-700' : 'bg-gray-100 text-gray-700' %>">
                    <%= item.status || 'active' %>
                  </span>
                </td>
                <td class="py-4 px-4">
                  <div class="flex flex-wrap gap-2">
                    <a href="/admin/v1/parameters/hero-carousel/<%= item._id %>" class="btn btn-small bg-blue-100 text-blue-700 hover:bg-blue-200 transition flex items-center px-3 py-2">
                      <i class="fa fa-eye mr-1.5"></i> View
                    </a>
                    <a href="/admin/v1/parameters/hero-carousel/<%= item._id %>/edit" class="btn btn-small bg-yellow-100 text-yellow-700 hover:bg-yellow-200 transition flex items-center px-3 py-2">
                      <i class="fa fa-edit mr-1.5"></i> Edit
                    </a>
                    <form action="/admin/v1/parameters/hero-carousel/<%= item._id %>" method="POST" class="inline">
                      <input type="hidden" name="_method" value="DELETE">
                      <button 
                        type="submit" 
                        class="btn btn-small bg-red-100 text-red-600 hover:bg-red-200 transition flex items-center px-3 py-2"
                        onclick="return confirm('Are you sure you want to delete this hero content? This cannot be undone.')"
                      >
                        <i class="fa fa-trash mr-1.5"></i> Delete
                      </button>
                    </form>
                  </div>
                </td>
              </tr>
            <% }) %>
          </tbody>
        </table>
      </div>
    <% } %>
  </div>
</main>

<%- include('../partials/footer.ejs') %>