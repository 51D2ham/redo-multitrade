<%- include('../partials/header.ejs', { title: 'Company Information' }) %>

<nav class="flex flex-wrap gap-3 mb-8 p-4 bg-white rounded-xl shadow-sm border border-gray-100 items-center">
  <a href="/admin/v1/staff/dashboard" class="flex items-center gap-2 px-4 py-2 rounded-lg bg-blue-50 text-blue-700 hover:bg-blue-100 transition">
    <i class="fa fa-home"></i> Dashboard
  </a>
  <a href="/admin/v1/parameters/company-info/create" class="flex items-center gap-2 px-4 py-2 rounded-lg bg-green-50 text-green-700 hover:bg-green-100 transition">
    <i class="fa fa-plus"></i> Add Company Info
  </a>
</nav>

<main class="container mx-auto max-w-7xl px-4 mt-8">
  <div class="flex flex-col md:flex-row md:justify-between md:items-center mb-8 gap-4">
    <h1 class="text-3xl font-bold text-gray-800">Company Information</h1>
    <div class="text-sm text-gray-500">
      Total Items: <span class="font-semibold"><%= items?.length || 0 %></span>
    </div>
  </div>

  <!-- Flash Messages -->
  <% if (success && success.length) { %>
    <div class="mb-6 p-4 rounded-lg border-l-4 border-green-400 bg-green-50 text-green-800 shadow-sm">
      <% success.forEach(msg => { %>
        <div class="flex items-center gap-2">
          <i class="fa fa-check-circle"></i>
          <%= msg %>
        </div>
      <% }) %>
    </div>
  <% } %>
  <% if (error && error.length) { %>
    <div class="mb-6 p-4 rounded-lg border-l-4 border-red-400 bg-red-50 text-red-800 shadow-sm">
      <% error.forEach(msg => { %>
        <div class="flex items-center gap-2">
          <i class="fa fa-exclamation-circle"></i>
          <%= msg %>
        </div>
      <% }) %>
    </div>
  <% } %>

  <div class="bg-white rounded-xl shadow-md overflow-x-auto mb-10 border border-gray-100">
    <% if (!items || items.length === 0) { %>
      <div class="py-12 text-center text-gray-400">
        <i class="fa fa-building text-4xl mb-4 opacity-25"></i>
        <p class="text-lg font-medium">No company information found</p>
        <p class="text-gray-500 mb-6">Add your company details</p>
        <a href="/admin/v1/parameters/company-info/create" class="inline-flex items-center gap-2 px-4 py-2 rounded-lg bg-green-600 text-white font-semibold hover:bg-green-700 transition">
          <i class="fa fa-plus"></i> Add Company Info
        </a>
      </div>
    <% } else { %>
      <table class="w-full text-sm">
        <thead>
          <tr class="border-b border-gray-200 bg-gray-50">
            <th class="py-3 px-4 text-left font-semibold text-gray-600 w-12">S.N</th>
            <th class="py-3 px-4 text-left font-semibold text-gray-600">Logo</th>
            <th class="py-3 px-4 text-left font-semibold text-gray-600">Company Name</th>
            <th class="py-3 px-4 text-left font-semibold text-gray-600">Email</th>
            <th class="py-3 px-4 text-left font-semibold text-gray-600">Phone</th>
            <th class="py-3 px-4 text-left font-semibold text-gray-600">Status</th>
            <th class="py-3 px-4 text-left font-semibold text-gray-600">Actions</th>
          </tr>
        </thead>
        <tbody>
          <% items.forEach((item, idx) => { %>
            <tr class="hover:bg-blue-50 transition-colors border-b border-gray-100 last:border-0">
              <td class="py-4 px-4 font-semibold text-gray-500"><%= idx + 1 %></td>
              <td class="py-4 px-4">
                <% if (item.logo) { %>
                  <img src="/uploads/<%= item.logo %>" alt="<%= item.title %>" class="w-12 h-12 object-cover rounded-lg shadow-sm" />
                <% } else { %>
                  <div class="w-12 h-12 bg-gray-100 rounded-lg flex items-center justify-center">
                    <i class="fa fa-building text-gray-400"></i>
                  </div>
                <% } %>
              </td>
              <td class="py-4 px-4 font-medium text-gray-800"><%= item.title || '—' %></td>
              <td class="py-4 px-4 text-gray-600"><%= item.email || '—' %></td>
              <td class="py-4 px-4 text-gray-600"><%= item.phone || '—' %></td>
              <td class="py-4 px-4">
                <span class="inline-flex items-center px-3 py-1 rounded-full text-xs font-semibold
                  <%= item.status === 'active' ? 'bg-green-100 text-green-700' : 'bg-gray-100 text-gray-700' %>">
                  <i class="fa fa-circle text-[6px] mr-1.5 <%= item.status === 'active' ? 'text-green-500' : 'text-gray-500' %>"></i>
                  <%= item.status || 'active' %>
                </span>
              </td>
              <td class="py-4 px-4">
                <div class="flex items-center justify-center gap-2">
                  <a href="/admin/v1/parameters/company-info/<%= item._id %>" class="px-4 py-2 rounded-lg bg-blue-50 text-blue-700 hover:bg-blue-100 transition-colors text-sm font-medium border border-blue-200" title="View Company Info Details">
                    View
                  </a>
                  <a href="/admin/v1/parameters/company-info/<%= item._id %>/edit" class="px-4 py-2 rounded-lg bg-gray-50 text-gray-700 hover:bg-gray-100 transition-colors text-sm font-medium border border-gray-200" title="Edit Company Info">
                    Edit
                  </a>
                  <form action="/admin/v1/parameters/company-info/<%= item._id %>?_method=DELETE" method="POST" class="inline">
                    <button type="submit" class="px-4 py-2 rounded-lg bg-red-50 text-red-700 hover:bg-red-100 transition-colors text-sm font-medium border border-red-200" onclick="return confirm('Delete this company information? This action cannot be undone.')" title="Delete Company Info">
                      Delete
                    </button>
                  </form>
                </div>
              </td>
            </tr>
          <% }) %>
        </tbody>
      </table>
    <% } %>
  </div>
</main>

<%- include('../partials/footer.ejs') %>

