<%- include('../partials/header.ejs', { title: 'Company Information Details' }) %>

<nav class="flex flex-wrap gap-3 mb-8 p-4 bg-white rounded-xl shadow-sm border border-gray-100 items-center">
  <a href="/admin/v1/staff/dashboard" class="flex items-center gap-2 px-4 py-2 rounded-lg bg-blue-50 text-blue-700 hover:bg-blue-100 transition">
    <i class="fa fa-home"></i> Dashboard
  </a>
  <a href="/admin/v1/parameters/company-info" class="flex items-center gap-2 px-4 py-2 rounded-lg bg-gray-50 text-gray-700 hover:bg-gray-100 transition">
    <i class="fa fa-building"></i> Company Info List
  </a>
  <a href="/admin/v1/parameters/company-info/<%= item._id %>/edit" class="flex items-center gap-2 px-4 py-2 rounded-lg bg-yellow-50 text-yellow-700 hover:bg-yellow-100 transition">
    <i class="fa fa-edit"></i> Edit Info
  </a>
</nav>

<main class="container mx-auto max-w-4xl px-4">
  <div class="bg-white rounded-xl shadow-md p-8 mb-10 border border-gray-100">
    <div class="flex flex-col sm:flex-row sm:justify-between sm:items-center mb-8 gap-4">
      <h1 class="text-2xl font-bold text-gray-800">Company Information</h1>
      <a href="/admin/v1/parameters/company-info" class="text-sm text-blue-600 hover:text-blue-700 flex items-center transition">
        <span class="mr-1">‚Üê</span> Back to List
      </a>
    </div>
    
    <div class="space-y-8">
      <!-- Company Header -->
      <div class="flex flex-col md:flex-row gap-6 items-start">
        <% if (item.logo) { %>
          <img src="/uploads/<%= item.logo %>" alt="<%= item.title %>" class="w-24 h-24 object-cover rounded-xl shadow-lg border">
        <% } else { %>
          <div class="w-24 h-24 bg-gray-100 rounded-xl flex items-center justify-center">
            <i class="fa fa-building text-gray-400 text-2xl"></i>
          </div>
        <% } %>
        
        <div class="flex-1">
          <h2 class="text-3xl font-bold text-gray-900 mb-2"><%= item.title %></h2>
          <p class="text-gray-600 leading-relaxed"><%= item.description %></p>
          <div class="mt-4">
            <span class="inline-flex items-center px-3 py-1 rounded-full text-sm font-semibold
              <%= item.status === 'active' ? 'bg-green-100 text-green-700' : 'bg-gray-100 text-gray-700' %>">
              <i class="fa fa-circle text-xs mr-2 <%= item.status === 'active' ? 'text-green-500' : 'text-gray-500' %>"></i>
              <%= item.status || 'active' %>
            </span>
          </div>
        </div>
      </div>
      
      <!-- Contact Information -->
      <div class="border-t pt-8">
        <h3 class="text-xl font-bold text-gray-900 mb-6">Contact Information</h3>
        <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
          <% if (item.email) { %>
            <div class="bg-gray-50 p-4 rounded-lg">
              <label class="block text-sm font-semibold text-gray-600 mb-2">Email</label>
              <a href="mailto:<%= item.email %>" class="text-blue-600 hover:underline flex items-center gap-2">
                <i class="fa fa-envelope"></i>
                <%= item.email %>
              </a>
            </div>
          <% } %>
          
          <% if (item.phone) { %>
            <div class="bg-gray-50 p-4 rounded-lg">
              <label class="block text-sm font-semibold text-gray-600 mb-2">Phone</label>
              <a href="tel:<%= item.phone %>" class="text-blue-600 hover:underline flex items-center gap-2">
                <i class="fa fa-phone"></i>
                <%= item.phone %>
              </a>
            </div>
          <% } %>
          
          <% if (item.website) { %>
            <div class="bg-gray-50 p-4 rounded-lg">
              <label class="block text-sm font-semibold text-gray-600 mb-2">Website</label>
              <a href="<%= item.website %>" target="_blank" class="text-blue-600 hover:underline flex items-center gap-2">
                <i class="fa fa-globe"></i>
                <%= item.website %>
              </a>
            </div>
          <% } %>
          
          <% if (item.businessHours) { %>
            <div class="bg-gray-50 p-4 rounded-lg">
              <label class="block text-sm font-semibold text-gray-600 mb-2">Business Hours</label>
              <p class="text-gray-900 flex items-center gap-2">
                <i class="fa fa-clock"></i>
                <%= item.businessHours %>
              </p>
            </div>
          <% } %>
        </div>
        
        <% if (item.address) { %>
          <div class="mt-6 bg-gray-50 p-4 rounded-lg">
            <label class="block text-sm font-semibold text-gray-600 mb-2">Address</label>
            <p class="text-gray-900 flex items-start gap-2">
              <i class="fa fa-map-marker-alt mt-1"></i>
              <span><%= item.address %></span>
            </p>
          </div>
        <% } %>
      </div>
      
      <!-- Social Media -->
      <% if (item.socialMedia && (item.socialMedia.facebook || item.socialMedia.twitter || item.socialMedia.instagram || item.socialMedia.linkedin)) { %>
        <div class="border-t pt-8">
          <h3 class="text-xl font-bold text-gray-900 mb-6">Social Media</h3>
          <div class="flex flex-wrap gap-4">
            <% if (item.socialMedia.facebook) { %>
              <a href="<%= item.socialMedia.facebook %>" target="_blank" class="flex items-center gap-2 px-4 py-2 bg-blue-100 text-blue-700 rounded-lg hover:bg-blue-200 transition">
                <i class="fab fa-facebook"></i> Facebook
              </a>
            <% } %>
            <% if (item.socialMedia.twitter) { %>
              <a href="<%= item.socialMedia.twitter %>" target="_blank" class="flex items-center gap-2 px-4 py-2 bg-sky-100 text-sky-700 rounded-lg hover:bg-sky-200 transition">
                <i class="fab fa-twitter"></i> Twitter
              </a>
            <% } %>
            <% if (item.socialMedia.instagram) { %>
              <a href="<%= item.socialMedia.instagram %>" target="_blank" class="flex items-center gap-2 px-4 py-2 bg-pink-100 text-pink-700 rounded-lg hover:bg-pink-200 transition">
                <i class="fab fa-instagram"></i> Instagram
              </a>
            <% } %>
            <% if (item.socialMedia.linkedin) { %>
              <a href="<%= item.socialMedia.linkedin %>" target="_blank" class="flex items-center gap-2 px-4 py-2 bg-indigo-100 text-indigo-700 rounded-lg hover:bg-indigo-200 transition">
                <i class="fab fa-linkedin"></i> LinkedIn
              </a>
            <% } %>
          </div>
        </div>
      <% } %>
      
      <!-- Metadata -->
      <div class="border-t pt-6">
        <div class="grid grid-cols-1 md:grid-cols-2 gap-4 text-sm text-gray-600">
          <div>
            <span class="font-semibold">Created:</span> 
            <%= new Date(item.createdAt).toLocaleDateString() %> at <%= new Date(item.createdAt).toLocaleTimeString() %>
          </div>
          <div>
            <span class="font-semibold">Last Updated:</span> 
            <%= new Date(item.updatedAt).toLocaleDateString() %> at <%= new Date(item.updatedAt).toLocaleTimeString() %>
          </div>
        </div>
      </div>
      
      <!-- Actions -->
      <div class="flex flex-col sm:flex-row gap-3 sm:justify-end pt-6 border-t">
        <a href="/admin/v1/parameters/company-info/<%= item._id %>/edit" class="px-4 py-3 rounded-lg bg-yellow-100 text-yellow-700 hover:bg-yellow-200 transition flex items-center justify-center gap-2">
          <i class="fa fa-edit"></i> Edit Information
        </a>
        <form action="/admin/v1/parameters/company-info/<%= item._id %>?_method=DELETE" method="POST" class="inline">
          <button type="submit" class="w-full px-4 py-3 rounded-lg bg-red-100 text-red-600 hover:bg-red-200 transition flex items-center justify-center gap-2" onclick="return confirm('Delete this company information? This action cannot be undone.')">
            <i class="fa fa-trash"></i> Delete Information
          </button>
        </form>
      </div>
    </div>
  </div>
</main>

<%- include('../partials/footer.ejs') %>