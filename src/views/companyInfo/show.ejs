<%- include('../partials/header.ejs', { title: 'Company Information Details' }) %>

<!-- Breadcrumb Navigation -->
<nav class="flex items-center gap-2 text-sm text-gray-600 mb-4 px-4 sm:px-0">
  <a href="/admin/v1/staff/dashboard" class="hover:text-blue-600 transition-colors">Dashboard</a>
  <i class="fas fa-chevron-right text-xs text-gray-400"></i>
  <a href="/admin/v1/parameters/company-info" class="hover:text-blue-600 transition-colors">Company Info</a>
  <i class="fas fa-chevron-right text-xs text-gray-400"></i>
  <span class="text-gray-900 font-medium">Details</span>
</nav>

<!-- Action Navigation -->
<div class="flex flex-col sm:flex-row gap-2 sm:gap-3 mb-6 px-4 sm:px-0">
  <a href="/admin/v1/staff/dashboard" class="flex items-center justify-center sm:justify-start gap-2 px-4 py-2 rounded-lg bg-blue-50 text-blue-700 hover:bg-blue-100 transition text-sm font-medium">
    <i class="fa fa-home"></i> <span>Dashboard</span>
  </a>
  <a href="/admin/v1/parameters/company-info" class="flex items-center justify-center sm:justify-start gap-2 px-4 py-2 rounded-lg bg-gray-50 text-gray-700 hover:bg-gray-100 transition text-sm font-medium">
    <i class="fa fa-building"></i> <span>Company Info List</span>
  </a>
  <a href="/admin/v1/parameters/company-info/<%= item._id %>/edit" class="flex items-center justify-center sm:justify-start gap-2 px-4 py-2 rounded-lg bg-yellow-50 text-yellow-700 hover:bg-yellow-100 transition text-sm font-medium">
    <i class="fa fa-edit"></i> <span>Edit Info</span>
  </a>
</div>

<main class="container mx-auto max-w-4xl px-4">
  <div class="bg-white rounded-xl shadow-md p-4 sm:p-6 lg:p-8 mb-6 sm:mb-10 border border-gray-100">
    <div class="flex flex-col sm:flex-row sm:justify-between sm:items-center mb-6 sm:mb-8 gap-3">
      <h1 class="text-xl sm:text-2xl font-bold text-gray-800">Company Information</h1>
      <a href="/admin/v1/parameters/company-info" class="text-sm text-blue-600 hover:text-blue-700 flex items-center justify-center sm:justify-start transition">
        <span class="mr-1">←</span> Back to List
      </a>
    </div>
    
    <div class="space-y-8">
      <!-- Company Header -->
      <div class="flex flex-col sm:flex-row gap-4 sm:gap-6 items-center sm:items-start">
        <% if (item.logo) { %>
          <img src="/uploads/<%= item.logo %>" alt="<%= item.title %>" class="w-20 h-20 sm:w-24 sm:h-24 object-cover rounded-xl shadow-lg border flex-shrink-0">
        <% } else { %>
          <div class="w-20 h-20 sm:w-24 sm:h-24 bg-gray-100 rounded-xl flex items-center justify-center flex-shrink-0">
            <i class="fa fa-building text-gray-400 text-xl sm:text-2xl"></i>
          </div>
        <% } %>
        
        <div class="flex-1 text-center sm:text-left">
          <h2 class="text-2xl sm:text-3xl font-bold text-gray-900 mb-2"><%= item.title %></h2>
          <p class="text-gray-600 leading-relaxed text-sm sm:text-base"><%= item.description %></p>
          <div class="mt-3 sm:mt-4">
            <span class="inline-flex items-center px-3 py-1 rounded-full text-sm font-semibold
              <%= item.status === 'active' ? 'bg-green-100 text-green-700' : 'bg-gray-100 text-gray-700' %>">
              <i class="fa fa-circle text-xs mr-2 <%= item.status === 'active' ? 'text-green-500' : 'text-gray-500' %>"></i>
              <%= item.status || 'active' %>
            </span>
          </div>
        </div>
      </div>
      
      <!-- Contact Information -->
      <div class="border-t pt-6 sm:pt-8">
        <h3 class="text-lg sm:text-xl font-bold text-gray-900 mb-4 sm:mb-6">Contact Information</h3>
        <div class="grid grid-cols-1 sm:grid-cols-2 gap-4 sm:gap-6">
          <% if (item.email) { %>
            <div class="bg-gray-50 p-3 sm:p-4 rounded-lg">
              <label class="block text-xs sm:text-sm font-semibold text-gray-600 mb-2">Email</label>
              <a href="mailto:<%= item.email %>" class="text-blue-600 hover:underline flex items-center gap-2 text-sm break-all">
                <i class="fa fa-envelope flex-shrink-0"></i>
                <span class="truncate"><%= item.email %></span>
              </a>
            </div>
          <% } %>
          
          <% if (item.phone) { %>
            <div class="bg-gray-50 p-3 sm:p-4 rounded-lg">
              <label class="block text-xs sm:text-sm font-semibold text-gray-600 mb-2">Phone</label>
              <a href="tel:<%= item.phone %>" class="text-blue-600 hover:underline flex items-center gap-2 text-sm">
                <i class="fa fa-phone flex-shrink-0"></i>
                <span><%= item.phone %></span>
              </a>
            </div>
          <% } %>
          
          <% if (item.website) { %>
            <div class="bg-gray-50 p-3 sm:p-4 rounded-lg">
              <label class="block text-xs sm:text-sm font-semibold text-gray-600 mb-2">Website</label>
              <a href="<%= item.website %>" target="_blank" class="text-blue-600 hover:underline flex items-start gap-2 text-sm">
                <i class="fa fa-globe flex-shrink-0 mt-0.5"></i>
                <span class="break-all leading-tight"><%= item.website %></span>
              </a>
            </div>
          <% } %>
          
          <% if (item.businessHours) { %>
            <div class="bg-gray-50 p-3 sm:p-4 rounded-lg">
              <label class="block text-xs sm:text-sm font-semibold text-gray-600 mb-2">Business Hours</label>
              <p class="text-gray-900 flex items-center gap-2 text-sm">
                <i class="fa fa-clock flex-shrink-0"></i>
                <span><%= item.businessHours %></span>
              </p>
            </div>
          <% } %>
        </div>
        
        <% if (item.address) { %>
          <div class="mt-4 sm:mt-6 bg-gray-50 p-3 sm:p-4 rounded-lg col-span-1 sm:col-span-2">
            <label class="block text-xs sm:text-sm font-semibold text-gray-600 mb-2">Address</label>
            <p class="text-gray-900 flex items-start gap-2 text-sm">
              <i class="fa fa-map-marker-alt mt-1 flex-shrink-0"></i>
              <span class="leading-relaxed"><%= item.address %></span>
            </p>
          </div>
        <% } %>
      </div>
      
      <!-- Social Media -->
      <% if (item.socialMedia && (item.socialMedia.facebook || item.socialMedia.twitter || item.socialMedia.instagram || item.socialMedia.linkedin)) { %>
        <div class="border-t pt-6 sm:pt-8">
          <h3 class="text-lg sm:text-xl font-bold text-gray-900 mb-4 sm:mb-6">Social Media</h3>
          <div class="grid grid-cols-1 sm:grid-cols-2 lg:flex lg:flex-wrap gap-3">
            <% if (item.socialMedia.facebook) { %>
              <a href="<%= item.socialMedia.facebook %>" target="_blank" class="flex items-center justify-center sm:justify-start gap-2 px-4 py-3 bg-blue-100 text-blue-700 rounded-lg hover:bg-blue-200 transition text-sm font-medium">
                <i class="fab fa-facebook text-lg"></i> 
                <span>Facebook</span>
              </a>
            <% } %>
            <% if (item.socialMedia.twitter) { %>
              <a href="<%= item.socialMedia.twitter %>" target="_blank" class="flex items-center justify-center sm:justify-start gap-2 px-4 py-3 bg-sky-100 text-sky-700 rounded-lg hover:bg-sky-200 transition text-sm font-medium">
                <i class="fab fa-twitter text-lg"></i> 
                <span>Twitter</span>
              </a>
            <% } %>
            <% if (item.socialMedia.instagram) { %>
              <a href="<%= item.socialMedia.instagram %>" target="_blank" class="flex items-center justify-center sm:justify-start gap-2 px-4 py-3 bg-pink-100 text-pink-700 rounded-lg hover:bg-pink-200 transition text-sm font-medium">
                <i class="fab fa-instagram text-lg"></i> 
                <span>Instagram</span>
              </a>
            <% } %>
            <% if (item.socialMedia.linkedin) { %>
              <a href="<%= item.socialMedia.linkedin %>" target="_blank" class="flex items-center justify-center sm:justify-start gap-2 px-4 py-3 bg-indigo-100 text-indigo-700 rounded-lg hover:bg-indigo-200 transition text-sm font-medium">
                <i class="fab fa-linkedin text-lg"></i> 
                <span>LinkedIn</span>
              </a>
            <% } %>
          </div>
        </div>
      <% } %>
      
      <!-- Metadata -->
      <div class="border-t pt-4 sm:pt-6">
        <div class="grid grid-cols-1 sm:grid-cols-2 gap-3 sm:gap-4 text-xs sm:text-sm text-gray-600">
          <div class="bg-gray-50 p-3 rounded-lg">
            <span class="font-semibold block sm:inline">Created:</span> 
            <span class="block sm:inline mt-1 sm:mt-0"><%= new Date(item.createdAt).toLocaleDateString() %> at <%= new Date(item.createdAt).toLocaleTimeString() %></span>
          </div>
          <div class="bg-gray-50 p-3 rounded-lg">
            <span class="font-semibold block sm:inline">Last Updated:</span> 
            <span class="block sm:inline mt-1 sm:mt-0"><%= new Date(item.updatedAt).toLocaleDateString() %> at <%= new Date(item.updatedAt).toLocaleTimeString() %></span>
          </div>
        </div>
      </div>
      
      <!-- Actions -->
      <div class="flex flex-col sm:flex-row gap-3 sm:justify-end pt-4 sm:pt-6 border-t">
        <a href="/admin/v1/parameters/company-info/<%= item._id %>/edit" class="px-4 py-3 rounded-lg bg-yellow-100 text-yellow-700 hover:bg-yellow-200 transition flex items-center justify-center gap-2 text-sm font-medium">
          <i class="fa fa-edit"></i> Edit Information
        </a>
        <form action="/admin/v1/parameters/company-info/<%= item._id %>?_method=DELETE" method="POST" class="inline">
          <button type="submit" class="w-full px-4 py-3 rounded-lg bg-red-100 text-red-600 hover:bg-red-200 transition flex items-center justify-center gap-2 text-sm font-medium" onclick="return confirm('Delete this company information? This action cannot be undone.')">
            <i class="fa fa-trash"></i> Delete Information
          </button>
        </form>
      </div>
    </div>
  </div>
</main>

<%- include('../partials/footer.ejs') %>

