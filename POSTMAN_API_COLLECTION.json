    {
      "name": "Products",
      "item": [
        {
          "name": "Get All Products",
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{baseUrl}}/api/v1/products",
              "host": ["{{baseUrl}}"],
              "path": ["api", "v1", "products"]
            }
          },
          "response": []
        },
        {
          "name": "Get Products with Filters",
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{baseUrl}}/api/v1/products?page=1&limit=10&category={{categoryId}}&brand={{brandId}}&minPrice=100&maxPrice=1000&sort=price_asc&featured=true",
              "host": ["{{baseUrl}}"],
              "path": ["api", "v1", "products"],
              "query": [
                {"key": "page", "value": "1"},
                {"key": "limit", "value": "10"},
                {"key": "category", "value": "{{categoryId}}"},
                {"key": "brand", "value": "{{brandId}}"},
                {"key": "minPrice", "value": "100"},
                {"key": "maxPrice", "value": "1000"},
                {"key": "sort", "value": "price_asc"},
                {"key": "featured", "value": "true"}
              ]
            }
          },
          "response": []
        },
        {
          "name": "Get Product by ID",
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{baseUrl}}/api/v1/products/{{productId}}",
              "host": ["{{baseUrl}}"],
              "path": ["api", "v1", "products", "{{productId}}"]
            }
          },
          "response": []
        },
