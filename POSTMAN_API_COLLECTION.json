{
  "info": {
    "name": "Multitrade Backend APIs",
    "description": "Complete API collection for testing categories, subcategories, types, brands, and products",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
  },
  "variable": [
    {
      "key": "baseUrl",
      "value": "http://localhost:9001",
      "type": "string"
    }
  ],
