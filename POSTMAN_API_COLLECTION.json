      "name": "Categories",
      "item": [
        {
          "name": "Get All Categories",
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{baseUrl}}/api/v1/categories",
              "host": ["{{baseUrl}}"],
              "path": ["api", "v1", "categories"]
            }
          },
          "response": []
        },
        {
          "name": "Get Categories with Hierarchy",
          "request": {
            "method": "GET",
            "header": [],
